{# Variables #}
{% set attributes = create_attribute(attributes|default({})) %}
{% set _link_attributes = create_attribute(link.attributes|default({})) %}

{# Template #}
<li {{ attributes.addClass('c-bolt-side-nav__list-item') }}>
  <a {{ _link_attributes.addClass('c-bolt-side-nav__link')|without('aria-current') }} {% if current %}aria-current="page"{% endif %}>
    {{ link.content }}
  </a>
  {% if children %}
    <button type="button" {% if expanded == true %}aria-expanded="true"{% else %}aria-expanded="false"{% endif %} aria-label="{{ 'Toggle children links'|t }}" class="c-bolt-side-nav__link c-bolt-side-nav__link--toggle-trigger" data-bolt-side-nav-toggle-trigger>
      {% include '@bolt-components-icon/icon.twig' with {
        name: 'chevron-down',
      } only %}
    </button>
    {{ children }}
  {% endif %}
</li>
