{% if enable_json_schema_validation %}
  {{ validate_data_schema(bolt.data.components['@bolt-components-chip-list'].schema, _self) | raw }}
{% endif %}

{% if contentItems %}
  {% set items = contentItems %}
{% endif %}

{% if items %}
  {% set params = {} %}
  {% set list = [] %}
  {% for item in items %}
    {# allow chip size to be passed along from the parent if it doesn't already exist #}
    {% if size and not item.size %}
      {% set item = item | merge({
        size: size
      }) %}
    {% endif %}

    {% set chip %}
      {% include "@bolt/chip.twig" with item only %}
    {% endset %}

    {% set list = list | merge([chip]) %}
  {% endfor %}

  {% set params = params | merge({
    items: list,
    display: "inline",
  }) %}

  {% include "@bolt-components-list/list.twig" with params only %}

{% endif %}
