{% set schema = bolt.data.components['@bolt-components-background'].schema %}

{# DEPRECATED.  Use the property `focal_point` instead of `focalPoint`. #}
{% if focalPoint %}
  {% set focal_point = focalPoint %}
{% endif %}

{# Radial gradients do not support opacity. #}
{% if fill == 'radial-gradient' %}
  {% set opacity = 'full' %}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute({}) %}

{# Validate focal_point manually since it is an object. #}
{% set schema_horizontal = schema.properties.focal_point.properties.horizontal %}
{% set schema_vertical = schema.properties.focal_point.properties.vertical %}
{% set focal_point_vertical = focal_point.vertical in schema_vertical.enum ? focal_point.vertical : schema_vertical.default %}
{% set focal_point_horizontal = focal_point.horizontal in schema_horizontal.enum ? focal_point.horizontal : schema_horizontal.default %}

{% set classes = [
  'c-bolt-background__overlay',
  'c-bolt-background__overlay--' ~ this.data.opacity.value ~ '-opacity',
  'c-bolt-background__overlay--' ~ this.data.fill.value ~ '-fill',
  'c-bolt-background__overlay--' ~ focal_point_horizontal ~ '-' ~ focal_point_vertical ~ '-focus',
] %}

{% if this.data.opacity.value != 'none'  %}
  <div {{ attributes.addClass(classes) }} ></div>
{% endif %}
