{% set schema = bolt.data.components['@bolt-components-dialog'].schema['dialog'] %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{% if this.data.theme.value == 'dark' or this.data.theme.value == 'xdark' %}
  {% set _overlay_theme = 'light' %}
{% else %}
  {% set _overlay_theme = 'dark' %}
{% endif %}

{# Array of outer classes based on the defined + default props #}
{% set _outer_classes = [
  'c-bolt-dialog',
  this.data.scroll_behavior.value ? 'c-bolt-dialog__scroll-' ~ this.data.scroll_behavior.value : '',
  this.data.theme.value ? 'c-bolt-dialog__theme-' ~ this.data.theme.value : '',
  this.data.spacing.value ? 'c-bolt-dialog__spacing-' ~ this.data.spacing.value : '',
] %}

{# Array of overlay classes based on the defined + default props #}
{% set _overlay_classes = [
  'c-bolt-dialog__overlay',
  'c-bolt-dialog__overlay-' ~ _overlay_theme,
] %}

{# Array of container classes based on the defined + default props #}
{% set _container_classes = [
  'c-bolt-dialog__container',
  this.data.width.value ? 'c-bolt-dialog__container--width-' ~ this.data.width.value : '',
] %}
{# Array of container classes based on the defined + default props #}
{% set _content_classes = [
  'c-bolt-dialog__content',
  this.data.theme.value != 'none' ? 't-bolt-' ~ this.data.theme.value : '',
] %}

{% set _icon_close %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'close',
  } only %}
{% endset %}

{% set _close_button %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Close',
    icon_only: _icon_close,
    hierarchy: 'transparent',
    attributes: {
      class: 'c-bolt-dialog__close-button',
      type: 'button',
      'data-dialog-close': '',
      'aria-label': 'Close dialog',
    }
  } only %}
{% endset %}

<div
  {{ attributes.addClass(_outer_classes) }}
  {{ this.data.persistent.value ? 'data-dialog-persistent' : '' }}
  aria-hidden="true">
  <div class="{{ _overlay_classes|join(' ') }}" tabindex="-1">
    <div class="{{ _container_classes|join(' ') }}" role="dialog" aria-dialog="true">

      {# close button #}
      {% if not this.data.persistent.value %}
      <div class="c-bolt-dialog__close t-bolt-{{ _overlay_theme }}">{{ _close_button }}</div>
      {% endif %}

      <div class="{{ _content_classes|join(' ') }}">
        {{ content }}
      </div>
    </div>
  </div>
</div>
