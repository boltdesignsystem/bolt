{% set schema = bolt.data.components['@bolt-components-dialog'].schema %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{% if this.data.theme.value == 'dark' or this.data.theme.value == 'xdark' %}
  {% set _overlay_theme = 'light' %}
{% else %}
  {% set _overlay_theme = 'dark' %}
{% endif %}

{# Array of classes based on the defined + default props #}
{% set _outer_classes = [
  'c-bolt-dialog',
  'c-bolt-dialog__scroll-' ~ this.data.scroll.value
] %}

{# Array of classes based on the defined + default props #}
{% set _overlay_classes = [
  'c-bolt-dialog__overlay',
  'c-bolt-dialog__overlay-' ~ _overlay_theme,
] %}

{# Array of classes based on the defined + default props #}
{% set _container_classes = [
  'c-bolt-dialog__container',
  'c-bolt-dialog__container--width-' ~ this.data.width.value,
] %}

{# Array of classes based on the defined + default props #}
{% set _body_classes = [
  'c-bolt-dialog__body',
  'c-bolt-dialog__body--spacing-' ~ this.data.spacing.value,
  't-bolt-' ~ this.data.theme.value
] %}

{% set _icon_close %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'close',
  } only %}
{% endset %}

{% set _close_button %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Close',
    icon_only: _icon_close,
    hierarchy: 'transparent',
    attributes: {
      class: 'c-bolt-dialog__close-button',
      type: 'button',
      'data-dialog-close': '',
      'aria-label': 'Close dialog',
    }
  } only %}
{% endset %}

<div
  {{ attributes.addClass(_outer_classes) }}
  {{ this.data.persistent.value ? 'data-dialog-persistent' : '' }}
  aria-hidden="true">
  <div class="{{ _overlay_classes|join(' ') }}" tabindex="-1" {{ this.data.persistent.value ? '' : 'data-dialog-close' }}>
    <div class="{{ _container_classes|join(' ') }}" role="dialog" aria-dialog="true">
      {% if not this.data.persistent.value %}
      <div class="c-bolt-dialog__close t-bolt-{{ _overlay_theme }}">{{ _close_button }}</div>
      {% endif %}
      <div class="{{ _body_classes|join(' ') }}">
        <div class="c-bolt-dialog__content">
          {{ content }}
        </div>
        {% if persistent_return_element %}
        <div class="c-bolt-dialog__footer">
          {{ persistent_return_element }}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
