{% set schema = bolt.data.components['@bolt-components-dialog'].schema['dialog'] %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{# Array of classes based on the defined + default props #}
{% set classes = [
  'c-bolt-dialog',
  this.data.width.value ? 'c-bolt-dialog--width-' ~ this.data.width.value : '',
  this.data.spacing.value ? 'c-bolt-dialog--spacing-' ~ this.data.spacing.value : '',
  transparent ? 'c-bolt-dialog--transparent',
] %}

{% set _icon_close %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'close',
  } only %}
{% endset %}

{% set _close_button %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Close dialog'|t,
    icon_only: _icon_close,
    hierarchy: 'transparent',
    attributes: {
      type: 'button',
      'data-dialog-close': '',
    }
  } only %}
{% endset %}

<dialog
  {{ attributes.addClass(classes) }}
  {{ this.data.persistent.value ? 'data-dialog-persistent' : '' }}
  >
  <div class="c-bolt-dialog__grid">
    {% if not this.data.persistent.value %}
      <div class="c-bolt-dialog__close">
        {{ _close_button }}
      </div>
    {% endif %}

    {% if content %}
      {{ content }}
    {% endif %}
  </div>
</dialog>
