{% set schema = bolt.data.components['@bolt-components-dialogue'].schema %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{# Array of classes based on the defined + default props #}
{% set _outer_classes = [
  'c-bolt-dialogue',
] %}

{# Array of classes based on the defined + default props #}
{% set _inner_classes = [
  'c-bolt-dialogue__container',
  'c-bolt-dialogue__container--width-' ~ this.data.width.value,
  't-bolt-' ~ this.data.theme.value
] %}

<script>
  // console.log({{ this.data|json_encode() }})
</script>

{% set icon_close %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'download',
  } only %}
{% endset %}

<div {{ attributes.addClass(_outer_classes) }} aria-hidden="true">
  <div class="dialogue__overlay" tabindex="-1" data-dialogue-close>

    <div class="{{ _inner_classes|join(' ') }}" role="dialog" aria-dialogue="true" aria-labelledby="{{ attributes.id.value }}-title">

      <header class="dialogue__header">
        <h2 id="{{ attributes.id.value }}-title">
          Dialogue Box Title
        </h2>

        <button type="button" class="e-bolt-button e-bolt-button--icon-only e-bolt-button--transparent" data-dialogue-close aria-label="Close dialogue"><span class="e-bolt-button__icon-center"><bolt-icon name="close"></bolt-icon></span></button>
      </header>

      <main class="dialogue__content" id="{{ attributes.id.value }}-content">
        {{content}}
      </main>

      <footer class="dialogue__footer">
        <button class="e-bolt-button e-bolt-button--secondary" data-dialogue-close aria-label="Close dialogue">Close</button>
      </footer>
    </div>
  </div>
</div>
