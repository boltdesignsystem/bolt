{% set schema = bolt.data.components['@bolt-components-dialogue'].schema %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{% if this.data.theme.value == 'dark' or this.data.theme.value == 'xdark' %}
  {% set _overlay_theme = 'light' %}
{% else %}
  {% set _overlay_theme = 'dark' %}
{% endif %}

{# Array of classes based on the defined + default props #}
{% set _outer_classes = [
  'c-bolt-dialogue',
] %}

{# Array of classes based on the defined + default props #}
{% set _overlay_classes = [
  'c-bolt-dialogue__overlay',
  'c-bolt-dialogue__overlay-' ~ _overlay_theme,
] %}

{# Array of classes based on the defined + default props #}
{% set _container_classes = [
  'c-bolt-dialogue__container',
  'c-bolt-dialogue__container--width-' ~ this.data.width.value,
  'c-bolt-dialogue__container--spacing-' ~ this.data.spacing.value,
  't-bolt-' ~ this.data.theme.value
] %}

{% set _icon_close %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'close',
  } only %}
{% endset %}

{% set _close_button %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Close',
    icon_only: _icon_close,
    hierarchy: 'transparent',
    size: 'small',
    border_radius: 'full',
    attributes: {
      type: 'button',
      'data-dialogue-close': '',
      'aria-label': 'Close dialogue',
    }
  } only %}
{% endset %}

<script>
  // console.log({{ this.data.persistent.value|json_encode() }})
</script>

<div {{ attributes.addClass(_outer_classes) }} aria-hidden="true" {{ this.data.persistent.value ? 'data-dialogue-persistent' : '' }}>
  <div class="{{ _overlay_classes|join(' ') }}" tabindex="-1" {{ this.data.persistent.value ? '' : 'data-dialogue-close' }}>
    <div class="{{ _container_classes|join(' ') }}" role="dialog" aria-dialogue="true" aria-labelledby="{{ _uuid }}-title">
      {% if not this.data.persistent.value %}
      <div class="c-bolt-dialogue__close t-bolt-{{ _overlay_theme }}">{{ _close_button }}</div>
      {% endif %}
      <div class="c-bolt-dialogue__content">
        {{ content }}
      </div>
      {% if persistent_return_element %}
      <div class="c-bolt-dialogue__footer">
        {{ persistent_return_element }}
      </div>
      {% endif %}
    </div>
  </div>
</div>
