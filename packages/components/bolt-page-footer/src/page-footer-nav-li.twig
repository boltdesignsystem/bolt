{% set schema = bolt.data.components['@bolt-components-page-footer'].schema['page-footer-nav-li'] %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}
{% set link_attributes = create_attribute(link.attributes|default({})) %}
{% set link_tag = link_attributes.type ? 'button' : link_attributes.href ? 'a' : 'span' %}

{% set classes = [
  'c-page-footer__nav-list-item',
] %}

<li {{ attributes.addClass(classes) }}>
  <{{ link_tag }} {{ link_attributes.addClass('c-page-footer__nav-link') }}>
    <span class="c-page-footer__nav-link__text">{{ link.content }}</span>
    {% if link.icon %}
      <span class="c-page-footer__nav-link__icon">{{ link.icon }}</span>
    {% endif %}
  </{{ link_tag }}>
</li>
