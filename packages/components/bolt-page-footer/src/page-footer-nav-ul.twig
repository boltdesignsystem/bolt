{# Twig usage 

{% include 'bolt-components-page-footer/page-footer-nav-ul.twig' with {
  headline: {
    text: 'Company',
    tag: 'h3',
  },
  content: content, // page-footer-nav-li goes here
  category: category, // [social, language, legal]
} only %}

 #}

{% set schema = bolt.data.components['@bolt-components-page-footer'].schema['page-footer-nav-ul'] %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{% set classes = [
  'c-bolt-page-footer-list',
  this.data.category.value ? 'c-bolt-page-header__nav-list--' ~ this.data.category.value,
] %}

<div {{ attributes.addClass(classes) }}>
  <{{ headline.tag }} class="c-page-footer__nav-headline">{{ headline.text }}</{{ headline.tag }}>
  <button class="c-page-footer__nav-headline c-page-footer__nav-headline--trigger js-bolt-page-footer-toggle-trigger" type="button" aria-expanded="false">
    {{ headline.text }}
    <span class="c-page-footer__nav-headline--trigger__icon" aria-hidden="true">{{ icon_chevron_down }}</span>
  </button>
  <ul class="c-page-footer__nav-list">
    {{ content }}
  </ul>
</div>
