
<bolt-input-icons>
  <ul class="o-bolt-inline-list o-bolt-inline-list--xsmall">

    {# The invalid icon is always added; it's simply shown or hidden using CSS and javascript #}
    <li class="o-bolt-inline-list__item">
      <div class="c-bolt-input-icon--invalid">
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'warning',
          size: 'medium'
        } only %}
      </div>
    </li>

    {% set icon_size = icon_size|default("medium") %}

    {% for icon in icons %}
      {% if icon == 'search' %}

        {# The search icon is a special case; the icon itself needs to be a submit button #}
        <li class="o-bolt-inline-list__item">
          <button class="c-bolt-input-icon c-bolt-input-icon--link" type="submit">
            {% include '@bolt-elements-icon/icon.twig' with {
              name: icon,
              size: icon_size
            } only %}
          </button>
        </li>

      {% else %}

        <li class="o-bolt-inline-list__item">
          <div class="c-bolt-input-icon">
            {% include '@bolt-elements-icon/icon.twig' with {
              name: icon,
              size: icon_size
            } only %}
          </div>
        </li>

      {% endif %}
    {% endfor %}

  </ul>
</bolt-input-icons>
