{#
/**
 * @file
 * A form button element.
 */
#}

{% set _button_props = {
  content: text,
  display:  'block',
  attributes: {
    type: 'submit'
  }
} %}

{% if icon %}
  {% set _icon %}
    {% include '@bolt-components-icon/icon.twig' with icon only %}
  {% endset %}

  {% set _button_props = _button_props|merge({ icon_before: _icon }) %}
{% endif %}

{% include '@bolt-elements-button/button.twig' with _button_props only %}
