{% set prefix = "c-bolt-" %}

{% set attributes = create_attribute(attributes|default({})) %}

{% set componentName = "search-filter" %}
{% set baseClass = prefix ~ componentName %}

{% set classes = [
  baseClass
] %}

{% set panelId = "search-filter" %}

<bolt-{{ componentName }} bolt-component>
  <div {{ attributes.addClass(classes) }}>
    <div class="{{ "#{baseClass}__trigger" }}">
      {% set _more_icon %}
        {% include '@bolt-components-icon/icon.twig' with {
          name: 'more',
          size: 'medium'
        } only %}
      {% endset %}
      {% include '@bolt-elements-button/button.twig' with {
        content: 'Close search filter'|t,
        border_radius: 'full',
        size: 'xsmall',
        icon_only: _more_icon,
        attributes: {
          href: "#" ~ panelId,
        }
      } only %}
    </div>

    <div class="{{ "#{baseClass}__panel" }}" id="{{ panelId }}">
      <div class="c-bolt-search-filter__panel-content">
        {% block search_filter %}
          {{ content }}
        {% endblock search_filter %}
      </div>

      <div class="{{ "#{baseClass}__panel-controls #{baseClass}__panel-controls--submit" }}">

      {% set button_apply %}
        {% include '@bolt-elements-button/button.twig' with {
          content: "Apply"|t,
          hierarchy: "primary",
          attributes: {
            href: '#!'
          }
        } only %}
      {% endset %}

      {% set button_cancel %}
        {% include '@bolt-elements-button/button.twig' with {
          content: "Cancel"|t,
          hierarchy: "secondary",
          attributes: {
            href: '#!'
          }
        } only %}
      {% endset %}

        {% include "@bolt-components-list/list.twig" with {
          display: 'inline',
          items: [
            button_apply,
            button_cancel,
          ]
        } only %}
      </div>

      <div class="{{ "#{baseClass}__panel-controls #{baseClass}__panel-controls--close" }}">
        {% set _close_icon %}
          {% include '@bolt-components-icon/icon.twig' with {
            name: 'more',
            size: 'medium'
          } only %}
        {% endset %}
        {% include '@bolt-elements-button/button.twig' with {
          content: 'Close search filter'|t,
          border_radius: 'full',
          size: 'xsmall',
          hierarchy: 'transparent',
          icon_only: _close_icon,
          attributes: {
            href: "#!",
          }
        } only %}
      </div>
    </div>
  </div>
</bolt-{{ componentName }}>
