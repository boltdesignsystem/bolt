{% set schema = bolt.data.components["@bolt-components-code-snippet"].schema %}

{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self) | raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{# Array of classes based on the defined + default props #}
{% set classes = [
  'c-bolt-code-snippet',
  this.data.syntax.value != 'none' ? 'c-bolt-code-snippet--'  ~ this.data.syntax.value : '',
] %}

{% set attributes = attributes.setAttribute('data-bolt-lang', this.data.lang.value) %}

{% if this.data.hide_copy.value %}
  {% set attributes = attributes.setAttribute('data-bolt-hide-copy', '') %}
{% endif %}

{% if this.data.hide_title.value %}
  {% set attributes = attributes.setAttribute('data-bolt-hide-title', '') %}
{% endif %}

{% if lang_title %}
  {% set attributes = attributes.setAttribute('data-bolt-lang-title', lang_title) %}
{% endif %}

{# Template #}
<div {{ attributes.addClass(classes)}}>
<pre><code>{% spaceless %}{{ content|e }}{% endspaceless %}</code></pre>
</div>
