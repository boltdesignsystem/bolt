{% set schema = bolt.data.components['@bolt-components-floating-action-buttons'].schema['floating-action-buttons'] %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{# Array of classes based on the defined + default props #}
{% set classes = [
  'c-bolt-floating-action-buttons',
  (this.data.hide_on_load.value or this.data.show_on_scroll_position.value) ? 'c-bolt-floating-action-buttons--hidden' : '',
] %}

<div
  {{ attributes.addClass(classes) }}
  {% if this.data.hide_on_load.value %}data-hide-on-load{% endif %}
>
  {% spaceless %}
    {{ content }}
  {% endspaceless %}
</div>
