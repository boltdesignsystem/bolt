{% set schema = bolt.data.components['@bolt-components-billboard'].schema %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}
{% set layout_attributes = create_attribute({}) %}

{# Array of classes based on the defined + default props #}
{% set classes = [
  'c-bolt-billboard',
] %}

{# Array of classes based on the defined + default props #}
{% set layout_classes = [
  't-bolt-' ~ this.data.theme.value,
] %}

{% if not template|length %}
  {% set template = ['halves@from-small'] %}
{% endif %}

{% set layout_attributes = layout_attributes.setAttribute('template', template|join(' ')) %}
{% set layout_attributes = layout_attributes.setAttribute('gutter', this.data.size.value) %}
{% set layout_attributes = layout_attributes.setAttribute('row-gutter', this.data.size.value) %}
{% set layout_attributes = layout_attributes.setAttribute('padding-top', this.data.size.value) %}
{% set layout_attributes = layout_attributes.setAttribute('padding-bottom', this.data.size.value) %}
{% set layout_attributes = layout_attributes.setAttribute('valign-items', 'center') %}

{% if this.data.center_content.value %}
  {% set layout_attributes = layout_attributes.setAttribute('align-items', 'center') %}
{% endif %}

<div {{ attributes.addClass(classes) }}>
  <bolt-layout {{ layout_attributes.addClass(layout_classes) }} {{ layout_attributes }}">
    {{ background }}

    <bolt-layout-item
    {{ this.data.center_content.value ? 'class="u-bolt-text-align-center"' : '' }}
    {{ this.data.reverse_order.value ? 'order="last"' : '' }}
    >
      {{ content }}
    </bolt-layout-item>

    {% if supplement or this.data.reverse_order.value %}
    <bolt-layout-item valign-self="{{ this.data.supplement_valign.value }}">
      {{ supplement }}
    </bolt-layout-item>
    {% endif %}

  </bolt-layout>
</div>
