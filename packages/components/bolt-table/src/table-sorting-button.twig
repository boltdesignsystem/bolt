{% set schema = bolt.data.components['@bolt-components-table'].schema %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{# Array of classes based on the defined + default props #}
{% set classes = [
  'js-bolt-table-sorting',
] %}

<span {{ attributes.addClass(classes) }}>
  {% set _icon_pega_sort %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'pega-sort',
    } only %}
  {% endset %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: content,
    hierarchy: 'transparent',
    icon_after: _icon_pega_sort,
    reversed_underline: true,
    attributes: {
      type: 'button',
      class: [
        'js-bolt-table-sorting-button',
        'js-bolt-table-sorting-button-unsorted',
      ],
    },
  } only %}

  {% set _icon_pega_sort_ascending %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'pega-sort-ascending',
    } only %}
  {% endset %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: content,
    hierarchy: 'transparent',
    icon_after: _icon_pega_sort_ascending,
    reversed_underline: true,
    attributes: {
      type: 'button',
      class: [
        'js-bolt-table-sorting-button',
        'js-bolt-table-sorting-button-ascending',
        'u-bolt-hidden',
      ],
    },
  } only %}

  {% set _icon_pega_sort_descending %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'pega-sort-descending',
    } only %}
  {% endset %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: content,
    hierarchy: 'transparent',
    icon_after: _icon_pega_sort_descending,
    reversed_underline: true,
    attributes: {
      type: 'button',
      class: [
        'js-bolt-table-sorting-button',
        'js-bolt-table-sorting-button-descending',
        'u-bolt-hidden',
      ],
    },
  } only %}
</span>
