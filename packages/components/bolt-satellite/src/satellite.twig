{% set schema = bolt.data.components['@bolt-components-satellite'].schema %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{# Array of classes based on the defined + default props #}
{% set classes = [
  'c-bolt-satellite',
  this.data.disabled.value ? 'c-bolt-satellite--disabled' : '',
  this.data.position.value != 'static' ? 'c-bolt-satellite--position-' ~ this.data.position.value : '',
] %}

<div {{ attributes.addClass(classes) }}>
  <div class="c-bolt-satellite__content" data-stash="{{ this.data.stash.value }}" data-reveal-children="false">
    {{ content }}
  </div>
  <div class="c-bolt-satellite__more">
    {% set icon_more %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'more',
      } only %}
    {% endset %}
    {% include '@bolt-components-tooltip/tooltip.twig' with {
      content: 'More',
      trigger: include('@bolt-elements-button/button.twig', {
        content: 'More',
        icon_only: icon_more,
        attributes: {
          type: 'button'
        },
      }),
    } only %}
  </div>
</div>
