{# @TODO: rename stash #}

{% set schema = bolt.data.components['@bolt-components-satellite'].schema %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{# Array of classes based on the defined + default props #}
{% set classes = [
  'c-bolt-satellite',
  'c-bolt-satellite--position-' ~ this.data.position.value,
] %}

<div
  {{ attributes.addClass(classes) }}
  aria-hidden="true"
  aria-expanded="false"
  data-visible-items="{{ this.data.visible_items.value }}"
  {{ this.data.show_on_load.value ? 'data-show-on-load=""' : '' }}
  {{ this.props|without("class")|without("position")|without("visible_items") }}
>

  <div class="c-bolt-satellite__content">
    {{ content }}
  </div>

  {% if this.data.visible_items.value > 0 %}
  <div class="c-bolt-satellite__more">
    {% set icon_more %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'more',
      } only %}
    {% endset %}
    {% include '@bolt-components-tooltip/tooltip.twig' with {
      content: 'More',
      trigger: include('@bolt-elements-button/button.twig', {
        content: 'More',
        icon_only: icon_more,
        attributes: {
          type: 'button'
        },
      }),
    } only %}
  </div>
  {% endif %}
</div>
