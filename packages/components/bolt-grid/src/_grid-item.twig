{% set schema = bolt.data.components['@bolt-components-grid'].schema['grid-item'] %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set item_attributes = create_attribute(attributes|default({})) %}

<bolt-grid-item
  {% if this.data.row_start.value != this.data.row_start.default %}row-start="{{ this.data.row_start.value }}"{% endif %}
  {% if this.data.row_span.value != this.data.row_span.default %}row-span="{{ this.data.row_span.value }}"{% endif %}
  {% if this.data.column_start.value %}column-start="{{ this.data.column_start.value }}"{% endif %}
  {% if this.data.column_span.value %}column-span="{{ this.data.column_span.value }}"{% endif %}
  {% if this.data.valign.value != this.data.valign.default %}valign="{{ this.data.valign.value }}"{% endif %}
  {{ item_attributes }}
>
  {{ content }}
</bolt-grid-item>
