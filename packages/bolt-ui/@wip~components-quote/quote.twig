<blockquote class="quote">
  <p class="quote-quotation">{{quotation}}</p>
  <footer class="quote-reference">
    <span class="quote-attribution-name">{{attribution.name}}</span>
    {% if attribution.title %},
      <span class="quote-attribution-title">{{attribution.title}}</span>
    {% endif %}
  </footer>
</blockquote>
