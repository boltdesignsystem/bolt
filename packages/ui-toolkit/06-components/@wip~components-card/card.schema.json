{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Band",
  "category": "layout",
  "type": "object",
  "format": "grid",
  "properties": {
    "name": {
      "type": "string",
      "enum": ["band"],
      "options": {
        "hidden": true
      }
    },
    "background": {
      "title": "Card Background",
      "type": "string",
      "enum": ["white", "black", "gray"],
      "default": "white"
    },
    "body": {
      "title": "Card Contents",
      "type": "array",
      "minItems": 2,
      "maxItems": 4,
      "items": {
        "oneOf": [
          {"$ref": "image.json"},
          {"$ref": "quote.json"}
        ]
      }
    }
  },
  "required": ["body", "background"],
  "additionalProperties": false
}
