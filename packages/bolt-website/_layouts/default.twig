            <!-- <nav class="secondary-nav col-xs-12 col-sm-3"> -->
                {% block secondary_nav %}{% endblock %}
            <!-- </nav> -->
        {% endif %}

        {% if block( 'main_content' ) %}
          {% block main_content %}{% endblock %}
        {% endif %}

        {% if block( 'left' ) %}
            <div class="left {% if block( 'secondary_nav' ) %} col-xs-12 col-sm-9 {% endif %}">
                {% block left %}{% endblock %}
            </div>
        {% endif %}

        {% if block( 'right' ) %}
            <!-- <div class="right"> -->
                {% block right %}{% endblock %}
            <!-- </div> -->
        {% endif %}

    <!-- </div>
</div> -->

