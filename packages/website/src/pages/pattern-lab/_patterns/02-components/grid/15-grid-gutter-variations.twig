{% set schema = bolt.data.components["@bolt-components-grid"].schema %}

{% set gutters = schema.properties.gutter.enum %}

{% set placeholder %}
  {% include "@bolt-components-placeholder/placeholder.twig" with {
    text: "Span 4 columns",
  } only %}
{% endset %}

{% for gutter in gutters %}
  <h3>{{ gutter|capitalize }} Gutter</h3>
  <div class="u-bolt-margin-bottom-medium">
    {% include "@bolt-components-grid/grid.twig" with {
      gutter: gutter,
      items: [
        {
          column_start: "1",
          column_span: "4",
          content: placeholder,
        },
        {
          column_start: "5",
          column_span: "4",
          content: placeholder,
        },
        {
          column_start: "9",
          column_span: "4",
          content: placeholder,
        },
      ]
    } only %}
  </div>
{% endfor %}
