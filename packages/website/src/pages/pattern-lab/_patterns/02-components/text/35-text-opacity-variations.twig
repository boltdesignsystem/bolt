{% extends "@pl/_text-doc-template.twig" %}

{% block content %}
  <bolt-text headline>
    Opacity Usage
  </bolt-text>
  <bolt-text>
    <bolt-code-snippet display="inline" lang="html">&lt;bolt-text&gt;</bolt-code-snippet> can be adjusted in terms of opacity. The options are synced with Bolt's opacity scale.
  </bolt-text>
  {% for opacity in schema.properties.opacity.enum %}

{# Indents are removed to eliminate unnecessary white space when the code sample renders. #}
{% set text_demo %}
<bolt-text opacity="{{ opacity }}">
  This text has its opacity prop defined as: {{ opacity }}
</bolt-text>
{% endset %}

    {% include text_code.code_example(text_demo, true) %}
  {% endfor %}
{% endblock %}
