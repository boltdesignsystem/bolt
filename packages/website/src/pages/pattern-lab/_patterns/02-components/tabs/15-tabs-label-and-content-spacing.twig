{% set schema = bolt.data.components["@bolt-components-tabs"].schema %}

{% set tab_content_1 %}
  {% include "@bolt-components-placeholder/placeholder.twig" with {
      text: "Tab panel 1",
      size: "medium",
    } only %}
{% endset %}
{% set tab_content_2 %}
  {% include "@bolt-components-placeholder/placeholder.twig" with {
      text: "Tab panel 2",
      size: "medium",
    } only %}
{% endset %}
{% set tab_content_3 %}
  {% include "@bolt-components-placeholder/placeholder.twig" with {
      text: "Tab panel 3",
      size: "medium",
    } only %}
{% endset %}

<bolt-text>
  Use <code>label_spacing</code> and <code>panel_spacing</code> props, in conjunction with <code>inset</code>, to set spacing around tab labels and panels. See <bolt-link url="/pattern-lab/patterns/02-components-tabs-10-tabs-inset/02-components-tabs-10-tabs-inset.html">Inset variations</bolt-link> page for more on the <code>inset</code> prop.
</bolt-text>

{% grid "o-bolt-grid--flex o-bolt-grid--matrix" %}

  {% cell "u-bolt-width-12/12 u-bolt-width-6/12@medium" %}
    {# Empty white space #}
  {% endcell %}

  {% cell "u-bolt-width-12/12" %}
    <bolt-text headline font-size="xlarge">Label spacing</bolt-text>
    <bolt-text>
      Use <code>label_spacing</code> to set spacing around (or between) tab labels.
    </bolt-text>
  {% endcell %}

  {% for spacing in schema.properties.label_spacing.enum %}
    {% cell "u-bolt-width-12/12" %}
      <bolt-text headline font-size="large">Spacing: <code>{{ spacing }}</code></bolt-text>
    {% endcell %}

    {% for inset in schema.properties.inset.enum %}
      {% cell "u-bolt-width-12/12 u-bolt-width-4/12@medium" %}
        <bolt-text font-size="small" class="u-bolt-margin-bottom-small">Inset: <code>{{ inset }}</code></bolt-text>
        {% include "@bolt-components-tabs/tabs.twig" with {
          label_spacing: spacing,
          inset: inset,
          panels: [
            {
              label: "Tab label 1",
              content: tab_content_1,
            },
            {
              label: "Tab label 2",
              content: tab_content_2,
            },
            {
              label: "Tab label 3",
              content: tab_content_3,
            }
          ]
        } only %}
      {% endcell %}
    {% endfor %}

  {% endfor %}

  {% cell "u-bolt-width-12/12 u-bolt-width-6/12@medium" %}
    {# Empty white space #}
  {% endcell %}

  {% cell "u-bolt-width-12/12" %}
    <bolt-text headline>Panel spacing</bolt-text>
    <bolt-text>
      Use <code>panel_spacing</code> to set spacing around tab panels.
    </bolt-text>
  {% endcell %}

  {% for spacing in schema.properties.panel_spacing.enum %}
    {% cell "u-bolt-width-12/12" %}
      <bolt-text headline font-size="large">Spacing: <code>{{ spacing }}</code></bolt-text>
    {% endcell %}

    {% for inset in schema.properties.inset.enum %}
      {% cell "u-bolt-width-12/12 u-bolt-width-4/12@medium" %}
        <bolt-text font-size="small" class="u-bolt-margin-bottom-small">Inset: <code>{{ inset }}</code></bolt-text>
        {% include "@bolt-components-tabs/tabs.twig" with {
          panel_spacing: spacing,
          inset: inset,
          panels: [
            {
              label: "Tab label 1",
              content: tab_content_1,
            },
            {
              label: "Tab label 2",
              content: tab_content_2,
            },
            {
              label: "Tab label 3",
              content: tab_content_3,
            }
          ]
        } only %}
      {% endcell %}
    {% endfor %}

  {% endfor %}

{% endgrid %}
