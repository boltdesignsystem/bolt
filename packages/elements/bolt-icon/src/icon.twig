{#
/**
 * Icon Element
 *
 * Available variables:
 * - Reference icon.schema.js
 */
#}

{# Schema Validation #}
{% set schema = bolt.data.components['@bolt-elements-icon'].schema %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{% set classes = [
  'e-bolt-icon',
  this.data.size.value ? 'e-bolt-icon--' ~ this.data.size.value : ''
] %}

{# The .svg.twig namespace allows for the passage of twig data #}
{% if name %}
  {% set icon_path = '@bolt-elements-icon/icons/' ~ name ~ '.twig' %}
{% endif %}
{% include icon_path %}
