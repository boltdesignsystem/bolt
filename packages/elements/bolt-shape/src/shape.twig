{#
/**
 * Background Shape Element
 *
 * Available variables:
 * - Reference background-shape.schema.js
 */
#}

{# Schema Validation #}
{% set schema = bolt.data.components['@bolt-elements-shape'].schema %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{% set classes = [
  'e-bolt-shape',
  this.data.border_radius.value != schema.properties.border_radius.default ? 'e-bolt-shape--border_radius--' ~ this.data.border_radius.value,
  size ? 'e-bolt-shape--size--' ~ size,
  this.data.spacing.value != schema.properties.spacing.default ? 'e-bolt-shape--spacing--' ~ this.data.spacing.value
] %}

<span {{ attributes.addClass(classes) }}>
  <span class="e-bolt-shape__inner">
    {{ content }}
  </span>
</span>
