{#
/**
 * Ratio Element
 *
 * Available variables:
 * - Reference ratio.schema.js
 *
#}

{# Schema Validation #}
{% set schema = bolt.data.components['@bolt-elements-ratio'].schema %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}
{% set classes = [
  'e-bolt-ratio',
] %}


{% set inline_style = [
  '--e-bolt-aspect-ratio: ' ~ ratio ~ ';'
] %}
{% if attributes.style is not empty  %}
  {% set inline_style = inline_style|merge(attributes.style) %}
{% endif %}

{% if inline_style is not empty %}
{# Add inline styles to attributes object #}
{% set attributes = create_attribute(attributes|default({})|merge({
  style: inline_style
})) %}
{% endif %}

{# Template #}
<div {{ attributes.addClass(classes) }}>
  {{ children }}
</div>

