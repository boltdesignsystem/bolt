{# Schema Validation #}
{% set schema = bolt.data.components['@bolt-elements-list'].schema['list'] %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{% set classes = [
  'e-bolt-list',
  this.data.display.value != schema.properties.display.default ? 'e-bolt-list--display-' ~ this.data.display.value,
  this.data.spacing.value != schema.properties.spacing.default ? 'e-bolt-list--spacing-' ~ this.data.spacing.value,
  this.data.separator.value != schema.properties.separator.default ? 'e-bolt-list--separator-' ~ this.data.separator.value,
  this.data.inset.value != schema.properties.inset.default ? 'e-bolt-list--' ~ this.data.inset.value,
  this.data.nowrap.value != schema.properties.nowrap.default ? 'e-bolt-list--nowrap',
] %}
