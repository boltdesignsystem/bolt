{
  "name": "bolt-design-system/core-php",
  "description": "Core PHP functionality for Bolt",
  "version": "0.9.0",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Salem Ghoweri",
      "role": "Maintainer"
    },
    {
      "name": "Evan Lovely"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/drupal/core-render",
      "no-api": true
    }
  ],
  "autoload": {
    "psr-4": {
      "Bolt\\": "src/",
      "Drupal\\Core\\": "src/libs/Drupal/Core/"
    }
  },
  "require": {
    "bolt/core-php": "^0.9.0",
    "twig/twig": "^1.0",
    "basaltinc/twig-tools": "^1.3.2",
    "michelf/php-markdown": "^1.8.0",
    "mexitek/phpcolors": "^0.4.0",
    "drupal/core-render": "8.4.x-dev",
    "drupal/core-utility": "8.4.x-dev",
    "webmozart/path-util": "^2.3",
    "shudrum/array-finder": "^1.1",
    "gregwar/image": "^2.0",
    "ksubileau/color-thief-php": "^1.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^7"
  },
  "scripts": {
    "test": "phpunit --colors=always tests"
  }
}
