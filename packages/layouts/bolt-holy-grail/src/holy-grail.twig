{# Schema Validation #}
{% set schema = bolt.data.components['@bolt-layouts-holy-grail'].schema['holy-grail'] %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{# Array of classes based on the defined + default props #}
{% set classes = [
  'l-bolt-holy-grail',
] %}

{# Template #}
{% spaceless %}<div {{ attributes.addClass(classes) }} data-bolt-holy-grail-layout>
  {% if sidebar %}
    {{ sidebar }}
  {% endif %}

  {% if secondary_sidebar %}
    {{ secondary_sidebar }}
  {% endif %}

  <div class="l-bolt-holy-grail__article">
    <div class="l-bolt-holy-grail__article__content">
      {{ content }}
    </div>
  </div>
</div>{% endspaceless %}
