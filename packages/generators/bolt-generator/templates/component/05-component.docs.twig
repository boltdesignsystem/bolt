{% set description %}
  A description of the component and what it is used for
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>List out important information about this component and it's usage</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
  {% include '@bolt-components-{{ kebabCase name }}/{{ kebabCase name }}.twig' with {
    content: 'This is a {{ lowerCase name }}'
  } only %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% include '@bolt-components-{{ kebabCase name }}/{{ kebabCase name }}.twig' with {
  content: 'This is a {{ lowerCase name }}'
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: '{{ kebabCase name }}',
  description: description,
  notes: notes,
  demo: demo,
  demo_light_dark: true,
  twig_markup: twig_markup
} only %}
