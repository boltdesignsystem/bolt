{% set usage %}{% verbatim %}
{% include '@bolt-elements-{{ kebabCase name }}/{{ kebabCase name }}.twig' with {
  content: 'This is a {{ lowerCase name }}'
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/docs.twig' with {
  componentName: '{{ kebabCase name }}',
  componentGroup: 'elements',
  usage: usage
} only %}



{% set description %}
  A description of the element and what it is used for
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>List out important information about this element and it's usage</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
  {% include '@bolt-elements-{{ kebabCase name }}/{{ kebabCase name }}.twig' with {
    content: 'This is a {{ lowerCase name }}'
  } only %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% include '@bolt-elements-{{ kebabCase name }}/{{ kebabCase name }}.twig' with {
  content: 'This is a {{ lowerCase name }}'
} only %}
{% endverbatim %}{% endset %}

{% set html_markup %}
{% verbatim %}
Print the non-twig version of this component (should be raw markup)
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: '{{ kebabCase name }}',
  description: description,
  notes: notes,
  demo: demo,
  demo_light_dark: true,
  twig_markup: twig_markup,
  html_markup: html_markup
} only %}
