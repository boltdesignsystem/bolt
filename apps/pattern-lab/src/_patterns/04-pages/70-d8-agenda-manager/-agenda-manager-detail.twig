    {% endblock %}
  {% endembed %}

  {% embed "@bolt/band.twig" with {
    size: "small",
    theme: "xlight",
    attributes: {
      class: "u-bolt-margin-bottom-xlarge"
    }
  } only %}

    {% block band_content  %}

      <hr>

      {% include "@bolt/headline.twig" with {
        size: "xlarge",
        tag: "h2",
        text: "Related Sessions",
      } only %}

      {% grid "o-bolt-grid--matrix" %}
        {% cell "u-bolt-width-1/1 u-bolt-width-1/3@small" %}

          {% include "@bolt/eyebrow.twig" with {
            text: "Spark Talk"
          } only %}

          {% include "@bolt/headline.twig" with {
            text: "What Aflac is learning about consumer expectations through monitoring tech disruptions",
            size: "large",
            tag: "h3",
            url: "#"
          } only %}
        {% endcell %}

        {% cell "u-bolt-width-1/1 u-bolt-width-1/3@small" %}
          {% include "@bolt/eyebrow.twig" with {
            text: "Spark Talk"
