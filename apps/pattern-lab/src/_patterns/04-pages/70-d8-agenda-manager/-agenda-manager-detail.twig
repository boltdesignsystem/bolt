          } only %}
        {% endcell %}

      {% endgrid %}
    {% endblock %}
  {% endembed %}

  {% embed "@bolt/band.twig" with {
    theme: "xdark",
    size: "medium"
  } %}

    {% block band_content  %}
      {% grid "o-bolt-grid--matrix" %}
        {% cell "u-bolt-width-1/1 u-bolt-width-1/3@small" %}
          {% include "@bolt/teaser.twig" with {
            "headlines": [
              {
                "type": "headline",
                "text": "Register Now",
                "size": "large"
              }
            ],
            "content": "Time is running out to take advantage of end-of-year pricing.",
            "buttons": [
              {
                "text": "Register Now!",
                "url": "#"
              }
            ]
          } only %}
        {% endcell %}

        {% cell "u-bolt-width-1/1 u-bolt-width-1/3@small" %}
          {% include "@bolt/teaser.twig" with {
            "headlines": [
              {
                "type": "headline",
                "text": "Become a PegaWorld Insider",
                "size": "large"
              }
            ],
            "content": "Stay up-to-date on all the latest PegaWorld news and announcements.",
            "buttons": [
              {
                "text": "Sign up",
                "url": "#",
                "style": "secondary"
              }
            ]
          } only %}
        {% endcell %}

        {% cell "u-bolt-width-1/1 u-bolt-width-1/3@small" %}
          {% include "@bolt/headline.twig" with {
            text: "Connect to start a conversation",
            size: "large"
          } only %}

          {% include "@bolt/headline.twig" with {
            text: "#PegaWorld18",
            size: "xxlarge",
            weight: "regular",
            attributes: {
              class: ["u-bolt-color-yellow"]
            }
          } only %}


          {% set socialIcons = [
            {
              name: "twitter",
              url: "#"
            },
            {
              name: "facebook-solid",
              url: "#"
            },
            {
              name: "linkedin-solid",
              url: "#"
            },
            {
              name: "youtube-solid",
              url: "#"
            }
          ] %}

          {% for icon in socialIcons %}
            <a class="u-bolt-margin-right-small" href="{{ icon.url }}">
              {% include "@bolt/icon.twig" with {
                name: icon.name,
                size: "medium"
              } only %}
            </a>
          {% endfor %}
        {% endcell %}
      {% endgrid %}
    {% endblock %}
  {% endembed %}
{% endblock %}
