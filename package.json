{
  "name": "bolt",
  "version": "0.2.0",
  "description": "Pega Digital Design System",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "npm run setup:composer && gulp build",
    "changelog": "lerna-changelog",
    "commitmsg": "validate-commit-msg",
    "fix:scripts": "gulp scripts:fix",
    "fix:scss": "gulp styles:fix",
    "fix": "gulp fix",
    "_lint:fix": "eslint --fix ./packages/bolt-build-tools",
    "lint:js": "eslint ./packages/bolt-build-tools",
    "lint:md": "remark . --quiet --frail",
    "lint:scss": "stylelint ./packages/**/*.scss",
    "clean:lerna": "lerna clean -Y",
    "clean:git": "git clean -xdf",
    "clean:all": "npm run clean:git && npm run clean:lerna",
    "lint": "npm-run-all --parallel lint:* -c",
    "mocha": "mocha packages/**/*/tests",
    "deploy": "node packages/bolt-build-tools/build-slack/index.js",
    "postinstall": "npm run bootstrap && npm run setup:composer && gem install --file packages/website-jekyll/Gemfile",
    "prepublishOnly": "npm run snyk-protect",
    "publish-beta": "lerna run build && lerna publish --npm-tag=beta --skip-git",
    "publish-canary": "lerna run build && lerna run publish-please && lerna publish --canary --yes",
    "publish-please": "publish-please",
    "publish": "lerna run build && lerna run publish-please && lerna publish",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "serve": "gulp serve",
    "setup:composer": "if [ ! -f ./bolt-website/pattern-lab/index.html ]; then cd packages/website-pattern-lab && rm -rf composer.lock && rm -rf vendor && composer install --no-interaction --prefer-dist --no-dev; fi",
    "setup:homebrew": "sh scripts/install-homebrew.sh",
    "snyk-protect": "snyk protect",
    "start": "serve ./boltdesignsystem --single",
    "test": "npm run mocha",
    "_pretest": "npm run lint && node scripts/check-imports.js",
    "pretest": "node scripts/check-imports.js"
  },
  "pre-commit": [
    "test"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    },
    "validate-commit-msg": {
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "Subject does not match subject pattern!",
      "types": [
        "chore",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ],
      "warnOnFail": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pega-digital/bolt.git"
  },
  "keywords": [
    "design",
    "system"
  ],
  "author": "Salem Ghoweri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pega-digital/bolt/issues"
  },
  "homepage": "https://github.com/pega-digital/bolt#readme",
  "dependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-traverse": "^6.24.1",
    "babel-types": "^6.24.1",
    "babylon": "^6.16.1",
    "browser-sync": "^2.18.13",
    "chai": "^4.1.0",
    "chai-fs": "^1.0.0",
    "cz-conventional-changelog": "^2.0.0",
    "cz-lerna-changelog": "^1.2.1",
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "feature-toggle": "^0.3.0",
    "fs-extra": "^4.0.1",
    "glob": "^7.1.2",
    "globby": "^6.1.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "husky": "^0.14.3",
    "inquirer": "^3.2.0",
    "js-yaml": "^3.9.1",
    "lerna": "^2.1.0",
    "lerna-changelog": "0.6.0",
    "lerna-semantic-release": "^9.1.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "now-travis": "^1.0.1",
    "npm-run-all": "^4.0.2",
    "path": "^0.12.7",
    "pre-commit": "^1.2.2",
    "precommit": "^1.2.2",
    "prettier-eslint-cli": "^4.2.1",
    "publish-please": "^2.3.1",
    "read-pkg-up": "^2.0.0",
    "remark-cli": "4.0.0",
    "remark-lint": "6.0.1",
    "remark-preset-lint-consistent": "2.0.1",
    "remark-preset-lint-markdown-style-guide": "2.1.1",
    "remark-preset-lint-recommended": "3.0.1",
    "serve": "latest",
    "snyk": "^1.36.2",
    "stylefmt": "6.0.0",
    "stylelint": "8.0.0",
    "stylelint-scss": "^2.0.1",
    "validate-commit-msg": "^2.12.2"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-object-assign"
    ],
    "env": {
      "test": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "snyk": true,
  "lint-staged": {
    "*.md": [
      "remark --quiet --frail --no-stdout"
    ],
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.scss": [
      "stylelint"
    ]
  },
  "now": {
    "files": [
      "bolt-website",
      "bolt-website/pattern-lab/styleguide/bower_components/**/*"
    ]
  }
}
