{
  "name": "bolt",
  "version": "0.1.0",
  "description": "Pega Digital Design System",
  "scripts": {
    "now:deploy": "originalurl=$(now boltdesignsystem) | branch=$(git rev-parse --abbrev-ref HEAD | sed -e 's///-/g') | now alias $originalurl $branch'-boltdesignsystem'",
    "bootstrap": "lerna bootstrap --concurrency 12",
    "commitmsg": "validate-commit-msg",
    "fix:scripts": "gulp scripts:fix",
    "fix:scss": "gulp styles:fix",
    "fix": "gulp fix",
    "lint": "eslint ./packages/bolt-build-tools",
    "prepublishOnly": "npm run snyk-protect",
    "publish-please": "publish-please",
    "publish-canary": "lerna run build && lerna run publish-please && lerna publish --canary --yes",
    "publish-beta": "lerna run build && lerna publish --npm-tag=beta --skip-git",
    "publish": "lerna run build && lerna run publish-please && lerna publish",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "start": "serve ./boltdesignsystem --single",
    "build": "if [ ! -f ./bolt-website/patterns/index.html ]; then npm run setup:composer; fi && gulp build",
    "serve": "gulp serve",
    "serve:fractal": "fractal start --sync",
    "setup:composer": "cd packages/website-pattern-lab && rm -rf composer.lock && rm -rf vendor && composer install --no-interaction --prefer-dist --no-dev",
    "setup:homebrew": "sh scripts/install-homebrew.sh",
    "snyk-protect": "snyk protect",
    "mocha": "mocha packages/**/*/tests",
    "test": "npm run mocha && npm run lint",
    "lint:watch": "nodemon --ignore node_modules -w packages/ --exec 'npm test'",
    "lint:fix": "eslint --fix ./packages/bolt-build-tools",
    "postinstall": "npm run bootstrap"
  },
  "pre-commit": [
    "test",
    "build"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "Subject does not match subject pattern!",
      "types": [
        "chore",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ],
      "warnOnFail": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pega-digital/bolt.git"
  },
  "keywords": [
    "design",
    "system"
  ],
  "author": "Salem Ghoweri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pega-digital/bolt/issues"
  },
  "homepage": "https://github.com/pega-digital/bolt#readme",
  "dependencies": {
    "@ec-europa/ecl-fractal-theme": "^0.9.0",
    "@frctl/fractal": "1.1.5",
    "@frctl/twig": "^1.0.0-beta.2",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.0",
    "chai-fs": "^1.0.0",
    "cz-conventional-changelog": "^2.0.0",
    "feature-toggle": "^0.3.0",
    "frctl-twig": "github:bolt-design-system/twig",
    "gulp": "gulpjs/gulp#4.0",
    "husky": "^0.14.3",
    "inquirer": "^3.2.0",
    "lerna": "^2.0.0",
    "mocha": "^3.4.2",
    "precommit": "^1.2.2",
    "publish-please": "^2.3.1",
    "serve": "latest",
    "snyk": "^1.36.2",
    "validate-commit-msg": "^2.12.2"
  },
  "snyk": true,
  "devDependencies": {
    "pre-commit": "^1.2.2"
  }
}
