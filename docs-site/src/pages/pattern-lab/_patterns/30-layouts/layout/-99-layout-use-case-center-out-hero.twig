{% set _description %}
  {% set _icon %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'external-link'
    } only %}
  {% endset %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'Live example',
    icon_after: _icon,
    attributes: {
      href: 'https://www.pega.com/technology/center-out',
      target: '_blank',
      rel: 'noopener',
    }
  } only %}
{% endset %}

{% set _notes %}
  <ul>
    <li>ALL images in a hero require the <code>loading="eager"</code> HTML attribute.</li>
    <li>ALL images should utilize the <code>srcset</code> HTML attribute (not done for this example due to time).</li>
    <li>The <code>order</code> prop was used to move the image above the headline on mobile.</li>
  </ul>
{% endset %}

{% set _demo %}
  {% set _content %}
    {% include '@bolt-components-headline/headline.twig' with {
      text: 'Build from the center out',
      tag: 'h1',
      size: 'xxxlarge',
    } only %}
    {% include '@bolt-components-headline/subheadline.twig' with {
      text: 'Feeling the need for speed <em>and</em> scalability? You can have both if you take a Center-out&trade; approach to structuring your technology â€“ and avoid some common mistakes.',
      tag: 'h2',
      size: 'xlarge',
    } only %}
    {% include '@bolt-elements-button/button.twig' with {
      content: 'Get the ebook',
      attributes: {
        href: '#!',
      }
    } only %}
  {% endset %}

  {% set _supplement %}
    {% set _video %}
      <video-js
        data-account="1900410236"
        data-player="O3FkeBiaDz"
        data-embed="default"
        data-video-id="6154161119001"
        data-media-duration
        data-media-title
        controls
        class="c-base-video"></video-js>
    {% endset %}
    {% include '@bolt-components-ratio/ratio.twig' with {
      children: _video,
      ratio: '16/9'
    } only %}
  {% endset %}

  {% set _layout_items %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: _supplement,
      order: 'last@from-medium'
    } only %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: _content
    } only %}
  {% endset %}

  {% set _background %}
    {% include '@bolt-elements-image/image.twig' with {
      background: true,
      attributes: {
        alt: 'Image alt text',
        src: '/images/heros/live-assets/center-out-hero-bg.jpg',
        loading: 'eager',
        width: '100vw'
      },
    } only %}
  {% endset %}

  {% include '@bolt-layouts-layout/layout.twig' with {
    content: _layout_items,
    gutter: 'large',
    row_gutter: 'small',
    padding_top: 'large',
    padding_bottom: 'large',
    valign_items: 'center',
    background: _background,
    template: [
      '67/33@from-medium'
    ],
    attributes: {
      class: 't-bolt-navy'
    }
  } only %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Center Out Hero',
  description: _description,
  demo: _demo,
  notes: _notes
} only %}
