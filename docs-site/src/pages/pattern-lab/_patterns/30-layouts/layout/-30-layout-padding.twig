{% include '@pl/00-layout-docs.twig' %}

{% set notes %}
  Reference the schema for all options. <a href="{{ link['viewall-layouts-layout'] }}?selected-tab=schema" class="e-bolt-text-link">Layout schema<span class="e-bolt-text-link__icon-after"><bolt-icon name="chevron-right"></bolt-icon></span></a>
{% endset %}

{% set demo %}
  <bolt-text headline font-size="xxsmall" text-transform="uppercase" letter-spacing="wide">Medium padding-top and xlarge padding-bottom</bolt-text>
  <bolt-layout template="tiles" padding-top="medium" padding-bottom="xlarge" class="t-bolt-light">
    <bolt-layout-item>
      <div class="t-bolt-dark u-bolt-padding-small">
        Layout item
      </div>
    </bolt-layout-item>
    <bolt-layout-item>
      <div class="t-bolt-dark u-bolt-padding-small">
        Layout item
      </div>
    </bolt-layout-item>
    <bolt-layout-item>
      <div class="t-bolt-dark u-bolt-padding-small">
        Layout item
      </div>
    </bolt-layout-item>
  </bolt-layout>
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-layouts-layout/layout.twig' with {
  padding_top: 'small',
  padding_bottom: 'xlarge',
  ...
} only %}
{% endverbatim %}
{% endset %}

{% set html_markup %}
{% verbatim %}
<bolt-layout padding-top="small" padding-bottom="xlarge">
  <bolt-layout-item>
    <!-- Content goes here -->
  </bolt-layout-item>
  <bolt-layout-item>
    <!-- Content goes here -->
  </bolt-layout-item>
</bolt-layout>
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Padding',
  description: 'Padding top and bottom can be individually adjusted based on the use case.',
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
  html_markup: html_markup,
} only %}
