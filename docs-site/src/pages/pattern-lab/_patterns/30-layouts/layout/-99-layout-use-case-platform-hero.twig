{% set description %}
  {% set icon %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'external-link'
    } only %}
  {% endset %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'Live example',
    icon_after: icon,
    attributes: {
      href: 'https://www.pega.com/products/platform',
      target: '_blank',
      rel: 'noopener',
    }
  } only %}
{% endset %}

{% set notes %}
  <ul>
    <li>ALL images in a hero require the <code>loading="eager"</code> HTML attribute.</li>
    <li>ALL images should utilize the <code>srcset</code> HTML attribute (not done for this example due to time).</li>
    <li><code>u-bolt-text-align-center</code> utility class has been added to the layout column through a style tag.</li>
  </ul>
{% endset %}

{% set demo %}
  {% set content %}
    {% include '@bolt-components-headline/headline.twig' with {
      text: 'The power of the low-code Pega Platform',
      tag: 'h1',
      size: 'xxxlarge',
    } only %}
    {% include '@bolt-components-headline/subheadline.twig' with {
      text: 'Simplify and streamline to get work done',
      tag: 'h2',
      size: 'xlarge',
    } only %}
  {% endset %}

  {% set layout_items %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: content,
      attributes: {
        class: 'u-bolt-text-align-center'
      }
    } only %}
  {% endset %}

  {% set background %}
    {% include '@bolt-elements-image/image.twig' with {
      background: true,
      attributes: {
        alt: 'Image alt text',
        src: '/images/heros/live-assets/platform-hero-bg-v2.jpg',
        loading: 'eager',
        width: '100vw'
      },
    } only %}
  {% endset %}

  {% include '@bolt-layouts-layout/layout.twig' with {
    content: layout_items,
    background: background,
    padding_top: 'large',
    padding_bottom: 'large',
    align_items: 'center',
    template: [
      '67@from-medium'
    ],
    attributes: {
      class: 't-bolt-navy'
    }
  } only %}
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% set content %}
  {% include '@bolt-components-headline/headline.twig' with {
    text: 'The power of the low-code Pega Platform',
    tag: 'h1',
    size: 'xxxlarge',
  } only %}
  {% include '@bolt-components-headline/subheadline.twig' with {
    text: 'Simplify and streamline to get work done',
    tag: 'h2',
    size: 'xlarge',
  } only %}
{% endset %}

{% set layout_items %}
  {% include '@bolt-layouts-layout/layout-item.twig' with {
    content: content,
    attributes: {
      class: 'u-bolt-text-align-center'
    }
  } only %}
{% endset %}

{% set background %}
  {% include '@bolt-elements-image/image.twig' with {
    background: true,
    attributes: {
      alt: 'Image alt text',
      src: '/images/heros/live-assets/platform-hero-bg-v2.jpg',
      loading: 'eager',
      width: '100vw'
    },
  } only %}
{% endset %}

{% include '@bolt-layouts-layout/layout.twig' with {
  content: layout_items,
  background: background,
  padding_top: 'large',
  padding_bottom: 'large',
  align_items: 'center',
  template: [
    '67@from-medium'
  ],
  attributes: {
    class: 't-bolt-navy'
  }
} only %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Platform Hero',
  description: description,
  demo: demo,
  notes: notes,
  twig_markup: twig_markup,
} only %}
