{% set twig_markup %}
{% verbatim %}
{% include '@bolt-layouts-holy-grail/holy-grail.twig' with {
  content: content,
  sidebar: {
    content: side_nav,
    trigger_icon: 'documentation',
    trigger_label: 'Book Navigation',
    auto_width: true,
  },
  secondary_sidebar: {
    content: table_of_contents,
    trigger_icon: 'more',
    trigger_label: 'More Info',
  },
} only %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Use Case: Documentation',
  description: description,
  demo: demo,
  notes: notes,
  twig_markup: twig_markup,
} only %}
