    content: content,
    sidebar: {
      content: side_nav,
      trigger_icon: 'documentation',
      trigger_label: 'Book Navigation',
      auto_width: true,
    },
    secondary_sidebar: {
      content: table_of_contents,
      trigger_icon: 'more',
      trigger_label: 'More Info',
    },
  } only %}
