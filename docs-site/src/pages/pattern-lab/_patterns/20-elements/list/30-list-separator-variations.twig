{% set description %}
    A description of the element and what it is used for.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>List out important information about this element and its usage.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
{% set schema = bolt.data.components['@bolt-elements-list'].schema['list'] %}
{% set regular_display_options = [
  'block',
  'flex',
  'inline',
] %}
{% set item_1 = 'Item 1' %}
{% set item_2 = 'Item 2' %}
{% set item_3 = 'Item 3'%}
{% set list_items %}
  {% include '@bolt-elements-list/list-item.twig' with {
    content: item_1,
  } only %}
  {% include '@bolt-elements-list/list-item.twig' with {
    content: item_2,
  } only %}
  {% include '@bolt-elements-list/list-item.twig' with {
    content: item_3,
  } only %}
{% endset %}
{% for separator in schema.properties.separator.enum %}
  {% if separator != 'none' %}
  <div class="u-bolt-margin-bottom-large">
    <bolt-grid gutter="medium" row-gutter="medium">
      {% for display in schema.properties.display.enum %}
        {% set separator_variation %}
          <h3>{{ separator|capitalize }} separators in a {{ display }} list</h3>
          {% include '@bolt-elements-list/list.twig' with {
            display: display,
            separator: separator,
            items: list_items
          } only %}
        {% endset %}
        {% if display == 'block' %}
          <bolt-grid-item column-start="1" column-span="12 4@small">
            {{ separator_variation }}
          </bolt-grid-item>
        {% elseif display == 'flex' %}
          <bolt-grid-item column-start="1 5@small" column-span="12 4@small">
            {{ separator_variation }}
          </bolt-grid-item>
        {% else %}
          <bolt-grid-item column-start="1 9@small" column-span="12 4@small">
            {{ separator_variation }}
          </bolt-grid-item>
        {% endif %}
      {% endfor %}
    </bolt-grid>
  </div>
  {% endif %}
{% endfor %}
{% endset %}

{% set twig_markup %}{% verbatim %}
TBA
{% endverbatim %}{% endset %}

{% set html_markup %}
{% verbatim %}
<ul class="e-bolt-list">
  <li class="e-bolt-list__item">TBA</li>
</ul>
{% endverbatim %}
{% endset %}
{% include '@utils/pattern-doc-page.twig' with {
  title: 'Basic List',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
  html_markup: html_markup
} only %}
