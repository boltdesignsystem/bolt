{% set description %}
  Add inset spacing to List Items.
{% endset %}

{% set notes %}
  The <code>inset</code> prop adds a space on all sides of List Items.
{% endset %}

{% set demo %}
{% set schema = bolt.data.components['@bolt-elements-list'].schema['list'] %}
{% set regular_display_options = [
  'vertical',
  'horizontal',
  'horizontal@medium'
] %}
{% set placeholder_1 %}
  {% include '@bolt-components-placeholder/placeholder.twig' with {
    text: 'Item 1',
    size: 'xsmall',
  } only %}
{% endset %}
{% set placeholder_2 %}
  {% include '@bolt-components-placeholder/placeholder.twig' with {
    text: 'Item 2',
    size: 'xsmall',
  } only %}
{% endset %}
{% set placeholder_3 %}
  {% include '@bolt-components-placeholder/placeholder.twig' with {
    text: 'Item 3',
    size: 'xsmall',
  } only %}
{% endset %}
{% set list_items %}
  {% include '@bolt-elements-list/list-item.twig' with {
    content: placeholder_1,
  } only %}
  {% include '@bolt-elements-list/list-item.twig' with {
    content: placeholder_2,
  } only %}
  {% include '@bolt-elements-list/list-item.twig' with {
    content: placeholder_3,
  } only %}
{% endset %}

{% for display in regular_display_options %}
  <bolt-grid gutter="medium" row-gutter="medium">
    <bolt-grid-item column-start="1" column-span="12 6@medium">
      <h3>Regular spacing in a {{ display }} list</h3>
      {% include '@bolt-elements-list/list.twig' with {
        display: display,
        spacing: 'medium',
        separator: 'solid',
        items: list_items
      } only %}
    </bolt-grid-item>
    <bolt-grid-item column-start="1 7@medium" column-span="12 6@medium">
      <h3>Inset spacing in a {{ display }} list</h3>
      {% include '@bolt-elements-list/list.twig' with {
        display: display,
        spacing: 'medium',
        separator: 'solid',
        inset: true,
        items: list_items
      } only %}
    </bolt-grid-item>
</bolt-grid>
{% endfor %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% set list_items %}
  {% include '@bolt-elements-list/list-item.twig' with {
    content: placeholder_1,
  } only %}
  {% include '@bolt-elements-list/list-item.twig' with {
    content: placeholder_2,
  } only %}
  {% include '@bolt-elements-list/list-item.twig' with {
    content: placeholder_3,
  } only %}
{% endset %}

{% include '@bolt-elements-list/list.twig' with {
  separator: 'solid',
  inset: true,
  items: list_items
} only %}
{% endverbatim %}{% endset %}

{% set html_markup %}
{% verbatim %}
<ul class="e-bolt-list e-bolt-list--inset">
  <li class="e-bolt-list__item">First item</li>
  <li class="e-bolt-list__item">Second item</li>
  <li class="e-bolt-list__item">Third item</li>
</ul>
{% endverbatim %}
{% endset %}
{% include '@utils/pattern-doc-page.twig' with {
  title: 'List with Inset Spacing',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
  html_markup: html_markup
} only %}
