{# Only demo purpose #}
<style>
  .list-with-icons,
  .list-with-buttons {
    display: inline-block;
    background: var(--bolt-color-navy-xlight);
    border: 2px dashed #545da6;
  }
</style>

{% set description %}
  The list element represents a list of items.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>List element is for grouping a collection of items and shouldn't be used for creating layouts. For creating a page layout, it's recommended to use <a href="{{ link['viewall-layouts-layout'] }}" class="e-bolt-text-link">Layout</a>.</bolt-li>
    <bolt-li>Below are examples of list usage inside a layout. The blue color indication is only for demo purpose.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
  {% set placeholder_1 %}
    {% set icon %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'pega-people',
      } only %}
    {% endset %}
    {% include '@bolt-elements-shape/shape.twig' with {
      content: icon,
      size: 'xlarge',
      attributes: {
        class: 't-bolt-navy'
      }
    } only %}
    {% include '@bolt-elements-type/type.twig' with {
      content: '<strong class="u-bolt-color-navy-dark">6,500</strong> global employees.',
      size: 'xlarge',
    } only %}
  {% endset %}

  {% set placeholder_2 %}
    {% set icon %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'industries',
      } only %}
    {% endset %}
    {% include '@bolt-elements-shape/shape.twig' with {
      content: icon,
      size: 'xlarge',
      attributes: {
        class: 't-bolt-navy'
      }
    } only %}
    {% include '@bolt-elements-type/type.twig' with {
      content: '<strong>3</strong> regional HQs in North America, Europe, and Asia Pacific.',
      size: 'xlarge',
    } only %}
  {% endset %}

  {% set placeholder_3 %}
    {% set icon %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'pega-handshake',
      } only %}
    {% endset %}
    {% include '@bolt-elements-shape/shape.twig' with {
      content: icon,
      size: 'xlarge',
      attributes: {
        class: 't-bolt-navy'
      }
    } only %}
    {% include '@bolt-elements-type/type.twig' with {
      content: '<strong>250+</strong> global partners.',
      size: 'xlarge',
    } only %}
  {% endset %}

  {% set placeholder_4 %}
    {% set icon %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'ribbon',
      } only %}
    {% endset %}
    {% include '@bolt-elements-shape/shape.twig' with {
      content: icon,
      size: 'xlarge',
      attributes: {
        class: 't-bolt-navy'
      }
    } only %}
    {% include '@bolt-elements-type/type.twig' with {
      content: '<strong>Dozens</strong> of culture & technology awards.',
      size: 'xlarge',
    } only %}
  {% endset %}

  {% set list_items %}
    {% include '@bolt-elements-list/list-item.twig' with {
      content: placeholder_1,
    } only %}
    {% include '@bolt-elements-list/list-item.twig' with {
      content: placeholder_2,
    } only %}
    {% include '@bolt-elements-list/list-item.twig' with {
      content: placeholder_3,
    } only %}
    {% include '@bolt-elements-list/list-item.twig' with {
      content: placeholder_4,
    } only %}
  {% endset %}

  {% set section %}
    {% include '@bolt-elements-type/type.twig' with {
      content: 'What characterizes us',
      hierarchy: 'headline',
      tag: 'h2',
      size: 'xxlarge',
    } only %}
    {# this div below is only for demo purpose #}
    <div class="u-bolt-margin-bottom-small list-with-icons">
    {% include '@bolt-elements-list/list.twig' with {
      display: 'inline@medium',
      spacing: 'medium',
      valign: 'start',
      align: 'justify',
      inset: true,
      inline_full_width: true,
      items: list_items,
      attributes: {
        class: [
        'u-bolt-text-align-center'
        ]
      }
    } only %}
    </div>
    {% include '@bolt-elements-button/button.twig' with {
      content: 'Download corporate fact sheet',
      attributes: {
        type: 'button',
      }
    } only %}
  {% endset %}

  {% set layout_items %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: section,
      attributes: {
        class: 'u-bolt-text-align-center'
      }
    } only %}
  {% endset %}
  {% include '@bolt-layouts-layout/layout.twig' with {
    content: layout_items,
  } only %}

  <hr>

  {% set intro %}
    {% include '@bolt-elements-type/type.twig' with {
      content: 'What we do',
      hierarchy: 'headline',
      tag: 'h2',
      size: 'xxlarge',
    } only %}
    {% include '@bolt-elements-type/type.twig' with {
      content: 'The Pega Platform™ makes it simpler for enterprises to work smarter, unify experiences, and adapt instantly. Thanks to our scalable, made-to-measure architecture, even the biggest organizations can stay streamlined and ready for what’s next.',
    } only %}
    {% set buttons %}
      {% include '@bolt-elements-button/button.twig' with {
        content: 'Explore products',
        attributes: {
          href: 'https://google.com',
        }
      } only %}
      {% include '@bolt-elements-button/button.twig' with {
        content: 'Why Pega',
        hierarchy: 'secondary',
        attributes: {
          href: 'https://google.com',
        }
      } only %}
    {% endset %}
    {# this div below is only for demo purpose #}
    <div class="u-bolt-padding-small list-with-buttons">
    {% include '@bolt-elements-list/list.twig' with {
      display: 'inline',
      items: buttons,
    } only %}
    </div>
  {% endset %}
  {% set layout_items %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: intro
    } only %}
  {% endset %}
  {% include '@bolt-layouts-layout/layout.twig' with {
    content: layout_items,
    template: [
      '50@from-medium',
    ],
  } only %}
{% endset %}

