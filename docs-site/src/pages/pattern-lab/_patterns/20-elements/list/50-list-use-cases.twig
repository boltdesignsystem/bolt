  <bolt-layout-item>
    <h2 class="e-bolt-type e-bolt-type--size-xxlarge e-bolt-type--headline">What characterizes us</h2>
    <ul class="u-bolt-text-align-center e-bolt-list e-bolt-list--display-inline@medium e-bolt-list--spacing-medium e-bolt-list--align-justify e-bolt-list--valign-start e-bolt-list--inset e-bolt-list--inline-full-width">
