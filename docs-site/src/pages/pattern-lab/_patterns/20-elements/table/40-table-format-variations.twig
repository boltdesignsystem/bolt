        {% endset %}
        {% include '@bolt-elements-table/table-row.twig' with {
          content: cells,
        } only %}
      {% endset %}

      {% include '@bolt-elements-table/table.twig' with {
        format: format,
        header: {
          content: header,
        },
        body: {
          content: [
            row1,
            row2,
            row3,
          ],
        },
        footer: {
          content: footer,
        },
      } only %}
    {% endset %}

