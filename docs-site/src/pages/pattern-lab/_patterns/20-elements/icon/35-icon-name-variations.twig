{% set schema = bolt.data.components["@bolt-elements-icon"].schema %}
{% set names = schema.properties.name.enum %}

{% set description %}
  A list of available icons. <bolt-code-snippet display="inline">Color</bolt-code-snippet> and <bolt-code-snippet display="inline">size</bolt-code-snippet> can be adjust.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>Use icon exact name to be able to display the choosen icon.
  </bolt-ol>
{% endset %}

{% set demo %}
  <ul class="bolt-icon-list-demo">
  {% for name in names %}
    <li>
    {% include "@bolt-elements-icon/icon.twig" with {
      name: name,
      size: "xlarge",
    }%}
    <br />{{ name }}
    </li>
  {% endfor %}
  </ul>
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-elements-icon/icon.twig' with {
  name: 'academy',
  size: 'xlarge',
} only %}
{% endverbatim %}
{% endset %}

{% set html_markup %}
{% verbatim %}
  <svg class="e-bolt-icon e-bolt-icon--xlarge" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><path d="m0 0h24v24h-24z"/><g fill="var(--bolt-color-{{ color }}, var(--m-bolt-text))" transform="translate(1 1)"><path d="m11 20c-4.962 0-9-4.038-9-9s4.038-9 9-9 9 4.038 9 9-4.038 9-9 9m0-20c-6.063 0-11 4.938-11 11s4.938 11 11 11 11-4.938 11-11-4.938-11-11-11"/><path d="m15 10h-3v-3c0-.55-.45-1-1-1s-1 .45-1 1v3h-3c-.55 0-1 .45-1 1s.45 1 1 1h3v3c0 .55.45 1 1 1s1-.45 1-1v-3h3c.55 0 1-.45 1-1s-.45-1-1-1"/></g></g></svg>
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Available Icons',
  description: description,
  notes: notes,
  demo: demo,
  demo_light_dark: true,
  twig_markup: twig_markup,
  html_markup: html_markup,
} only %}
