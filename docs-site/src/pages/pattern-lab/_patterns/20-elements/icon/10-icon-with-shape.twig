{% set schema = bolt.data.components['@bolt-elements-shape'].schema %}
{% set sizes = schema.properties.size.enum %}
{% set spacings = schema.properties.spacing.enum %}

{% set svgIcon %}
  {% include "@bolt-elements-icon/icon.twig" with {
    name: 'add-open',
    size: 'xlarge',
  } only %}
{% endset %}

{% set description %}
  An icon&rsquo;s size can be modified per use case.
{% endset %}

{% set notes %}
  <bolt-ul>
    <bolt-li>Auto/undefined: 1em (same size as inline text)</bolt-li>
    <bolt-li>Small: 16px</bolt-li>
    <bolt-li>Medium: 24px</bolt-li>
    <bolt-li>Large: 32px</bolt-li>
    <bolt-li>Xlarge: 38px</bolt-li>
  </bolt-ul>
{% endset %}

{% set demo %}
  <bolt-list display="inline" spacing="small">
    {% for spacing in spacings %}
      <bolt-list-item>
        {% include "@bolt-elements-shape/shape.twig" with {
          content: svgIcon,
          spacing: spacing,
          attributes: {
            class: [
              "t-bolt-navy-dark"
            ]
          }
        } only %}
      </bolt-list-item>
    {% endfor %}
  </bolt-list>
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include "@bolt-elements-shape/shape.twig" with {
  content: svgIcon,
} only %}
{% endverbatim %}
{% endset %}

{% set html_markup %}
{% verbatim %}
<svg class="ebolt-icon e-bolt-icon--size--xlarge" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><path d="m0 0h24v24h-24z"/><g fill="var(--bolt-color-{{ color }}, var(--m-bolt-text))" transform="translate(1 1)"><path d="m11 20c-4.962 0-9-4.038-9-9s4.038-9 9-9 9 4.038 9 9-4.038 9-9 9m0-20c-6.063 0-11 4.938-11 11s4.938 11 11 11 11-4.938 11-11-4.938-11-11-11"/><path d="m15 10h-3v-3c0-.55-.45-1-1-1s-1 .45-1 1v3h-3c-.55 0-1 .45-1 1s.45 1 1 1h3v3c0 .55.45 1 1 1s1-.45 1-1v-3h3c.55 0 1-.45 1-1s-.45-1-1-1"/></g></g></svg>
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Icon Spacing Variations',
  description: description,
  notes: notes,
  demo: demo,
  demo_light_dark: true,
  twig_markup: twig_markup,
  html_markup: html_markup,
} only %}
