{% set schema = bolt.data.components['@bolt-elements-icon'].schema %}
{% set names = schema.properties.name.enum %}
{% set sizes = schema.properties.size.enum %}

{% set description %}
  A set of icons designed and created by Pega branding.
{% endset %}

{% set notes %}
  <bolt-ul>
    <bolt-li>Auto/undefined: 1em (same size as inline text)</bolt-li>
    <bolt-li>Small: 16px</bolt-li>
    <bolt-li>Medium: 24px</bolt-li>
    <bolt-li>Large: 32px</bolt-li>
    <bolt-li>Xlarge: 38px</bolt-li>
  </bolt-ul>
{% endset %}

{% set demo %}
  <bolt-accordion spacing="small" icon-valign="top" single>
    {% for name in names %}
      {% if 'pega-' in name %}
        <bolt-accordion-item>
          <div slot="trigger">
            {% include '@bolt-elements-icon/icon.twig' with {
              name: name,
            } only %}
            {{name}}
          </div>
          <div>
            <bolt-grid gutter="small" row-gutter="small">
              <bolt-grid-item column-start="1" column-span="12 6@small">
                {% for size in sizes %}
                  {% include '@bolt-elements-icon/icon.twig' with {
                    name: name,
                    size: size,
                  } only %}
                {% endfor %}
              </bolt-grid-item>
              <bolt-grid-item column-start="1 7@small" column-span="12 6@small">
                {% for size in sizes %}
                  {% include '@bolt-elements-icon/icon.twig' with {
                    name: name,
                    size: size,
                    color: 'navy',
                  } only %}
                {% endfor %}
              </bolt-grid-item>
            </bolt-grid>
          </div>
        </bolt-accordion-item>
      {% endif %}
    {% endfor %}
  </bolt-accordion>
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-elements-icon/icon.twig' with {
  name: 'pega-ai-brain',
} only %}
{% endverbatim %}
{% endset %}

{% set html_markup %}
{% verbatim %}
  <svg class="e-bolt-icon e-bolt-icon--xlarge" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><path d="m0 0h24v24h-24z"/><g fill="var(--bolt-color-{{ color }}, var(--m-bolt-text))" transform="translate(1 1)"><path d="m11 20c-4.962 0-9-4.038-9-9s4.038-9 9-9 9 4.038 9 9-4.038 9-9 9m0-20c-6.063 0-11 4.938-11 11s4.938 11 11 11 11-4.938 11-11-4.938-11-11-11"/><path d="m15 10h-3v-3c0-.55-.45-1-1-1s-1 .45-1 1v3h-3c-.55 0-1 .45-1 1s.45 1 1 1h3v3c0 .55.45 1 1 1s1-.45 1-1v-3h3c.55 0 1-.45 1-1s-.45-1-1-1"/></g></g></svg>{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Pega Brand Icons',
  description: description,
  notes: notes,
  demo: demo,
  demo_vertical_scroll: true,
  twig_markup: twig_markup,
  html_markup: html_markup,
} only %}
