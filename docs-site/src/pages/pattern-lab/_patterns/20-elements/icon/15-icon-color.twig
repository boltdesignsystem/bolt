{% set schema = bolt.data.components['@bolt-elements-icon'].schema %}
{% set color_options = schema.properties.color.enum %}

{% set description %}
  A Icon&rsquo;s color can be modified per use case.
{% endset %}

{% set notes %}
{% endset %}

{% set demo %}
  <bolt-list display="inline" spacing="small">
    {% for color in color_options %}
      <bolt-list-item>
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'bell-solid',
          size: 'xlarge',
          color: color,
        } only %}
      </bolt-list-item>
    {% endfor %}
  </bolt-list>
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% endverbatim %}
{% endset %}

{% set html_markup %}
{% verbatim %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Icon Color',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
  html_markup: html_markup,
} only %}
