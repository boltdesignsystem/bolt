{% set schema = bolt.data.components["@bolt-elements-icon"].schema %}
{% set colors = schema.properties.color.enum %}

{% set description %}
  A list of available brand colors for icons.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>Use color exact name to be able to display the choosen icon in color.</bolt-li>
    <bolt-li>Color<bolt-code-snippet display="inline">auto</bolt-code-snippet> will adjust to the background with <bolt-code-snippet display="inline">t-bolt-*</bolt-code-snippet> theme class. For example <bolt-code-snippet display="inline">t-bolt-navy</bolt-code-snippet> used on background change <bolt-code-snippet display="inline">auto</bolt-code-snippet> color to well contrasted</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
  <ul class="bolt-icon-list-demo">
  {% for color in colors %}
    <li>
    {% include "@bolt-elements-icon/icon.twig" with {
      name: 'marketing-gray',
      color: color,
      size: "xlarge",
    }%}
    <br />{{ color }}
    </li>
  {% endfor %}
  </ul>
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-elements-icon/icon.twig' with {
  name: 'marketing-gray',
  size: 'xlarge',
  color: 'navy',
} only %}
{% endverbatim %}
{% endset %}

