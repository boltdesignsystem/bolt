{% set schema = bolt.data.components["@bolt-elements-icon"].schema %}
{% set colors = schema.properties.color.enum %}

{% set description %}
  A list of available brand colors for icons.
{% endset %}

{# {% set notes %}
  <bolt-ol>
    <bolt-li>Use icon exact name to be able to display the choosen icon.
  </bolt-ol>
{% endset %} #}

{% set demo %}
  <ul class="bolt-icon-list-demo">
  {% for color in colors %}
    <li>
    {% include "@bolt-elements-icon/icon.twig" with {
      name: 'marketing-gray',
      color: color,
      size: "xlarge",
    }%}
    <br />{{ color }}
    </li>
  {% endfor %}
  </ul>
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-elements-icon/icon.twig' with {
  name: 'academy',
  size: 'xlarge',
  color: 'navy',
} only %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Available Icons',
  description: description,
  notes: notes,
  demo: demo,
  demo_light_dark: true,
  twig_markup: twig_markup,
} only %}
