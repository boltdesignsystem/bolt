{% set schema = bolt.data.components['@bolt-elements-icon'].schema %}
{% set sizes = schema.properties.size.enum %}

{% set description %}
  An icon&rsquo;s size can be modified per use case.
{% endset %}

{% set notes %}
  <bolt-ul>
    <bolt-li>Auto/undefined: 1em (same size as inline text)</bolt-li>
    <bolt-li>Small: 16px</bolt-li>
    <bolt-li>Medium: 24px</bolt-li>
    <bolt-li>Large: 32px</bolt-li>
    <bolt-li>Xlarge: 38px</bolt-li>
  </bolt-ul>
{% endset %}

{% set demo %}
  <bolt-list display="inline" spacing="small">
    {% for size in sizes %}
      <bolt-list-item>
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'academy',
          size: size, 
        } only %}
      </bolt-list-item>
    {% endfor %}
  </bolt-list>
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-elements-icon/icon.twig' with {
  name: 'academy',
  size: 'small',
} only %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Icon Size',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
} only %}
