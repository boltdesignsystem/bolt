{% set schema = bolt.data.components["@bolt-elements-icon"].schema %}
{% set names = schema.properties.name.enum %}
{% set colors = schema.properties.color.enum %}
{% set sizes = schema.properties.size.enum %}


{# This is just for testing purposes, feel free to re-purpose these loops to demo individual props #}

{% for name in names %}
  {% for color in colors %}
    {% for size in sizes %}
      {% include "@bolt-elements-icon/icon.twig" with {
        name: name,
        color: color,
        size: size
      }%}
    {% endfor %}
  {% endfor %}
{% endfor %}

