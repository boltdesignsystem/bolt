{% set description %}
  A square aspect ratio.
{% endset %}

{% set notes %}
  For square images, ratio should be set to 1/1. No matter what the original image dimensions are.
{% endset %}

{% set demo %}
  {% set image %}
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        alt: 'Alt text.',
        src: 'https://via.placeholder.com/150x150',
        width: 150,
        height: 150
      },
    } only %}
  {% endset %}
  {% include '@bolt-elements-ratio/ratio.twig' with {
    children: image,
    ratio: '1/1',
    attributes: {
      style: [
        'max-width: 150px;'
      ],
    }
  } only %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% set image %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      alt: 'Alt text.',
      src: 'https://via.placeholder.com/150x150',
      width: 150,
      height: 150
    },
  } only %}
{% endset %}
{% include '@bolt-elements-ratio/ratio.twig' with {
  children: image,
  ratio: '1/1',
  attributes: {
    style: [
      'max-width: 150px;'
    ],
  }
} only %}
{% endverbatim %}{% endset %}

{% set html_markup %}
{% verbatim %}
<div class="e-bolt-ratio" style="max-width: 150px">
  <div class="e-bolt-ratio__content" style="aspect-ratio: 1/1">
    <img alt="Alt text." src="path/image.jpg" width=150 height=150 class="e-bolt-image">
  </div>
</div>
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Ratio square image',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
  html_markup: html_markup
} only %}
