{% set description %}
  Ratio element can be wrapped with another container.
{% endset %}

{% set notes %}
  Wrapping ratio element with another element with a size smaller than the ratio element will respect the aspect ratio.
{% endset %}

{% set demo %}
  {% set element %}
    {% set image %}
      {% include '@bolt-elements-image/image.twig' with {
        attributes: {
          alt: 'Alt text.',
          src: 'https://via.placeholder.com/400x300',
          width: 400,
          height: 300
        },
      } only %}
    {% endset %}
    {% include '@bolt-elements-ratio/ratio.twig' with {
      children: image,
      ratio: '4/3',
    } only %}
  {% endset %}
  {% include '@bolt-components-grid/grid.twig' with {
    gutter: 'small',
    items: [
      {
        column_start: '1',
        column_span: '4',
        content: element,
      },
      {
        column_start: '5',
        column_span: '4',
        content: element,
      },
      {
        column_start: '9',
        column_span: '4',
        content: element,
      },
    ]
  } only %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% set element %}
  {% set image %}
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        alt: 'Alt text.',
        src: 'https://via.placeholder.com/400x300',
        width: 400,
        height: 300
      },
    } only %}
  {% endset %}
  {% include '@bolt-elements-ratio/ratio.twig' with {
    children: image,
    ratio: '4/3',
  } only %}
{% endset %}
{% include '@bolt-components-grid/grid.twig' with {
  gutter: 'small',
  items: [
    {
      column_start: '1',
      column_span: '4',
      content: element,
    },
    {
      column_start: '5',
      column_span: '4',
      content: element,
    },
    {
      column_start: '9',
      column_span: '4',
      content: element,
    },
  ]
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Ratio element wrapped with another container',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
} only %}
