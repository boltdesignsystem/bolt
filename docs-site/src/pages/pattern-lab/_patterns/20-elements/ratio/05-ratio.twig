{% set demo %}
  {% set elements = [] %}
  {% for ratio in schema.properties.ratio.enum %}
    {% set images = [ image_1, image_2, image_3] %}
    {% set element %}
      <bolt-text>The ratio is set to<strong>"{{ ratio }}"</strong>.</bolt-text>
      {% include '@bolt-elements-ratio/ratio.twig' with {
        children: images[loop.index0],
        ratio: ratio,
      } only %}
    {% endset %}
    {% set elements = elements|merge([element]) %}
  {% endfor %}
  {% set custom_aspect_ratio %}
    <bolt-text>The ratio is set through inline style.</bolt-text>
    {% include '@bolt-elements-ratio/ratio.twig' with {
      children: image_4,
      attributes: {
        style: [
          '--e-bolt-aspect-ratio: 7/3;'
        ]
      }
    } only %}
  {% endset %}
  {% include '@bolt-components-grid/grid.twig' with {
    gutter: 'small',
    items: [
      {
        column_start: '1',
        column_span: '12 6@medium',
        content: elements[0],
      },
      {
        column_start: '1 7@medium',
        column_span: '12 6@medium',
        content: elements[1],
      },
      {
        column_start: '1',
        column_span: '12 6@medium',
        content: elements[2],
      },
      {
        column_start: '1 7@medium',
        column_span: '12 6@medium',
        content: custom_aspect_ratio,
      },
    ]
  } only %}
{% endset %}

