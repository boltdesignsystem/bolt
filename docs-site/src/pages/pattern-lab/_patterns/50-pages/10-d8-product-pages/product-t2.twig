{% extends "@pl/_default-page-template.twig" %}

{% block main_content %}
  {% embed "@pl/_band--feature.twig" with {
    teaserPosition: "left",
    teaserWidth: "2/3",
    size: "large",
    full: true,
    theme: "dark",
    background: {
      opacity: "medium",
      fill: "gradient",
      focal_point: {
        vertical: "center",
        horizontal: "right"
      },
      content_items: [{
        pattern: "image",
        src: "/images/content/backgrounds/background-tall-3.jpg",
        lazyload: false,
        placeholder_color: "hsl(10, 14%, 8%)",
        valign: "30%",
        sizes: "100vw"
      }]
    },
    primaryTeaser: {
      headlines: [
        {
          type: "headline",
          text: "CRM Applications",
          size: "xsmall",
          tag: "span",
          url: "pega.com",
          icon: {
            name: "arrow-left",
            position: "before"
          }
        },
        {
          type: "headline",
          text: "Dynamically recommend next-best-actions for your customers.",
          size: "xxxlarge",
          tag: "h1"
        }
      ],
      buttons: [
        {
          text: "Call to Action",
          hierarchy: "primary",
          url: "#!"
        }
      ]
    }
  } only %}

  {% endembed %}



{% embed "@bolt-components-band/band.twig" with {
  size: "small",
  theme: "dark",
  full_bleed: true
} only %}
  {% block band_content %}

    {% grid "o-bolt-grid--flex o-bolt-grid--large o-bolt-grid--middle o-bolt-grid--matrix" %}

      {% cell "o-u-bolt-width-1/1 u-bolt-width-1/2@small" %}
        {% include "@bolt/headline.twig" with {
          text: "Explore the Pega CRM Suite",
          size: "xxlarge"
        } only %}
        {% include "@bolt-components-headline/text.twig" with {
          text: "Move past traditional CRM systems to a true journey-enabled, customer engagement suite. Learn how Pega is helping enterprises revolutionize their customer engagement with end-to-end automation and real-time AI on the only unified CRM platform.",
          size: "medium"
        } only %}
      {% endcell %}

      {% set icon_1 %}
        {% include "@bolt-components-icon/icon.twig" with {
          name: "app-development",
          size: "xlarge",
          background: "circle",
          color: "teal"
        } only %}
      {% endset %}

      {% set icon_2 %}
        {% include "@bolt-components-icon/icon.twig" with {
          name: "sales-automation",
          size: "xlarge",
          background: "circle",
          color: "teal"
        } only %}
      {% endset %}

      {% set icon_3 %}
        {% include "@bolt-components-icon/icon.twig" with {
          name: "customer-service",
          size: "xlarge",
          background: "circle",
          color: "teal"
        } only %}
      {% endset %}

      {% cell "u-bolt-width-1/1 u-bolt-width-1/2@small" %}
        {% set flag_item_1 %}
          {% include "@bolt/flag.twig" with {
            valign: "middle",
            url: "#!",
            figure: {
              content: icon_1
            },
            items: [
              {
                pattern: "headline",
                size: "small",
                text: "Download the data Sheet",
                url: "https://www.google.com",
                icon: {
                  name: "chevron-right"
                },
                tag: "h3"
              }
            ]
          } only %}
        {% endset %}
        {% set flag_item_2 %}
          {% include "@bolt/flag.twig" with {
            valign: "middle",
            url: "#!",
            figure: {
              content: icon_2
            },
            items: [
              {
                pattern: "headline",
                size: "small",
                text: "Download the Overview document",
                url: "https://www.google.com",
                icon: {
                  name: "chevron-right"
                }
              }
            ]
          } only %}
        {% endset %}
        {% set flag_item_3 %}
          {% include "@bolt/flag.twig" with {
            valign: "middle",
            url: "#!",
            figure: {
              content: icon_3
            },
            items: [
              {
                pattern: "headline",
                size: "small",
                text: "View Pricing for Pega Marketing",
                url: "https://www.google.com",
                icon: {
                  name: "chevron-right"
                }
              }
            ]
          } only %}
        {% endset %}

        {% include "@bolt/headline.twig" with {
          text: "Get to know Pega Marketing",
          size: "xlarge",
          tag: "h2"
        } only %}

        {% include "@bolt-components-list/list.twig" with {
          display: "block",
          separator: "solid",
          spacing: "small",
          items: [
            flag_item_1,
            flag_item_2,
            flag_item_3,
          ]
        } only %}
      {% endcell %}

    {% endgrid %}


  {% endblock %}
{% endembed %}





{% embed "@bolt-components-band/band.twig" with {
  size: "medium",
  theme: "xlight",
  full_bleed: true
} only %}
  {% block band_content %}

    {% grid "o-bolt-grid--flex o-bolt-grid--large o-bolt-grid--middle o-bolt-grid--matrix" %}

      {% cell "u-bolt-width-1/1 u-bolt-width-5/12@small" %}
        {% include "@bolt/headline.twig" with {
          text: "Maximize Value with <strong>Next&nbsp;Best Action Intelligence</strong>",
          weight: "regular",
          size: "xxlarge",
          tag: "h2"
        } only %}

        {% include "@bolt-components-headline/text.twig" with {
          text: "Blow away your customer’s expectations - engage each individual one-to-one, letting the AI constantly adapt to their needs.",
          size: "medium"
        } only %}

        {% set button_cta_primary %}
          {% include '@bolt-elements-button/button.twig' with {
            content: 'Call to action',
            hierarchy: "primary",
            attributes: {
