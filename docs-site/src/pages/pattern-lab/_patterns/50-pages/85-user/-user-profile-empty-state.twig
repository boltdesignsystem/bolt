{% extends "@pl/_site-layout-template.twig" %}

{% block main_content %}
  {% set empty_state_text = 'No updates available.' %}

  {% set icon_facebook %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'facebook-solid',
      size: 'medium',
    } only %}
  {% endset %}
  {% set icon_twitter %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'twitter-solid',
      size: 'medium',
    } only %}
  {% endset %}
  {% set icon_linkedin %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'linkedin-solid',
      size: 'medium',
    } only %}
  {% endset %}
  {% set icon_email %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'email',
      size: 'medium',
    } only %}
  {% endset %}
  {% set icon_more %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'more',
    } only %}
  {% endset %}
  {% set icon_share %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'share',
    } only %}
  {% endset %}
  {% set icon_pencil %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'pencil',
      size: 'medium',
    } only %}
  {% endset %}
  {% set icon_pega_setting %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'pega-setting',
      size: 'medium',
    } only %}
  {% endset %}
  {% set icon_info_circle %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'info-circle',
    } only %}
  {% endset %}
  {% set icon_download %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'download',
    } only %}
  {% endset %}

  {% set actions %}
    {% set popover_trigger %}
      {% include '@bolt-elements-button/button.twig' with {
        content: 'Share profile',
        icon_only: icon_share,
        hierarchy: 'tertiary',
        border_radius: 'full',
        size: 'xsmall',
        attributes: {
          type: 'button',
        }
      } only %}
    {% endset %}
    {% set popover_menu %}
      {% include '@bolt-components-menu/menu.twig' with {
        spacing: 'medium',
        title: 'Share profile',
        items: [
          {
            content: 'Facebook',
            icon_before: icon_facebook,
            url: 'https://www.facebook.com/sharer/sharer.php?u=https://boltdesignsystem.com&amp;src=sdkpreparse',
            attributes: {
              target: '_blank',
              rel: 'noopener'
            }
          },
          {
            content: 'Twitter',
            icon_before: icon_twitter,
            url: 'https://twitter.com/intent/tweet?url=https://boltdesignsystem.com&text=Sample%20Share%20Text&via=pega&hashtags=boltDesignSystemRocks!',
            attributes: {
              target: '_blank',
              rel: 'noopener'
            }
          },
          {
            content: 'LinkedIn',
            icon_before: icon_linkedin,
            url: 'https://www.linkedin.com/shareArticle?url=https://boltdesignsystem.com',
            attributes: {
              target: '_blank',
              rel: 'noopener'
            }
          },
          {
            content: 'Email',
            icon_before: icon_email,
            url: 'mailto:?&body=Sample%20Text%20--%20https%3A//boltdesignsystem.com',
            attributes: {
              target: '_blank',
              rel: 'noopener'
            }
          },
        ]
      } only %}
    {% endset %}
    {% include '@bolt-components-popover/popover.twig' with {
      trigger: popover_trigger,
      content: popover_menu,
      spacing: 'none',
      placement: 'bottom-end',
      trigger_event: 'hover',
    } only %}

    {% set popover_trigger %}
      {% include '@bolt-elements-button/button.twig' with {
        content: 'More options',
        icon_only: icon_more,
        hierarchy: 'tertiary',
        border_radius: 'full',
        size: 'xsmall',
        attributes: {
          type: 'button',
        }
      } only %}
    {% endset %}
    {% set popover_menu %}
      {% include '@bolt-components-menu/menu.twig' with {
        spacing: 'medium',
        title: 'More options',
        items: [
          {
            content: 'Edit profile',
            icon_before: icon_pencil,
          },
          {
            content: 'Settings',
            icon_before: icon_pega_setting,
          },
        ]
      } only %}
    {% endset %}
    {% include '@bolt-components-popover/popover.twig' with {
      trigger: popover_trigger,
      content: popover_menu,
      spacing: 'none',
      placement: 'bottom-end',
      trigger_event: 'hover',
    } only %}
  {% endset %}

  {% set chips %}
    {% include '@bolt-components-chip/chip.twig' with {
      text: 'Member since 2017',
      border_radius: 'small',
    } only %}
  {% endset %}

  {% include '@bolt-components-profile/profile.twig' with {
    name: {
      content: '<strong>Toni Kukoc</strong> (@thepinkpanther)',
      tag: 'h1',
    },
    actions: actions,
    chips: chips,
    stats: [
      {
        number: '0',
        label: 'Achievements',
      },
      {
        number: '0',
        label: 'Contributions',
      },
    ],
    full_bleed: true,
  } only %}

  {% set layout_content %}
    {% set sections %}
      {% set about %}
        {% set section_content %}
          <p>{{ empty_state_text }}</p>
        {% endset %}
        {% include '@bolt-components-info-section/info-section.twig' with {
          label: {
            content: 'About',
            tag: 'h2',
          },
          content: section_content,
          open: true,
          attributes: {
            class: [
              't-bolt-white',
              'u-bolt-height-full',
            ],
          },
        } only %}
      {% endset %}
      {% set skills %}
        {% set section_content %}
          {% include '@bolt-components-headline/text.twig' with {
            text: 'Languages',
            tag: 'h3',
            size: 'medium',
            weight: 'bold',
            attributes: {
              class: 'u-bolt-margin-bottom-xsmall',
            },
          } only %}
          <p>{{ empty_state_text }}</p>
          {% set layout_content %}
            {% set specializations %}
              {% set tooltip %}
                {% include '@bolt-components-tooltip/tooltip.twig' with {
                  trigger: icon_info_circle,
                  content: 'Pega platform capabilities with which the member has experience.',
                } only %}
              {% endset %}
              {% include '@bolt-components-headline/text.twig' with {
                text: 'Pega Specializations ' ~ tooltip,
                tag: 'h3',
                size: 'medium',
                weight: 'bold',
                attributes: {
                  class: 'u-bolt-margin-bottom-xsmall',
                },
              } only %}
              <p>{{ empty_state_text }}</p>
            {% endset %}
            {% set roles %}
              {% set tooltip %}
                {% include '@bolt-components-tooltip/tooltip.twig' with {
                  trigger: icon_info_circle,
                  content: 'Professional positions the member has held on Pega projects.',
                } only %}
              {% endset %}
              {% include '@bolt-components-headline/text.twig' with {
                text: 'Project Roles ' ~ tooltip,
                tag: 'h3',
                size: 'medium',
                weight: 'bold',
                attributes: {
                  class: 'u-bolt-margin-bottom-xsmall',
                },
              } only %}
              <p>{{ empty_state_text }}</p>
            {% endset %}
            {% include '@bolt-layouts-layout/layout-item.twig' with {
              content: specializations,
            } only %}
            {% include '@bolt-layouts-layout/layout-item.twig' with {
              content: roles,
            } only %}
          {% endset %}
          {% include '@bolt-layouts-layout/layout.twig' with {
            content: layout_content,
            template: [
              'tiles',
            ],
            padding_top: 'none',
            padding_bottom: 'none',
            attributes: {
              style: '--l-bolt-layout-tile-min-width: 12.5rem',
            }
          } only %}
        {% endset %}
        {% include '@bolt-components-info-section/info-section.twig' with {
          label: {
            content: 'Languages &amp; Skills',
            tag: 'h2',
          },
          content: section_content,
          attributes: {
            class: [
              't-bolt-white',
              'u-bolt-height-full',
            ],
          },
        } only %}
      {% endset %}
      {% set achievements %}
        {% set section_content %}
          {% include '@bolt-components-headline/text.twig' with {
            text: 'Most Recent Certifications',
            tag: 'h3',
            size: 'medium',
            weight: 'bold',
            attributes: {
              class: 'u-bolt-margin-bottom-xsmall',
            },
          } only %}
          <bolt-stack>
            {{ empty_state_text }}
          </bolt-stack>
          {% include '@bolt-components-headline/text.twig' with {
            text: 'Most Recent Badges',
            tag: 'h3',
            size: 'medium',
            weight: 'bold',
            attributes: {
              class: 'u-bolt-margin-bottom-xsmall',
            },
          } only %}
          <bolt-stack>
            {{ empty_state_text }}
          </bolt-stack>
        {% endset %}
        {% include '@bolt-components-info-section/info-section.twig' with {
          label: {
            content: 'Achievements',
            tag: 'h2',
          },
          content: section_content,
          attributes: {
            class: [
              't-bolt-white',
              'u-bolt-height-full',
            ],
          },
        } only %}
      {% endset %}
      {% set projects %}
        {% set section_content %}
          <p>{{ empty_state_text }}</p>
        {% endset %}
        {% include '@bolt-components-info-section/info-section.twig' with {
          label: {
            content: 'Projects',
            tag: 'h2',
          },
          content: section_content,
          attributes: {
            class: [
              't-bolt-white',
              'u-bolt-height-full',
            ],
          },
        } only %}
      {% endset %}
      {% include '@bolt-components-grid/grid.twig' with {
        gutter: 'medium',
        row_gutter: 'medium',
        items: [
          {
            column_start: '1',
            column_span: '12 6@medium',
            content: about,
          },
          {
            column_start: '1 7@medium',
            column_span: '12 6@medium',
            content: skills,
          },
          {
            column_start: '1',
            column_span: '12',
            content: achievements,
          },
          {
            column_start: '1',
            column_span: '12',
            content: projects,
          },
        ]
      } only %}
    {% endset %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: sections,
    } only %}
  {% endset %}

  {% include '@bolt-layouts-layout/layout.twig' with {
    content: layout_content,
    padding_top: 'large',
    padding_bottom: 'large',
    attributes: {
      class: 't-bolt-gray-xlight',
    }
  } only %}
{% endblock %}
