{% extends "@pl/_site-layout-template.twig" %}

{% block main_content %}
  {% set icon_facebook %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'facebook-solid',
      size: 'medium',
    } only %}
  {% endset %}
  {% set icon_twitter %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'twitter-solid',
      size: 'medium',
    } only %}
  {% endset %}
  {% set icon_linkedin %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'linkedin-solid',
      size: 'medium',
    } only %}
  {% endset %}
  {% set icon_email %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'email',
      size: 'medium',
    } only %}
  {% endset %}
  {% set icon_more %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'more',
    } only %}
  {% endset %}
  {% set icon_share %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'share',
    } only %}
  {% endset %}
  {% set icon_pencil %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'pencil',
      size: 'medium',
    } only %}
  {% endset %}
  {% set icon_pega_setting %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'pega-setting',
      size: 'medium',
    } only %}
  {% endset %}
  {% set icon_info_circle %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'info-circle',
    } only %}
  {% endset %}
  {% set icon_download %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'download',
    } only %}
  {% endset %}

  {% set actions %}
    {% set popover_trigger %}
      {% include '@bolt-elements-button/button.twig' with {
        content: 'Share profile',
        icon_only: icon_share,
        hierarchy: 'tertiary',
        border_radius: 'full',
        size: 'xsmall',
        attributes: {
          type: 'button',
        }
      } only %}
    {% endset %}
    {% set popover_menu %}
      {% include '@bolt-components-menu/menu.twig' with {
        spacing: 'medium',
        title: 'Share profile',
        items: [
          {
            content: 'Facebook',
            icon_before: icon_facebook,
            url: 'https://www.facebook.com/sharer/sharer.php?u=https://boltdesignsystem.com&amp;src=sdkpreparse',
            attributes: {
              target: '_blank',
              rel: 'noopener'
            }
          },
          {
            content: 'Twitter',
            icon_before: icon_twitter,
            url: 'https://twitter.com/intent/tweet?url=https://boltdesignsystem.com&text=Sample%20Share%20Text&via=pega&hashtags=boltDesignSystemRocks!',
            attributes: {
              target: '_blank',
              rel: 'noopener'
            }
          },
          {
            content: 'LinkedIn',
            icon_before: icon_linkedin,
            url: 'https://www.linkedin.com/shareArticle?url=https://boltdesignsystem.com',
            attributes: {
              target: '_blank',
              rel: 'noopener'
            }
          },
          {
            content: 'Email',
            icon_before: icon_email,
            url: 'mailto:?&body=Sample%20Text%20--%20https%3A//boltdesignsystem.com',
            attributes: {
              target: '_blank',
              rel: 'noopener'
            }
          },
        ]
      } only %}
    {% endset %}
    {% include '@bolt-components-popover/popover.twig' with {
      trigger: popover_trigger,
      content: popover_menu,
      spacing: 'none',
      placement: 'bottom-end',
      trigger_event: 'hover',
    } only %}

    {% set popover_trigger %}
      {% include '@bolt-elements-button/button.twig' with {
        content: 'More options',
        icon_only: icon_more,
        hierarchy: 'tertiary',
        border_radius: 'full',
        size: 'xsmall',
        attributes: {
          type: 'button',
        }
      } only %}
    {% endset %}
    {% set popover_menu %}
      {% include '@bolt-components-menu/menu.twig' with {
        spacing: 'medium',
        title: 'More options',
        items: [
          {
            content: 'Edit profile',
            icon_before: icon_pencil,
          },
          {
            content: 'Settings',
            icon_before: icon_pega_setting,
          },
        ]
      } only %}
    {% endset %}
    {% include '@bolt-components-popover/popover.twig' with {
      trigger: popover_trigger,
      content: popover_menu,
      spacing: 'none',
      placement: 'bottom-end',
      trigger_event: 'hover',
    } only %}
  {% endset %}

  {% set chips %}
    {% include '@bolt-components-chip/chip.twig' with {
      text: 'Member since 2017',
      border_radius: 'small',
    } only %}
    {% include '@bolt-components-chip/chip.twig' with {
      text: 'Developer',
      color: 'orange',
      border_radius: 'small',
    } only %}
    {% include '@bolt-components-chip/chip.twig' with {
      text: 'Available for hire',
      color: 'teal',
      border_radius: 'small',
    } only %}
  {% endset %}

  {% include '@bolt-components-profile/profile.twig' with {
    name: {
      content: '<strong>Toni Kukoc</strong> (@thepinkpanther)',
      tag: 'h1',
    },
    job_title: 'Lead System Architect, Pegasystems Inc.',
    location: 'Croatia',
    actions: actions,
    chips: chips,
    stats: [
      {
        number: '15',
        label: 'Achievements',
        attributes: {
          type: 'button',
          'data-bolt-modal-target': '.js-bolt-modal-all-achievements',
        },
      },
      {
        number: '3k',
        label: 'Contributions',
        attributes: {
          type: 'button',
          'data-bolt-modal-target': '.js-bolt-modal-all-achievements',
        },
      },
    ],
    full_bleed: true,
  } only %}

  {% set layout_content %}
    {% set sections %}
      {% set about %}
        {% set section_content %}
          <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Modi mollitia soluta magnam quisquam aperiam debitis nam dolorem! Nisi reprehenderit consequuntur quibusdam omnis similique perspiciatis, ratione esse quasi? Accusamus, magni porro.</p>
          {% set tooltip_linkedin %}
            {% set link_linkedin %}<a href="#!">{{ icon_linkedin }}</a>{% endset %}
            {% include '@bolt-components-tooltip/tooltip.twig' with {
              trigger: link_linkedin,
              content: 'LinkedIn',
            } only %}
          {% endset %}
          {% set tooltip_facebook %}
            {% set link_facebook %}<a href="#!">{{ icon_facebook }}</a>{% endset %}
            {% include '@bolt-components-tooltip/tooltip.twig' with {
              trigger: link_facebook,
              content: 'Facebook',
            } only %}
          {% endset %}
          {% include '@bolt-components-list/list.twig' with {
            display: "inline",
            tag: "div",
            items: [
              "On the web:",
              tooltip_linkedin,
              tooltip_facebook,
            ]
          } only %}
        {% endset %}
        {% include '@bolt-components-info-section/info-section.twig' with {
          label: {
            content: 'About',
            tag: 'h2',
          },
          content: section_content,
          open: true,
          attributes: {
            class: [
              't-bolt-white',
              'u-bolt-height-full',
            ],
          },
        } only %}
      {% endset %}
      {% set skills %}
        {% set section_content %}
          {% include '@bolt-components-headline/text.twig' with {
            text: 'Languages',
            tag: 'h3',
            size: 'medium',
            weight: 'bold',
            attributes: {
              class: 'u-bolt-margin-bottom-xsmall',
            },
          } only %}
          {% include '@bolt-components-ul/ul.twig' with {
            items: [
              'Chinese (native or bilingual proficiency)',
              'English (native or bilingual proficiency)',
            ]
          } only %}
          {% set layout_content %}
            {% set specializations %}
              {% set tooltip %}
                {% include '@bolt-components-tooltip/tooltip.twig' with {
                  trigger: icon_info_circle,
                  content: 'Pega platform capabilities with which the member has experience.',
                } only %}
              {% endset %}
              {% include '@bolt-components-headline/text.twig' with {
                text: 'Pega Specializations ' ~ tooltip,
                tag: 'h3',
                size: 'medium',
                weight: 'bold',
                attributes: {
                  class: 'u-bolt-margin-bottom-xsmall',
                },
              } only %}
              {% include '@bolt-components-ul/ul.twig' with {
                items: [
                  'Application Development',
                  'Mobile',
                  'Reporting',
                  'Case Management',
                  'Data Integration',
                  'Robotic Process Automation',
                  'User Interface',
                ]
              } only %}
            {% endset %}
            {% set roles %}
              {% set tooltip %}
                {% include '@bolt-components-tooltip/tooltip.twig' with {
                  trigger: icon_info_circle,
                  content: 'Professional positions the member has held on Pega projects.',
                } only %}
              {% endset %}
              {% include '@bolt-components-headline/text.twig' with {
                text: 'Project Roles ' ~ tooltip,
                tag: 'h3',
                size: 'medium',
                weight: 'bold',
                attributes: {
                  class: 'u-bolt-margin-bottom-xsmall',
                },
              } only %}
              {% include '@bolt-components-ul/ul.twig' with {
                items: [
                  'Lead System Architect',
                  'System Architect',
                ]
              } only %}
            {% endset %}
            {% include '@bolt-layouts-layout/layout-item.twig' with {
              content: specializations,
            } only %}
            {% include '@bolt-layouts-layout/layout-item.twig' with {
              content: roles,
            } only %}
          {% endset %}
          {% include '@bolt-layouts-layout/layout.twig' with {
            content: layout_content,
            template: [
              'tiles',
            ],
            padding_top: 'none',
            padding_bottom: 'none',
            attributes: {
              style: '--l-bolt-layout-tile-min-width: 12.5rem',
            }
          } only %}
        {% endset %}
        {% include '@bolt-components-info-section/info-section.twig' with {
          label: {
            content: 'Languages &amp; Skills',
            tag: 'h2',
          },
          content: section_content,
          attributes: {
            class: [
              't-bolt-white',
              'u-bolt-height-full',
            ],
          },
        } only %}
      {% endset %}
      {% set achievements %}
        {% set section_content %}
          {% set placeholder_certification %}
            <small class="u-bolt-block u-bolt-text-align-center u-bolt-margin-bottom-xxsmall">
              {% set image %}
                {% include '@bolt-elements-image/image.twig' with {
                  attributes: {
                    src: '/images/placeholders/cert-pegaclsa62.png',
                    sizes: '25vw',
                    width: 180,
                    height: 180,
                    loading: 'lazy',
                  },
                } only %}
              {% endset %}
              {% set tooltip_content %}
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptas, repellat ea? Eius veritatis et velit, sed, vero vitae tenetur blanditiis modi assumenda laboriosam alias. Harum ducimus nam minima error autem.
              {% endset %}
              {% include '@bolt-components-tooltip/tooltip.twig' with {
                trigger: image,
                content: tooltip_content,
                placement: 'bottom',
              } only %}
              <br>
              <strong>Zertifizierter Kundenservice-Systemarchitekt</strong>
              <br>
              Version 7.2 | Nov 7, 2021
            </small>
            {% set download_button %}
              {% set tooltip_trigger %}
                {% include '@bolt-elements-button/button.twig' with {
                  content: 'Download certificate',
                  icon_only: icon_download,
                  hierarchy: 'tertiary',
                  size: 'xsmall',
                  attributes: {
                    href: '#!',
                    download: true,
                  }
                } only %}
              {% endset %}
              {% set tooltip_content %}
                Download certificate
              {% endset %}
              {% include '@bolt-components-tooltip/tooltip.twig' with {
                trigger: tooltip_trigger,
                content: tooltip_content,
                placement: 'bottom',
              } only %}
            {% endset %}
            {% set share_button %}
              {% set popover_trigger %}
                {% include '@bolt-elements-button/button.twig' with {
                  content: 'Share certificate',
                  icon_only: icon_share,
                  hierarchy: 'tertiary',
                  size: 'xsmall',
                  attributes: {
                    type: 'button',
                  }
                } only %}
              {% endset %}
              {% set popover_menu %}
                {% include '@bolt-components-menu/menu.twig' with {
                  spacing: 'medium',
                  title: 'Share certificate',
                  items: [
                    {
                      content: 'Facebook',
                      icon_before: icon_facebook,
                      url: 'https://www.facebook.com/sharer/sharer.php?u=https://boltdesignsystem.com&amp;src=sdkpreparse',
                      attributes: {
                        target: '_blank',
                        rel: 'noopener'
                      }
                    },
                    {
                      content: 'Twitter',
                      icon_before: icon_twitter,
                      url: 'https://twitter.com/intent/tweet?url=https://boltdesignsystem.com&text=Sample%20Share%20Text&via=pega&hashtags=boltDesignSystemRocks!',
                      attributes: {
                        target: '_blank',
                        rel: 'noopener'
                      }
                    },
                    {
                      content: 'LinkedIn',
                      icon_before: icon_linkedin,
                      url: 'https://www.linkedin.com/shareArticle?url=https://boltdesignsystem.com',
                      attributes: {
                        target: '_blank',
                        rel: 'noopener'
                      }
                    },
                    {
                      content: 'Email',
                      icon_before: icon_email,
                      url: 'mailto:?&body=Sample%20Text%20--%20https%3A//boltdesignsystem.com',
                      attributes: {
                        target: '_blank',
                        rel: 'noopener'
                      }
                    },
                  ]
                } only %}
              {% endset %}
              {% include '@bolt-components-popover/popover.twig' with {
                trigger: popover_trigger,
                content: popover_menu,
                spacing: 'none',
                trigger_event: 'hover',
                placement: 'bottom',
              } only %}
            {% endset %}
            {% include '@bolt-components-list/list.twig' with {
              display: 'inline',
              align: 'center',
              items: [
                download_button,
                share_button,
              ],
            } only %}
          {% endset %}
          {% set placeholder_badge %}
            <div class="u-bolt-text-align-center">
              {% set image %}
                {% include '@bolt-elements-image/image.twig' with {
                  attributes: {
                    src: '/images/placeholders/badge-mis20301.png',
                    sizes: '18vw',
                    width: 150,
                    height: 150,
                    loading: 'lazy',
                  },
                } only %}
              {% endset %}
              {% set tooltip_content %}
                Senior System Architect<br><small>Version 7.2 | Nov 7, 2021</small>
              {% endset %}
              {% include '@bolt-components-tooltip/tooltip.twig' with {
                trigger: image,
                content: tooltip_content,
                placement: 'bottom',
              } only %}
            </div>
          {% endset %}

          {% include '@bolt-components-headline/text.twig' with {
            text: 'Most Recent Certifications',
            tag: 'h3',
            size: 'medium',
            weight: 'bold',
            attributes: {
              class: 'u-bolt-margin-bottom-xsmall',
            },
          } only %}
          {% set layout_content %}
            {% include '@bolt-layouts-layout/layout-item.twig' with {
              content: placeholder_certification,
            } only %}
            {% include '@bolt-layouts-layout/layout-item.twig' with {
              content: placeholder_certification,
            } only %}
            {% include '@bolt-layouts-layout/layout-item.twig' with {
              content: placeholder_certification,
            } only %}
            {% include '@bolt-layouts-layout/layout-item.twig' with {
              content: placeholder_certification,
            } only %}
            {% include '@bolt-layouts-layout/layout-item.twig' with {
              content: placeholder_certification,
            } only %}
          {% endset %}
          <bolt-stack>
            {% include '@bolt-components-grid/grid.twig' with {
              gutter: 'small',
              row_gutter: 'small',
              items: [
                {
                  column_span: '6 4@small 3@medium',
                  content: placeholder_certification,
                },
                {
                  column_span: '6 4@small 3@medium',
                  content: placeholder_certification,
                },
                {
                  column_span: '6 4@small 3@medium',
                  content: placeholder_certification,
                },
                {
                  column_span: '6 4@small 3@medium',
                  content: placeholder_certification,
                },
              ],
            } only %}
          </bolt-stack>
          {% include '@bolt-components-headline/text.twig' with {
            text: 'Most Recent Badges',
            tag: 'h3',
            size: 'medium',
            weight: 'bold',
            attributes: {
              class: 'u-bolt-margin-bottom-xsmall',
            },
          } only %}
          <bolt-stack>
            {% include '@bolt-components-grid/grid.twig' with {
              gutter: 'small',
              row_gutter: 'small',
              items: [
                {
                  column_span: '4 3@xsmall 2@small',
                  content: placeholder_badge,
                },
                {
                  column_span: '4 3@xsmall 2@small',
                  content: placeholder_badge,
                },
                {
                  column_span: '4 3@xsmall 2@small',
                  content: placeholder_badge,
                },
                {
                  column_span: '4 3@xsmall 2@small',
                  content: placeholder_badge,
                },
                {
                  column_span: '4 3@xsmall 2@small',
                  content: placeholder_badge,
                },
                {
                  column_span: '4 3@xsmall 2@small',
                  content: placeholder_badge,
                },
              ],
            } only %}
          </bolt-stack>
        {% endset %}
        {% include '@bolt-components-info-section/info-section.twig' with {
          label: {
            content: 'Achievements',
            tag: 'h2',
          },
          content: section_content,
          details_link: {
            label: 'View all achievements',
            attributes: {
              type: 'button',
              'data-bolt-modal-target': '.js-bolt-modal-all-achievements',
            },
          },
          attributes: {
            class: [
              't-bolt-white',
              'u-bolt-height-full',
            ],
          },
        } only %}
      {% endset %}
      {% set projects %}
        {% set section_content %}
          {% set header %}
            {% set cells %}
              {% include '@bolt-components-table/table-cell.twig' with {
                content: 'Industry',
                header: true,
              } only %}
              {% include '@bolt-components-table/table-cell.twig' with {
                content: 'Role',
                header: true,
              } only %}
              {% include '@bolt-components-table/table-cell.twig' with {
                content: 'Product(s)',
                header: true,
              } only %}
              {% include '@bolt-components-table/table-cell.twig' with {
                content: 'From',
                header: true,
              } only %}
              {% include '@bolt-components-table/table-cell.twig' with {
                content: 'To',
                header: true,
              } only %}
            {% endset %}
            {% include '@bolt-components-table/table-row.twig' with {
              content: cells,
            } only %}
          {% endset %}

          {% set row1 %}
            {% set cells %}
              {% include '@bolt-components-table/table-cell.twig' with {
                content: 'Industry name',
              } only %}
              {% include '@bolt-components-table/table-cell.twig' with {
                content: 'Role name',
              } only %}
              {% include '@bolt-components-table/table-cell.twig' with {
                content: 'Product name',
              } only %}
              {% include '@bolt-components-table/table-cell.twig' with {
                content: 'Feb 2021',
              } only %}
              {% include '@bolt-components-table/table-cell.twig' with {
                content: 'Sep 2021',
              } only %}
            {% endset %}
            {% include '@bolt-components-table/table-row.twig' with {
              content: cells,
            } only %}
          {% endset %}

          {% include '@bolt-components-table/table.twig' with {
            header: {
              content: header,
            },
            body: {
              content: [
                row1,
                row1,
                row1,
              ],
            },
            attributes: {
              class: ['u-bolt-block']
            }
          } only %}
        {% endset %}
        {% include '@bolt-components-info-section/info-section.twig' with {
          label: {
            content: 'Projects',
            tag: 'h2',
          },
          content: section_content,
          attributes: {
            class: [
              't-bolt-white',
              'u-bolt-height-full',
            ],
          },
        } only %}
      {% endset %}
      {% include '@bolt-components-grid/grid.twig' with {
        gutter: 'medium',
        row_gutter: 'medium',
        items: [
          {
            column_start: '1',
            column_span: '12 6@medium',
            content: about,
          },
          {
            column_start: '1 7@medium',
            column_span: '12 6@medium',
            content: skills,
          },
          {
            column_start: '1',
            column_span: '12',
            content: achievements,
          },
          {
            column_start: '1',
            column_span: '12',
            content: projects,
          },
        ]
      } only %}
    {% endset %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: sections,
    } only %}
  {% endset %}

  {% include '@bolt-layouts-layout/layout.twig' with {
    content: layout_content,
    padding_top: 'large',
    padding_bottom: 'large',
    attributes: {
      class: 't-bolt-gray-xlight',
    }
  } only %}

  {% include '@bolt-components-modal/modal.twig' with {
    content: 'Mashup embed goes here',
    width: 'regular',
    attributes: {
      class: 'js-bolt-modal-all-achievements',
    },
  } only %}
{% endblock %}
