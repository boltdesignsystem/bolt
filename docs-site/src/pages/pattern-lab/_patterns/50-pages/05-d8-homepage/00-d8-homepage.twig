{% extends "@pl/_default-page-template.twig" %}

{% block main_content %}

  {% set feature_band_content %}
    {% include "@bolt/ui-list.twig" with {
      contentItems : [
        {
          contentItems: [
            {
              pattern: "eyebrow",
              text: "Customer Retention"
            },
            {
              pattern: "headline",
              text: "Personalized. Not Creepy.",
              size: "large",
              url: "https://www.google.com",
              icon: {
                name: "chevron-right"
              }
            }
          ]
        },
        {
          contentItems: [
            {
              pattern: "eyebrow",
              text: "Sales Effectiveness"
            },
            {
              pattern: "headline",
              text: "Create Sales Superstars",
              size: "large",
              url: "https://www.google.com",
              icon: {
                name: "chevron-right"
              }
            }
          ]
        },
        {
          contentItems: [
            {
              pattern: "eyebrow",
              text: "Operations &amp; IT"
            },
            {
              pattern: "headline",
              text: "Stop Coding. Start Designing.",
              size: "large",
              url: "https://www.google.com",
              icon: {
                name: "chevron-right"
              }
            }
          ]
        }
      ]
    } %}
  {% endset %}

  {% set feature_band = {} %}
  {% set feature_band = feature_band | merge({
    content: feature_band_content
  }) %}


  {% embed "@pl/_band--feature.twig" with {
    size: "large",
    theme: "dark",
    teaserPosition: "left",
    teaserWidth: "2/3",
    primaryTeaser: {
      eyebrow: {
        text: "Customer Service"
      },
      headlines: [
        {
          type: "headline",
          text: "We're able to predict that you're going to call before you need to actually contact us.",
          size: "xxxlarge",
          tag: "h1"
        }
      ],
      logo: {
        src: "/images/content/logos/logo-paypal.svg",
        invert: true,
        lazyload: false
      },
      content: "Powered by real AI, Pega Customer Service delivers game-changing results for enterprises.",
      buttons: [
        {
          text: "Get Real",
          hierarchy: "primary",
          url: "#!",
          icon: {
            name: "chevron-right"
          }
        }
      ]
    },
    content: feature_band.content | default(content),
    background: {
      opacity: "heavy",
      fill: "gradient",
      focal_point: {
        vertical: "center"
      },
      content_items: [
        {
          pattern: "image",
          src: "/images/backgrounds/pw19-hp-bg2.jpg",
          lazyload: false
        }
      ]
    }
  } only %}{% endembed %}


  {% embed "@bolt-components-band/band.twig" with {
    size: "small",
    theme: "xdark",
    full_bleed: true
  } only %}
    {% block band_content %}

      {% grid "o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--matrix" %}

        {% cell "u-bolt-width-1/1 u-bolt-width-3/4@small u-bolt-flex-grow" %}

          {% grid %}
            {% cell "u-bolt-width-1/1 u-bolt-width-3/4@small" %}
              {% include "@bolt-components-headline/text.twig" with {
                text: "Pega is #1 in software for customer engagement and operational excellence.",
                size: "large",
                weight: "regular"
              } only %}
            {% endcell %}
          {% endgrid %}
        {% endcell %}


        {% cell "u-bolt-width-1/1@only-small" %}
          {% include "@bolt-components-button/button.twig" with {
            text: "Learn More",
            width: "full",
            size: "medium"
          } only %}
        {% endcell %}

      {% endgrid %}


    {% endblock %}
  {% endembed %}



  {% embed "@pl/_band--collection.twig" with {
    theme: "light",
    size: "medium",
    contentItems: [
      {
        pattern: "card",
        image: {
          src: "/images/content/promos/promo-16x9-forrester.jpg"
        },
        teaser: {
          eyebrow: {
            text: "Article"
          },
          headlines: [
            {
              type: "headline",
              text: "Headline #1",
              size: "large"
            }
          ],
          content: "Pega cited as a Leader in The Forrester Wave™: Digital Process Automation Software, Q3 2017.",
          buttons: [
            {
              text: "Learn More",
              hierarchy: "secondary",
              url: "#!",
              width: "full"
            },
          ]
        }
      },
      {
        pattern: "card",
        image: {
          src: "/images/content/promos/promo-16x9-anthem.jpg"
        },
        teaser: {
          eyebrow: {
            text: "Article"
          },
          headlines: [
            {
              type: "headline",
              text: "Headline #2",
              size: "large"
            }
          ],
          content: "Simplify and automate to reduce costs and improve agility.",
          buttons: [
            {
              text: "Learn More",
              url: "#!",
              width: "full"
            },
            {
              text: "About Pega",
              url: "#!",
              width: "full"
            }
          ]
        }
      },
      {
        pattern: "card",
        image: {
          src: "/images/content/promos/promo-16x9-ai.jpg"
        },
        teaser: {
          eyebrow: {
            text: "Article"
          },
          headlines: [
            {
              type: "headline",
              text: "Headline #3",
              size: "large"
            }
          ],
          content: "Sed auctor neque eu tellus rhoncus ut eleifend nibh porttitor. Ut in nulla enim.",
          buttons: [
            {
              text: "Learn More About Pega 7",
              url: "#!",
              width: "full"
            },
          ]
        }
      }
    ]
  } %}
    {% block band_content %}
      {% include "@bolt/headline.twig" with {
        text: "What's Trending",
        size: "xlarge",
        tag: "h3"
      } only %}
      {{ parent() }}
    {% endblock band_content %}
  {% endembed %}





  {% embed "@bolt-components-band/band.twig" with {
    size: "medium",
    theme: "xdark",
    full_bleed: true
  } only %}
    {% block band_content %}
      {% grid "o-bolt-grid--matrix o-bolt-grid--large o-bolt-grid--middle o-bolt-grid--center" %}
        {% cell "u-bolt-width-12/12 u-bolt-width-4/12@small" %}
          {% include "@bolt-elements-image/image.twig" with {
            attributes: {
              src: "/images/content/promos/promo-16x9-salesforce-vs-pega.png",
              loading: "lazy"
            }
          } only %}
        {% endcell %}
        {% cell "u-bolt-width-12/12 u-bolt-width-6/12@small" %}
          {% include "@bolt/headline.twig" with {
            text: "There’s a real alternative to the Salesforce.com hype: Pega CRM.",
            size: "xlarge",
            tag: "h3"
          } only %}
          {% include "@bolt-components-headline/text.twig" with {
            text: "Considering Salesforce.com? Don’t fall for the hype. See why today’s leading enterprises choose Pega CRM."
          } only %}
          {% include "@bolt-components-button/button.twig" with {
            text: "Get Real",
            hierarchy: "primary",
            size: "small"
          } only %}
        {% endcell %}
      {% endgrid %}
    {% endblock %}
  {% endembed %}



  {% embed "@bolt-components-band/band.twig" with {
    size: "medium",
    theme: "dark",
    full_bleed: true
  } only %}
    {% block band_content %}
      {% set icon_1 %}
        {% include "@bolt-components-icon/icon.twig" with {
          name: "product",
          size: "xlarge"
        } %}
      {% endset %}

      {% set icon_2 %}
        {% include "@bolt-components-icon/icon.twig" with {
          name: "industries",
          size: "xlarge"
        } %}
      {% endset %}

      {% set icon_3 %}
        {% include "@bolt-components-icon/icon.twig" with {
          name: "training",
          size: "xlarge"
        }%}
      {% endset %}

      {% set icon_4 %}
        {% include "@bolt-components-icon/icon.twig" with {
          name: "vision",
          size: "xlarge"
        } %}
      {% endset %}

      {% set icon_5 %}
        {% include "@bolt-components-icon/icon.twig" with {
          name: "partners",
          size: "xlarge"
        } %}
      {% endset %}

      {% set icon_6 %}
        {% include "@bolt-components-icon/icon.twig" with {
          name: "careers",
          size: "xlarge"
        }%}
      {% endset %}

      {% include "@bolt-components-action-blocks/action-blocks.twig" with {
        max_items_per_row: 8,
        items: [
          {
            text: "Product Information",
            url: "#!",
            media: icon_1,
          },
          {
            text: "Industry Solutions",
            url: "#!",
            media: icon_2,
          },
          {
            text: "Training and Certification",
            url: "#!",
            media: icon_3,
          },
          {
            text: "Vision and Technology",
            url: "#!",
            media: icon_4,
          },
          {
            text: "Services and Partners",
            url: "#!",
            media: icon_5,
          },
          {
            text: "Career Opportunities",
            url: "#!",
            media: icon_6,
          }
        ]
      } only %}
    {% endblock %}
  {% endembed %}

{% endblock %}
