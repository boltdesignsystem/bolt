<div class="l-bolt-site">
  {% block site_header %}
    {# Located inside components/page-header in PL #}
    {% include '@pl/_demo-main-site-page-header.twig' with {
      static_header: static_header,
      japanese: japanese,
    } only %}
  {% endblock %}

  <main id="main-content">
    {% block main_content %}
      <!-- Example main content block. -->
    {% endblock %}
  </main>

  {% block site_footer %}
    {# Located inside components/page-footer in PL #}
    {% include '@pl/_demo-main-site-page-footer.twig' with {
      static_header: static_header,
      japanese: japanese,
    } only %}
  {% endblock %}
</div>

{% if japanese %}
  <script type="text/javascript">
    document.getElementsByTagName("HTML")[0].setAttribute("lang", "ja");
  </script>
{% endif %}

{% if info_density %}
  <script type="text/javascript">
    document.getElementsByTagName("HTML")[0].setAttribute("data-bolt-info-density", "{{ info_density }}");
  </script>
{% endif %}
