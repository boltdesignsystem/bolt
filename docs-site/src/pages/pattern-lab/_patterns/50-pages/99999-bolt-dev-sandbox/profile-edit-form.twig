{# Layout #}
<div class="o-bolt-wrapper">
  {{ top_banner }}
</div>

{% include '@bolt-layouts-layout/layout.twig' with {
  content: layout_items_1,
  template: [
    '33/67@from-medium',
  ],
  padding_bottom: 'none',
  gutter: 'small',
} only %}

{% include '@bolt-layouts-layout/layout.twig' with {
  content: layout_items_2,
  template: [
    '67@from-medium',
  ],
  gutter: 'small',
  align_items: 'end',
  padding_bottom: 'xlarge'
} only %}

{% include '@bolt-layouts-layout/layout.twig' with {
  content: buttons_group,
  gutter: 'small',
  attributes: {
    class: 't-bolt-dark',
    style: [
      'position: fixed;',
      'bottom: 0;',
    ]
  }
} only %}
