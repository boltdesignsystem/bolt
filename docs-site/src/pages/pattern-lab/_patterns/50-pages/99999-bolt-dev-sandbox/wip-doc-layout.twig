    {% include '@bolt-components-icon/icon.twig' with {
      name: 'download',
    } only %}
  {% endset %}
  {% set tooltip_trigger %}
    {% include '@bolt-elements-button/button.twig' with {
      content: 'Download',
      hierarchy: 'tertiary',
      size: 'xsmall',
      icon_only: icon_download,
      attributes: {
        type: 'button'
      }
    } only %}
  {% endset %}
  {% include '@bolt-components-tooltip/tooltip.twig' with {
    trigger: tooltip_trigger,
    content: 'Download PDF',
  } only %}
{% endset %}
{% set share %}
  {% set share_menu %}
    {% include '@bolt-components-share/share.twig' with {
      display: 'menu',
      size: 'small',
      sources: [
        {
          name: 'facebook',
          attributes: {
            href: 'https://www.facebook.com/sharer/sharer.php?u=https://pega.com&amp;src=sdkpreparse'
          }
        },
        {
          name: 'twitter',
          attributes: {
            href: 'https://twitter.com/intent/tweet?url=https://pega.com&text=Sample%20Share%20Text&via=pega&hashtags=boltDesignSystemRocks!'
          }
        },
        {
          name: 'linkedin',
          attributes: {
            href: 'https://www.linkedin.com/shareArticle?url=https://pega.com'
          }
        },
        {
          name: 'email',
          attributes: {
            href: 'mailto:?&body=Sample%20Text%20--%20https%3A//pega.com'
          }
        }
      ],
      copy_to_clipboard: {
        text_to_copy: 'https://pega.com',
      },
    } only %}
  {% endset %}
  {% set share_popover_trigger %}
    {% set icon_share %}
      {% include '@bolt-components-icon/icon.twig' with {
        name: 'share',
      } only %}
    {% endset %}
    {% include '@bolt-elements-button/button.twig' with {
      content: 'Share',
      hierarchy: 'tertiary',
      size: 'xsmall',
      icon_only: icon_share,
      attributes: {
        type: 'button'
      }
    } only %}
  {% endset %}
  {% include '@bolt-components-popover/popover.twig' with {
    trigger: share_popover_trigger,
    trigger_event: 'hover',
    content: share_menu,
    spacing: 'none',
  } only %}
{% endset %}
{% set suggest %}
  {% set icon_pencil %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'pencil',
    } only %}
  {% endset %}
  {% set tooltip_trigger %}
    {% include '@bolt-elements-button/button.twig' with {
