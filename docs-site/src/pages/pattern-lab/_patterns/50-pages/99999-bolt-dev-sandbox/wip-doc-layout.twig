{% set scroll_to_top %}
  {% set icon_chevron_up %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'chevron-up',
    } only %}
  {% endset %}
  {% set icon_chevron_down %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'chevron-down',
    } only %}
  {% endset %}
  {% set tooltip_trigger %}
    {% include '@bolt-elements-button/button.twig' with {
      content: 'Scroll to top',
      hierarchy: 'tertiary',
      size: 'xsmall',
      icon_only: icon_chevron_up,
      attributes: {
        type: 'button'
      }
    } only %}
  {% endset %}
  {% include '@bolt-components-tooltip/tooltip.twig' with {
    trigger: tooltip_trigger,
    content: 'Scroll to top',
  } only %}
{% endset %}
{% set download %}
