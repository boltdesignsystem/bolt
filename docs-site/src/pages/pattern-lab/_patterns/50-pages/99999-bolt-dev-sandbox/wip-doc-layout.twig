{% set state_select %}
  {% set label %}
    {% include '@bolt-components-form/form-label.twig' with {
      title: '<strong>Current state</strong>',
      displayType: 'block',
      attributes: {
        for: 'state-select',
      },
    } only %}
  {% endset %}
  {% set select %}
    {% include '@bolt-components-form/form-select.twig' with {
      options: [
        {
          type: 'option',
          value: 'draft',
          label: 'Draft',
        },
        {
          type: 'option',
          value: 'sme-review',
          label: 'SME Review',
        },
        {
          type: 'option',
          value: 'editor-review',
          label: 'Editor Review',
        },
        {
          type: 'option',
          value: 'publisher-review',
          label: 'Publisher Review',
        },
        {
          type: 'option',
          value: 'pending-publication',
          label: 'Pending Publication',
        },
        {
          type: 'option',
          value: 'revision-requested',
          label: 'Revision Requested',
        },
        {
          type: 'option',
          value: 'published',
          label: 'Published',
          selected: true,
        },
        {
          type: 'option',
          value: 'unpublished',
          label: 'Unpublished',
        },
      ],
      attributes: {
        id: 'state-select',
        name: 'state-select',
      },
    } only %}
  {% endset %}
  <form>
    {% include '@bolt-components-form/form-element.twig' with {
      label: label,
      labelDisplay: 'before',
      children: select,
    } only %}
    {% include '@bolt-elements-button/button.twig' with {
      content: 'Update state',
      size: 'small',
      display: 'block',
      attributes: {
        type: 'button'
      }
    } only %}
  </form>
{% endset %}

