{% set shareButton = shareButton | default(true) %}

{% import "@bolt-academy/_macros.twig" as macros %}

{% set _pencil_icon %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'pencil'
  } only %}
{% endset %}
{% set _download_icon %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'download'
  } only %}
{% endset %}
{% include "@bolt-components-list/list.twig" with {
  display: "flex",
  align: "end",
  spacing: "xsmall",
  nowrap: true,
  items: [
    editButton ? macros.include("@bolt-elements-button/button.twig", {
      content: "Edit",
      size: "small",
      hierarchy: "tertiary",
      icon_only: _pencil_icon,
      attributes: {
        type: 'button'
      }
    }, false) : '',
    downloadButton ? macros.include("@bolt-elements-button/button.twig", {
      content: "Download",
      size: "small",
      hierarchy: "tertiary",
      icon_only: _download_icon,
      attributes: {
        type: 'button'
      }
    }, false) : '',
    shareButton ? macros.include("@bolt-academy/toolbar-buttons/_share.twig", {}, false) : '',
    favoriteButton and isFavorited ? macros.include("@bolt-academy/toolbar-buttons/_unfavorite.twig", {}, false) : '',
    favoriteButton and not isFavorited ? macros.include("@bolt-academy/toolbar-buttons/_favorite.twig", {}, false) : '',
    addButton ? macros.include("@bolt-academy/toolbar-buttons/_add.twig", {}, false) : '',
    removeButton ? macros.include("@bolt-academy/toolbar-buttons/_remove.twig", {}, false) : '',
  ]
} only %}
