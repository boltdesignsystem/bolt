{% if block('heroButtonRow') %}
  {% set heroButtonRowBlock %}
    {{ block('heroButtonRow') }}
  {% endset %}
{% endif %}

{% embed "@bolt-components-band/band.twig" with {
  theme: "xdark",
  size: "medium",
  background: {
    opacity: "light",
    fill: "gradient",
    content_items: [
      {
        pattern: "image",
        src: "/images/dashboard-hero.jpg",
        placeholder_color: "#000000"
      },
    ]
  },
  heroSubTitle: heroSubTitle,
  heroTitle: heroTitle,
  trainingDescription: trainingDescription,
  heroButtonRowBlock: heroButtonRowBlock
} only %}
  {% block band_content %}
    {% grid "o-bolt-grid--flex o-bolt-grid--matrix" %}
      {% cell "u-bolt-width-1/1 u-bolt-width-1/2@medium u-bolt-flex-grow" %}

        {% include "@bolt-academy/_headline-with-eyebrow.twig" with {
          eyebrow: heroSubTitle,
          headline: heroTitle
        } only %}

        {% if trainingDescription %}
          {% include "@bolt-components-headline/subheadline.twig" with {
            size: "xxlarge",
            text: trainingDescription,
            attributes: {
              class: [
                "u-bolt-line-length-optimal"
              ]
            }
          } only %}
        {% endif %}
      {% endcell %}

      {% if heroButtonRowBlock %}
        {% cell "u-bolt-flex-shrink u-bolt-margin-top-auto" %}
          {{ heroButtonRowBlock }}
        {% endcell %}
      {% endif %}

    {% endgrid %}
  {% endblock %}
{% endembed %}
