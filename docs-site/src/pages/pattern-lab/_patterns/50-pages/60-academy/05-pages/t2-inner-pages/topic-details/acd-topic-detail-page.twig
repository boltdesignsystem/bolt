{% extends "@bolt-academy/_academy-detail-page-template.twig" %}

{% import "@bolt-academy/_macros.twig" as macros %}

{% set breadcrumbs = [
  {
    "text": "Home",
    "url": link["pages-acd-dashboard"]
  },
  {
    "text": "Mission Name Goes Here",
    "url": link["pages-acd-mission-landing"]
  },
  {
    "text": "Module name goes here",
    "url": link["pages-acd-module-landing-page"]
  },
  {
    "text": "How to update a rule"
  }
] %}

{% set icon_prev %}
  {% include "@bolt-components-icon/icon.twig" with {
    position: "before",
    name: "chevron-left"
  } only %}
{% endset %}

{% set button_prev %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Previous Topic',
    hierarchy: "secondary",
    size: "small",
    border_radius: "full",
    icon_before: icon_prev,
    attributes: {
      href: link["pages-acd-module-landing-page"]
    }
  } only %}
{% endset %}

{% set icon_next %}
  {% include "@bolt-components-icon/icon.twig" with {
    position: "before",
    name: "chevron-right"
  } only %}
{% endset %}

{% set button_next %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Next Topic',
    hierarchy: "secondary",
    size: "small",
    border_radius: "full",
    icon_after: icon_next,
    attributes: {
      href: link["pages-acd-challenge-detail-page"]
    }
  } only %}
{% endset %}

{% block page_controls %}
  {% include "@bolt-components-list/list.twig" with {
    display: "inline",
    align: "end",
    items: [
      button_prev,
      button_next,
    ]
  } only %}
{% endblock %}

{% block side_nav %}
  {% include "@bolt-components-toc/toc.twig" with {
    header: "Data types",
    sticky: true,
    scrollOffsetSelector: ".js-global-header",
    scrollOffset: 16,
    items: [
      {
        text: "Rule check out and check in",
        url: "#rule-check-out-and-check-in",
        active: true,
      },
      {
        text: "Checking out a rule",
        url: "#checking-out-a-rule",
      },
      {
        text: "Checking in a rule",
        url: "#checking-in-a-rule",
      },
      {
        text: "Private edit",
        url: "#private-edit",
      },
      {
        text: "Data type best practices",
        url: "#data-type-best-practices",
      },
    ]
  } only %}
  {# End component specific code #}
{% endblock %}

