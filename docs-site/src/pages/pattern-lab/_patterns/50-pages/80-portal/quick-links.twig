      {{ add_links_header }}
    </div>
    <div class="c-portal-quick-links__col-inner">
      {{ skip_button_to_my_quick_links }}
      {{ add_links_list }}
    </div>
  </div>
  {% endset %}

  {% set modal_content %}
  <div class="c-portal-quick-links__modal">
    {% set modal_content %}
      {{ add_links_content }}
    {% endset %}
    {% include '@bolt-components-modal/modal.twig' with {
      content: modal_content,
      attributes: {
        class: 'js-bolt-modal-content',
      }
    } only %}
  </div>
  {% endset %}

  {% include '@bolt-components-band/band.twig' with {
    theme: 'dark',
    size: 'large',
    content: header,
  } only %}

  <div class="c-portal-quick-links">
    {{ quick_links_content }}
    {{ add_links_content }}
    {{ modal_content }}
  </div>
{% endblock %}


