    content: 'Agenda Manager' ~ a11y_delete_option,
    icon_before: icon_delete,
    reversed_underline: true,
    attributes: {
      href: '#!',
    },
  } only %}
{% endset %}

{% set quick_link_1_external %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Agenda Manager' ~ a11y_new_window,
    attributes: {
      href: 'https://google.com',
      target: '_blank',
      rel: 'noopener',
    },
    icon_only: icon_external_link,
    hierarchy: 'transparent',
    size: 'xsmall'
  } only %}
{% endset %}

