      {{ quick_links_header  }}
    </div>
    <div class="c-portal-quick-links__col-inner">
      {{ skip_button_to_add_links }}
      {{ quick_links_list }}
    </div>
  </div>
  {% endset %}

  {% set add_links_content %}
  <div id="add-links" class="c-portal-quick-links__col">
