{% extends '@pl/_default-page-template.twig' %}

{% set icon_add %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'add-solid',
  } only %}
{% endset %}

{% set icon_delete %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'minus-solid',
  } only %}
{% endset %}

{% set icon_external_link %}
  {% include '@bolt-elements-icon/icon.twig' with {
    name: 'external-link',
  } only %}
{% endset %}

{% set skip_button_to_add_links %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Skip to add links list',
    attributes: {
      href: '#add-links',
      'data-bolt-modal-target': '.js-bolt-modal-content',
      class: [
        'c-portal-quick-links__skip-button',
        'u-bolt-margin-bottom-medium',
        'c-portal-quick-links__skip-button--open'
      ],
    }
  } only %}
{% endset %}

{% set skip_button_to_my_quick_links %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Skip to my quick links list',
    attributes: {
      href: '#my-quick-links',
      'data-bolt-modal-target': '.js-bolt-modal-content',
      class: [
        'c-portal-quick-links__skip-button',
        'u-bolt-margin-bottom-medium',
      ],
    }
  } only %}
{% endset %}

