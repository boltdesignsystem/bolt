{% set modal_trigger %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Add items to My Quick Links',
    display: 'block',
    hierarchy: 'primary',
    attributes: {
      type: 'button',
      class: 'c-portal-quick-links__trigger',
      'data-bolt-modal-target': '.js-bolt-modal-content',
    },
  } only %}
{% endset %}

{% block main_content %}
  {% set header %}
    {% include '@bolt-components-headline/headline.twig' with {
      text: 'My quick links 2.0',
      size: 'xxxlarge',
      tag: 'h1'
    } only %}
  {% endset %}

  {% set quick_links_header %}
    {% include '@bolt-components-headline/headline.twig' with {
      text: 'My Quick Links',
    } only %}

    {% include '@bolt-components-headline/subheadline.twig' with {
      text: 'These options will be available in your sidebar on Pega Portal. You can remove the quick links below by clicking on them or go to their external pages by clicking on the icon with an arrow.',
      size: 'small'
    } only %}
  {% endset %}

  {% set quick_links_list %}
    {{ modal_trigger }}
    <ul class="c-portal-quick-links__list">
      <li class="c-portal-quick-links__list-item">{{ quick_link_1 }} {{ quick_link_1_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ quick_link_2 }} {{ quick_link_2_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ quick_link_3 }} {{ quick_link_3_external }}</li>
    </ul>
  {% endset %}

  {% set add_links_header %}
    {% include '@bolt-components-headline/headline.twig' with {
      text: 'Add Items To My Quick Links',
    } only %}

    {% include '@bolt-components-headline/subheadline.twig' with {
      text: 'Choose options from the list below by clicking on them. Chosen items will be added to your quick links. You can go to their external pages by clicking on the icon with an arrow.',
      size: 'small'
    } only %}
  {% endset %}

  {% set add_links_list %}
    <ul class="c-portal-quick-links__list">
      <li class="c-portal-quick-links__list-item">{{ add_link_1 }} {{ add_link_1_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_2 }} {{ add_link_2_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_3 }} {{ add_link_3_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_4 }} {{ add_link_4_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_5 }} {{ add_link_5_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_1 }} {{ add_link_1_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_2 }} {{ add_link_2_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_3 }} {{ add_link_3_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_4 }} {{ add_link_4_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_5 }} {{ add_link_5_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_1 }} {{ add_link_1_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_2 }} {{ add_link_2_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_3 }} {{ add_link_3_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_4 }} {{ add_link_4_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_5 }} {{ add_link_5_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_1 }} {{ add_link_1_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_2 }} {{ add_link_2_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_3 }} {{ add_link_3_external }}</li>
      <li class="c-portal-quick-links__list-item">{{ add_link_4 }} {{ add_link_4_external }}</li>
