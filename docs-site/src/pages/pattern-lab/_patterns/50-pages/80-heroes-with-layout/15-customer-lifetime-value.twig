{% set _description %}
  {% set _icon %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'external-link'
    } only %}
  {% endset %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'Hero example',
    icon_after: _icon,
    attributes: {
      href: 'https://www.pega.com/solutions/customer-lifetime-value',
      target: '_blank',
    }
  } only %}
{% endset %}

{% set _notes %}
  <ul>
    <li>ALL images in a hero require the <code>loading="eager"</code> HTML attribute.</li>
    <li>ALL images should utilize the <code>srcset</code> HTML attribute (not done for this example due to time).</li>
    <li><code>text-align: center;</code> has been added to the layout column through a style tag.</li>
    <li>This example contains custom code found on the live example.</li>
  </ul>
{% endset %}

{% set _demo %}
  {% set _content %}
    <bolt-text headline tag="h1" font-size="xxxlarge" class="u-bolt-padding-bottom">
      Engage with empathy. Adapt instantly.
    </bolt-text>
    <bolt-text subheadline tag="h2" font-size="large" class="u-bolt-padding-bottom">
      Keeping pace with a changing market doesn’t have to be complicated. With Pega, you can hyper-personalize every interaction to stay timely and relevant – no matter what happens next.
    </bolt-text>
    <bolt-inline-list size="xsmall" bolt-object="">
      <ul class="c-pega-bolt-video-metadata o-bolt-inline-list o-bolt-inline-list--xsmall o-bolt-inline-list--delimited o-bolt-inline-list--valign-top">
        <li class="o-bolt-inline-list__item">
          <span style="display: inline-block" class="c-bolt-text c-bolt-text--regular c-bolt-text--normal c-bolt-text--xsmall">Explainer</span>
        </li>
        <li class="o-bolt-inline-list__item">
          <span style="display: inline-block" class="c-bolt-text c-bolt-text--regular c-bolt-text--normal c-bolt-text--xsmall">01:16</span>
        </li>
      </ul>
    </bolt-inline-list>
    {% include '@bolt-elements-button/button.twig' with {
      content: 'Watch it come to life',
      attributes: {
        href: '#!',
      }
    } only %}
  {% endset %}

  {% set _layout_items %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: _content,
      attributes: {
        style: 'text-align: center'
      }
    } only %}
  {% endset %}

  {% set _background %}
    {% include '@bolt-elements-image/image.twig' with {
      background: true,
      attributes: {
        alt: 'Image alt text',
        src: '/images/heros/live-assets/pega-ES-header-bg-1-max-value.jpg',
        loading: 'eager',
        width: '100vw'
      },
    } only %}
  {% endset %}

  {% include '@bolt-layouts-layout/layout.twig' with {
    content: _layout_items,
    padding_top: 'large',
    padding_bottom: 'large',
    background: _background,
    align_items: 'center',
    template: [
      '67@from-medium'
    ],
    attributes: {
      class: 't-bolt-light'
    }
  } only %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Customer Lifetime Value Header Example',
  description: _description,
  demo: _demo,
  notes: _notes
} only %}
