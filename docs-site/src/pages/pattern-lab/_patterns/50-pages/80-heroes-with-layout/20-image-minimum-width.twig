{% set _content %}
  {% set _icon %}
    {% include "@bolt-elements-icon/icon.twig" with {
      name: "speed-dial",
    } only %}
  {% endset %}
  {% include "@bolt-elements-shape/shape.twig" with {
      content: _icon,
      size: "large",
      attributes: {
        class: [
          "u-bolt-margin-bottom-medium",
          "t-bolt-teal"
        ]
      }
  } only %}
  <bolt-text headline font-size="xxxlarge">
    A Prominent Headline Certainly Helps
  </bolt-text>
  <bolt-text subheadline font-size="xlarge">
    This one even includes a tagline.
  </bolt-text>
  {% include '@bolt-elements-button/button.twig' with {
    content: "Learn More",
    attributes: {
      type: 'button'
    }
  } %}
{% endset %}

{% set _supplement %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      alt: 'Image alt text',
      src: '/images/heros/responsive-web-design.svg',
      loading: 'eager',
      style: 'display: block; min-width:60vw; margin-right: -40vw;'
    },
  } only %}
{% endset %}

{% set layout_items %}
  {% include '@bolt-layouts-layout/layout-item.twig' with {
    content: _content
  } only %}
  {% include '@bolt-layouts-layout/layout-item.twig' with {
    valign_self: 'end-offset',
    content: _supplement
  } only %}
{% endset %}

{% include '@bolt-layouts-layout/layout.twig' with {
  content: layout_items,
  gutter: 'large',
  row_gutter: 'large',
  padding_top: 'large',
  padding_bottom: 'large',
  valign_items: 'center',
  template: [
    'halves@from-small'
  ],
  attributes: {
    class: 't-bolt-light'
  }
} only %}
