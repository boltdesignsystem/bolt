<bolt-layout
  gutter="large"
  row-gutter="large"
  padding-top="large"
  padding-bottom="large"
  class="t-bolt-light"
  template="halves@from-small"
  valign-items="center"
  {# align-items="center" #}
>
  {% include '@bolt-elements-image/image.twig' with {
    background: true,
    attributes: {
      src: '/images/heros/hero-background--yellow.svg',
      loading: 'eager',
      sizes: '100vw',
    },
  } only %}

  {# {{ this.data.center_content.value ? 'class="u-bolt-text-align-center"' : '' }} #}
  <bolt-layout-item>
    <bolt-text headline tag="h1" font-size="xxxlarge">
      It's show time.
    </bolt-text>
    <bolt-text font-size="xlarge" class="u-bolt-line-length-medium">
      Please join us for PegaWorld 2019 event at MGM Grand in Las&nbsp;Vegas
    </bolt-text>
    <bolt-text weight="bold">
      Monday, June 3rd, 2019 <br>10AM - 3PM EST
    </bolt-text>
    {% include '@bolt-elements-button/button.twig' with {
      content: "Watch livestream",
      hierarchy: "secondary",
      attributes: {
        type: 'button'
      }
    } only %}
  </bolt-layout-item>

  <bolt-layout-item valign-self="end-offset">
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        alt: 'Image alt text',
        src: '/images/heros/hero-foreground--yellow.png',
        loading: 'eager',
        width: 375,
        style: 'display: block;',
        class: 'u-bolt-margin-left-auto'
      },
    } only %}
  </bolt-layout-item>
</bolt-layout>
