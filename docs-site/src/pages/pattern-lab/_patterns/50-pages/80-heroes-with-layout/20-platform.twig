{% set _description %}
  {% set _icon %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'external-link'
    } only %}
  {% endset %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'Hero example',
    icon_after: _icon,
    attributes: {
      href: 'https://www.pega.com/products/platform',
      target: '_blank',
    }
  } only %}
{% endset %}

{% set _notes %}
  <ul>
    <li>ALL images in a hero require the <code>loading="eager"</code> HTML attribute.</li>
    <li>ALL images should utilize the <code>srcset</code> HTML attribute (not done for this example due to time).</li>
    <li><code>text-align: center;</code> has been added to the layout column through a style tag.</li>
  </ul>
{% endset %}

{% set _demo %}
  {% set _content %}
    <bolt-text headline tag="h1" font-size="xxxlarge">
      The power of the low-code Pega Platform
    </bolt-text>
    <bolt-text subheadline tag="h2" font-size="large">
      Simplify and streamline to get work done
    </bolt-text>
  {% endset %}

  {% set _layout_items %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: _content,
      attributes: {
        style: 'text-align: center'
      }
    } only %}
  {% endset %}

  {% set _background %}
    {% include '@bolt-elements-image/image.twig' with {
      background: true,
      attributes: {
        alt: 'Image alt text',
        src: '/images/heros/live-assets/platform-hero-bg-v2.jpg',
        loading: 'eager',
        width: '100vw'
      },
    } only %}
  {% endset %}

  {% include '@bolt-layouts-layout/layout.twig' with {
    content: _layout_items,
    background: _background,
    padding_top: 'large',
    padding_bottom: 'large',
    align_items: 'center',
    template: [
      '67@from-medium'
    ],
    attributes: {
      class: 't-bolt-dark'
    }
  } only %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Platform Header Example',
  description: _description,
  demo: _demo,
  notes: _notes
} only %}
