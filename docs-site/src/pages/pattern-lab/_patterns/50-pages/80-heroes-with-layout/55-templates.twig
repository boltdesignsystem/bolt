<bolt-layout
  gutter="large"
  row-gutter="large"
  padding-top="large"
  padding-bottom="large"
  class="t-bolt-dark"
  template="75/25@from-small"
  valign-items="center"
>
  <bolt-layout-item>
    <bolt-text font-size="xxxlarge">
      Templates / Content Widths
    </bolt-text>
    <bolt-text font-size="xlarge">
      You can use any template from the layout component. this one uses <code>75/25@from-small</code>.
    </bolt-text>
  </bolt-layout-item>

  <bolt-layout-item valign-self="end-offset">
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        alt: 'Image alt text',
        src: '/images/heros/hero-foreground--yellow.png',
        loading: 'eager',
        width: 415,
        style: 'display: block;'
      },
    } only %}
  </bolt-layout-item>
</bolt-layout>
