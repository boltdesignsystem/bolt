  class="t-bolt-dark"
  template="halves@from-small"
  valign-items="center"
>
  <bolt-layout-item order="last@from-small">
    <bolt-text font-size="xxxlarge">
      Incididunt Lorem qui.
    </bolt-text>
    <bolt-text font-size="xlarge">
      Labore aute anim duis excepteur tempor velit deserunt.
    </bolt-text>
    <bolt-ol>
      <bolt-li>List Item</bolt-li>
      <bolt-li>List Item</bolt-li>
      <bolt-li>List Item</bolt-li>
    </bolt-ol>
  </bolt-layout-item>

