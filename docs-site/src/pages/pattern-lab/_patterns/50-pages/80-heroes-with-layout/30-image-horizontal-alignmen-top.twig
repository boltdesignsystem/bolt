<bolt-layout
  gutter="large"
  row-gutter="large"
  padding-top="large"
  padding-bottom="large"
  class="t-bolt-dark"
  template="halves@from-small"
  valign-items="center"
  {# align-items="center" #}
>
  {% include '@bolt-elements-image/image.twig' with {
    background: true,
    attributes: {
      src: '/images/heros/hero-background--indigo.jpg',
      loading: 'eager',
      sizes: '100vw',
    },
  } only %}

  {# {{ this.data.center_content.value ? 'class="u-bolt-text-align-center"' : '' }} #}
  <bolt-layout-item>
    {% include '@bolt-elements-image/image.twig' with {
        attributes: {
          src: "/images/heros/hero-foreground--orange--logo.svg",
          alt: "PegaWorld iNspire logo",
          loading: "eager",
          class: [
            "u-bolt-margin-bottom-medium",
          ]
        }
    } only %}
    <bolt-text font-size="xlarge" class="u-bolt-line-length-medium">
      Boston Convention & Exhibition Center May&nbsp;31&nbsp;-&nbsp;June&nbsp;2,&nbsp;2020
    </bolt-text>
    {% include '@bolt-elements-button/button.twig' with {
      content: "See full agenda",
      hierarchy: "secondary",
      attributes: {
        type: 'button'
      }
    } only %}
  </bolt-layout-item>

  <bolt-layout-item valign-self="start-offset">
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        alt: 'Image alt text',
        src: '/images/heros/hero-foreground--indigo.png',
        width: 450,
        loading: 'eager',
        style: 'display: block;',
        class: [
          'u-bolt-margin-left-auto',
          'u-bolt-margin-right-auto'
        ]
      },
    } only %}
  </bolt-layout-item>
</bolt-layout>
