{% set _content %}
  {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        src: "/images/heros/hero-foreground--orange--logo.svg",
        alt: "PegaWorld iNspire logo",
        loading: "eager",
        class: [
          "u-bolt-margin-bottom-medium",
        ]
      }
  } only %}
  <bolt-text font-size="xlarge" class="u-bolt-line-length-medium">
    Boston Convention & Exhibition Center May&nbsp;31&nbsp;-&nbsp;June&nbsp;2,&nbsp;2020
  </bolt-text>
  {% include '@bolt-elements-button/button.twig' with {
    content: "See full agenda",
    hierarchy: "secondary",
    attributes: {
      type: 'button'
    }
  } only %}
{% endset %}

{% set _supplement %}
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        alt: 'Image alt text',
        src: '/images/heros/hero-foreground--indigo.png',
        width: 450,
        loading: 'eager',
        style: 'display: block;',
        class: [
          'u-bolt-margin-left-auto',
          'u-bolt-margin-right-auto'
        ]
      },
    } only %}
{% endset %}

{% set layout_items %}
  {% include '@bolt-layouts-layout/layout-item.twig' with {
    content: _content
  } only %}
  {% include '@bolt-layouts-layout/layout-item.twig' with {
    valign_self: 'start-offset',
    content: _supplement
  } only %}
{% endset %}

{% set _background %}
  {% include '@bolt-elements-image/image.twig' with {
    background: true,
    attributes: {
      src: '/images/heros/hero-background--indigo.jpg',
      loading: 'eager',
      sizes: '100vw',
    },
  } only %}
{% endset %}

{% include '@bolt-layouts-layout/layout.twig' with {
  content: layout_items,
  background: _background,
  gutter: 'large',
  row_gutter: 'large',
  padding_top: 'large',
  padding_bottom: 'large',
  valign_items: 'center',
  template: [
    'halves@from-small'
  ],
  attributes: {
    class: 't-bolt-dark'
  }
} only %}
