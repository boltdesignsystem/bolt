<bolt-layout
  gutter="large"
  row-gutter="large"
  padding-top="large"
  padding-bottom="large"
  class="t-bolt-light"
  template="halves@from-small"
  valign-items="center"
>
  <bolt-layout-item>
    <bolt-text headline tag="h1" font-size="xxxlarge">
      Billboard Title
    </bolt-text>
  </bolt-layout-item>

  <bolt-layout-item valign-self="end-offset">
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        alt: 'Image alt text',
        src: '/images/heros/hero-foreground--yellow.png',
        loading: 'eager',
        width: 415,
        style: 'display: block;'
      },
    } only %}
  </bolt-layout-item>
</bolt-layout>
