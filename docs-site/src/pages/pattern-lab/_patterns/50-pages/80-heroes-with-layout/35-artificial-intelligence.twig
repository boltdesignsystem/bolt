{% set _description %}
  {% set _icon %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'external-link'
    } only %}
  {% endset %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'Hero example',
    icon_after: _icon,
    attributes: {
      href: 'https://www.pega.com/topics/artificial-intelligence',
      target: '_blank',
    }
  } only %}
{% endset %}

{% set _notes %}
  <ul>
    <li>ALL images in a hero require the <code>loading="eager"</code> HTML attribute.</li>
    <li>ALL images should utilize the <code>srcset</code> HTML attribute (not done for this example due to time).</li>
    <li>To set a background image that utilizes a gradient or color affect, continue to use the Bolt Background Component. This component still utilizes the Image Component and will not be performant.</li>
  </ul>
{% endset %}

{% set _demo %}
  {% set _content %}
    <bolt-text eyebrow tag="p">
      Artificial Intelligence
    </bolt-text>
    <bolt-text headline tag="h1" font-size="xxxlarge">
      AI decision-making: Beyond the hype
    </bolt-text>
    <bolt-text subheadline tag="h2" font-size="xlarge" class="u-bolt-padding-bottom">
      Real-time AI isn’t just a trend – it’s a way to transform your customer experience. We’ve gathered experts, best practices, and examples to show you how.
    </bolt-text>
  {% endset %}

  {% set _supplement %}
    <bolt-blockquote author-name="Mark Taylor" author-title="Chief Experience Officer, Digital Customer Experience Practice">
      <img slot="logo" src="/images/heros/live-assets/capgemini-logo-sponsors-white-50.png" alt="Capgemini Logo" width=99 height=28 />
      <p>As the technology evolves ... so increases the opportunity for brands to build higher-value relationships with consumers based on relevance and intimacy.</p>
    </bolt-blockquote>
  {% endset %}

  {% set _layout_items %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: _content
    } only %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: _supplement
    } only %}
  {% endset %}

  {% set _background %}
    {% include '@bolt-components-background/background.twig' with {
      opacity: 'heavy',
      fill: 'gradient',
      focalPoint: {
        vertical: 'center',
        horizontal: 'center'
      },
      contentItems: [
        {
          pattern: 'image',
          src: '/images/heros/live-assets/artificial-intelligence-hero.jpg'
        }
      ]
    } only %}
  {% endset %}

  {% include '@bolt-layouts-layout/layout.twig' with {
    content: _layout_items,
    gutter: 'large',
    row_gutter: 'small',
    padding_top: 'large',
    padding_bottom: 'large',
    valign_items: 'center',
    background: _background,
    template: [
      '67/33@from-medium'
    ],
    attributes: {
      class: 't-bolt-dark'
    }
  } only %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Artificial Intelligence Header Example',
  description: _description,
  demo: _demo,
  notes: _notes
} only %}
