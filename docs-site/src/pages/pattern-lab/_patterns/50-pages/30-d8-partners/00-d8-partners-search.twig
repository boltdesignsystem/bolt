{% extends "@pl/_default-page-template.twig" %}

{% block main_content %}
  {% embed "@pl/_band--feature.twig" with {
    teaserPosition: "left",
    teaserWidth: "2/3",
    size: "large",
    full: true,
    theme: "dark",
    background: {
      opacity: "medium",
      fill: "gradient",
      focal_point: {
        vertical: "center",
        horizontal: "right"
      },
      content_items: [{
        pattern: "image",
        src: "/images/placeholders/landscape-16x9-mountains.jpeg"
      }]


    },
    primaryTeaser: {
      headlines: [
        {
          type: "eyebrow",
          text: "Partner Overview",
          url: "pega.com",
          icon: {
            name: "arrow-left",
            position: "before"
          }
        },
        {
          type: "headline",
          text: "Find a Partner",
          size: "xxxlarge",
          tag: "h1"
        }
      ]
    }
  } only %}{% endembed %}


  {% embed "@bolt-components-band/band.twig" with {
    size: "small",
    theme: "light",
    full_bleed: true,
  } only %}

    {% block band_content  %}
      <p class="c-bolt-text">
        Showing 555 results in
        <span class="c-bolt-search-inline-tags">
          <a href="#!" class="c-bolt-search-inline-tag">
            filter 1
          </a>
          <a href="#!" class="c-bolt-search-inline-tag">
            filter 2
          </a>
        </span>
        and <strong>"search term"</strong>
        (<a href="#!" class="c-bolt-link">Clear filters</a>)
      </p>
      {% grid %}
        {% cell 'u-bolt-width-1/1 u-bolt-width-3/12@medium' %}
          <div class="c-bolt-search-filter">
            <div class="c-bolt-search-filter__trigger">
              {% set _icon_filter %}
                {% include '@bolt-components-icon/icon.twig' with {
                  name: 'filter',
                  size: 'medium'
                } only %}
              {% endset %}
              {% include '@bolt-elements-button/button.twig' with {
                content: 'Close search filters',
                icon_only: _icon_filter,
                border_radius: 'full',
                size: 'xsmall',
                attributes: {
                  href: '#search-filters'
                }
              } only %}
            </div>

            <div class="c-bolt-search-filter__panel" id="search-filters">
              <div class="c-bolt-search-filter__panel-content">
                <form class="c-bolt-form" action="#" method="post" onsubmit="return false;">
                  <fieldset class="c-bolt-fieldset">
                    <legend class="c-bolt-legend u-bolt-visuallyhidden">
                      <h2 class="c-bolt-headline c-bolt-headline--small">
                        <span class="c-bolt-headline__text">
                          Search
                        </span>
                      </h2>
                    </legend>
                    <div class="c-bolt-input-list">
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input" type="search" name="search2-input" id="search2-input" placeholder="Enter text to search" required />
                        <label class="c-bolt-floating-label" for="search2-input">
                          Search
                        </label>
                        <div class="c-bolt-input-icons">
                          <button class="c-bolt-input-icon c-bolt-input-icon--link">
                            {% include "@bolt-components-icon/icon.twig" with {
                              "name": "search",
                              "size": "medium"
                            } only %}
                          </button>
                        </div>
                      </div>
                    </div>
                  </fieldset>
                  <fieldset class="c-bolt-fieldset">
                    <legend class="c-bolt-legend">
                      <h2 class="c-bolt-headline c-bolt-headline--small">
                        <span class="c-bolt-headline__text">
                          Partner Type
                        </span>
                      </h2>
                    </legend>
                    <div class="c-bolt-input-list c-bolt-input-list--stack-spacing-none">
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="partner-type" id="partner-type-choice-1" value="Item 1" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="partner-type-choice-1">
                          Item 1 (12)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="partner-type" id="partner-type-choice-2" value="Item 2" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="partner-type-choice-2">
                          Item 2 (8)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="partner-type" id="partner-type-choice-3" value="Item 3" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="partner-type-choice-3">
                          Item 3 (3)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="partner-type" id="partner-type-choice-4" value="Item 4" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="partner-type-choice-4">
                          Item 4 (5)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="partner-type" id="partner-type-choice-5" value="Item 5" />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="partner-type-choice-5">
                          Item 5 (10)
                        </label>
                      </div>
                    </div>
                  </fieldset>
                  <fieldset class="c-bolt-fieldset">
                    <legend class="c-bolt-legend">
                      <h2 class="c-bolt-headline c-bolt-headline--small">
                        <span class="c-bolt-headline__text">
                          Industry
                        </span>
                      </h2>
                    </legend>
                    <div class="c-bolt-input-list c-bolt-input-list--stack-spacing-none">
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="industry" id="industry-choice-1" value="Item 1" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="industry-choice-1">
                          Item 1 (12)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="industry" id="industry-choice-2" value="Item 2" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="industry-choice-2">
                          Item 2 (8)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="industry" id="industry-choice-3" value="Item 3" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="industry-choice-3">
                          Item 3 (3)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="industry" id="industry-choice-4" value="Item 4" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="industry-choice-4">
                          Item 4 (5)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="industry" id="industry-choice-5" value="Item 5" />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="industry-choice-5">
                          Item 5 (10)
                        </label>
                      </div>
                    </div>
                  </fieldset>
                  <fieldset class="c-bolt-fieldset">
                    <legend class="c-bolt-legend">
                      <h2 class="c-bolt-headline c-bolt-headline--small">
                        <span class="c-bolt-headline__text">
                          Global Region
                        </span>
                      </h2>
                    </legend>
                    <div class="c-bolt-input-list c-bolt-input-list--stack-spacing-none">
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="global-region" id="global-region-choice-1" value="Item 1" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="global-region-choice-1">
                          Item 1 (12)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="global-region" id="global-region-choice-2" value="Item 2" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="global-region-choice-2">
                          Item 2 (8)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="global-region" id="global-region-choice-3" value="Item 3" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="global-region-choice-3">
                          Item 3 (3)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="global-region" id="global-region-choice-4" value="Item 4" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="global-region-choice-4">
                          Item 4 (5)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="global-region" id="global-region-choice-5" value="Item 5" />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="global-region-choice-5">
                          Item 5 (10)
                        </label>
                      </div>
                    </div>
                  </fieldset>
                  <fieldset class="c-bolt-fieldset">
                    <legend class="c-bolt-legend">
                      <h2 class="c-bolt-headline c-bolt-headline--small">
                        <span class="c-bolt-headline__text">
                          Solution
                        </span>
                      </h2>
                    </legend>
                    <div class="c-bolt-input-list c-bolt-input-list--stack-spacing-none">
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="solution" id="solution-choice-1" value="Item 1" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="solution-choice-1">
                          Item 1 (12)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="solution" id="solution-choice-2" value="Item 2" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="solution-choice-2">
                          Item 2 (8)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="solution" id="solution-choice-3" value="Item 3" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="solution-choice-3">
                          Item 3 (3)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="solution" id="solution-choice-4" value="Item 4" checked />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="solution-choice-4">
                          Item 4 (5)
                        </label>
                      </div>
                      <div class="c-bolt-input-list__item">
                        <input class="c-bolt-input c-bolt-input--checkbox" type="checkbox" name="solution" id="solution-choice-5" value="Item 5" />
                        <label class="c-bolt-inline-label c-bolt-inline-label--checkbox c-bolt-inline-label--small" for="solution-choice-5">
                          Item 5 (10)
                        </label>
                      </div>
                    </div>
                  </fieldset>
                </form>
              </div>

              <div class="c-bolt-search-filter__panel-controls c-bolt-search-filter__panel-controls--submit">
                {% set button_apply %}
                  {% include '@bolt-elements-button/button.twig' with {
                    content: 'Apply',
                    hierarchy: "primary",
                    attributes: {
                      type: 'submit'
                    }
                  } only %}
                {% endset %}

                {% set button_cancel %}
                  {% include '@bolt-elements-button/button.twig' with {
                    content: 'Cancel',
                    hierarchy: "secondary",
                    attributes: {
                      href: '#!'
                    }
                  } only %}
                {% endset %}

                {% include "@bolt-components-list/list.twig" with {
                  items: [
                    button_apply,
                    button_cancel,
                  ]
                } only %}
              </div>

              <div class="c-bolt-search-filter__panel-controls c-bolt-search-filter__panel-controls--close">
                {% set _icon_close %}
                  {% include '@bolt-components-icon/icon.twig' with {
                    name: 'close',
                    size: 'medium'
                  } only %}
                {% endset %}
                {% include '@bolt-elements-button/button.twig' with {
                  content: 'Close search filters',
                  icon_only: _icon_close,
                  hierarchy: 'transparent',
                  border_radius: 'full',
                  size: 'xsmall',
                  attributes: {
                    href: '#!'
                  }
                } only %}
              </div>
            </div>
          </div>
        {% endcell %}

        {% cell 'u-bolt-width-1/1 u-bolt-width-9/12@medium' %}
          {% grid "o-bolt-grid--flex o-bolt-grid--matrix" %}
            {% for i in 1..12 %}
              {% cell "u-bolt-width-1/1 u-bolt-width-1/2@small" %}
                {% include "@bolt-components-card-replacement/card-replacement.twig" with {
                  theme: "xlight",
                  media: {
                    image: {
                      src: "/images/placeholders/landscape-16x9-mountains.jpg",
                      alt: "Image alt.",
                    },
                  },
                  body: {
                    eyebrow: "Systems Integrator",
                    headline: "Partner Name",
                    paragraph: "Overall excellence in driving client success across Pega's applications portfolio, including Pega robotics and articial intellegence (AI).",
                  },
                  actions: [
                    {
                      text: "Partner Website",
                      url: "https://pega.com",
                    },
                    {
                      text: "App Exchange",
                      url: "https://pega.com",
                    },
                  ],
                } only %}
              {% endcell %}
            {% endfor %}
          {% endgrid %}

          <div class="u-bolt-margin-top-large u-bolt-margin-bottom-medium">
            {% grid "o-bolt-grid--flex o-bolt-grid--center o-bolt-grid--matrix" %}
              {% cell "o-bolt-grid__cell" %}
                {% include "@bolt-components-pagination/pagination.twig" with {
                  current: 5,
                  total: 10,
                  first: {
                    href: 'page-1-url'
                  },
                  previous: {
                    href: 'page-4-url'
                  },
                  pages: {
                    3: {
                      href: 'page-3-url'
                    },
                    4: {
                      href: 'page-4-url'
                    },
                    5: {
                      href: 'page-5-url'
                    },
                    6: {
                      href: 'page-6-url'
                    },
                    7: {
                      href: 'page-7-url'
                    }
                  },
                  next: {
                    href: 'page-6-url'
                  },
                  last: {
                    href: 'page-10-url'
                  }
                } only %}
              {% endcell %}
            {% endgrid %}
          </div>
        {% endcell %}
      {% endgrid %}
    {% endblock %}
  {% endembed %}
{% endblock %}
