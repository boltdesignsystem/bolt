{% extends "@pl/_default-page-template.twig" %}

{% block global_header %}
  {% include '@pl/_main-site-page-header.twig' with { static_header: true } %}
{% endblock %}

{% block main_content %}
  {% embed "@bolt-components-sticky/sticky.twig" %}
    {% block sticky_content %}
      {% set navbar_data = [
        {
          link: {
            content: 'News',
            attributes: {
              href: '#'
            }
          }
        },
        {
          link: {
            content: 'Press Kit & Resources',
            attributes: {
              href: '#'
            }
          }
        },
        {
          link: {
            content: 'Media Contacts',
            attributes: {
              href: '#'
            }
          }
        },
        {
          link: {
            content: 'Another Link',
            attributes: {
              href: '#'
            }
          }
        }
      ] %}

      {% set navbar_items %}
        {% for item in navbar_data %}
          {% include '@bolt-components-navbar/navbar-li.twig' with item only %}
        {% endfor %}
      {% endset %}

      {% set navbar_list %}
        {% include '@bolt-components-navbar/navbar-ul.twig' with { content: navbar_items } only %}
      {% endset %}

      {% include '@bolt-components-navbar/navbar.twig' with {
        theme: 'xdark',
        title: {
          content: 'Newsroom',
          icon: {
            name: 'info-solid'
          }
        },
        links: navbar_list
      } only %}
    {% endblock %}
  {% endembed %}

  {% embed "@bolt-components-band/band.twig" with {
    theme: "dark",
    size: "large",
    full_bleed: true,
    background: {
      shape_group: "A"
      }
    } only %}

    {% block band_content %}
      {% include "@bolt-components-headline/headline.twig" with {
        size: "xxxlarge",
        text: "In The News"
      } only %}
      {% include "@bolt-components-headline/subheadline.twig" with {
        size: "xxlarge",
        text: "See the latest updates and media coverage about Pega from around the world."
      } only %}

      {% set button_press %}
        {% include '@bolt-elements-button/button.twig' with {
          content: 'Press Releases',
          hierarchy: "secondary",
          display: 'inline@from-small',
          attributes: {
            href: '/pattern-lab/patterns/50-pages-100-d8-Press-and-Media-press-browse--list-view/50-pages-100-d8-Press-and-Media-press-browse--list-view.html'
          }
        } only %}
      {% endset %}

      {% set button_media %}
        {% include '@bolt-elements-button/button.twig' with {
          content: 'Media Coverage',
          hierarchy: "secondary",
          display: 'inline@from-small',
          attributes: {
            href: '/pattern-lab/patterns/50-pages-100-d8-Press-and-Media-d8-media-browse--list-view/50-pages-100-d8-Press-and-Media-d8-media-browse--list-view.html'
          }
        } only %}
      {% endset %}

      {% include "@bolt-components-list/list.twig" with {
        display: 'inline',
        items: [
          button_press,
          button_media,
        ]
      } only %}
    {% endblock %}
  {% endembed %}

