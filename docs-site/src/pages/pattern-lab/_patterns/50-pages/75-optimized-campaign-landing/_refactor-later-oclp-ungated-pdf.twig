{% set secondary_cta_items %}
  {% include '@bolt-layouts-layout/layout-item.twig' with {
    content: 'Left Column'
  } only %}

  {% include '@bolt-layouts-layout/layout-item.twig' with {
    content: 'Right Column'
  } only %}
{% endset %}

{% set secondary_cta_layout %}
  {% set background %}
    {% include '@bolt-components-background/background.twig' with {
      fill: 'color',
      fill_color: 'navy'
    } only %}
  {% endset %}

  {% include '@bolt-layouts-layout/layout.twig' with {
    content: secondary_cta_items,
    align_items: 'center',
    padding_top: 'large',
    padding_bottom: 'large',
    background: background,
    template: [
      'halves@from-medium'
    ]
  } only %}
{% endset %}

{% include '@pl/_oclp-template.twig' with {
  primary_cta: "Primary",
  secondary_cta: secondary_cta_layout
} %}
