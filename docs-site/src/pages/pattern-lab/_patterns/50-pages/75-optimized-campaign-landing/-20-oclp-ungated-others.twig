{% set header %}
  <header>
    {% set logo %}
      <a href="https://pega.com">
        {% include '@bolt-elements-image/image.twig' with {
          attributes: {
            alt: 'Pegasystems, Inc.',
            src: '/images/logos/pega-logo.svg',
            width: 139,
            height: 30,
            class: 'c-base-ocpl-logo',
          },
        } only %}
      </a>
    {% endset %}
    {% set layout_content %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: logo,
      } only %}
    {% endset %}
    {% include '@bolt-layouts-layout/layout.twig' with {
      content: layout_content,
    } only %}
  </header>
{% endset %}

{% set main_content %}
  {% set headline_content %}
    {% include '@bolt-components-headline/eyebrow.twig' with {
      text: 'Eyebrow',
      tag: 'div',
    } only %}
    {% include '@bolt-components-headline/headline.twig' with {
      text: 'This is a headline',
      tag: 'h1',
      size: 'xxxlarge',
    } only %}
  {% endset %}
  {% set headline_layout_content %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: headline_content,
    } only %}
  {% endset %}
  {% include '@bolt-layouts-layout/layout.twig' with {
    content: headline_layout_content,
    padding_top: 'large',
    padding_bottom: 'small',
    template: [
      '67@from-medium',
    ],
  } only %}

  {% set page_content %}
    {% include '@bolt-components-headline/text.twig' with {
      text: 'This is the body. Lorem ipsum dolor sit amet consectetur adipisicing elit. Veritatis numquam quidem vitae minus deserunt, sit amet consectetur adipisicing elit. Iure quam ipsum commodi accusantium eligendi, soluta, unde incidunt omnis officiis eos aut quae culpa laudantium consequatur! Quasi repellat odit doloremque rerum.',
    } only %}
    {% include '@bolt-components-headline/text.twig' with {
      text: 'Modi dolorem cum nisi asperiores beatae error hic architecto nobis saepe, maiores eligendi. Lorem ipsum dolor, sit amet consectetur adipisicing elit. Iure quam ipsum commodi accusantium eligendi, soluta.',
    } only %}
    {% set list_content %}
      {% set icon_check_solid %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'check-solid',
          size: 'medium',
          color: 'teal',
        } only %}
      {% endset %}
      {% set list_text %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'Check list item. Lorem ipsum dolor sit amet consectetur adipisicing elit.',
          size: 'small',
          attributes: {
            class: 'u-bolt-margin-top-xxsmall',
          }
        } only %}
      {% endset %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: icon_check_solid,
      } only %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: list_text,
      } only %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: icon_check_solid,
      } only %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: list_text,
      } only %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: icon_check_solid,
      } only %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: list_text,
      } only %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: icon_check_solid,
      } only %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: list_text,
      } only %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: icon_check_solid,
      } only %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: list_text,
      } only %}
    {% endset %}
    {% include '@bolt-layouts-layout/layout.twig' with {
      content: list_content,
      gutter: 'small',
      row_gutter: 'small',
      padding_bottom: 'medium',
      template: [
        'flag',
      ],
      attributes: {
        style: '--l-bolt-layout-flag-media-width: 24px',
      },
    } only %}

    {% set icon_download %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'download',
      } only %}
    {% endset %}

    {% include '@bolt-elements-button/button.twig' with {
      content: 'Download the report',
      icon_before: icon_download,
      attributes: {
        href: 'https://pega.com',
      },
    } only %}
  {% endset %}

  {% set image_content %}
    <div class="c-base-oclp-image">
      {% include '@bolt-elements-image/image.twig' with {
        attributes: {
          alt: 'Alt text.',
          src: 'https://via.placeholder.com/800x450',
          width: 800,
          height: 450,
        },
      } %}
    </div>
  {% endset %}

  {% set layout_content %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: image_content,
      order: 'last@from-medium'
    } only %}
    {% include '@bolt-layouts-layout/layout-item.twig' with {
      content: page_content,
    } only %}
  {% endset %}
  {% include '@bolt-layouts-layout/layout.twig' with {
    content: layout_content,
    gutter: 'large',
    padding_top: 'none',
    padding_bottom: 'large',
    template: [
      'halves@from-medium',
    ],
  } only %}
{% endset %}

{% set footer %}
  <footer>
    {% set customer_service_content %}
      {% set icon_customer_service %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'customer-service',
          size: 'xlarge',
        } only %}
      {% endset %}

      {% set customer_service_headline %}
        {% set icon_chevron_right %}
          {% include '@bolt-elements-icon/icon.twig' with {
            name: 'chevron-right',
          } only %}
        {% endset %}

        {% include '@bolt-elements-text-link/text-link.twig' with {
          content: 'Pega Customer Services',
          icon_after: icon_chevron_right,
          reversed_underline: true,
          attributes: {
            href: 'https://pega.com',
          }
        } only %}
      {% endset %}
      
      {% include '@bolt-components-listing-teaser/listing-teaser.twig' with {
        gutter: 'medium',
        signifier: icon_customer_service,
        headline: {
          text: customer_service_headline,
          tag: 'p',
          size: 'xlarge',
          align: 'center',
          link_attributes: {
            href: 'https://pega.com'
          },
        },
        description: 'Learn more about out award winning solution.',
      } only %}
    {% endset %}
    
    {% set contact_content %}
      {% set icon_contact %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'pega-chat-typing',
          size: 'xlarge',
        } only %}
      {% endset %}

      {% set contact_headline %}
        {% set icon_chevron_right %}
          {% include '@bolt-elements-icon/icon.twig' with {
            name: 'chevron-right',
          } only %}
        {% endset %}

        {% include '@bolt-elements-text-link/text-link.twig' with {
          content: 'Contact Sales',
          icon_after: icon_chevron_right,
          reversed_underline: true,
          attributes: {
            href: 'https://pega.com',
          }
        } only %}
      {% endset %}
      
      {% include '@bolt-components-listing-teaser/listing-teaser.twig' with {
        gutter: 'medium',
        signifier: icon_contact,
        headline: {
          text: contact_headline,
          tag: 'p',
          size: 'xlarge',
          align: 'center',
          link_attributes: {
            href: 'https://pega.com'
          },
        },
        description: 'Get in touch with us.',
      } only %}
    {% endset %}

    {% set layout_content %}
      {# {% include '@bolt-elements-image/image.twig' with {
        background: true,
        attributes: {
          src: '/images/backgrounds/ocpl-contact-bg-1.svg',
          style: '--e-bolt-image-position: 20vw 34%',
        },
      } only %} #}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: customer_service_content,
      } only %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: contact_content,
      } only %}
    {% endset %}
    {% include '@bolt-layouts-layout/layout.twig' with {
      content: layout_content,
      padding_top: 'xlarge',
      padding_bottom: 'xlarge',
      template: [
        'halves@from-medium'
      ],
      attributes: {
        class: 't-bolt-yellow',
        style: 'justify-items: center;'
      },
    } only %}

    <div class="c-base-ocpl-footer t-bolt-white">
      <div class="c-base-ocpl-footer__item">
        <strong class="u-bolt-margin-right-xsmall">Connect with us</strong>

        {% set icon_linkedin %}
          {% include '@bolt-elements-icon/icon.twig' with {
            name: 'linkedin',
          } only %}
        {% endset %}
        {% include '@bolt-elements-text-link/text-link.twig' with {
          content: '<span class="u-bolt-visuallyhidden">LinkedIn</span>',
          icon_before: icon_linkedin,
          attributes: {
            href: 'https://pega.com',
          }
        } only %}
        
        {% set icon_twitter %}
          {% include '@bolt-elements-icon/icon.twig' with {
            name: 'twitter',
          } only %}
        {% endset %}
        {% include '@bolt-elements-text-link/text-link.twig' with {
          content: '<span class="u-bolt-visuallyhidden">Twitter</span>',
          icon_before: icon_twitter,
          attributes: {
            href: 'https://pega.com',
          }
        } only %}
        
        {% set icon_facebook %}
          {% include '@bolt-elements-icon/icon.twig' with {
            name: 'facebook',
          } only %}
        {% endset %}
        {% include '@bolt-elements-text-link/text-link.twig' with {
          content: '<span class="u-bolt-visuallyhidden">Facebook</span>',
          icon_before: icon_facebook,
          attributes: {
            href: 'https://pega.com',
          }
        } only %}
        
        {% set icon_youtube %}
          {% include '@bolt-elements-icon/icon.twig' with {
            name: 'youtube-solid',
          } only %}
        {% endset %}
        {% include '@bolt-elements-text-link/text-link.twig' with {
          content: '<span class="u-bolt-visuallyhidden">YouTube</span>',
          icon_before: icon_youtube,
          attributes: {
            href: 'https://pega.com',
          }
        } only %}
      </div>
      <div class="c-base-ocpl-footer__item">
        {% include '@bolt-elements-text-link/text-link.twig' with {
          content: 'Terms of Use',
          reversed_underline: true,
          attributes: {
            href: 'https://pega.com',
          }
        } only %}
        {% include '@bolt-elements-text-link/text-link.twig' with {
          content: 'Privacy',
          reversed_underline: true,
          attributes: {
            href: 'https://pega.com',
          }
        } only %}
        {% include '@bolt-elements-text-link/text-link.twig' with {
          content: 'Contact',
          reversed_underline: true,
          attributes: {
            href: 'https://pega.com',
          }
        } only %}
        {% include '@bolt-elements-text-link/text-link.twig' with {
          content: 'Pega.com',
          reversed_underline: true,
          attributes: {
            href: 'https://pega.com',
          }
        } only %}
      </div>
      <div class="c-base-ocpl-footer__item">
        &copy;2021 Pegasystems, Inc.
      </div>
    </div>
  </footer>
{% endset %}

{% include '@bolt-elements-image/image.twig' with {
  background: true,
  attributes: {
    src: '/images/backgrounds/ocpl-bg-3.svg',
    style: '--e-bolt-image-position: 67vw -48vw',
    class: 'c-base-ocpl-bg-image',
  },
} only %}

{% include '@bolt-layouts-site/site.twig' with {
  header: header,
  main: {
    content: main_content,
  },
  footer: footer,
  attributes: {
    class: 't-bolt-gray-xlight',
  }
} only %}
