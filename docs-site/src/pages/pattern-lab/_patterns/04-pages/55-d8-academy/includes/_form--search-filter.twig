      },
      {
        "type": "option",
        "value": "option-a",
        "label": "Relevancy"
      },
      {
        "type": "option",
        "value": "option-b",
        "label": "Option B"
      },
      {
        "type": "option",
        "value": "option-c",
        "label": "Option C"
      }
    ]
  } only %}

  {# Checkboxes #}
  {% set checkboxes_group_1 %}
    {% include "@pl/30-form-element-demo-checkbox.twig" with {
      "labelTitle": "Proin viverra (1040)",
