  {% set checkboxes_group_2 %}
    {% include "@pl/30-form-element-demo-checkbox.twig" with {
      "labelTitle": "Proin viverra (1040)",
      "elementId": "checkbox-5"
    } %}
    {% include "@pl/30-form-element-demo-checkbox.twig" with {
      "labelTitle": "Phasellus leo dolor (503)",
      "elementId": "checkbox-6"
    } %}
    {% include "@pl/30-form-element-demo-checkbox.twig" with {
      "labelTitle": "Aenean vulputate (167)",
      "elementId": "checkbox-7"
    } %}
    {% include "@pl/30-form-element-demo-checkbox.twig" with {
      "labelTitle": "Maecenas ullamcorper (96)",
      "elementId": "checkbox-8"
    } %}
  {% endset %}

  {% set fieldset_children_1 %}
    {% include "@bolt-components-form/form-checkboxes.twig" with {
      children: checkboxes_group_1
    } only %}
  {% endset %}

  {% set fieldset_children_2 %}
    {% include "@bolt-components-form/form-checkboxes.twig" with {
      children: checkboxes_group_2
    } only %}
  {% endset %}

  {% include "@bolt-components-form/form-fieldset.twig" with {
    "legendTitle": "Type",
    "children": fieldset_children_1
  } only %}

  {% include "@bolt-components-form/form-fieldset.twig" with {
    "legendTitle": "Skill Level",
    "children": fieldset_children_2
  } only %}
{% endset %}

{% include "@bolt/form.twig" with {
  children: children
