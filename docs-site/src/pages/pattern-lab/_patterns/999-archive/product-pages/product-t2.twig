{% extends '@pl/_default-page-template.twig' %}

{% set headings_set %}
  {% include '@bolt-components-headline/headline.twig' with {
    text: 'CRM Applications',
    tag: 'span',
    url: '#!',
    size: 'small',
    icon: {
      name: 'arrow-left',
      position: 'before'
    }
  } only %}
  {% include '@bolt-components-headline/headline.twig' with {
    text: 'Dynamically recommend next-best-actions for your customers.',
    tag: 'h1',
    size: 'xxxlarge',
  } only %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Call to action',
    attributes: {
      type: 'button'
    }
  } only %}
{% endset %}

{% block main_content %}
  {% embed '@pl/_band--feature.twig' with {
    teaserPosition: 'left',
    teaserWidth: '2/3',
    size: 'large',
    full: true,
    theme: 'dark',
    background: {
      opacity: 'medium',
      fill: 'gradient',
      focal_point: {
        vertical: 'top',
        horizontal: 'right'
      },
      content_items: [{
        src: '/images/content/backgrounds/background-tall-3.jpg',
        lazyload: false,
        placeholder_color: 'hsl(10, 14%, 8%)',
        valign: '30%',
        sizes: '100vw'
      }]
    },
    primaryTeaser: headings_set,
  } only %}

  {% endembed %}



{% embed '@bolt-components-band/band.twig' with {
  size: 'small',
  theme: 'dark',
  full_bleed: true
} only %}
  {% block band_content %}

    {% grid 'o-bolt-grid--flex o-bolt-grid--large o-bolt-grid--middle o-bolt-grid--matrix' %}

      {% cell 'o-u-bolt-width-1/1 u-bolt-width-1/2@small' %}
        {% include '@bolt-components-headline/headline.twig' with {
          text: 'Explore the Pega CRM Suite',
          size: 'xxlarge'
        } only %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'Move past traditional CRM systems to a true journey-enabled, customer engagement suite. Learn how Pega is helping enterprises revolutionize their customer engagement with end-to-end automation and real-time AI on the only unified CRM platform.',
          size: 'medium'
        } only %}
      {% endcell %}

      {% set icon_1 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'app-development',
        } only %}
      {% endset %}

      {% set icon_2 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'sales-automation',
        } only %}
      {% endset %}

      {% set icon_3 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'customer-service',
        } only %}
      {% endset %}

      {% set shape_1 %}
        {% include '@bolt-elements-shape/shape.twig' with {
          content: icon_1,
          size: 'large',
          attributes: {
            class: 't-bolt-teal'
          }
        } only %}
      {% endset %}

      {% set shape_2 %}
        {% include '@bolt-elements-shape/shape.twig' with {
          content: icon_2,
          size: 'large',
          attributes: {
            class: 't-bolt-teal'
          }
        } only %}
      {% endset %}

      {% set shape_3 %}
        {% include '@bolt-elements-shape/shape.twig' with {
          content: icon_3,
          size: 'large',
          attributes: {
            class: 't-bolt-teal'
          }
        } only %}
      {% endset %}

      {% cell 'u-bolt-width-1/1 u-bolt-width-1/2@small' %}
        {% set flag_item_1 %}
          {% set headline %}
            {% include '@bolt-components-headline/headline.twig' with {
              text: 'Download the data Sheet',
              size: 'small',
              url: 'https://www.google.com',
              icon: 'chevron-right'
            } only %}
          {% endset %}
          {# flag is an object, it’s a legacy thing we didn’t deprecate yet #}
          {% include '@bolt/flag.twig' with {
            valign: 'middle',
            url: '#!',
            figure: {
              content: shape_1
            },
            content: headline,
          } only %}
        {% endset %}
        {% set flag_item_2 %}
          {% set headline %}
            {% include '@bolt-components-headline/headline.twig' with {
              text: 'Download the Overview document',
              size: 'small',
              url: 'https://www.google.com',
              icon: 'chevron-right'
            } only %}
          {% endset %}
          {# flag is an object, it’s a legacy thing we didn’t deprecate yet #}
          {% include '@bolt/flag.twig' with {
            valign: 'middle',
            url: '#!',
            figure: {
              content: shape_2
            },
            content: headline,
          } only %}
        {% endset %}
        {% set flag_item_3 %}
          {% set headline %}
            {% include '@bolt-components-headline/headline.twig' with {
              text: 'View Pricing for Pega Marketing',
              size: 'small',
              url: 'https://www.google.com',
              icon: 'chevron-right'
            } only %}
          {% endset %}
          {# flag is an object, it’s a legacy thing we didn’t deprecate yet #}
          {% include '@bolt/flag.twig' with {
            valign: 'middle',
            url: '#!',
            figure: {
              content: shape_3
            },
            content: headline
          } only %}
        {% endset %}

        {% include '@bolt-components-headline/headline.twig' with {
          text: 'Get to know Pega Marketing',
          size: 'xlarge',
          tag: 'h2'
        } only %}

        {% include '@bolt-components-list/list.twig' with {
          display: 'block',
          separator: 'solid',
          spacing: 'small',
          items: [
            flag_item_1,
            flag_item_2,
            flag_item_3,
          ]
        } only %}
      {% endcell %}

    {% endgrid %}


  {% endblock %}
{% endembed %}





