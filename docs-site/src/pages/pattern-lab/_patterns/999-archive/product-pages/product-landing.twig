{% extends '@pl/_default-page-template.twig' %}

{% block main_content %}
  {% set image %}
    {% include '@bolt-elements-image/image.twig' with {
      background: true,
      attributes: {
        src: '/images/content/backgrounds/background-short-1.jpg',
        alt: 'Background banner of conference keynote',
        loading: 'lazy'
      },
    } only %}
  {% endset %}
  {% embed '@pl/_band--feature.twig' with {
    teaserPosition: 'left',
    teaserWidth: '2/3',
    size: 'large',
    full: true,
    theme: 'dark',
    background: {
      opacity: 'medium',
      fill: 'gradient',
      focal_point: {
        vertical: 'center',
        horizontal: 'right'
      },
      items: [
        image
      ]
    },
    primaryTeaser: {
      headlines: [
        {
          type: 'headline',
          text: 'Products',
          size: 'xsmall',
          tag: 'span',
          url: 'https://google.com',
          icon: {
            name: 'arrow-left',
            position: 'before'
          }
        },
        {
          type: 'headline',
          text: 'CRM Applications for Real-Time Engagement',
          size: 'xxxlarge',
          tag: 'h1'
        },
        {
          type: 'subheadline',
          text: 'Pega’s AI powered CRM Suite is transforming the way enterprises drive greater engagement across the entire customer journey.',
          size: 'xlarge',
          tag: 'p'
        }
      ],
      buttons: [
        {
          text: 'Call to Action',
          hierarchy: 'primary',
          url: '#!'
        }
      ]
    }
  } only %}{% endembed %}



{% embed '@bolt-components-band/band.twig' with {
  size: 'small',
  theme: 'dark',
  full_bleed: true
} only %}
  {% block band_content %}
    {% set chevron_right_icon %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'chevron-right',
      } only %}
    {% endset %}
    {% set flag_item_1 %}
      {% set icon_1 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'app-development',
        } only %}
      {% endset %}
      {% set shape_1 %}
        {% include '@bolt-elements-shape/shape.twig' with {
          content: icon_1,
          size: 'large',
          attributes: {
            class: 't-bolt-teal'
          }
        } only %}
      {% endset %}

      {% set flag_headline %}
        {% set text_link %}
          {% include '@bolt-elements-text-link/text-link.twig' with {
            content: 'Marketing',
            reversed_underline: true,
            icon_after: chevron_right_icon,
            attributes: {
              href: 'https://google.com',
              target: '_blank',
              rel: 'noopener'
            }
          } only %}
        {% endset %}
        {% include '@bolt-components-headline/headline.twig' with {
          text: text_link,
          tag: 'h3',
        } only %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'Engage customers with real-time 1:1 marketing on any channel.',
        } only %}
      {% endset %}
      {% set layout_items %}
        {% include '@bolt-layouts-layout/layout-item.twig' with {
          content: shape_1
        } only %}
        {% include '@bolt-layouts-layout/layout-item.twig' with {
          content: flag_headline
        } only %}
      {% endset %}

      {% include '@bolt-layouts-layout/layout.twig' with {
        content: layout_items,
        template: [
          'flag',
        ],
        valign_items: 'center',
        attributes: {
          style: '--l-bolt-layout-flag-media-width: auto;'
        }
      } only %}
    {% endset %}

    {% set flag_item_2 %}
      {% set icon_2 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'sales-automation',
        } only %}
      {% endset %}
      {% set shape_2 %}
        {% include '@bolt-elements-shape/shape.twig' with {
          content: icon_2,
          size: 'large',
          attributes: {
            class: 't-bolt-teal'
          }
        } only %}
      {% endset %}

      {% set flag_headline %}
        {% set text_link %}
          {% include '@bolt-elements-text-link/text-link.twig' with {
            content: 'Sales Automation',
            reversed_underline: true,
            icon_after: chevron_right_icon,
            attributes: {
              href: 'https://google.com',
              target: '_blank',
              rel: 'noopener'
            }
          } only %}
        {% endset %}
        {% include '@bolt-components-headline/headline.twig' with {
          text: text_link,
          tag: 'h3'
        } only %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'Intelligently guide sales professionals and automate the sales process.',
        } only %}
      {% endset %}
      {% set layout_items %}
        {% include '@bolt-layouts-layout/layout-item.twig' with {
          content: shape_2
        } only %}
        {% include '@bolt-layouts-layout/layout-item.twig' with {
          content: flag_headline
        } only %}
      {% endset %}

      {% include '@bolt-layouts-layout/layout.twig' with {
        content: layout_items,
        template: [
          'flag',
        ],
        valign_items: 'center',
        attributes: {
          style: '--l-bolt-layout-flag-media-width: auto;'
        }
      } only %}
    {% endset %}
    {% set flag_item_3 %}
      {% set icon_3 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'customer-service',
        } only %}
      {% endset %}
      {% set shape_3 %}
        {% include '@bolt-elements-shape/shape.twig' with {
          content: icon_3,
          size: 'large',
          attributes: {
            class: 't-bolt-teal'
          }
        } only %}
      {% endset %}

      {% set flag_headline %}
        {% set text_link %}
          {% include '@bolt-elements-text-link/text-link.twig' with {
            content: 'Customer Service',
            reversed_underline: true,
            icon_after: chevron_right_icon,
            attributes: {
              href: 'https://google.com',
              target: '_blank',
              rel: 'noopener'
            }
          } only %}
        {% endset %}
        {% include '@bolt-components-headline/headline.twig' with {
          text: text_link,
          tag: 'h3'
        } only %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'Serve, satisfy and engage every customer with digital customer service.',
        } only %}
      {% endset %}
      {% set layout_items %}
        {% include '@bolt-layouts-layout/layout-item.twig' with {
          content: shape_3
        } only %}
        {% include '@bolt-layouts-layout/layout-item.twig' with {
          content: flag_headline
        } only %}
      {% endset %}

      {% include '@bolt-layouts-layout/layout.twig' with {
        content: layout_items,
        template: [
          'flag',
        ],
        valign_items: 'center',
        attributes: {
          style: '--l-bolt-layout-flag-media-width: auto;'
        }
      } only %}
    {% endset %}

    {% set section_headline %}
      {% include '@bolt-components-headline/headline.twig' with {
        text: 'Explore the Pega CRM Suite',
        size: 'xxlarge'
      } only %}
      {% include '@bolt-components-headline/text.twig' with {
        text: 'Move past traditional CRM systems to a true journey-enabled, customer engagement suite. Learn how Pega is helping enterprises revolutionize their customer engagement with end-to-end automation and real-time AI on the only unified CRM platform.',
        size: 'medium'
      } only %}
    {% endset %}

    {% set flag_list %}
      {% include '@bolt-components-list/list.twig' with {
        display: 'block',
        separator: 'solid',
        spacing: 'small',
        items: [
          flag_item_1,
          flag_item_2,
          flag_item_3,
        ]
      } only %}
    {% endset %}

    {% set layout_items %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: section_headline
      } only %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: flag_list
      } only %}
    {% endset %}

    {% include '@bolt-layouts-layout/layout.twig' with {
      content: layout_items,
      template: [
        'halves@from-medium',
      ],
    } only %}

  {% endblock %}
{% endembed %}





