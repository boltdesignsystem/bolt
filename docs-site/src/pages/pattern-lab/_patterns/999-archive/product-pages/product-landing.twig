{% extends '@pl/_default-page-template.twig' %}

{% set text_set %}
  {% include '@bolt-components-headline/headline.twig' with {
    text: 'Products',
    tag: 'span',
    url: '#!',
    size: 'small',
    icon: {
      name: 'arrow-left',
      position: 'before'
    }
  } only %}
  {% include '@bolt-components-headline/headline.twig' with {
    text: 'Dynamically recommend next-best-actions for your customers.',
    tag: 'h1',
    size: 'xxxlarge',
  } only %}
  {% include '@bolt-components-headline/text.twig' with {
    text: 'Pega’s AI powered CRM Suite is transforming the way enterprises drive greater engagement across the entire customer journey.',
    size: 'xxlarge',
  } only %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Call to action',
    attributes: {
      type: 'button'
    }
  } only %}
{% endset %}

{% block main_content %}
  {% embed '@pl/_band--feature.twig' with {
    teaserPosition: 'left',
    teaserWidth: '2/3',
    size: 'large',
    full: true,
    theme: 'dark',
    background: {
      opacity: 'medium',
      fill: 'gradient',
      focal_point: {
        vertical: 'center',
        horizontal: 'right'
      },
      content_items: [{
        src: '/images/content/backgrounds/background-short-1.jpg',
        alt: 'Background banner of conference keynote',
        lazyload: true
      }]
    },
    primaryTeaser: text_set,
  } only %}{% endembed %}



{% embed '@bolt-components-band/band.twig' with {
  size: 'small',
  theme: 'dark',
  full_bleed: true
} only %}
  {% block band_content %}

    {% grid 'o-bolt-grid--flex o-bolt-grid--large o-bolt-grid--middle o-bolt-grid--matrix' %}

      {% cell 'o-u-bolt-width-1/1 u-bolt-width-1/2@small' %}
        {% include '@bolt-components-headline/headline.twig' with {
          text: 'Explore the Pega CRM Suite',
          size: 'xxlarge'
        } only %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'Move past traditional CRM systems to a true journey-enabled, customer engagement suite. Learn how Pega is helping enterprises revolutionize their customer engagement with end-to-end automation and real-time AI on the only unified CRM platform.',
          size: 'medium'
        } only %}
      {% endcell %}

      {% set icon_1 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'app-development',
        } only %}
      {% endset %}

      {% set icon_2 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'sales-automation',
        } only %}
      {% endset %}

      {% set icon_3 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'customer-service',
        } only %}
      {% endset %}

      {% set shape_1 %}
        {% include '@bolt-elements-shape/shape.twig' with {
          content: icon_1,
          size: 'large',
          attributes: {
            class: 't-bolt-teal'
          }
        } only %}
      {% endset %}

      {% set shape_2 %}
        {% include '@bolt-elements-shape/shape.twig' with {
          content: icon_2,
          size: 'large',
          attributes: {
            class: 't-bolt-teal'
          }
        } only %}
      {% endset %}

      {% set shape_3 %}
        {% include '@bolt-elements-shape/shape.twig' with {
          content: icon_3,
          size: 'large',
          attributes: {
            class: 't-bolt-teal'
          }
        } only %}
      {% endset %}

      {% cell 'u-bolt-width-1/1 u-bolt-width-1/2@small' %}
        {% set flag_item_1 %}
          {% set info %}
            {% include '@bolt-components-headline/headline.twig' with {
              text: 'Marketing',
              size: 'large',
              url: 'https://www.google.com',
              icon: 'chevron-right'
            } only %}
            {% include '@bolt-components-headline/text.twig' with {
              text: 'Engage customers with real-time 1:1 marketing on any channel.',
              size: 'medium',
            } only %}
          {% endset %}
          {# flag is an object, it’s a legacy thing we didn’t deprecate yet #}
          {% include "@bolt/flag.twig" with {
            valign: "middle",
            url: "#!",
            figure: {
              content: shape_1
            },
            content: info,
          } only %}
        {% endset %}
        {% set flag_item_2 %}
          {% set info %}
            {% include '@bolt-components-headline/headline.twig' with {
              text: 'Sales Automation',
              size: 'large',
              url: 'https://www.google.com',
              icon: 'chevron-right'
            } only %}
            {% include '@bolt-components-headline/text.twig' with {
              text: 'Intelligently guide sales professionals and automate the sales process.',
              size: 'medium',
            } only %}
          {% endset %}
          {# flag is an object, it’s a legacy thing we didn’t deprecate yet #}
          {% include "@bolt/flag.twig" with {
            valign: "middle",
            url: "#!",
            figure: {
              content: shape_2
            },
            content: info,
          } only %}
        {% endset %}
        {% set flag_item_3 %}
        {% set info %}
          {% include '@bolt-components-headline/headline.twig' with {
              text: 'Customer Service',
              size: 'large',
              url: 'https://www.google.com',
              icon: 'chevron-right'
            } only %}
            {% include '@bolt-components-headline/text.twig' with {
              text: 'Serve, satisfy and engage every customer with digital customer service.',
              size: 'medium',
            } only %}
          {% endset %}
          {# flag is an object, it’s a legacy thing we didn’t deprecate yet #}
          {% include "@bolt/flag.twig" with {
            valign: "middle",
            url: "#!",
            figure: {
              content: shape_3
            },
            content: info,
          } only %}
        {% endset %}

        {% include '@bolt-components-list/list.twig' with {
          display: 'block',
          separator: 'solid',
          spacing: 'small',
          items: [
            flag_item_1,
            flag_item_2,
            flag_item_3,
          ]
        } only %}
      {% endcell %}

    {% endgrid %}


  {% endblock %}
{% endembed %}





{% embed '@bolt-components-band/band.twig' with {
  size: 'medium',
  theme: 'xlight',
  full_bleed: true
} only %}
  {% block band_content %}

    {% grid 'o-bolt-grid--flex o-bolt-grid--large o-bolt-grid--middle o-bolt-grid--matrix' %}

      {% cell 'u-bolt-width-1/1 u-bolt-width-7/12@small' %}
        {% include '@bolt-elements-image/image.twig' with {
          attributes: {
            src: '/images/content/charts/decision-hub-chart.png',
            loading: 'lazy',
          }
        } only %}
      {% endcell %}


      {% cell 'u-bolt-width-1/1 u-bolt-width-5/12@small' %}
        {% include '@bolt-components-headline/headline.twig' with {
          text: 'Customer Decision Hub',
          size: 'xxxlarge',
          tag: 'h2'
        } only %}
        {% include '@bolt-components-headline/subheadline.twig' with {
          text: 'Infuse real-time AI into every customer engagement',
          size: 'xlarge',
          tag: 'p'
        } only %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'There’s nothing artificial about Pega’s proven AI. This always-on brain gets results. Using pragmatic artificial intelligence and decision management, you can improve response rates by up to 6X, NPS by 30 points, and get ROI as high as 500%.',
          size: 'medium'
        } only %}
        {% include '@bolt-components-button/button.twig' with {
          text: 'Call to Action',
          url: 'https://www.google.com'
        } only %}
      {% endcell %}

    {% endgrid %}


  {% endblock %}
{% endembed %}

{% set card %}
  {% include '@bolt-components-card-replacement/card-replacement.twig' with {
    media: {
        image: {
          src: '/images/content/promos/promo-16x9-anthem.jpg'
        },
      },
      body: {
        eyebrow: 'Article',
        headline: 'Gartner Magic Quadrant for the CRM Customer Engagement Center',
        paragraph: 'Simplify and automate to reduce costs and improve agility.',
      },
      actions: [
        {
          text: 'Learn More',
          hierarchy: 'secondary',
          url: 'https://www.google.com/pega7',
        }
      ]
  } only %}
{% endset %}

{% embed '@pl/_band--collection.twig' with {
  theme: 'light',
  size: 'medium',
  contentItems: [
    card,
    card,
    card,
  ]
} %}
  {% block band_content %}



   {% grid 'o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--matrix u-bolt-margin-bottom' %}

      {% cell 'u-bolt-flex-grow' %}

        {% grid %}
          {% cell 'u-bolt-width-1/1 u-bolt-width-3/4@small' %}
            {% include '@bolt-components-headline/headline.twig' with {
              text: 'Analyst Reports',
              size: 'xlarge',
              tag: 'h3'
            } only %}
          {% endcell %}
        {% endgrid %}
      {% endcell %}


      {% cell %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'See all analyst reports',
          size: 'small',
          weight: 'bold',
          tag: 'p',
          url: 'https://google.com',
          icon: {
            name: 'chevron-right',
            position: 'after'
          }
        } only %}
      {% endcell %}

    {% endgrid %}


    {{ parent() }}
  {% endblock band_content %}
{% endembed %}



