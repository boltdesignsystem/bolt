        {% include '@bolt-components-headline/text.twig' with {
          text: 'Watch Birgit König, Ph.D., CEO, Allianz Health Germany, share how the Pega platform meets rapidly changing customer expectations.'
        } only %}

        {% include '@bolt-components-button/button.twig' with {
          text: 'Call to Action',
          url: 'https://www.google.com',
          hierarchy: 'secondary'
        } only %}


      {% endcell %}
    {% endgrid %}
  {% endblock %}
{% endembed %}






