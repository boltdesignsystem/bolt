{% extends '@pl/_default-page-template.twig' %}

{% block main_content %}

  {% set feature_band_content %}
    {% set list_item_1 %}
      {% include '@bolt-components-headline/eyebrow.twig' with {
        text: 'Customer Retention',
      } only %}

      {% include '@bolt-components-headline/headline.twig' with {
        text: 'Personalized. Not Creepy.',
        url: 'https://www.google.com',
        icon: 'chevron-right',
        size: 'large'
      } only %}
    {% endset %}

    {% set list_item_2 %}
      {% include '@bolt-components-headline/eyebrow.twig' with {
        text: 'Sales Effectiveness',
      } only %}

      {% include '@bolt-components-headline/headline.twig' with {
        text: 'Create Sales Superstars',
        url: 'https://www.google.com',
        icon: 'chevron-right',
        size: 'large'
      } only %}
    {% endset %}

    {% set list_item_3 %}
      {% include '@bolt-components-headline/eyebrow.twig' with {
        text: 'Operations &amp; IT',
      } only %}

      {% include '@bolt-components-headline/headline.twig' with {
        text: 'Stop Coding. Start Designing.',
        url: 'https://www.google.com',
        icon: 'chevron-right',
        size: 'large'
      } only %}
    {% endset %}

    {% include "@bolt-components-list/list.twig" with {
      items: [
        list_item_1,
        list_item_2,
        list_item_3,
      ],
      spacing: 'medium',
      separator: 'solid'
    } %}
  {% endset %}

  {% set feature_band = {} %}
  {% set feature_band = feature_band | merge({
    content: feature_band_content
  }) %}

  {% set image %}
    {% include '@bolt-elements-image/image.twig' with {
      background: true,
      attributes: {
        src: '/images/placeholders/background/background-light.jpg',
        lazyload: false
      },
    } only %}
  {% endset %}

  {% embed '@pl/_band--feature.twig' with {
    size: 'large',
    theme: 'dark',
    teaserPosition: 'left',
    teaserWidth: '2/3',
    primaryTeaser: {
      eyebrow: {
        text: 'Customer Service'
      },
      headlines: [
        {
          type: 'headline',
          text: 'We\'re able to predict that you\'re going to call before you need to actually contact us.',
          size: 'xxxlarge',
          tag: 'h1'
        }
      ],
      logo: {
        src: '/images/content/logos/logo-paypal.svg',
        invert: true,
        lazyload: false
      },
      content: 'Powered by real AI, Pega Customer Service delivers game-changing results for enterprises.',
      buttons: [
        {
          text: 'Get Real',
          hierarchy: 'primary',
          url: '#!',
          icon: {
            name: 'chevron-right'
          }
        }
      ]
    },
    content: feature_band.content | default(content),
    background: {
      opacity: 'heavy',
      fill: 'gradient',
      focal_point: {
        vertical: 'center'
      },
      items: [
        image
      ]
    }
  } only %}{% endembed %}


  {% embed '@bolt-components-band/band.twig' with {
    size: 'small',
    theme: 'xdark',
    full_bleed: true
  } only %}
    {% block band_content %}
      {% set text %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'Pega is #1 in software for customer engagement and operational excellence.',
          size: 'large',
          weight: 'regular'
        } only %}
      {% endset %}

      {% set button %}
        {% include '@bolt-components-button/button.twig' with {
          text: 'Learn More',
          width: 'full',
          size: 'medium'
        } only %}
      {% endset %}

      {% include '@bolt-components-list/list.twig' with {
        display: 'inline',
        spacing: 'medium',
        align: 'justify',
        valign: 'center',
        items: [
          text,
          button
        ]
      } only %}
    {% endblock %}
  {% endembed %}

  {% set image_1 %}
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        src: '/images/placeholders/16x9.jpg',
      },
    } only %}
  {% endset %}
  {% set image_2 %}
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        src: '/images/placeholders/16x9.jpg',
      },
    } only %}
  {% endset %}
  {% set image_3 %}
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        src: '/images/placeholders/16x9.jpg',
      },
    } only %}
  {% endset %}
  {% embed '@pl/_band--collection.twig' with {
    theme: 'light',
    size: 'medium',
    content: [
      {
        pattern: 'card',
        media: {
          image: image_1,
        },
        body: {
          eyebrow:  'Article',
          headline: 'Headline #1',
          paragraph: 'Pega cited as a Leader in The Forrester Wave™: Digital Process Automation Software, Q3 2017.',
        },
        actions: [
          {
            text: 'Learn More',
            hierarchy: 'secondary',
            url: '#!',
          },
        ]
      },
      {
        pattern: 'card',
        media: {
          image: image_2,
        },
        body: {
          eyebrow: 'Article',
          headline: 'Headline #2',
          paragraph: 'Simplify and automate to reduce costs and improve agility.',
        },
        actions: [
          {
            text: 'Learn More',
            url: '#!',
            width: 'full'
          },
          {
            text: 'About Pega',
            url: '#!',
            width: 'full'
          }
        ]
      },
      {
        pattern: 'card',
        media: {
          image: image_3,
        },
        body: {
          eyebrow: 'Article',
          headline: 'Headline #3',
          paragraph: 'Sed auctor neque eu tellus rhoncus ut eleifend nibh porttitor. Ut in nulla enim.',
        },
        actions: [
          {
            text: "Learn More About Pega 7",
            url: "#!",
          },
        ]
      }
    ]
  } %}
    {% block band_content %}
      {% include '@bolt-components-headline/headline.twig' with {
        text: 'What\'s Trending',
        size: 'xlarge',
        tag: 'h3'
      } only %}
      {{ parent() }}
    {% endblock band_content %}
  {% endembed %}





  {% embed '@bolt-components-band/band.twig' with {
    size: 'medium',
    theme: 'xdark',
    full_bleed: true
  } only %}
    {% block band_content %}
      {% set image %}
        {% include '@bolt-elements-image/image.twig' with {
          attributes: {
            src: '/images/placeholders/16x9.jpg',
            loading: 'lazy'
          }
        } only %}
      {% endset %}
      {% set desc %}
        {% include '@bolt-components-headline/headline.twig' with {
          text: 'There’s a real alternative to the Salesforce.com hype: Pega CRM.',
          size: 'xlarge',
          tag: 'h3'
        } only %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'Considering Salesforce.com? Don’t fall for the hype. See why today’s leading enterprises choose Pega CRM.'
        } only %}
        {% include '@bolt-components-button/button.twig' with {
          text: 'Get Real',
          hierarchy: 'primary',
          size: 'small'
        } only %}
      {% endset %}
      {% include '@bolt-components-grid/grid.twig' with {
        gutter: 'large',
        items: [
          {
            column_start: '1 2@small',
            column_span: '12 4@small',
            content: image,
            valign: 'center'
          },
          {
            column_start: '1 6@small',
            column_span: '12 6@small',
            content: desc,
            valign: 'center'
          },
        ]
      } only %}
    {% endblock %}
  {% endembed %}



  {% embed '@bolt-components-band/band.twig' with {
    size: 'medium',
    theme: 'dark',
    full_bleed: true
  } only %}
    {% block band_content %}
      {% set icon_1 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'info-circle',
          size: 'xlarge'
        } %}
      {% endset %}

      {% set icon_2 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'industries',
          size: 'xlarge'
        } %}
      {% endset %}

      {% set icon_3 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'ribbon',
          size: 'xlarge'
        }%}
      {% endset %}

      {% set icon_4 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'eye',
          size: 'xlarge'
        } %}
      {% endset %}

      {% set icon_5 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'partners',
          size: 'xlarge'
        } %}
      {% endset %}

      {% set icon_6 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'briefcase',
          size: 'xlarge'
        }%}
      {% endset %}

      {% include '@bolt-components-action-blocks/action-blocks.twig' with {
        max_items_per_row: 8,
        items: [
          {
            text: 'Product Information',
            url: '#!',
            media: icon_1,
          },
          {
            text: 'Industry Solutions',
            url: '#!',
            media: icon_2,
          },
          {
            text: 'Training and Certification',
            url: '#!',
            media: icon_3,
          },
          {
            text: 'Vision and Technology',
            url: '#!',
            media: icon_4,
          },
          {
            text: 'Services and Partners',
            url: '#!',
            media: icon_5,
          },
          {
            text: 'Career Opportunities',
            url: '#!',
            media: icon_6,
          }
        ]
      } only %}
    {% endblock %}
  {% endembed %}

{% endblock %}
