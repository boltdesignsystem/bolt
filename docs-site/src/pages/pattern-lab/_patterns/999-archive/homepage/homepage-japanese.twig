{% set japanese = true %}

{% extends '@pl/_default-page-template.twig' %}

{% block main_content %}
  {% set feature_band_content %}
    {% set list_item_1 %}
      {% include '@bolt-components-headline/eyebrow.twig' with {
        text: 'オペレーショナルエクセレンス',
      } only %}

      {% include '@bolt-components-headline/headline.twig' with {
        text: 'コーディングをやめます。設計を始めます。',
        url: 'https://www.google.com',
        icon: 'chevron-right',
        size: 'large'
      } only %}
    {% endset %}

    {% set list_item_2 %}
      {% include '@bolt-components-headline/eyebrow.twig' with {
        text: '顧客維持',
      } only %}

      {% include '@bolt-components-headline/headline.twig' with {
        text: '個別の対応を、違和感なく。',
        url: 'https://www.google.com',
        icon: 'chevron-right',
        size: 'large'
      } only %}
    {% endset %}

    {% set list_item_3 %}
      {% include '@bolt-components-headline/eyebrow.twig' with {
        text: '顧客サービス',
      } only %}

      {% include '@bolt-components-headline/headline.twig' with {
        text: 'シームレス性。オムニチャネル。',
        url: 'https://www.google.com',
        icon: 'chevron-right',
        size: 'large'
      } only %}
    {% endset %}

    {% include '@bolt-components-list/list.twig' with {
      items: [
        list_item_1,
        list_item_2,
        list_item_3,
      ],
      spacing: 'medium',
      separator: 'solid'
    } %}
  {% endset %}

  {% set feature_band = {} %}
  {% set feature_band = feature_band | merge({
    content: feature_band_content
  }) %}

  {% set image %}
    {% include '@bolt-elements-image/image.twig' with {
      background: true,
      attributes: {
        src: '/images/placeholders/backgrounds/background-light.jpg',
        lazyload: false
      },
    } only %}
  {% endset %}
  {% embed '@pl/_band--feature.twig' with {
    size: 'large',
    theme: 'dark',
    teaserPosition: 'left',
    teaserWidth: '2/3',
    primaryTeaser: {
      eyebrow: {
        text: '営業効率'
      },
      headlines: [
        {
          type: 'headline',
          text: '「ペガは管理者が、すぐ目の前にあるかもしれないオポチュニティーについて代理店と話せるようにします。」',
          size: 'xxxlarge',
          tag: 'h1'
        }
      ],
      logo: {
        src: '/images/content/logos/logo-paypal.svg',
        invert: true,
        lazyload: false
      },
      content: '最高販売配信責任者Larik Hall',
      buttons: [
        {
          text: '今すぐ営業目標を上げる',
          hierarchy: 'primary',
          url: 'https://www.google.com',
          icon: {
            name: 'chevron-right'
          }
        }
      ]
    },
    content: feature_band.content | default(content),
    background: {
      opacity: 'heavy',
      fill: 'gradient',
      focal_point: {
        vertical: 'center'
      },
      items: [
        image
      ]
    }
  } only %}{% endembed %}


  {% embed '@bolt-components-band/band.twig' with {
    size: 'small',
    theme: 'xdark',
    full_bleed: true
  } only %}
    {% block band_content %}
      {% set text %}
        {% include '@bolt-components-headline/eyebrow.twig' with {
          text: 'ペガジャパン株式会社とは？',
        } only %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'Pega は顧客の仕事とデジタル プロセス オートメーションをつなぐナンバーワン ソフトウェアです。',
          size: 'large',
          weight: 'regular'
        } only %}
      {% endset %}

      {% set button_group %}
        {% set button_cta_primary %}
          {% include '@bolt-elements-button/button.twig' with {
            content: '会社概要',
            hierarchy: 'primary',
            size: 'small',
            attributes: {
              type: 'button'
            }
          } only %}
        {% endset %}

        {% set button_cta_secondary %}
          {% include '@bolt-elements-button/button.twig' with {
            content: 'ビジョンと主要な概念',
            hierarchy: 'secondary',
            size: 'small',
            attributes: {
              type: 'button'
            }
          } only %}
        {% endset %}

        {% include '@bolt-components-list/list.twig' with {
          display: 'inline',
          items: [
            button_cta_primary,
            button_cta_secondary,
          ]
        } only %}
      {% endset %}

      {% include '@bolt-components-list/list.twig' with {
        display: 'inline',
        spacing: 'medium',
        align: 'justify',
        valign: 'center',
        items: [
          text,
          button_group
        ]
      } only %}
    {% endblock %}
  {% endembed %}


  {% embed '@bolt-components-band/band.twig' with {
    size: 'large',
    theme: 'light',
    full_bleed: true
  } only %}
    {% block band_content %}
      {% include '@bolt-components-headline/headline.twig' with {
        text: '今日はどんなお手伝いをしましょうか？',
        size: 'xlarge',
        align: 'center',
        tag: 'h3'
      } only %}

      {% set icon_1 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'info-circle',
          size: 'xlarge'
        } %}
      {% endset %}

      {% set icon_2 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'industries',
          size: 'xlarge'
        } %}
      {% endset %}

      {% set icon_3 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'ribbon',
          size: 'xlarge'
        }%}
      {% endset %}

      {% set icon_4 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'eye',
          size: 'xlarge'
        } %}
      {% endset %}

      {% set icon_5 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'partners',
          size: 'xlarge'
        } %}
      {% endset %}

      {% set icon_6 %}
        {% include '@bolt-elements-icon/icon.twig' with {
          name: 'briefcase',
          size: 'xlarge'
        }%}
      {% endset %}

      {% include '@bolt-components-action-blocks/action-blocks.twig' with {
        max_items_per_row: 8,
        items: [
        {
          text: '製品情報',
          url: 'https://google.com',
          media: icon_1,
        },
        {
          text: '業種ソリューション',
          url: 'https://google.com',
          media: icon_2,
        },
        {
          text: 'トレーニングと証明書',
          url: 'https://google.com',
          media: icon_3,
        },
        {
          text: 'ビジョンとテクノロジー',
          url: 'https://google.com',
          media: icon_4,
        },
        {
          text: 'サービスとパートナー',
          url: 'https://google.com',
          media: icon_5,
        },
        {
          text: '採用情報',
          url: 'https://google.com',
          media: icon_6,
        }]
      } only %}
    {% endblock %}
  {% endembed %}

  {% set image_1 %}
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        src: '/images/placeholders/16x9.jpg',
      },
    } only %}
  {% endset %}
  {% set image_2 %}
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        src: '/images/placeholders/16x9.jpg',
      },
    } only %}
  {% endset %}
  {% set image_3 %}
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        src: '/images/placeholders/16x9.jpg',
      },
    } only %}
  {% endset %}
  {% embed '@pl/_band--collection.twig' with {
    theme: 'xlight',
    size: 'large',
    content: [
      {
        pattern: 'card',
        media: {
          image: image_1,
        },
        body: {
          headline: 'iBPMSでの2017MAGIC QUADRANT',
          paragraph: 'Gartnerは、最新のiBPMSレポートにおいてペガがトップであることを認めています。',
        },
        actions: [
          {
            text: 'レポートを読む',
            hierarchy: 'secondary',
            url: '#!',
          },
        ]
      },
      {
        pattern: 'card',
        media: {
          image: image_2,
        },
        body: {
          headline: 'Robotics and AI Are Changing the World of Work',
          paragraph: 'Marketforce の最近の調査によると、上級管理者の 69% が労働力の一環として知能機械の導入を考えていることがわかりました。',
        },
        actions: [
          {
            text: '発見を探索',
            hierarchy: 'secondary',
            url: '#!',
          },
        ]
      },
      {
        pattern: 'card',
        media: {
          image: image_3,
        },
        body: {
          headline: 'トランサヴィア：エンドツーエンドのカスタマージャーニー',
          paragraph: 'Marketforce の最近の調査によると、上級管理者の 69% が労働力の一環として知能機械の導入を考えていることがわかりました。',
        },
        actions: [
          {
            text: '事例を見る',
            hierarchy: 'secondary',
            url: '#!',
          },
        ]
      },
    ]
  } %}
    {% block band_content %}
      {% include '@bolt-components-headline/headline.twig' with {
        text: 'トレンドとは',
        size: 'xlarge',
        align: 'center',
        tag: 'h3'
      } only %}
      {{ parent() }}
    {% endblock band_content %}
  {% endembed %}


  {% embed '@bolt-components-band/band.twig' with {
    size: 'medium',
    theme: 'dark',
    full_bleed: true
  } only %}
    {% block band_content %}
      {% set image %}
        {% include '@bolt-elements-image/image.twig' with {
          attributes: {
            src: '/images/placeholders/16x9.jpg',
            loading: 'lazy'
          }
        } only %}
      {% endset %}
      {% set desc %}
        {% include '@bolt-components-headline/headline.twig' with {
          text: '誇大広告のSalesforce.comの本当に代わりとなるもの：Pega CRM',
          size: 'xlarge',
          tag: 'h3'
        } only %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'Salesforce.comをご検討中ですか？誇大宣伝を信じてはいけません。現代のトップ企業がぺガを選ぶ理由をご覧ください。'
        } only %}
        {% include '@bolt-components-button/button.twig' with {
          text: '本物を知る',
          hierarchy: 'primary',
          size: 'small'
        } only %}
      {% endset %}
      {% include '@bolt-components-grid/grid.twig' with {
        gutter: 'large',
        items: [
          {
            column_start: '1 2@small',
            column_span: '12 4@small',
            content: image,
            valign: 'center'
          },
          {
            column_start: '1 6@small',
            column_span: '12 6@small',
            content: desc,
            valign: 'center'
          },
        ]
      } only %}
    {% endblock %}
  {% endembed %}
{% endblock %}
