{% set hideGlobalSearch = true %}

{% import "@bolt-academy/_macros.twig" as macros %}

{% extends "@bolt-academy/_academy-default-page-template.twig" %}

{% block page_content %}
  {% include "@bolt-academy/_search-bar.twig" %}
  {% include "@bolt-academy/_search-results-hero.twig" %}
  {% include "@bolt-academy/_nav--search.twig" %}

  {% set content %}
    {% set search_filter %}
      {% include "@bolt-academy/_form--search-filter.twig" %}
    {% endset %}
    {% set search_results %}
      {% include "@bolt-academy/_search-results--results-list.twig" %}
      {% include "@bolt-academy/_pagination.twig" %}
    {% endset %}
    {% include '@bolt-components-grid/grid.twig' with {
      items: [
        {
          column_start: '1',
          column_span: '12 3@small',
          content: search_filter,
        },
        {
          column_start: '1 4@small',
          column_span: '12 9@small',
          content: search_results,
        },
      ]
    } only %}
  {% endset %}

  {% include "@bolt-components-band/band.twig" with {
    theme: "light",
    size: "small",
    content: content,
  } only %}
{% endblock %}

{% block global_footer %}
  <div class="e-bolt-wrapper u-bolt-flex-grow-none u-bolt-margin-top-auto">
    {% include "@bolt-academy/_band--instructor-led-training.twig" %}
  </div>
  {{ parent() }}
{% endblock %}
