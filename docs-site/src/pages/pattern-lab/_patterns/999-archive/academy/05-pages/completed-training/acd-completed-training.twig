{% extends "@bolt-academy/_academy-default-page-template.twig" %}

{% import "@bolt-academy/_macros.twig" as macros %}

{% block page_content %}
  {% embed "@bolt-components-band/band.twig" with {
    theme: "light",
    size: "small",
  } only %}
    {% block band_content %}
      {% include "@bolt-components-headline/headline.twig" with {
        url: "#",
        text: "Dashboard",
        size: "small",
        weight: "regular",
        transform: "uppercase",
        icon: {
          name: "arrow-left",
          position: "before",
        }
      } only %}
    {% endblock %}
  {% endembed %}

  {% include "@bolt-components-headline/headline.twig" with {
    text: "Completed Training",
    size: "xxlarge",
    align: "center",
    weight: "semibold",
    attributes: {
      class: [
        "u-bolt-padding-top-large"
      ]
    }
  } only %}

  {% grid "o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--small o-bolt-grid--bottom u-bolt-padding-bottom-medium" %}
    {% cell "u-bolt-width-1/1" %}
      {% set _icon_upload %}
        {% include "@bolt-elements-icon/icon.twig" with {
          name: "upload",
          size: "medium",
        } only %}
      {% endset %}
      {% set _icon_print %}
        {% include "@bolt-elements-icon/icon.twig" with {
          name: "print",
          size: "medium",
        } only %}
      {% endset %}
      {% set button_upload %}
        {% include "@bolt-elements-button/button.twig" with {
            content: "Upload",
            hierarchy: "tertiary",
            icon_only: _icon_upload,
            attributes: {
              type: 'button'
            }
          } only %}
        {% endset %}
      {% set button_print %}
        {% include "@bolt-elements-button/button.twig" with {
          content: "Print",
          hierarchy: "tertiary",
          icon_only: _icon_print,
          attributes: {
            type: 'button'
          }
        } only %}
      {% endset %}
      {% include "@bolt-components-list/list.twig" with {
        spacing: "none",
        display: "inline",
        align: "end",
        items: [
          button_upload,
          button_print,
        ]
      } only %}
    {% endcell %}

    {% cell "u-bolt-flex-grow" %}
      {% set select %}
        {% include "@bolt-academy/_select.twig" with {
          title: "Sort",
          options: [
            {
              type: "option",
              value: "option-a",
              label: "Latest Activity",
              selected: true
            },
            {
              type: "option",
              value: "option-b",
              label: "Oldest to Newest"
            },
            {
              type: "option",
              value: "option-c",
              label: "Newest to Oldest"
            }
          ]
        } only %}
      {% endset %}
      {% include "@bolt-components-form/form.twig" with {
        children: select,
        attributes: {
          class: ["u-bolt-inline-block"],
          style: "min-width: 10rem;"
        }
      } only  %}
    {% endcell %}
    {% cell %}
      {% set label_1 %}
        {% include "@bolt-components-headline/text.twig" with {
          text: "Sort by: <strong>Latest Activity</strong>",
          size: "small",
          tag: "span",
          attributes: {
            class: [
              "u-bolt-inline-block",
            ]
          }
        } only %}
      {% endset %}
      {% set label_2 %}
        {% include "@bolt-components-headline/text.twig" with {
          text: "Created on: Oldest to Newest",
          size: "small",
          tag: "span",
          attributes: {
            class: [
              "u-bolt-inline-block",
            ]
          }
        } only %}
      {% endset %}
      {% set label_3 %}
        {% include "@bolt-components-headline/text.twig" with {
          text: "Created on: Newest to Oldest",
          size: "small",
          tag: "span",
          attributes: {
            class: [
              "u-bolt-inline-block",
            ]
          }
        } only %}
      {% endset %}
      {% include "@bolt-components-list/list.twig" with {
        spacing: "small",
        display: "inline",
        separator: "solid",
        items: [
          label_1,
          label_2,
          label_3,
        ],
        attributes: {
          class: ["u-bolt-padding-top-small"]
        }
      } only %}
    {% endcell %}
  {% endgrid %}
  {% set completed_training_item_1 %}
    {% include "@bolt-academy/_completed-training-item.twig" with {
      icon: {
        name: "orbit",
        color: "teal",
        attributes: {
          style: "font-size: 3rem; width: 3rem; height: 3rem;"
        }
      },
      title: "Business Process Modeling",
      url: "#!",
      type: "Module",
      status: "Completed: August 1, 2019",
      lastUpdated: "Last Updated: July 12, 2019"
    } only %}
  {% endset %}
  {% set completed_training_item_2 %}
    {% include "@bolt-academy/_completed-training-item.twig" with {
      icon: {
        name: "meteor",
        color: "orange",
        attributes: {
          style: "font-size: 3rem; width: 3rem; height: 3rem;"
        }
      },
      title: "Configuring a Case Type",
      url: "#!",
      type: "Challenge",
      status: "Passed: Score 85%: July 31, 2019",
      lastUpdated: "Last Updated: July 12, 2019",
      archived: true
    } only %}
  {% endset %}
  {% set completed_training_item_3 %}
    {% set addInfo %}
      {% include "@bolt-components-headline/text.twig" with {
        text: "This mission has been updated. Please recomplete to earn the mission badge again.",
        size: "xsmall",
        icon: {
          name: "warning",
          color: "yellow",
          position: "before"
        },
        attributes: {
          class: ["u-bolt-margin-top-xxsmall"]
        }
      } only %}
    {% endset %}
    {% include "@bolt-academy/_completed-training-item.twig" with {
      icon: {
        name: "rocket",
        attributes: {
          style: "font-size: 3rem; width: 3rem; height: 3rem; color: var(--bolt-color-navy-light);"
        }
      },
      title: "System Architect Essentials",
      url: "#!",
      type: "Mission",
      status: "Completed: August 1, 2019",
      lastUpdated: "Last Updated: August 11, 2019",
      additionalInfo: addInfo,
      badge: true,
    } only %}
  {% endset %}
  {% set completed_training_item_4 %}
    {% include "@bolt-academy/_completed-training-item.twig" with {
      icon: {
        name: "orbit",
        color: "teal",
        attributes: {
          style: "font-size: 3rem; width: 3rem; height: 3rem;"
        }
      },
      title: "Introduction to Business Architecture",
      url: "#!",
      type: "Module",
      status: "Completed: July 1, 2019",
      lastUpdated: "Last Updated: July 12, 2019"
    } only %}
  {% endset %}
  {% set completed_training_item_5 %}
    {% include "@bolt-academy/_completed-training-item.twig" with {
      icon: {
        name: "meteor",
        color: "orange",
        attributes: {
          style: "font-size: 3rem; width: 3rem; height: 3rem;"
        }
      },
      title: "Configuring a Case Type",
      url: "#!",
      type: "Challenge",
      status: "Passed: Score 85%: July 31, 2019",
      lastUpdated: "Last Updated: July 12, 2019",
      archived: true,
      badge: true
    } only %}
  {% endset %}
  {% set completed_training_item_6 %}
    {% include "@bolt-academy/_completed-training-item.twig" with {
      icon: {
        name: "orbit",
        color: "teal",
        attributes: {
          style: "font-size: 3rem; width: 3rem; height: 3rem;"
        }
      },
      title: "Business Process Modeling",
      url: "#!",
      type: "Module",
      status: "Completed: August 1, 2019",
      lastUpdated: "Last Updated: July 12, 2019"
    } only %}
  {% endset %}
  {% include "@bolt-components-list/list.twig" with {
    spacing: "none",
    separator: "solid",
    items: [
      completed_training_item_1,
      completed_training_item_2,
      completed_training_item_3,
      completed_training_item_4,
      completed_training_item_5,
      completed_training_item_6,
    ],
    attributes: {
      style: "border-top: 1px solid var(--m-bolt-border); border-bottom: 1px solid var(--m-bolt-border);"
    }
  } only %}

  {% include "@bolt-academy/_pagination.twig" %}

{% endblock %}
