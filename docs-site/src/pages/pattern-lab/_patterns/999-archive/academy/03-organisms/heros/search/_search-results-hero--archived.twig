{% extends "@bolt-academy/_search-results-hero.twig" %}

{% block headline %}
  {% include "@bolt-components-headline/headline.twig" with {
    url: "#",
    text: "Main Search",
    size: "xsmall",
    transform: "uppercase",
    icon: {
      name: "arrow-left",
      position: "before",
    }
  } only %}

  {% include "@bolt-components-headline/headline.twig" with {
    size: "xxlarge",
    text: "Archived Search Results"
  } only %}
{% endblock %}

{% block cta %}
  {% set description %}
    {% include "@bolt-components-headline/text.twig" with {
      size: "large",
      text: "Looking for instructor-led training?",
      attributes: {
        class: "u-bolt-margin-bottom-none",
      }
    } only %}
  {% endset %}
  {% set button %}
    {% include "@bolt-elements-button/button.twig" with {
      content: "View Class Schedule",
      border_radius: "full",
      attributes: {
        type: 'button'
      }
    } only %}
  {% endset %}
  {% include '@bolt-components-list/list.twig' with {
    display: 'inline',
    spacing: 'small',
    align: 'end',
    valign: 'center',
    items: [
      description,
      button,
    ]
  } only %}
{% endblock %}
