{% if block("supplemental_content") %}
  {% set supplementalContentBlock %}
    {{ block("supplemental_content") }}
  {% endset %}
{% endif %}

{% if block("right_column") %}
  {% set rightColumnBlock %}
    {{ block("right_column") }}
  {% endset %}
{% endif %}

{% if trainingMetaItems %}
  {% set train_meta_items %}
    {% include "@bolt-academy/_training-meta-items.twig" with {
      items: trainingMetaItems
    } only %}
  {% endset %}
{% endif %}
{% set col_1 %}
  {% if trainingDescription or trainingTags %}
    {% set desc %}
      {% if trainingDescription %}
        {% include "@bolt-academy/_training-description.twig" with {
          text: trainingDescription
        } only %}
      {% endif %}
      {% if trainingTags %}
        {% include "@bolt-academy/_training-tags.twig" with {
          items: trainingTags
        } only %}
      {% endif %}
    {% endset %}
  {% endif %}
  {% if supplementalContentBlock %}
    {% set content_block %}
      {{ supplementalContentBlock }}
    {% endset %}
  {% endif %}
  {% include '@bolt-components-grid/grid.twig' with {
    items: [
      {
        column_start: '1',
        column_span: '12',
        content: desc,
      },
      {
        column_start: '1',
        column_span: '12',
        content: content_block,
      },
    ]
  } only %}
{% endset %}
{% if rightColumnBlock %}
  {% set col_2 %}
      {{ rightColumnBlock }}
  {% endset %}
{% endif %}

{% include '@bolt-components-grid/grid.twig' with {
  items: [
    {
      column_start: '1',
      column_span: '12',
      content: train_meta_items,
    },
    {
      column_start: '1',
      column_span: '12 6@medium',
      content: col_1,
    },
    {
      column_start: '1 7@medium',
      column_span: '12 6@medium',
      content: col_2,
    }
  ]
} only %}
