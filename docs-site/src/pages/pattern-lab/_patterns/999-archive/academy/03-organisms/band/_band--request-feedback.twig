{% embed "@bolt-components-band/band.twig" with {
  theme: "dark",
  size: "small"
} only %}
  {% block band_content %}
    {% import "@bolt-academy/_macros.twig" as macros %}

    <div class="u-bolt-overflow-hidden">
      {% set title_1 %}
        {% set heading %}
          {% include "@bolt-components-headline/text.twig" with {
            text: "Did you find this content helpful?",
            weight: "semibold",
            size: "medium",
            attributes: {
              class: [
                "u-bolt-inline-block",
                "u-bolt-align-middle",
              ]
            }
          } only %}
        {% endset %}

        {% set icons %}
          {% set _add_icon %}
            {% include '@bolt-elements-icon/icon.twig' with {
              name: 'face-happy',
              size: 'small'
            } only %}
          {% endset %}
          {% set _minus_icon %}
            {% include '@bolt-elements-icon/icon.twig' with {
              name: 'face-sad',
              size: 'small'
            } only %}
          {% endset %}
          {% set button_1 %}
            {% include "@bolt-elements-button/button.twig" with {
              content: "Yes",
              hierarchy: "transparent",
              size: "small",
              icon_before: _add_icon,
              attributes: {
                type: 'button'
              }
            } only %}
          {% endset %}
          {% set button_2 %}
            {% include "@bolt-elements-button/button.twig" with {
              content: "No",
              hierarchy: "transparent",
              size: "xsmall",
              icon_before: _minus_icon,
              attributes: {
                type: 'button'
              }
            } only %}
          {% endset %}
          {% set text %}
            {% include "@bolt-components-headline/text.twig" with {
              text: "<strong>28%</strong> found this useful",
              size: "xsmall"
            } only %}
          {% endset %}
          {% include "@bolt-components-list/list.twig" with {
              display: "inline",
              size: "medium",
              attributes: {
                class: [
                  "u-bolt-inline-block",
                  "u-bolt-align-middle",
                ]
              },
              items: [
                button_1,
                button_2,
                text,
              ]
            } only %}
        {% endset %}
        {% include '@bolt-components-grid/grid.twig' with {
          items: [
            {
              column_start: '1',
              column_span: '12 6@small',
              content: heading,
            },
            {
              column_start: '1 7@small',
              column_span: '12 6@small',
              content: icons,
            },
          ]
        } only %}
      {% endset %}

      {% set title_2 %}
        {% include "@bolt-components-headline/text.twig" with {
          text: "Want to help us improve this content? ",
          weight: "semibold",
          size: "medium",
        } only %}
      {% endset %}

      {% include '@bolt-components-list/list.twig' with {
        display: 'inline',
        spacing: 'xsmall',
        align: 'justify',
        items: [
          title_1,
          title_2,
        ]
      } only %}
    </div>
  {% endblock %}
{% endembed %}
