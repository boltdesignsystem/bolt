{% set content %}
  {% set col_1 %}
    {% block headline %}
      {% include "@bolt-components-headline/headline.twig" with {
        size: "xxxlarge",
        text: "Search Results"
      } only %}
    {% endblock %}
  {% endset %}
  {% set col_2 %}
    {% block cta %}
      {% set description %}
        {% include "@bolt-components-headline/text.twig" with {
          size: "large",
          text: "Looking for instructor-led training?",
          attributes: {
            class: "u-bolt-margin-bottom-none",
          }
        } only %}
      {% endset %}
      {% set button %}
        {% include "@bolt-elements-button/button.twig" with {
          content: "View Class Schedule",
          border_radius: "full",
          attributes: {
            type: 'button'
          }
        } only %}
      {% endset %}
      {% include '@bolt-components-list/list.twig' with {
        display: 'inline',
        spacing: 'small',
        align: 'end',
        valign: 'center',
        items: [
          description,
          button,
        ]
      } only %}
    {% endblock %}
  {% endset %}
  {% include '@bolt-components-grid/grid.twig' with {
    items: [
      {
        column_start: '1',
        column_span: '12 7@medium',
        valign: 'center',
        content: col_1,
      },
      {
        column_start: '1 8@medium',
        column_span: '12 5@medium',
        valign: 'center',
        content: col_2,
      },
    ]
  } only %}
{% endset %}

{# Note: `valign` prop of this band is tied to this particular image, subject to change with the image #}
{% set image %}
  {% include '@bolt-elements-image/image.twig' with {
    background: true,
    attributes: {
      src: "/images/placeholders/backgrounds/background-dark.jpg",
      style: '--e-bolt-image-position: center 42%;',
    },
  } only %}
{% endset %}
{% include "@bolt-components-band/band.twig" with {
  theme: "xdark",
  size: size|default("small"),
  content: content,
  background: background|default({
    opacity: "light",
    fill: "gradient",
    items: [
      image
    ]
  })
} only %}
