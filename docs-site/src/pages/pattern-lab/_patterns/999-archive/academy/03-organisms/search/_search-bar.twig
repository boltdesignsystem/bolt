{% import "@bolt-academy/_macros.twig" as macros %}

{% set content %}
  {% set search %}
    {% include "@bolt-components-typeahead/typeahead.twig" with {
      attributes: {
        class: [
          "js-typeahead-hook--exact-result"
        ]
      },
      max_results: 5,
    } only %}
  {% endset %}
  {% set form %}
    {% include "@bolt-components-form/form.twig" with {
      children: search,
      attributes: {
        action: "https://www.google.com/search",
        target: "_blank",
        rel: 'noopener',
        method: "GET"
      }
    } only %}
  {% endset %}

  {% include '@bolt-components-grid/grid.twig' with {
    items: [
      {
        column_start: '1 2@small',
        column_span: '12 10@small',
        content: form,
      },
    ]
  } only %}
{% endset %}

{% include "@bolt-components-band/band.twig" with {
  theme: "dark",
  size: "xsmall",
  content: content
} only %}
