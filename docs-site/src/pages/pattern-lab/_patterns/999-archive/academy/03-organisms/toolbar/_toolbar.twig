{% embed "@bolt-components-toolbar/toolbar.twig" with {
  size: "xsmall",
  theme: "none",
  sticky: sticky ?? true,
  gradientName: toolbarGradient | default(''),
  breadcrumbs: breadcrumbs,
  title: {
    tag: "h2",
    icon: {
      name: toolbarIcon
    }
  },
} only %}
  {% if breadcrumbs %}
    {% block content_before %}
      {% import "@bolt-academy/_macros.twig" as macros %}

      {% include "@bolt-components-breadcrumb/breadcrumb.twig" with {
        items : breadcrumbs | map(breadcrumb => breadcrumb.text and breadcrumb.url ? macros.include("@bolt-elements-text-link/text-link.twig", {
          content: breadcrumb.text,
          attributes: {
            href: breadcrumb.url,
          },
          reversed_underline: true
        }, false) : (breadcrumb.text ?
          macros.include("@bolt-components-headline/text.twig", {
            text: breadcrumb.text,
            size: "small",
            weight: "bold",
            tag: "span",
            attributes: {
              class: [
                "u-bolt-inline"
              ]
            }
          }, false) : breadcrumb))
      } only %}
    {% endblock %}
  {% endif %}

  {% block content_after %}
    <bolt-grid gutter="medium" row-gutter="medium">
      {% if completion_percentage %}
        <bolt-grid-item column-start="1" columns-span="12">
          {% include "@bolt-components-progress-bar/progress-bar.twig" with {
            value: completion_percentage,
          } only %}
        </bolt-grid-item>
      {% endif %}

      <bolt-grid-item column-start="12" columns-span="2">
        {% include "@bolt-academy/_toolbar-actions.twig" with {
          downloadButton: true
        } only %}
      </bolt-grid-item>
    </bolt-grid>
  {% endblock %}
{% endembed %}


{# End Toolbar #}
