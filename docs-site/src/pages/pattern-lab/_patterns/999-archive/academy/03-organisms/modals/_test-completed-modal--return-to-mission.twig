{% import "@bolt-academy/_macros.twig" as macros %}

{% set _external_icon %}
  {% include '@bolt-elements-icon/icon.twig' with {
    name: "external-link"
  } only %}
{% endset %}
{% set inline_list %}
  {% set link_1 %}
    {% include "@bolt-elements-text-link/text-link.twig" with {
      content: "Return to Mission",
      attributes: {
        href: "#!",
      },
      reversed_underline: true,
    } only %}
  {% endset %}
  {% set link_2 %}
    {% include "@bolt-elements-text-link/text-link.twig" with {
      content: "View your Achievements",
      attributes: {
        href: "#!",
      },
      reversed_underline: true,
      icon_after: _external_icon
    } only %}
  {% endset %}
  {% include "@bolt-components-list/list.twig" with {
    display: "inline",
    spacing: "small",
    align: "center",
    separator: "solid",
    items: [
      link_1,
      link_2
    ]
  } only %}
{% endset %}
{% include "@bolt-components-band/band.twig" with {
  content: "Return to mission",
  size: "xsmall",
  full_bleed: false,
  theme: "none",
  attributes: {
    style: [
      "background-color: var(--bolt-color-berry)"
    ],
    class: [
      "t-bolt-xdark",
      "u-bolt-flex-grow-none",
    ]
  },
  content: inline_list
} only %}
