{% set _chevron_icon %}
  {% include '@bolt-elements-icon/icon.twig' with {
    name: "chevron-down"
  } only %}
{% endset %}

{% set trigger %}
  {% include "@bolt-elements-button/button.twig" with {
    content: "Pega Customer Decision Hub 8.5",
    size: "xsmall",
    hierarchy: "tertiary",
    icon_after: _chevron_icon,
    attributes: {
      type: 'button'
    }
  } only %}
{% endset %}

{% set popoverContent %}
  {% include "@bolt-components-menu/menu.twig" with {
    items: [
      {
        content: "Pega Customer Decision Hub 8.1",
        url: "https://google.com"
      },
      {
        content: "Pega Customer Decision Hub 8.3",
        url: "https://google.com"
      },
    ]
  } only %}
{% endset %}
{% set horizontal_card_1 %}
  {% set headline_1 %}
     {% include "@bolt-components-headline/text.twig" with {
        size: "small",
        text: "1 Module",
        weight: "semibold"
      } only %}
    {% endset %}
    {% set headline_2 %}
      {% include "@bolt-components-headline/text.twig" with {
        size: "small",
        text: "10 mins",
        weight: "semibold",
        attributes: {
          class: "stats-item",
        },
      } only %}
    {% endset %}
    {% set popover %}
      {% include "@bolt-components-popover/popover.twig" with {
        trigger: trigger,
        content: popoverContent,
        spacing: "none",
        placement: "top-start",
        fallbackPlacements: [
          "top",
          "top-end"
        ],
        theme: "light"
      } only %}
    {% endset %}
  {{
    macros.include("@bolt-academy/_horizontal-card.twig", {
      cardUrl: "#!",
      cardSubtitle: "Mission",
      cardTitle: bolt.faker.sentence(3),
      cardMetaItems: [
        headline,
        text,
        popover,
      ],
      cardGradient: "purple",
      cardIcon: "rocket",
      cardDescription: bolt.faker.paragraph(3),
    }, false)
  }}
{% endset %}
{% set horizontal_card_2 %}
