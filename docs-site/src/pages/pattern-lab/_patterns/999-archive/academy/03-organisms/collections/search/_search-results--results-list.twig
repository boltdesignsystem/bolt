        name: "check-solid",
        position: "before"
      },
      attributes: {
        style: [
          'color: #3C9439;'
        ]
      }
    } only %}
  {% endset %}
  {{
    macros.include("@bolt-academy/_horizontal-card.twig", {
      cardUrl: "#!",
      cardSubtitle: "Challenge",
      cardTitle: bolt.faker.sentence(3),
      cardMetaItems: [
        headline_1,
        headline_2,
      ],
      cardGradient: "orange",
      cardIcon: "meteor",
      cardDescription: bolt.faker.paragraph(3),
    }, false)
  }}
{% endset %}
