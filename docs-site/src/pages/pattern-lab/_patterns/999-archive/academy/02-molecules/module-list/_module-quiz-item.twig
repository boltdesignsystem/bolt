{% set col_1 %}
  {% set icon %}
    {% include "@bolt-elements-icon/icon.twig" with {
      name: "list",
    } only %}
  {% endset %}

  {% include "@bolt-elements-shape/shape.twig" with {
    content: icon,
    border_radius: "large",
    size: "xlarge",
    attributes: {
      style: "transform: scale(-0.5); --bolt-theme-icon-radius: 0.75rem;",
      class: [
        "t-bolt-teal",
        "u-bolt-negative-margin-top-small",
        "u-bolt-negative-margin-right-xsmall",
        "u-bolt-negative-margin-bottom-small",
        "u-bolt-negative-margin-left-small",
      ]
    }
  } only %}
  {% include "@bolt-components-headline/text.twig" with {
    size: "xsmall",
    text: text,
    weight: "semibold",
    attributes: {
      class: [
        status == 'passed' ? "u-bolt-opacity-20" : "",
        "u-bolt-margin-bottom-none",
      ]
    }
  } only %}
{% endset %}

{% set col_2 %}
  <div class="u-bolt-flex">
  {% include "@bolt-components-headline/text.twig" with {
    size: "xsmall",
    weight: "bold",
    text: numberOfQuestionsText,
    attributes: {
      class: [
        status == 'passed' ? "u-bolt-opacity-20" : "",
        "u-bolt-margin-bottom-none",
      ]
    }
  } only %}

  {% if status == 'passed' or status == 'failed' %}
    {% include "@bolt-elements-icon/icon.twig" with {
      name: status == 'passed' ? "check-solid" : "close-solid",
      size: "medium",
      attributes: {
        class: [
          status == 'passed' ? "u-bolt-color-success" : "u-bolt-color-error",
          "u-bolt-padding-left-xsmall",
          "u-bolt-negative-margin-right-small",
        ]
      }
    } only %}
  {% endif %}
  </div>
{% endset %}
{% include '@bolt-components-list/list.twig' with {
  display: 'inline',
  spacing: 'xsmall',
  align: 'justify',
  valign: 'center',
  items: [
    col_1,
    col_2,
  ]
} only %}


