{% set shareButton = shareButton | default(true) %}

{% import "@bolt-academy/_macros.twig" as macros %}

{% set _pencil_icon %}
  {% include '@bolt-elements-icon/icon.twig' with {
    name: 'pencil'
  } only %}
{% endset %}
{% set _download_icon %}
  {% include '@bolt-elements-icon/icon.twig' with {
    name: 'download'
  } only %}
{% endset %}
{% set edit %}
  {{
    macros.include("@bolt-elements-button/button.twig", {
      content: "Edit",
      size: "small",
      hierarchy: "tertiary",
      icon_only: _pencil_icon,
      attributes: {
        type: 'button'
      }
    }, false)
  }}
{% endset %}
{% set download %}
  {{
    macros.include("@bolt-elements-button/button.twig", {
      content: "Download",
      size: "small",
      hierarchy: "tertiary",
      icon_only: _download_icon,
      attributes: {
        type: 'button'
      }
    }, false)
  }}
{% endset %}
{% set share %}
  {{
    macros.include("@bolt-academy/toolbar-buttons/_share.twig", {}, false)
  }}
{% endset %}
{% set unfavorite %}
  {{
    macros.include("@bolt-academy/toolbar-buttons/_unfavorite.twig", {}, false)
  }}
{% endset %}
{% set favorite %}
  {{
    macros.include("@bolt-academy/toolbar-buttons/_favorite.twig", {}, false)
  }}
{% endset %}
{% set add %}
  {{
    macros.include("@bolt-academy/toolbar-buttons/_add.twig", {}, false)
  }}
{% endset %}
{% set remove %}
  {{
    macros.include("@bolt-academy/toolbar-buttons/_remove.twig", {}, false)
  }}
{% endset %}
{% include "@bolt-components-list/list.twig" with {
  display: "flex",
  align: "end",
  spacing: "xsmall",
  nowrap: true,
  items: [
    editButton ? edit : '',
    downloadButton ? download : '',
    shareButton ? share : '',
    favoriteButton and isFavorited ? unfavorite : '',
    favoriteButton and not isFavorited ? favorite : '',
    addButton ? add : '',
    removeButton ? remove : '',
  ]
} only %}
