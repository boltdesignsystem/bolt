{% extends '@pl/_default-page-template.twig' %}

{% block main_content %}

  {% embed '@bolt-components-band/band.twig' with {
    size: 'medium',
    theme: 'dark'
  } only %}
    {% block band_content  %}
      {% set hero %}
        {% include '@bolt-components-headline/headline.twig' with {
          text: 'Pega Events',
          size: 'xsmall',
          tag: 'span',
          url: '/events',
          icon: {
            name: 'arrow-left',
            position: 'before'
          }
        } only %}

        {% include '@bolt-components-headline/headline.twig' with {
          text: 'CRM Applications for Real-Time Engagement',
          size: 'xxxlarge',
          tag: 'h1',
        } only %}

        {% include '@bolt-components-headline/subheadline.twig' with {
          text: 'Pega’s AI powered CRM Suite is transforming the way enterprises drive greater engagement across the entire customer journey.',
          size: 'xlarge',
          tag: 'p',
        } only %}

        <ul class="o-bolt-inline-list o-bolt-inline-list--medium">
          <li class="o-bolt-inline-list__item">
            {% include '@bolt-components-headline/headline.twig' with {
              text: 'January 25, 2018',
              size: 'large',
              tag: 'span',
              url: '#!',
              icon: {
                name: 'calendar',
                position: 'before',
                size: 'medium'
              },
            } only %}
          </li>
          <li class="o-bolt-inline-list__item">
            {% include '@bolt-components-headline/headline.twig' with {
              text: '10:00 AM EST',
              size: 'large',
              tag: 'span',
              url: '#!',
              icon: {
                name: 'watch',
                position: 'before',
                size: 'medium'
              }
            } only %}
          </li>
          <li class="o-bolt-inline-list__item">
            {% include '@bolt-components-headline/headline.twig' with {
              text: 'New York, NY',
              size: 'large',
              tag: 'span',
              url: '#!',
              icon: {
                name: 'map-pin',
                position: 'before',
                size: 'medium'
              }
            } only %}
          </li>
        </ul>
      {% endset %}
      {% include '@bolt-components-grid/grid.twig' with {
        items: [
          {
            column_start: '1',
            column_span: '12 8@small',
            content: hero,
          },
        ]
      } only %}
    {% endblock %}
  {% endembed %}

 {% embed '@bolt-components-band/band.twig' with {
    size: 'small',
    theme: 'xlight'
