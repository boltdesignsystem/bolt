{% set content %}
  {% grid "o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--matrix" %}
    {% cell "u-bolt-width-12/12 u-bolt-width-7/12@medium" %}
      {% block headline %}
        {% include "@bolt-components-headline/headline.twig" with {
          size: "xxxlarge",
          text: "Search Results"
        } only %}
      {% endblock %}
    {% endcell %}
    {% cell "u-bolt-width-12/12 u-bolt-width-5/12@medium o-bolt-grid--right" %}
      {% block cta %}
        {% grid "o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--matrix o-bolt-grid--small" %}
          {% cell "u-bolt-width-12/12 u-bolt-width-6/12@medium" %}
            {% include "@bolt-components-headline/text.twig" with {
              size: "large",
              text: "Looking for instructor-led training?",
              attributes: {
                class: "u-bolt-margin-bottom-none",
              }
            } only %}
          {% endcell %}
          {% cell "u-bolt-width-12/12 u-bolt-width-6/12@medium" %}
            {% include "@bolt-components-button/button.twig" with {
              text: "View Class Schedule",
              style: "secondary",
              border_radius: "full",
              style: "primary"
            } only %}
          {% endcell %}
        {% endgrid %}
        {% include "@bolt-components-list/list.twig" with {
          display: "flex",
          items: [
            description,
            button,
          ]
        } only %}
      {% endblock %}
    {% endcell %}
  {% endgrid %}
{% endset %}

{# Note: `valign` prop of this band is tied to this particular image, subject to change with the image #}
{% include "@bolt-components-band/band.twig" with {
  theme: "xdark",
  size: size|default("small"),
  content: content,
  background: background|default({
    opacity: "light",
    fill: "gradient",
    contentItems: [
      {
        pattern: "image",
        src: "/images/background-satellite-dish.jpg",
        valign: "42%"
      },
    ]
  })
} only %}
