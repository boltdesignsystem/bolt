        rounded: true,
        body: {
          content: embedContent | default(macros.include("@bolt-components-ratio/ratio.twig", {
            ratio: "16/9",
            children: macros.include("@bolt-components-placeholder/placeholder.twig", {
              size: "large",
              text: "H5P Placeholder"
            }),
          }))
        },
        theme: "xlight"
      } %}
