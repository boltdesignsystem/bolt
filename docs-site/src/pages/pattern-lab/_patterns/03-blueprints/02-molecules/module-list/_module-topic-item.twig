{% grid "o-bolt-grid--flex o-bolt-grid--small o-bolt-grid--middle u-bolt-flex-nowrap #{viewed ? 'u-bolt-opacity-20' : ''}" %}
  {% cell "u-bolt-flex-grow u-bolt-margin-right-auto" %}
    {% include "@bolt-components-headline/text.twig" with {
      size: "xsmall",
      text: text,
      weight: "semibold",
      attributes: {
        class: "u-bolt-margin-bottom-none",
      }
    } only %}
  {% endcell %}

  {% cell "u-bolt-flex u-bolt-flex-shrink-none u-bolt-align-items-center" %}
    {% include "@bolt-components-headline/text.twig" with {
      size: "xsmall",
      weight: "bold",
      text: duration,
      attributes: {
        class: [
          "u-bolt-margin-bottom-none",
        ]
      }
    } only %}
    {% if viewed %}
      {% include "@bolt-components-icon/icon.twig" with {
        name: "eye",
        attributes: {
          class: [
            "u-bolt-padding-left-xsmall",
            "u-bolt-negative-margin-right-small"
          ]
        }
      } only %}
    {% endif %}
  {% endcell %}
{% endgrid %}


