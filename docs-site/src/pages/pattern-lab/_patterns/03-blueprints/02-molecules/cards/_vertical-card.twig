{% embed "@bolt-components-card-replacement/card-replacement.twig" with {
  horizontal: false,
  theme: "xlight",
  link_url: cardUrl,
  cardGradient: cardGradient,
  gradientStart: gradientStart,
  gradientMiddle: gradientMiddle,
  gradientEnd: gradientEnd,
  cardIcon: cardIcon,
  cardSubtitle: cardSubtitle,
  horizontal: horizontal,
  cardTitle: cardTitle,
  cardMetaItems: cardMetaItems,
  cardDescription: cardDescription,
  cardStatusItems: cardStatusItems,
  cardToolbarActions: cardToolbarActions ?? { shareButton: true },
} only %}
  {% block media %}
    {% include "@bolt-blueprints/_icon-banner.twig" with {
      cardGradient: cardGradient,
      gradientStart: gradientStart,
      gradientMiddle: gradientMiddle,
      gradientEnd: gradientEnd,
      cardIcon: cardIcon,
      horizontal: horizontal,
    } only %}
    <div class="t-bolt-dark u-bolt-padding-medium u-bolt-border-radius-small">
      {% grid "o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--xsmall u-bolt-negative-margin-top-small u-bolt-negative-margin-right-small" %}
        {% if cardToolbarActions %}
          {% cell "u-bolt-margin-left-auto" %}
            {% include "@bolt-blueprints/_toolbar-actions.twig" with cardToolbarActions only %}
          {% endcell %}
        {% endif %}
        {% cell "u-bolt-width-1/1" %}
          {% if cardSubtitle %}
            {% include "@bolt-components-headline/eyebrow.twig" with {
              text: cardSubtitle
            } only %}
          {% endif %}
          {% if cardTitle %}
            {% include "@bolt-components-headline/headline.twig" with {
              text: cardTitle,
              size: "xlarge",
              attributes: {
                style: "min-height: 58px;"
              }
            } only %}
          {% endif %}
        {% endcell %}
      {% endgrid %}
    </div>
  {% endblock %}

  {% block body %}
    <div class="u-bolt-overflow-hidden">
      {% grid "o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--small" %}
        {% cell "u-bolt-width-12/12" %}
          {% if cardMetaItems %}
            {% include "@bolt-components-list/list.twig" with {
              display: "inline",
              separator: "solid",
              tag: "ul",
              items: cardMetaItems
            } only %}
          {% endif %}
        {% endcell %}
        {% if cardDescription %}
          {% cell "u-bolt-width-12/12" %}
            {% include "@bolt-components-headline/text.twig" with {
              text: cardDescription,
              size: "medium"
            } only %}
          {% endcell %}
        {% endif %}
      {% endgrid %}
    </div>
  {% endblock %}

  {% block actions %}
    {% embed "@bolt-components-card-replacement/_card-replacement-actions.twig" %}
      {% block action_items %}
        {% if cardStatusItems %}
          {% for item in cardStatusItems %}
            {% include "@bolt-components-card-replacement/_card-replacement-action-item.twig" with { item: item } only %}
          {% endfor %}
        {% endif %}
      {% endblock %}
    {% endembed %}
  {% endblock %}

{% endembed %}
