    ],
    copy_to_clipboard: {
      text_to_copy: "https://boltdesignsystem.com"
    },
  } only %}
{% endset %}

<form>
  <h3>Pass various components into the content</h3>
  {% include "@bolt-components-accordion/accordion.twig" with {
    box_shadow: true,
    items: [
      {
        trigger: "Expand this to see an image",
        content: image_content
      },
      {
        trigger: "Expand this to see a table",
        content: table_content
      },
      {
        trigger: "Expand this to see a share tool and a paragraph of text",
        content: share_content
      },
    ],
  } only %}
</form>
