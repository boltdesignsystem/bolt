{% set slide_1 %}
  <div class="t-bolt-navy u-bolt-padding-large" style="display:grid; place-items:center">
    {% set header_content %}
      <h1>This is a dialog component.</h1>
    {% endset %}

    {% set body_content %}
      <p>Esse qui aliqua cupidatat anim duis exercitation aliquip occaecat consectetur cupidatat. Labore nisi pariatur adipisicing minim enim amet consectetur voluptate occaecat ipsum dolore laboris et. Consequat non voluptate excepteur consequat pariatur Lorem est ea. Nisi enim elit quis dolore fugiat officia nulla.</p>
    {% endset %}

    {% set footer_content %}
      <button type="button" class="e-bolt-button">Button</button>
    {% endset %}

    {% set dialog_content %}
      {% include '@bolt-components-dialog/dialog-header.twig' with {
        content: header_content,
      } only %}
      {% include '@bolt-components-dialog/dialog-body.twig' with {
        content: body_content,
      } only %}
      {% include '@bolt-components-dialog/dialog-footer.twig' with {
        content: footer_content,
      } only %}
    {% endset %}

    {% include '@bolt-elements-button/button.twig' with {
      content: 'Dialog in a carousel',
      attributes: {
        type: 'button',
        'data-bolt-dialog-target': '#dialog-carousel',
      }
    } only %}

    {% include '@bolt-components-dialog/dialog.twig' with {
      content: dialog_content,
      attributes: {
        id: 'dialog-carousel'
      },
    } only %}
  </div>
{% endset %}
{% set slide_2 %}
  <div class="t-bolt-teal u-bolt-padding-large" style="display:grid; place-items:center">
    {% set modal_content %}
      {% include '@bolt-components-headline/text.twig' with {
        text: 'This is the modal container\'s header.',
        attributes: {
        slot: 'header',
        }
      } only %}
      <div>
        {% include '@bolt-components-headline/headline.twig' with {
          size: 'xlarge',
          text: 'This is the modal container\'s body'
        } only %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'This is the modal container\'s body.'
        } only %}
      </div>
      {% include '@bolt-components-headline/text.twig' with {
        text: 'This is the modal container\'s footer.',
        attributes: {
          slot: 'footer',
        }
      } only %}
    {% endset %}

    {% include '@bolt-elements-button/button.twig' with {
      content: 'Modal in a carousel (does not work)',
      attributes: {
        type: 'button',
        'data-bolt-modal-target': '.js-bolt-modal-carousel',
      },
    } only %}

    {% include '@bolt-components-modal/modal.twig' with {
      content: modal_content,
      attributes: {
        class: 'js-bolt-modal-carousel',
      },
    } only %}
  </div>
{% endset %}

{% include '@bolt-components-carousel/carousel.twig' with {
  slides: [
    slide_1,
    slide_2,
  ]
} only %}
