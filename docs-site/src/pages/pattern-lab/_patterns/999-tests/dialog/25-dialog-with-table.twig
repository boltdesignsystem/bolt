{% include '@bolt-elements-button/button.twig' with {
    content: 'Demo Dialog',
    attributes: {
        type: 'button',
        'data-bolt-dialog-target': 'dialog-table-2',
    }
} only %}

{% set _header_content %}
    <h1>This is a dialog component.</h1>
{% endset %}

