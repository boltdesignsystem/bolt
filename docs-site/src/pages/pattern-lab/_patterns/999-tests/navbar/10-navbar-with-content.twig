      display: 'inline',
      items: [
        link_1,
        link_2
      ]
    } only %}
  {% endset %}
  {% include '@bolt-components-list/list.twig' with {
    display: 'inline',
    spacing: 'medium',
    align: 'justify',
    valign: 'center',
