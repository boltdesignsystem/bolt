<h2>Carousel examples in layout using twig includes</h2>
{% set carousel %}
  {% set slide %}
    {% include '@bolt-components-placeholder/placeholder.twig' with {
      text: 'Slide',
      size: 'xlarge',
    } only %}
  {% endset %}
  <div class="o-bolt-wrapper">
    {% include '@bolt-components-carousel/carousel.twig' with {
      slides: [
        slide,
        slide,
        slide
      ],
      overflow: true,
    } only %}
    {% include '@bolt-components-carousel/carousel.twig' with {
      slides: [
        slide,
        slide,
        slide
      ],
      nav_button_position: 'outside',
      overflow: true,
    } only %}
  </div>
{% endset %}
{% include '@bolt-layouts-site/site.twig' with {
  header: 'This is the header.',
  main: {
    content: carousel,
  },
  footer: 'This is the footer.',
} only %}

