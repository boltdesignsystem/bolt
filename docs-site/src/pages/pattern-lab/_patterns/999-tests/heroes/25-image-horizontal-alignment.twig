{% set _content %}
  <bolt-text headline tag="h1" font-size="xxxlarge">
    It's show time.
  </bolt-text>
  <bolt-text font-size="xlarge" class="u-bolt-line-length-medium">
    Please join us for PegaWorld 2019 event at MGM Grand in Las&nbsp;Vegas
  </bolt-text>
  <bolt-text weight="bold">
    Monday, June 3rd, 2019 <br>10AM - 3PM EST
  </bolt-text>
  {% include '@bolt-elements-button/button.twig' with {
    content: "Watch livestream",
    hierarchy: "secondary",
    attributes: {
      type: 'button'
    }
  } only %}
{% endset %}

{% set _supplement %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      alt: 'Image alt text',
      src: '/images/heros/hero-foreground--yellow.png',
      loading: 'eager',
      width: 375,
      style: 'display: block;',
      class: 'u-bolt-margin-left-auto'
    },
  } only %}
{% endset %}

{% set layout_items %}
  {% include '@bolt-layouts-layout/layout-item.twig' with {
    content: _content
  } only %}
  {% include '@bolt-layouts-layout/layout-item.twig' with {
    valign_self: 'end-offset',
    content: _supplement
  } only %}
{% endset %}

{% set _background %}
  {% include '@bolt-elements-image/image.twig' with {
    background: true,
    attributes: {
      src: '/images/heros/hero-background--yellow.svg',
      loading: 'eager',
      sizes: '100vw',
    },
  } only %}
{% endset %}

{% include '@bolt-layouts-layout/layout.twig' with {
  content: layout_items,
  background: _background,
  gutter: 'large',
  row_gutter: 'large',
  padding_top: 'large',
  padding_bottom: 'large',
  valign_items: 'center',
  template: [
    'halves@from-small'
  ],
  attributes: {
    class: 't-bolt-light'
  }
} only %}
