{% set _content %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      alt: 'Image alt text',
      src: '/images/heros/hero-foreground--orange--logo.svg',
      loading: 'eager',
      class: 'u-bolt-margin-bottom-medium'
    },
  } only %}
  <bolt-text font-size="xlarge" class="u-bolt-line-length-medium">
    Boston Convention & Exhibition Center May&nbsp;31&nbsp;-&nbsp;June&nbsp;2,&nbsp;2020
  </bolt-text>
  {% include '@bolt-elements-button/button.twig' with {
    content: "See full agenda",
    hierarchy: "secondary",
    attributes: {
      type: 'button'
    }
  } %}
{% endset %}

{% set _supplement %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      alt: 'Image alt text',
      src: '/images/heros/hero-foreground--orange--animated-gif.gif',
      loading: 'eager',
    },
  } only %}
{% endset %}

{% set layout_items %}
  {% include '@bolt-layouts-layout/layout-item.twig' with {
    order: 'last@from-small',
    content: _content
  } only %}
  {% include '@bolt-layouts-layout/layout-item.twig' with {
    content: _supplement
  } only %}
{% endset %}

{% set _background %}
  {% include '@bolt-elements-image/image.twig' with {
    background: true,
    attributes: {
      alt: 'Image alt text',
      src: '/images/heros/hero-background--orange.jpg',
      loading: 'eager',
      width: '100vw',
    },
  } only %}
{% endset %}

{% include '@bolt-layouts-layout/layout.twig' with {
  content: layout_items,
  gutter: 'large',
  row_gutter: 'large',
  padding_top: 'large',
  padding_bottom: 'large',
  valign_items: 'center',
  background: _background,
  template: [
    'halves@from-small'
  ],
  attributes: {
    class: 't-bolt-dark'
  }
} only %}
