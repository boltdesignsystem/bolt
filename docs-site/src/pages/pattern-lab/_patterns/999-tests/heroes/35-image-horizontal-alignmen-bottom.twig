{% set _content %}
  {% include '@bolt-components-blockquote/blockquote.twig' with {
    size: 'xxlarge',
    weight: 'bold',
    border: 'none',
    author: {
      name: 'Oliver Zeeb',
      title: 'Team Lead, Application Development <br>W&W-Gruppe'
    },
    content: '<p>Pega is one of the key technologies that we are using to rebuild our application landscape.</p>'
  } only %}
{% endset %}

{% set _supplement %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      alt: 'Image alt text',
      src: '/images/heros/hero-foreground--teal.png',
      width: 450,
      loading: 'eager',
      style: 'display: block;',
      class: 'u-bolt-margin-left-auto'
    },
  } only %}
{% endset %}

{% set layout_items %}
  {% include '@bolt-layouts-layout/layout-item.twig' with {
    content: _content
  } only %}
  {% include '@bolt-layouts-layout/layout-item.twig' with {
    valign_self: 'end-offset',
    content: _supplement
  } only %}
{% endset %}

{% set _background %}
  {% include '@bolt-elements-image/image.twig' with {
    background: true,
    attributes: {
      src: '/images/heros/hero-background--teal.jpg',
      loading: 'eager',
      sizes: '100vw',
    },
  } only %}
{% endset %}

{% include '@bolt-layouts-layout/layout.twig' with {
  content: layout_items,
  gutter: 'large',
  row_gutter: 'large',
  padding_top: 'large',
  padding_bottom: 'large',
  valign_items: 'center',
  background: _background,
  template: [
    'halves@from-small'
  ],
  attributes: {
    class: 't-bolt-dark'
  }
} only %}
