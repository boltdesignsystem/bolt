{% set schema = bolt.data.components["@bolt-components-popover"].schema %}
{% set link %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: "call to action",
    attributes: {
      href: 'https://pega.com'
    }
  } only %}
{% endset %}
{% set content %}
  This is the content of the popover with a {{ link }}.
{% endset %}

<bolt-list display="inline" spacing="medium">
  {% for theme in schema.properties.theme.enum %}
    <bolt-list-item>
      {% set trigger %}
        {% include '@bolt-elements-button/button.twig' with {
          content: "theme: " ~ theme,
          size: "small",
          attributes: {
            type: 'button'
          }
        } only %}
      {% endset %}
      {% include "@bolt-components-popover/popover.twig" with {
        trigger: trigger,
        content: content,
        theme: theme,
        uuid: "theme-demo-#{theme}-#{loop.index}",
        attributes: {
          "no-shadow": true,
        }
      } only %}
    </bolt-list-item>
  {% endfor %}
</bolt-list>
