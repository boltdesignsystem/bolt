        data-video-delayed
        controls
        class="c-base-video"></video-js>
    {% endset %}
    {% include '@bolt-components-ratio/ratio.twig' with {
      children: video_2,
      ratio: '16/9'
    } only %}
  {% endset %}

  <h2>Video in Modal with Autoplay</h2>

  {% include "@bolt-elements-button/button.twig" with {
    content: "Play the video",
    attributes: {
      type: 'button',
      "data-bolt-modal-target": ".js-bolt-modal--demo-2",
    }
  } only %}

  {% include "@bolt-components-modal/modal.twig" with {
    content: modal_content_2,
    width: "optimal",
    spacing: "none",
    theme: "none",
    scroll: "overall",
    attributes: {
      class: "js-bolt-modal--demo-2",
    },
  } only %}

  {% set modal_content_3 %}
    {% set video_3 %}
      <video-js
        data-delayed-account="1900410236"
        data-delayed-player="O3FkeBiaDz"
        data-embed="default"
        data-delayed-video-id="973396455001"
        data-video-delayed
        data-video-delayed-no-autoplay
