<bolt-text>An example of all fade ins, looped 50 times</bolt-text>

{% set fades = ['--in', '--in-up', '--in-down', '--in-left', '--in-right'] %}

{% for i in 1..50 %}
  {% for fade in fades %}
    {% include '@bolt-components-banner/banner.twig' with {
      content: 'This is the banner content fade' ~ fade,
      attributes: {
        class: [
          'a-bolt-fade',
          'a-bolt-fade' ~ fade,
          'a-bolt-delay-gradual'
        ],
      }
    } only %}
  {% endfor %}
{% endfor %}




