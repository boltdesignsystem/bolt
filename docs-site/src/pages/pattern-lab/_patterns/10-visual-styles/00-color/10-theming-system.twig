{% set themes = [
  "white",
  "black",
  "gray-xlight",
  "navy-dark",
  "navy",
  "navy-light",
  "teal",
  "yellow",
  "orange",
  "pink",
  "wine",
  "berry",
  "violet",
] %}

{% set content %}
  <bolt-stack spacing="large">
    <bolt-text headline font-size="xxxlarge" tag="h1">
      Theming System
    </bolt-text>
    <bolt-text subheadline font-size="xxlarge" tag="h2">
      The color theming foundation of Bolt.
    </bolt-text>
  </bolt-stack>

  <bolt-tabs label-spacing="medium" panel-spacing="medium" inset="off">
    {% for theme in themes %}
      <bolt-tab-panel>
        <bolt-text slot="label">{{ theme|capitalize }}</bolt-text>

        <div class="{{ "t-bolt-#{theme}" }} u-bolt-padding-top-small u-bolt-padding-bottom-small u-bolt-padding-right-medium u-bolt-padding-left-medium">
          {% include "@bolt-components-headline/subheadline.twig" with {
            tag: "h2",
            size: "xlarge",
            text: "Theme Color Tokens",
            icon: {
              name: "bolt-logo-colored",
              position: "before",
            },
            attributes: {
              class: [
                "u-bolt-margin-bottom-xsmall",
              ],
            },
          } only %}
          <hr class="u-bolt-margin-top-none">
          <bolt-text>
            The theme colors are available for use within a container that has the <code>.t-bolt-{{ theme }}</code> class.
          </bolt-text>
          <bolt-table>
            <table>
              <thead>
                <tr>
                  <td></td>
                  <th>Scss function</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th>Text</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--text"></span>&nbsp;&nbsp;var(--m-bolt-text)</td>
                </tr>
                <tr>
                  <th>Background</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--background"></span>&nbsp;&nbsp;var(--m-bolt-bg)</td>
                </tr>
                <tr>
                  <th>Primary</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--primary"></span>&nbsp;&nbsp;var(--m-bolt-primary)</td>
                </tr>
                <tr>
                  <th>Text on Primary</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--text-on-primary"></span>&nbsp;&nbsp;var(--m-bolt-text-on-primary)</td>
                </tr>
                <tr>
                  <th>Secondary</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--secondary"></span>&nbsp;&nbsp;var(--m-bolt-secondary)</td>
                </tr>
                <tr>
                  <th>Text on Secondary</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--text-on-secondary"></span>&nbsp;&nbsp;var(--m-bolt-text-on-secondary)</td>
                </tr>
                <tr>
                  <th>Tertiary</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--tertiary"></span>&nbsp;&nbsp;var(--m-bolt-tertiary)</td>
                </tr>
                <tr>
                  <th>Text on Tertiary</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--text-on-tertiary"></span>&nbsp;&nbsp;var(--m-bolt-text-on-tertiary)</td>
                </tr>
                <tr>
                  <th>Link Text</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--link"></span>&nbsp;&nbsp;var(--m-bolt-link)</td>
                </tr>
                <tr>
                  <th>Disabled</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--text-disabled"></span>&nbsp;&nbsp;var(--m-bolt-text-on-disabled)</td>
                </tr>
                <tr>
                  <th>Text on Disabled</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--disabled"></span>&nbsp;&nbsp;var(--m-bolt-disabled)</td>
                </tr>
                <tr>
                  <th>Headline Text</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--headline"></span>&nbsp;&nbsp;var(--m-bolt-headline)</td>
                </tr>
                <tr>
                  <th>Border</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--border"></span>&nbsp;&nbsp;var(--m-bolt-border)</td>
                </tr>
                <tr>
                  <th>Neutral</th>
                  <td><span class="c-bds-color-chip c-bds-color-chip--neutral"></span>&nbsp;&nbsp;var(--m-bolt-neutral)</td>
                </tr>
              </tbody>
            </table>
          </bolt-table>

          {% include "@bolt-components-headline/subheadline.twig" with {
            tag: "h2",
            size: "xlarge",
            text: "Content Type Overview",
            icon: {
              name: "documentation",
              position: "before",
            },
            attributes: {
              class: [
                "u-bolt-margin-top-large",
                "u-bolt-margin-bottom-xsmall",
              ],
            },
          } only %}
          <hr class="u-bolt-margin-top-none">
          {% include "@bolt-components-headline/headline.twig" with {
            tag: "h3",
            size: "small",
            text: "Headline",
            attributes: {
              class: "u-bolt-margin-bottom-xsmall"
            },
          } only %}
          <bolt-card-replacement>
            <bolt-card-replacement-body>
              {% include "@bolt-components-headline/headline.twig" with {
                size: "xxxlarge",
                text: "Headline Text",
              } only %}
              {% set link %}
                {% set icon_chevron_right %}
                  {% include "@bolt-components-icon/icon.twig" with {
                    name: "chevron-right",
                  } only %}
                {% endset %}
                {% include "@bolt-elements-text-link/text-link.twig" with {
                  content: "Headline Text Link",
                  reversed_underline: true,
                  icon_after: icon_chevron_right,
                  attributes: {
                    href: "https://pega.com",
                  }
                } only %}
              {% endset %}
              {% include "@bolt-components-headline/headline.twig" with {
                size: "xxxlarge",
                text: link,
              } only %}
            </bolt-card-replacement-body>
          </bolt-card-replacement>
          {% include "@bolt-components-headline/headline.twig" with {
            tag: "h3",
            size: "small",
            text: "Text",
            attributes: {
              class: "u-bolt-margin-bottom-xsmall"
            },
          } only %}
          <bolt-card-replacement>
            <bolt-card-replacement-body>
              {% include "@bolt-components-headline/text.twig" with {
                text: "Body text",
              } only %}
              {% set link %}
                {% include "@bolt-elements-text-link/text-link.twig" with {
                  content: "Body Text Link",
                  attributes: {
                    href: "https://pega.com",
                  }
                } only %}
              {% endset %}
              {% include "@bolt-components-headline/text.twig" with {
                text: link,
              } only %}
            </bolt-card-replacement-body>
          </bolt-card-replacement>
          {% include "@bolt-components-headline/headline.twig" with {
            tag: "h3",
            size: "small",
            text: "Border",
            attributes: {
              class: "u-bolt-margin-bottom-xsmall"
            },
          } only %}
          <bolt-card-replacement>
            <bolt-card-replacement-body>
              <hr>
            </bolt-card-replacement-body>
          </bolt-card-replacement>
          {% include "@bolt-components-headline/headline.twig" with {
            tag: "h3",
            size: "small",
            text: "Button",
            attributes: {
              class: "u-bolt-margin-bottom-xsmall"
            },
          } only %}
          <bolt-card-replacement>
            <bolt-card-replacement-body>
              <bolt-list display="inline">
                <bolt-list-item>
                  <button type="button" class="e-bolt-button">
                    Primary
                  </button>
                </bolt-list-item>
                <bolt-list-item>
                  <button type="button" class="e-bolt-button  e-bolt-button--secondary">
                    Secondary
                  </button>
                </bolt-list-item>
                <bolt-list-item>
                  <button type="button" class="e-bolt-button  e-bolt-button--tertiary">
                    Tertiary
                  </button>
                </bolt-list-item>
              </bolt-list>
            </bolt-card-replacement-body>
          </bolt-card-replacement>
        </div>
      </bolt-tab-panel>
    {% endfor %}
  </bolt-tabs>
{% endset %}

{% include "@bolt-components-band/band.twig" with {
  content: content,
  theme: "none",
  size: "large",
} only %}
