{% set font_family_map = bolt.data.typography.fontFamilyTokens %}
{% set font_size_map = bolt.data.typography.fontSizeTokens %}
{% set font_weight_map = bolt.data.typography.fontWeightTokens %}
{% set line_height_map = bolt.data.typography.lineHeightTokens %}
{% set letter_spacing_map = bolt.data.typography.letterSpacingTokens %}

{# To make sure these numbers are up to date, make sure to check vars-typography.scss #}
