{% set animated_step_top %}
  <bolt-two-character-layout>
    <bolt-animate slot="character--left" in-order="1" in="fade-in-slide-up" out="fade-out" out-order="10">
      <bolt-character size="medium">
        <bolt-animate in="fade-in-slide-up" in-order="3" out="fade-out" slot="top" out-order="5">
          <bolt-status-dialogue-bar is-alert-message>
            <p slot="text">
              Wow! That's a large bill!
            </p>
          </bolt-status-dialogue-bar>
        </bolt-animate>
        <span slot="left" idle="none">
        </span>
        <span slot="bottom" idle="none">
        </span>
      </bolt-character>
    </bolt-animate>
    <bolt-animate slot="connection" in="fade-in-slide-up" in-order="5" out="fade-out" out-order="1">
      <bolt-connection></bolt-connection>
    </bolt-animate>
    <bolt-animate slot="character--right" in="fade-in-slide-up" in-order="10" out="fade-out" idle="pulse" idle-duration="2000" out-order="10">
      <bolt-character size="medium">
        <bolt-animate in="fade-in-slide-up" in-order="15" out="fade-out" slot="top" out-order="5">
          <bolt-status-dialogue-bar dialogue-arrow-direction="down" icon-name="cloud">
            <p slot="text">
              Here to Help!
            </p>
          </bolt-status-dialogue-bar>
        </bolt-animate>
        <span slot="right" idle="none">
        </span>
        <span slot="bottom" idle="none">
        </span>
      </bolt-character>
    </bolt-animate>
  </bolt-two-character-layout>
{% endset %}

{% set content %}
  <bolt-interactive-pathway
      pathwayId="0"
      total-steps="6"
  >
    <bolt-text
        slot="pathway-title"
    >
      Billing Inquires
    </bolt-text>

    {% include "./billing-micro-journey-fragments/_step-one.twig" %}

    <bolt-interactive-step
        step="2"
        slot="steps"
    >
      <span slot="title">Next best action</span>

      <bolt-animate slot="top" in="fade-in-slide-up" in-order="1" out="fade-out-slide-down" out-order="2">
        {{ animated_step_top }}
      </bolt-animate>

      <bolt-animate slot="bottom" in="fade-in-slide-up" in-order="2" out-order="1" out="fade-out-slide-down">
        <bolt-text>
          Pega's AI-augmented decisioning engine uses context, predictive analytics, and self-learning adaptive models to guide agents with next best actions to serve the customer.
        </bolt-text>
      </bolt-animate>
    </bolt-interactive-step>

    <bolt-interactive-step
        step="3"
        slot="steps"
    >
      <span slot="title">Context Across Channels</span>

      <bolt-animate slot="top" in="fade-in-slide-up" in-order="1" out="fade-out-slide-down" out-order="2">
        {{ animated_step_top }}
      </bolt-animate>

      <bolt-animate slot="bottom" in="fade-in-slide-up" in-order="2" out-order="1" out="fade-out-slide-down">
        <bolt-text>
          Pega’s real-time omni-channel AI ensures that customer context is never lost, even on other channels.
        </bolt-text>
      </bolt-animate>
    </bolt-interactive-step>

    <bolt-interactive-step
        step="4"
        slot="steps"
    >
      <span slot="title">Resolve</span>

      <bolt-animate slot="top" in="fade-in-slide-up" in-order="1" out="fade-out-slide-down" out-order="2">
        {{ animated_step_top }}
      </bolt-animate>

      <bolt-animate slot="bottom" in="fade-in-slide-up" in-order="2" out-order="1" out="fade-out-slide-down">
        <bolt-text>
          Pega's case management connects all the people, systems, and processes required to resolve each customer inquiry.
        </bolt-text>
      </bolt-animate>
    </bolt-interactive-step>

    <bolt-interactive-step
        step="5"
        slot="steps"
    >
      <span slot="title">Outcomes</span>

      <bolt-animate slot="top" in="fade-in-slide-up" in-order="1" out="fade-out-slide-down" out-order="2">
        {{ animated_step_top }}
      </bolt-animate>

      <bolt-animate slot="bottom" in="fade-in-slide-up" in-order="2" out-order="1" out="fade-out-slide-down">
        <bolt-text>
          Customer issue is resolved quickly, resulting in higher customer satisfaction and lower average handle time (AHT) for the business.
        </bolt-text>
      </bolt-animate>
    </bolt-interactive-step>

    <bolt-interactive-step
        step="6"
        slot="steps"
    >
      <span slot="title">What's next?</span>

      <bolt-animate slot="bottom" in="fade-in-slide-up" in-order="2" out-order="1" out="fade-out-slide-down">
