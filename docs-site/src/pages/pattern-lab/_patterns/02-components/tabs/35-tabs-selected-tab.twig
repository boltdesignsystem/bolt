{% set tab_content_1 %}
  {% include "@bolt-components-placeholder/placeholder.twig" with {
      text: "Tab panel 1",
      size: "large",
    } only %}
{% endset %}
{% set tab_content_2 %}
  {% include "@bolt-components-placeholder/placeholder.twig" with {
      text: "Tab panel 2",
      size: "large",
    } only %}
{% endset %}
{% set tab_content_3 %}
  {% include "@bolt-components-placeholder/placeholder.twig" with {
      text: "Tab panel 3",
      size: "large",
    } only %}
