{% set schema = bolt.data.components["@bolt-components-card-replacement"].schema %}

{% grid "o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--center" %}
  {% for spacing in schema.properties.spacing.enum %}
    {% cell "u-bolt-width-12/12 u-bolt-width-4/12@small" %}
      {% include "@bolt-components-card-replacement/card-replacement.twig" with {
        spacing: spacing,
        media: {
          image: {
            src: "/images/placeholders/landscape-16x9-mountains.jpg",
            alt: "Image alt.",
            placeholder_color: "#afcde6",
          },
        },
        body: {
          headline: "This card has " ~ spacing ~ " spacing",
          paragraph: "This is a paragraph.",
        },
        actions: [
          {
            text: "This is a button",
            url: "https://pega.com",
          },
        ],
      } only %}
    {% endcell %}
  {% endfor %}
{% endgrid %}
{# End component specific code #}
