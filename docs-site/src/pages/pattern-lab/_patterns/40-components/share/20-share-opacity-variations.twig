{% set schema = bolt.data.components['@bolt-components-share'].schema %}
{% extends '@pl/_share-variables.twig' %}
{% block content %}

{% set description %}
  Inline share is available in various opacities. Use the <bolt-code-snippet display="inline">opacity</bolt-code-snippet> prop to control it.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>Opacity will make the share tool semi-transparent, and transparency goes away if user hovers over it. This should be used if you don't want the share tool to create too much distractions on first impression.</bolt-li>
    <bolt-li>Opacity does not work with menu display.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
  {% for opacity in schema.properties.opacity.enum %}
    {% include '@bolt-components-share/share.twig' with {
      opacity: opacity,
      sources: demo_sources,
      copy_to_clipboard: demo_copy_to_clipboard,
    } only %}
  {% endfor %}
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-components-share/share.twig' with {
  opacity: 60,
  sources: var_foo,
  copy_to_clipboard: var_bar,
} only %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Opacity',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
  html_markup: html_markup,
} only %}

{% endblock %}
