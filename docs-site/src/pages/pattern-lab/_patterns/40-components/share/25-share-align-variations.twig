{% set schema = bolt.data.components['@bolt-components-share'].schema %}
{% extends '@pl/_share-variables.twig' %}
{% block content %}

{% set description %}
  Inline share is available in various horizontal alignments. Use the <bolt-code-snippet display="inline">align</bolt-code-snippet> prop to control it.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>Share is a block level component and it takes up the full width of its parent container, horizontal alignment is depended on that width.</bolt-li>
    <bolt-li>Align does not work with menu display.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
  {% for align in schema.properties.align.enum %}
    {% include '@bolt-components-share/share.twig' with {
      align: align,
      sources: demo_sources,
      copy_to_clipboard: demo_copy_to_clipboard,
    } only %}
  {% endfor %}
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-components-share/share.twig' with {
  align: 'center',
  sources: var_foo,
  copy_to_clipboard: var_bar,
} only %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Horizontal alignment',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
} only %}

{% endblock %}
