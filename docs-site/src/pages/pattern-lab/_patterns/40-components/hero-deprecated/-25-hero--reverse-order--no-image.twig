{% import '@bolt/macros.twig' as macros %}
{# ^ allows us to use inline includes that also work in Drupal #}

<bolt-text>This demo shows that the <code>reverseOrder</code> prop still swaps the column order of Image / Content on larger screens, even if a Hero doesn't contain an image!</bolt-text>
{% set headline %}
  {% include '@bolt-components-headline/headline.twig' with {
    size: 'xxxlarge',
    text: 'While Heros don\'t require an image...',
  } only %}
{% endset %}
{% set subheadline %}
  {% include '@bolt-components-headline/subheadline.twig' with {
     size: 'large',
    text: 'Perhaps a Band would be a better fit for these types of use-cases?',
  } only %}
{% endset %}
{% set button %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Band Component Docs',
    hierarchy: 'secondary',
    attributes: {
      href: link['viewall-components-band']
    }
  } only %}
{% endset %}
{% include '@bolt-components-hero/hero.twig' with {
  content: [
    headline,
    subheadline,
    button
  ]|join(''),
  reverseOrder: true,
  background: '/images/content/backgrounds/background-night-sky.jpg',
  theme: 'dark'
} %}
