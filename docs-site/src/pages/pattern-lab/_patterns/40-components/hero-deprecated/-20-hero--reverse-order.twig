{# {% import '@bolt/macros.twig' as macros %} #}
{# ^ allows us to use inline includes that also work in Drupal #}

{# <bolt-text>This demo uses the <code>reverseOrder</code> prop to reverse the Hero's default column order so that on larger screens, the Image shows up on the left and the Content shows up on the right.</bolt-text>
{% set image %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      src: '/images/heros/hero-foreground--orange--logo.svg',
      alt: 'PegaWorld iNspire logo',
      width: 300,
      height: 40,
      loading: 'eager',
      class: [
        'u-bolt-margin-bottom-medium',
      ]
    }
  } only %}
{% endset %}
{% set subheadline %}
  {% include '@bolt-components-headline/subheadline.twig' with {
    size: 'xlarge',
    text: 'Boston Convention & Exhibition Center May&nbsp;31&nbsp;-&nbsp;June&nbsp;2,&nbsp;2020',
    attributes: {
      class: [
        'u-bolt-line-length-medium'
      ]
    }
  } only %}
{% endset %}
{% set button %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'See full agenda',
    hierarchy: 'secondary',
    attributes: {
      type: 'button'
    }
  } only %}
{% endset %}
{% include '@bolt-components-hero/hero.twig' with {
  content: [
    image,
    subheadline,
    button
  ]|join(''),
  background: '/images/heros/hero-background--orange.jpg',
  image: '/images/heros/hero-foreground--orange--animated-gif.gif',
  image_width: 550,
  image_height: 476,
  imageValign: 'middle',
  reverseOrder: true,
  theme: 'dark',
} %} #}

