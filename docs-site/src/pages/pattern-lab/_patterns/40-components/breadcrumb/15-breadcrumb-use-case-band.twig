{# Setting variables for demo purposes #}
{% set item_home %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: "Home",
    attributes: {
      href: '#!'
    }
  } only %}
{% endset %}
{% set item_landing %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: "Landing Page",
    attributes: {
      href: '#!'
    }
  } only %}
{% endset %}
{% set item_sub %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: "Sub Page",
    attributes: {
      href: '#!'
    }
  } only %}
{% endset %}
{% set item_current %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: "Current Page",
    attributes: {
      href: '#!',
      "aria-current": "page",
    },
  } only %}
{% endset %}

{% set breadcrumb %}
  {# Start component specific code #}
  {% include "@bolt-components-breadcrumb/breadcrumb.twig" with {
    contentItems: [
      item_home,
      item_landing,
      item_sub,
      item_current,
    ]
  } only %}
  {# End component specific code #}
{% endset %}


{# Breadcrumb Component in a Band #}
{% include "@bolt-components-band/band.twig" with {
  "size": "xsmall",
  "theme": "light",
  "content": breadcrumb
} only %}

{# Demo notes #}
{% set band_content %}
  {% include "@bolt/headline.twig" with {
    "size": "xlarge",
    "text": "Breadcrumb Component in a Band ^"
  } only %}
  {% include "@bolt-components-headline/text.twig" with {
    "text": "The above example shows a xsmall band containing the breadcrumbs."
  } only %}
{% endset %}
{% include "@bolt-components-band/band.twig" with {
  "theme": "none",
  "content": band_content
} only %}


{# Breadcrumb Band Stacking On Top of Featured Band #}
{% set stacked_bands %}
  {% include "@bolt-components-band/band.twig" with {
    "size": "small",
    "theme": "none",
    "content": breadcrumb
  } only %}
  {% include "@pl/_band--feature.twig" with {
    "size": "large",
    "theme": "none",
    "primaryTeaser": {
      "headlines": [
        {
          "type": "eyebrow",
          "text": "Eyebrow",
          "tag": "span"
        },
        {
          "type": "headline",
          "text": "Headline",
          "size": "xxxlarge",
          "tag": "h1"
        },
        {
          "type": "subheadline",
          "text": "Subheadline",
          "size": "xxlarge",
          "tag": "h2"
        },
        {
          "type": "text",
          "text": "Body text.",
          "tag": "p"
        }
      ],
      "buttons": [
        {
          "text": "Call to Action",
          "hierarchy": "primary",
          "url": "https://www.pega.com"
        }
      ]
    }
  } only %}
{% endset %}

{% include "@bolt-components-band/band.twig" with {
  "size": "none",
  "theme": "dark",
  "content": stacked_bands
} only %}

{# Demo notes #}
{% set band_content %}
  {% include "@bolt/headline.twig" with {
    "size": "xlarge",
    "text": "Breadcrumb Band Stacking On Top of Featured Band ^"
  } only %}
  {% include "@bolt-components-headline/text.twig" with {
    "text": "The above example shows a small band containing the breadcrumbs and large band containing the content. Both have theme set to none."
  } only %}
  {% include "@bolt/headline.twig" with {
    "size": "large",
    "text": "Background and Theming"
