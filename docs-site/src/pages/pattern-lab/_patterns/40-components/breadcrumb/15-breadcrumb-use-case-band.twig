{# Setting variables for demo purposes #}
{% set item_home %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'Home',
    attributes: {
      href: '#!'
    }
  } only %}
{% endset %}
{% set item_landing %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'Landing Page',
    attributes: {
      href: '#!'
    }
  } only %}
{% endset %}
{% set item_sub %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'Sub Page',
    attributes: {
      href: '#!'
    }
  } only %}
{% endset %}
{% set item_current %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'Current Page',
    attributes: {
      href: '#!',
      'aria-current': 'page',
    },
  } only %}
{% endset %}

{% set breadcrumb %}
  {# Start component specific code #}
  {% include '@bolt-components-breadcrumb/breadcrumb.twig' with {
    contentItems: [
      item_home,
      item_landing,
      item_sub,
      item_current,
    ]
  } only %}
  {# End component specific code #}
{% endset %}


{# Breadcrumb Component in a Band #}
{% include '@bolt-components-band/band.twig' with {
  'size': 'xsmall',
  'theme': 'light',
  'content': breadcrumb
} only %}

{# Demo notes #}
{% set band_content %}
  {% include '@bolt-components-headline/headline.twig' with {
    'size': 'xlarge',
    'text': 'Breadcrumb Component in a Band ^'
  } only %}
  {% include '@bolt-components-headline/text.twig' with {
    'text': 'The above example shows a xsmall band containing the breadcrumbs.'
  } only %}
{% endset %}
{% include '@bolt-components-band/band.twig' with {
  'theme': 'none',
  'content': band_content
} only %}


{# Breadcrumb Band Stacking On Top of Featured Band #}
{% set stacked_bands %}
  {% include '@bolt-components-band/band.twig' with {
    'size': 'small',
    'theme': 'none',
    'content': breadcrumb
  } only %}
  {% set headings_stack %}
    {% include '@bolt-components-headline/eyebrow.twig' with {
      text: 'Eyebrow',
    } only %}

    {% include '@bolt-components-headline/headline.twig' with {
      text: 'Headline',
      size: 'xxxlarge',
    } only %}

    {% include '@bolt-components-headline/subheadline.twig' with {
      text: 'Subheadline',
    } only %}

    {% include '@bolt-components-headline/text.twig' with {
      text: 'Body text',
    } only %}

    {% include '@bolt-elements-button/button.twig' with {
      content: 'This is a button',
      attributes: {
        type: 'button'
      }
    } only %}
  {% endset %}
  {% include '@pl/_band--feature.twig' with {
    size: 'large',
    theme: 'none',
    primaryTeaser: headings_stack,
  } only %}
{% endset %}

{% include '@bolt-components-band/band.twig' with {
  'size': 'none',
  'theme': 'dark',
  'content': stacked_bands
} only %}

{# Demo notes #}
{% set band_content %}
  {% include '@bolt-components-headline/headline.twig' with {
    'size': 'xlarge',
    'text': 'Breadcrumb Band Stacking On Top of Featured Band ^'
  } only %}
  {% include '@bolt-components-headline/text.twig' with {
    'text': 'The above example shows a small band containing the breadcrumbs and large band containing the content. Both have theme set to none.'
  } only %}
  {% include '@bolt-components-headline/headline.twig' with {
    'size': 'large',
    'text': 'Background and Theming'
  } only %}
  {% include '@bolt-components-headline/text.twig' with {
    'text': 'There is an outer band containing the breadcrumb band and the featured band, background and theme should be set on that outer band.'
  } only %}
{% endset %}
{% include '@bolt-components-band/band.twig' with {
  'theme': 'none',
  'content': band_content
} only %}


{# Breadcrumb Band Stacking On Top of Featured Band with Outer Background Band #}
{% set stacked_bands %}
  {% include '@bolt-components-band/band.twig' with {
    'size': 'small',
    'theme': 'none',
    'content': breadcrumb
  } only %}
  {% include '@pl/_band--feature.twig' with {
    size: 'large',
    theme: 'none',
    primaryTeaser: headings_stack,
  } only %}
{% endset %}

{% include '@bolt-components-band/band.twig' with {
  'teaserPosition': 'left',
  'teaserWidth': '2/3',
  'size': 'none',
  'theme': 'dark',
  'background': {
    'opacity': 'heavy',
    'fill': 'gradient',
    'focal_point': {
      'vertical': 'center',
      'horizontal': 'right'
    },
    'content_items': [{
      'src': '/images/content/backgrounds/background-tall-3.jpg'
    }]
  },
  'content': stacked_bands
} only %}

{# Demo notes #}
{% set band_content %}
