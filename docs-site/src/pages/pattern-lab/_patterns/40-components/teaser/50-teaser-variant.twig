  <div class="u-bolt-margin-bottom-medium" style="max-width:85ch">
      <bolt-stack>
        {% include '@bolt-components-teaser/teaser.twig' with {
          layout: 'horizontal',
          signifier: square_video_thumbnail,
          show_on_hover: true,
          variant: 'card',
          headline: {
