          status: {
            views: '28k',
            locked: true,
          },
          chip_list: chip_list,
        } only %}
      </bolt-stack>
  </div>
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Teaser Card Variant',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
} only %}
