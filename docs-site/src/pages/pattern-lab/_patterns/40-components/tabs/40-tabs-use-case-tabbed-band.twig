{# Tabbed Band Variables #}
{% set tabbed_band_theme = 'light' %}
{% set tabbed_band_tabs_algin = 'center' %}
{% set tabbed_band_tabs_inset = 'off' %}
{% set tabbed_band_tabs_label_spacing = 'medium' %}
{% set tabbed_band_tabs_panel_spacing = 'medium' %}
{# Tabbed Band Variables #}

{# Demo Variables #}
{% set tab_content_1 %}
  {% set headlines %}
    {% include '@bolt-components-headline/headline.twig' with {
      text: 'Maximize Value with <strong>Next&nbsp;Best Action Intelligence</strong>',
      weight: 'regular',
      size: 'xxlarge',
      tag: 'h2'
    } only %}
    {% include '@bolt-components-headline/text.twig' with {
      text: 'Blow away your customer’s expectations - engage each individual one-to-one, letting the AI constantly adapt to their needs.',
      size: 'medium'
    } only %}

    {% set button_cta_primary %}
      {% include '@bolt-elements-button/button.twig' with {
        content: 'Call to action',
        hierarchy: 'primary',
        attributes: {
          type: 'button'
        }
      } only %}
    {% endset %}

    {% set button_cta_secondary %}
      {% include '@bolt-elements-button/button.twig' with {
        content: 'Call to action',
        hierarchy: 'secondary',
        attributes: {
          type: 'button'
        }
      } only %}
    {% endset %}

    {% include '@bolt-components-list/list.twig' with {
      display: 'inline',
      items: [
        button_cta_primary,
        button_cta_secondary,
      ]
    } only %}
  {% endset %}

  {% set image %}
    {% set device_viewer_image %}
      {% include '@bolt-elements-image/image.twig' with {
        attributes: {
          src: '/images/content/screenshots/device-screenshot--tablet.jpg',
          loading: 'lazy'
        }
      } only %}
    {% endset %}
    {% include '@bolt-components-device-viewer/device-viewer.twig' with {
      device: 'ipad',
      orientation: 'landscape',
      color: 'black',
      content: device_viewer_image,
    } only %}
  {% endset %}

  {% include '@bolt-components-grid/grid.twig' with {
    items: [
      {
        column_start: '1',
        column_span: '12 5@small',
        content: headlines,
        valign: 'center'
      },
      {
        column_start: '1 6@small',
        column_span: '12 7@small',
        content: image,
      },
    ]
  } only %}
{% endset %}
{% set tab_content_2 %}
  {% set image %}
    {% set device_viewer_image %}
      {% include '@bolt-elements-image/image.twig' with {
        attributes: {
          src: '/images/content/screenshots/device-screenshot--tablet-portrait.jpg',
          loading: 'lazy'
        }
      } only %}
    {% endset %}
    {% include '@bolt-components-device-viewer/device-viewer.twig' with {
      device: 'ipad',
      orientation: 'portrait',
      color: 'black',
      content: device_viewer_image,
    } only %}
  {% endset %}
  {% set headlines %}
    {% include '@bolt-components-headline/subheadline.twig' with {
      text: 'Maximize Value with <strong>Next&nbsp;Best Action Intelligence</strong>',
      size: 'xxlarge',
      tag: 'span'
    } only %}
    {% include '@bolt-components-headline/text.twig' with {
      text: 'Blow away your customer’s expectations - engage each individual one-to-one, letting the AI constantly adapt to their needs.',
      size: 'medium'
    } only %}

    {% set button_cta_primary %}
      {% include '@bolt-elements-button/button.twig' with {
        content: 'Call to action',
        hierarchy: 'primary',
        attributes: {
          type: 'button'
        }
      } only %}
    {% endset %}

    {% set button_cta_secondary %}
      {% include '@bolt-elements-button/button.twig' with {
        content: 'Call to action',
        hierarchy: 'secondary',
        attributes: {
          type: 'button'
        }
      } only %}
    {% endset %}

    {% include '@bolt-components-list/list.twig' with {
      display: 'inline',
      items: [
        button_cta_primary,
        button_cta_secondary,
      ]
    } only %}
  {% endset %}

  {% include '@bolt-components-grid/grid.twig' with {
    items: [
      {
        column_start: '1',
        column_span: '12 7@small',
        content: image,
      },
      {
        column_start: '1 8@small',
        column_span: '12 5@small',
        content: headlines,
        valign: 'center'
      },
    ]
  } only %}
{% endset %}
{% set tab_content_3 %}
  {% set image %}
    {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        src: '/images/content/charts/decision-hub-chart.png',
        loading: 'lazy'
      }
    } only %}
  {% endset %}

  {% set headlines %}
    {% include '@bolt-components-headline/headline.twig' with {
      text: 'Customer Decision Hub',
      size: 'xxxlarge',
      tag: 'h2'
    } only %}
    {% include '@bolt-components-headline/subheadline.twig' with {
      text: 'Infuse real-time AI into every customer engagement',
      size: 'xlarge',
      tag: 'p'
    } only %}
    {% include '@bolt-components-headline/text.twig' with {
      text: 'There’s nothing artificial about Pega’s proven AI. This always-on brain gets results. Using pragmatic artificial intelligence and decision management, you can improve response rates by up to 6X, NPS by 30 points, and get ROI as high as 500%.',
      size: 'medium'
    } only %}
    {% include '@bolt-elements-button/button.twig' with {
      content: 'Call to Action',
      attributes: {
        href: 'https://www.google.com'
      }
    } only %}
  {% endset %}

  {% include '@bolt-components-grid/grid.twig' with {
    items: [
      {
        column_start: '1',
        column_span: '12 6@small',
        content: image,
      },
      {
        column_start: '1 7@small',
        column_span: '12 6@small',
        content: headlines,
        valign: 'center'
      },
    ]
  } only %}
{% endset %}
{# Demo Variables #}

{# Tabbed Band Sections #}
{% set tabbed_band_header %}
  {% include '@bolt-components-headline/headline.twig' with {
    text: 'This is a Tabbed Band',
    size: 'xxlarge',
    align: 'center',
  } only %}
{% endset %}
{% set tabs %}
  {{ tabbed_band_header }}
  {% include '@bolt-components-tabs/tabs.twig' with {
    align: tabbed_band_tabs_algin,
    inset: tabbed_band_tabs_inset,
    label_spacing: tabbed_band_tabs_label_spacing,
    panel_spacing: tabbed_band_tabs_panel_spacing,
    panels: [
      {
        label: 'This is Tab 1',
        content: tab_content_1,
      },
      {
        label: 'This is Tab 2',
        content: tab_content_2,
      },
      {
        label: 'This is Tab 3',
        content: tab_content_3,
      }
    ]
  } only %}
{% endset %}
{# Tabbed Band Sections #}

{# Demo UI #}
<bolt-text headline>
  Tabbed Band
</bolt-text>
<bolt-text>
  A Tabbed Band is a high-level content container that utilizes a specific configuration of the Band and the Tabs components. Tabs will need the following props:
</bolt-text>
{% set code %}
inset: 'off',
label_spacing: 'medium',
panel_spacing: 'medium',
{% endset %}
{% include '@bolt-components-code-snippet/code-snippet.twig' with {
  content: code,
  lang: 'html',
  mode: 'dark',
} only %}
{# Demo UI #}

{# Tabbed Band #}
{% include '@bolt-components-band/band.twig' with {
  content: tabs,
  theme: tabbed_band_theme,
} only %}
{# Tabbed Band #}
