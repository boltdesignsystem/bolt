{% set description %}
    This component is used to contain and place floating action buttons, or FABs.
{% endset %}

{% set _shareButton %}
  {% set share_menu %}
    {% include '@bolt-components-share/share.twig' with {
      display: 'menu',
      text: 'Share this content',
      sources: [
        {
          name: 'facebook',
          attributes: {
            href: 'https://www.facebook.com/sharer/sharer.php?u=https://google.com&amp;src=sdkpreparse'
          }
        },
        {
          name: 'twitter',
          attributes: {
            href: 'https://twitter.com/intent/tweet?url=https://google.com&text=Sample%20Share%20Text&via=pega&hashtags=boltDesignSystemRocks!'
          }
        },
        {
          name: 'linkedin',
          attributes: {
            href: 'https://www.linkedin.com/shareArticle?url=https://google.com'
          }
        },
        {
          name: 'email',
          attributes: {
            href: 'mailto:?&body=Sample%20Text%20--%20https%3A//mail.com'
          }
        }
      ],
      copy_to_clipboard: {
        text_to_copy: 'https://google.com',
      },
    } only %}
  {% endset %}
  {% set share_popover_trigger %}
    {% set icon_share %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'share',
      } only %}
    {% endset %}
    {% include '@bolt-elements-button/button.twig' with {
      content: 'Share',
      icon_only: icon_share,
      attributes: {
        type: 'button'
      }
    } only %}
  {% endset %}
  {% include '@bolt-components-popover/popover.twig' with {
    trigger: share_popover_trigger,
    content: share_menu,
    spacing: 'none',
    boundary: '.js-bolt-target-teaser',
  } only %}
{% endset %}

{% set _scrollToTopButton %}
  {% set icon_up %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'chevron-up',
    } only %}
  {% endset %}

  {% include '@bolt-components-tooltip/tooltip.twig' with {
    content: 'Back to top',
    trigger: include('@bolt-elements-button/button.twig', {
      content: 'Back to top',
      icon_only: icon_up,
      attributes: {
        href: '#components-floating-action-buttons-docs',
      },
    }),
  } only %}
{% endset %}

{% set _placeholderSecondary %}
  {% set icon_sample %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'rocket',
    } only %}
  {% endset %}

  {% include '@bolt-components-tooltip/tooltip.twig' with {
    content: 'Placeholder Button',
    trigger: include('@bolt-elements-button/button.twig', {
      content: 'Placeholder Button',
      hierarchy: 'secondary',
      icon_only: icon_sample,
      attributes: {
        type: 'button'
      },
    }),
  } only %}
{% endset %}

{% set _content %}
  {% include '@bolt-components-floating-action-buttons/floating-action-buttons-item.twig' with {
    content: _shareButton,
  } only %}
  {% include '@bolt-components-floating-action-buttons/floating-action-buttons-item.twig' with {
    content: _scrollToTopButton,
  } only %}
  {% include '@bolt-components-floating-action-buttons/floating-action-buttons-item.twig' with {
    content: _placeholderSecondary,
  } only %}
  {% include '@bolt-components-floating-action-buttons/floating-action-buttons-item.twig' with {
    content: _placeholderSecondary,
  } only %}
  {% include '@bolt-components-floating-action-buttons/floating-action-buttons-item.twig' with {
    content: _placeholderSecondary,
  } only %}
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>This is the demo you see floating in the <code>bottom-right</code>.</bolt-li>
    <bolt-li>It has the default <code>visible_items</code> value of <code>2</code>.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
{% include '@bolt-components-floating-action-buttons/floating-action-buttons.twig' with {
  content: _content,
} only %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% set _item_visible %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'This is a button',
  } only %}
{% endset %}

{% set _item_hidden %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'This is a button',
    hierarchy: 'secondary'
  } only %}
{% endset %}

{% set _content %}
  {% include '@bolt-components-floating-action-buttons/floating-action-buttons-item.twig' with {
    content: _item_visible,
  } only %}
  {% include '@bolt-components-floating-action-buttons/floating-action-buttons-item.twig' with {
    content: _item_hidden,
  } only %}
{% endset %}

{% include '@bolt-components-floating-action-buttons/floating-action-buttons.twig' with {
  content: _content,
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Basic Floating Action Buttons',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
} only %}
