{% set description %}
  The <code>hide_on_load</code> prop allows floating action buttons to be hidden on initial page load.
{% endset %}

{% set notes %}
  Only use this prop if you are using JavaScript to build more conditions on when/how FAB should show.
{% endset %}

{% set demo %}
  {% set icon_external_link %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'external-link',
    } only %}
  {% endset %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'View full page demo',
    icon_after: icon_external_link,
    attributes: {
      href: link['components-floating-action-buttons-demo-hide-on-load'],
      target: '_blank',
      rel: 'noopener'
    }
  } only %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% include '@bolt-components-floating-action-buttons/floating-action-buttons.twig' with {
  content: content,
  hide_on_load: true,
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Hide FAB on page load',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
} only %}
