{% set description %}
    There are 2 CSS custom properties available for use to further customize the Floating Action Buttons. You can also use <code>hide_on_load: 'true'</code> if you plan on setting your own way to load this component.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>
      <strong>--c-bolt-floating-action-buttons-offset-x</strong>
      <bolt-ul>
        <bolt-li>Set a pixel value to move the Floating Action Buttons to the left.</bolt-li>
      </bolt-ul>
    </bolt-li>
    <bolt-li>
      <strong>--c-bolt-floating-action-buttons-offset-y</strong>
      <bolt-ul>
        <bolt-li>if <code>placement</code> is set to <code>right-start</code>, the Floating Action Buttons will move down.</bolt-li>
        <bolt-li>if <code>placement</code> is set to <code>right-end</code>, the Floating Action Buttons will move up.</bolt-li>
      </bolt-ul>
    </bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'View full page demo',
    attributes: {
      href: link['components-floating-action-buttons-demo-use-case-offsets'],
      target: '_blank',
      rel: 'noopener'
    }
  } only %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% include '@bolt-components-floating-action-buttons/floating-action-buttons.twig' with {
  content: _content,
  hide_on_load: 'true',
  attributes: {
    style: '--c-bolt-floating-action-buttons-offset-x: 100px;'
  }
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Floating Action Buttons Advanced Use',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
} only %}
