{% set description %}
  The <code>show_on_scroll</code> prop allows floating action buttons to show on scroll.
{% endset %}

{% set notes %}
  Use either <code>px</code> or <code>%</code> values to indicate the exact scrolled position when the floating action buttons should fade in.
{% endset %}

{% set demo %}
  {% set icon_external_link %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'external-link',
    } only %}
  {% endset %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'View full page demo',
    icon_after: icon_external_link,
    attributes: {
      href: link['components-floating-action-buttons-demo-show-on-scroll'],
      target: '_blank',
      rel: 'noopener'
    }
  } only %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% include '@bolt-components-floating-action-buttons/floating-action-buttons.twig' with {
  content: content,
  show_on_scroll: '100px',
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Show FAB on scroll',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
} only %}
