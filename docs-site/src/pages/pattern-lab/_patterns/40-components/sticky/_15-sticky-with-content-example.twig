{% embed "@bolt-components-band/band.twig" with {
  size: "large",
  theme: "dark",
  full_bleed: true,
  tag: "figure",
  attributes: {
    id: [
      "visualization-and-simulation"
    ]
  }
} %}
  {% block band_background %}
    {% include "@bolt-components-background/background.twig" with {
      "opacity": "medium",
      "fill": "color",
      "content_items": [
        {
          "pattern": "image",
          "src": "/images/content/backgrounds/background-tall-1.jpg"
        }
      ]
    } only %}
  {% endblock band_background %}

  {% block band_content %}
    {% grid with {
        attributes: {
          class: [
            "o-bolt-grid--flex",
            "o-bolt-grid--middle",
            "o-bolt-grid--large",
            "o-bolt-grid--matrix"
          ]
        }
      } %}

      {% cell with {
        attributes: {
          class: [
            "u-bolt-width-1/1",
            "u-bolt-width-2/3@small"
          ]
        }
      } %}
        {% include "@bolt-components-headline/headline.twig" with {
          text: "Visualization & Simulation",
          size: "xxxlarge",
          tag: "h1"
        } only %}

        {% include "@bolt-components-headline/text.twig" with {
          text: "Continuously improve results by visualizing how future adjustments to your strategies can impact business performance. Simulate and test your ideas, evaluate the results using intuitive views, and then deploy optimal alterations."
        } only %}

        {% include "@bolt-elements-button/button.twig" with {
          content: "View the data sheet",
          attributes: {
            type: 'button'
          }
        } only %}
      {% endcell %}
    {% endgrid %}

  {% endblock band_content %}
{% endembed %}

