{% set schema = bolt.data.components['@bolt-components-dialog'].schema %}

{% set description %}
    The dialog container's spacing can be adjusted by the <code>spacing</code> prop. The default is set to <code>medium</code>.
{% endset %}

{% set notes %}
{% endset %}

{% set demo %}
<bolt-list display="inline" spacing="small">
{% for spacing in schema.properties.spacing.enum %}
  <bolt-list-item>
  {% include '@bolt-elements-button/button.twig' with {
    content: spacing|title ~ ' Spacing',
    attributes: {
      type: 'button',
      'data-dialog-trigger': 'dialog-spacing-' ~ loop.index0,
    }
  } only %}

  {% include '@bolt-components-dialog/dialog.twig' with {
    content: 'This is a dialog component.',
    spacing: spacing,
    attributes: {
      id: 'dialog-spacing-' ~ loop.index0
    },
  } only %}
  </bolt-list-item>
{% endfor %}
</bolt-list>
{% endset %}

{% set twig_markup %}{% verbatim %}
{% include '@bolt-components-dialog/dialog.twig' with {
  spacing: 'full',
  ...
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Dialog Spacing',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup
} only %}
