{% include '@pl/_dialog-warning.twig' %}

{% set description %}
  Layouts and grids can be used within a dialog to create complex design.
{% endset %}

{% set notes %}
  While this is possible to do, we do not encourage building complex layouts within a dialog. Consider other design patterns before resorting to this.
{% endset %}

{% set demo %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'Complex layout',
    attributes: {
      type: 'button',
      'data-bolt-dialog-target': '#dialog-layout',
    }
  } only %}

  {% set layout %}
    {% set icon_facebook %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'facebook-solid',
        size: 'medium',
      } only %}
    {% endset %}
    {% set icon_twitter %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'twitter-solid',
        size: 'medium',
      } only %}
    {% endset %}
    {% set icon_linkedin %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'linkedin-solid',
        size: 'medium',
      } only %}
    {% endset %}
    {% set icon_email %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'email',
        size: 'medium',
      } only %}
    {% endset %}
    {% set icon_more %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'more',
      } only %}
    {% endset %}
    {% set icon_share %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'share',
      } only %}
    {% endset %}
    {% set icon_pencil %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'pencil',
        size: 'medium',
      } only %}
    {% endset %}
    {% set icon_pega_setting %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'pega-setting',
        size: 'medium',
      } only %}
    {% endset %}
    {% set icon_info_circle %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'info-circle',
      } only %}
    {% endset %}
    {% set icon_download %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'download',
      } only %}
    {% endset %}

    {% set actions %}
      {% set popover_trigger %}
        {% include '@bolt-elements-button/button.twig' with {
          content: 'Share profile',
          icon_only: icon_share,
          hierarchy: 'tertiary',
          border_radius: 'full',
          size: 'xsmall',
          attributes: {
            type: 'button',
          }
        } only %}
      {% endset %}
      {% set popover_menu %}
        {% include '@bolt-components-menu/menu.twig' with {
          spacing: 'medium',
          title: 'Share profile',
          items: [
            {
              content: 'Facebook',
              icon_before: icon_facebook,
              url: 'https://www.facebook.com/sharer/sharer.php?u=https://boltdesignsystem.com&amp;src=sdkpreparse',
              attributes: {
                target: '_blank',
                rel: 'noopener'
              }
            },
            {
              content: 'Twitter',
              icon_before: icon_twitter,
              url: 'https://twitter.com/intent/tweet?url=https://boltdesignsystem.com&text=Sample%20Share%20Text&via=pega&hashtags=boltDesignSystemRocks!',
              attributes: {
                target: '_blank',
                rel: 'noopener'
              }
            },
            {
              content: 'LinkedIn',
              icon_before: icon_linkedin,
              url: 'https://www.linkedin.com/shareArticle?url=https://boltdesignsystem.com',
              attributes: {
                target: '_blank',
                rel: 'noopener'
              }
            },
            {
              content: 'Email',
              icon_before: icon_email,
              url: 'mailto:?&body=Sample%20Text%20--%20https%3A//boltdesignsystem.com',
              attributes: {
                target: '_blank',
                rel: 'noopener'
              }
            },
          ]
        } only %}
      {% endset %}
      {% include '@bolt-components-popover/popover.twig' with {
        trigger: popover_trigger,
        content: popover_menu,
        spacing: 'none',
        placement: 'bottom-end',
        trigger_event: 'hover',
      } only %}

      {% set popover_trigger %}
        {% include '@bolt-elements-button/button.twig' with {
          content: 'More options',
          icon_only: icon_more,
          hierarchy: 'tertiary',
          border_radius: 'full',
          size: 'xsmall',
          attributes: {
            type: 'button',
          }
        } only %}
      {% endset %}
      {% set popover_menu %}
        {% include '@bolt-components-menu/menu.twig' with {
          spacing: 'medium',
          title: 'More options',
          items: [
            {
              content: 'Edit profile',
              icon_before: icon_pencil,
            },
            {
              content: 'Settings',
              icon_before: icon_pega_setting,
            },
          ]
        } only %}
      {% endset %}
      {% include '@bolt-components-popover/popover.twig' with {
        trigger: popover_trigger,
        content: popover_menu,
        spacing: 'none',
        placement: 'bottom-end',
        trigger_event: 'hover',
      } only %}
    {% endset %}

    {% set chips %}
      {% include '@bolt-components-chip/chip.twig' with {
        text: 'Member since 2017',
        border_radius: 'small',
      } only %}
      {% include '@bolt-components-chip/chip.twig' with {
        text: 'Developer',
        color: 'orange',
        border_radius: 'small',
      } only %}
      {% include '@bolt-components-chip/chip.twig' with {
        text: 'Available for hire',
        color: 'teal',
        border_radius: 'small',
      } only %}
    {% endset %}

    {% include '@bolt-components-profile/profile.twig' with {
      name: {
        content: '<strong>Toni Kukoc</strong> (@thepinkpanther)',
        tag: 'h1',
      },
      job_title: 'Lead System Architect, Pegasystems Inc.',
      location: 'Croatia',
      actions: actions,
      chips: chips,
      stats: [
        {
          number: '15',
          label: 'Achievements',
          attributes: {
            type: 'button',
            'data-bolt-modal-target': '.js-bolt-modal-all-achievements',
          },
        },
        {
          number: '3k',
          label: 'Contributions',
          attributes: {
            type: 'button',
            'data-bolt-modal-target': '.js-bolt-modal-all-achievements',
          },
        },
      ],
      attributes: {
        class: 't-bolt-gray-xlight'
      }
    } only %}

    {% set layout_content %}
      {% set achievements %}
        {% set section_content %}
          {% set placeholder_certification %}
            <small class="u-bolt-block u-bolt-text-align-center u-bolt-margin-bottom-xxsmall">
              {% set image %}
                {% include '@bolt-elements-image/image.twig' with {
                  attributes: {
                    src: '/images/content/icons/cert.png',
                    sizes: '25vw',
                    width: 180,
                    height: 180,
                    loading: 'lazy',
                  },
                } only %}
              {% endset %}
              {% set tooltip_content %}
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptas, repellat ea? Eius veritatis et velit, sed, vero vitae tenetur blanditiis modi assumenda laboriosam alias. Harum ducimus nam minima error autem.
              {% endset %}
              {% include '@bolt-components-tooltip/tooltip.twig' with {
                trigger: image,
                content: tooltip_content,
                placement: 'bottom',
              } only %}
              <br>
              <strong>Zertifizierter Kundenservice-Systemarchitekt</strong>
              <br>
              Version 7.2 | Nov 7, 2021
            </small>
            {% set download_button %}
              {% set tooltip_trigger %}
                {% include '@bolt-elements-button/button.twig' with {
                  content: 'Download certificate',
                  icon_only: icon_download,
                  hierarchy: 'tertiary',
                  size: 'xsmall',
                  attributes: {
                    href: '#!',
                    download: true,
                  }
                } only %}
              {% endset %}
              {% set tooltip_content %}
                Download certificate
              {% endset %}
              {% include '@bolt-components-tooltip/tooltip.twig' with {
                trigger: tooltip_trigger,
                content: tooltip_content,
                placement: 'bottom',
              } only %}
            {% endset %}
            {% set share_button %}
              {% set popover_trigger %}
                {% include '@bolt-elements-button/button.twig' with {
                  content: 'Share certificate',
                  icon_only: icon_share,
                  hierarchy: 'tertiary',
                  size: 'xsmall',
                  attributes: {
                    type: 'button',
                  }
                } only %}
              {% endset %}
              {% set popover_menu %}
                {% include '@bolt-components-menu/menu.twig' with {
                  spacing: 'medium',
                  title: 'Share certificate',
                  items: [
                    {
                      content: 'Facebook',
                      icon_before: icon_facebook,
                      url: 'https://www.facebook.com/sharer/sharer.php?u=https://boltdesignsystem.com&amp;src=sdkpreparse',
                      attributes: {
                        target: '_blank',
                        rel: 'noopener'
                      }
                    },
                    {
                      content: 'Twitter',
                      icon_before: icon_twitter,
                      url: 'https://twitter.com/intent/tweet?url=https://boltdesignsystem.com&text=Sample%20Share%20Text&via=pega&hashtags=boltDesignSystemRocks!',
                      attributes: {
                        target: '_blank',
                        rel: 'noopener'
                      }
                    },
                    {
                      content: 'LinkedIn',
                      icon_before: icon_linkedin,
                      url: 'https://www.linkedin.com/shareArticle?url=https://boltdesignsystem.com',
                      attributes: {
                        target: '_blank',
                        rel: 'noopener'
                      }
                    },
                    {
                      content: 'Email',
                      icon_before: icon_email,
                      url: 'mailto:?&body=Sample%20Text%20--%20https%3A//boltdesignsystem.com',
                      attributes: {
                        target: '_blank',
                        rel: 'noopener'
                      }
                    },
                  ]
                } only %}
              {% endset %}
              {% include '@bolt-components-popover/popover.twig' with {
                trigger: popover_trigger,
                content: popover_menu,
                spacing: 'none',
                trigger_event: 'hover',
                placement: 'bottom',
              } only %}
            {% endset %}
            {% include '@bolt-components-list/list.twig' with {
              display: 'inline',
              align: 'center',
              items: [
                download_button,
                share_button,
              ],
            } only %}
          {% endset %}
          {% set placeholder_badge %}
            <div class="u-bolt-text-align-center">
              {% set image %}
                {% include '@bolt-elements-image/image.twig' with {
                  attributes: {
                    src: '/images/content/icons/badge.png',
                    sizes: '18vw',
                    width: 150,
                    height: 150,
                    loading: 'lazy',
                  },
                } only %}
              {% endset %}
              {% set tooltip_content %}
                Senior System Architect<br><small>Version 7.2 | Nov 7, 2021</small>
              {% endset %}
              {% include '@bolt-components-tooltip/tooltip.twig' with {
                trigger: image,
                content: tooltip_content,
                placement: 'bottom',
              } only %}
            </div>
          {% endset %}

          {% include '@bolt-components-headline/text.twig' with {
            text: 'Most Recent Certifications',
            tag: 'h3',
            size: 'medium',
            weight: 'bold',
            attributes: {
              class: 'u-bolt-margin-bottom-xsmall',
            },
          } only %}
          <bolt-stack>
            {% include '@bolt-components-grid/grid.twig' with {
              gutter: 'small',
              row_gutter: 'small',
              items: [
                {
                  column_span: '6 4@small',
                  content: placeholder_certification,
                },
                {
                  column_span: '6 4@small',
                  content: placeholder_certification,
                },
                {
                  column_span: '6 4@small',
                  content: placeholder_certification,
                },
              ],
            } only %}
          </bolt-stack>
          {% include '@bolt-components-headline/text.twig' with {
            text: 'Most Recent Badges',
            tag: 'h3',
            size: 'medium',
            weight: 'bold',
            attributes: {
              class: 'u-bolt-margin-bottom-xsmall',
            },
          } only %}
          <bolt-stack>
            {% include '@bolt-components-grid/grid.twig' with {
              gutter: 'small',
              row_gutter: 'small',
              items: [
                {
                  column_span: '4 3@xsmall',
                  content: placeholder_badge,
                },
                {
                  column_span: '4 3@xsmall',
                  content: placeholder_badge,
                },
                {
                  column_span: '4 3@xsmall',
                  content: placeholder_badge,
                },
                {
                  column_span: '4 3@xsmall',
                  content: placeholder_badge,
                },
              ],
            } only %}
          </bolt-stack>
        {% endset %}
        {% include '@bolt-components-info-section/info-section.twig' with {
          label: {
            content: 'Achievements',
            tag: 'h2',
          },
          content: section_content,
          details_link: {
            label: 'View all achievements',
            attributes: {
              href: 'https://pega.com',
            },
          },
          open: true,
          attributes: {
            class: [
              't-bolt-white',
            ],
          },
        } only %}
      {% endset %}
      {% include '@bolt-layouts-layout/layout-item.twig' with {
        content: achievements,
      } only %}
    {% endset %}

    {% include '@bolt-layouts-layout/layout.twig' with {
      content: layout_content,
      padding_top: 'medium',
      padding_bottom: 'none',
    } only %}
  {% endset %}
  {% set footer_content %}
    {% include '@bolt-elements-button/button.twig' with {
      content: 'View full profile',
      display: 'block',
      attributes: {
        href: 'https://pega.com',
      },
    } only %}
  {% endset %}
  {% set dialog_content %}
    {% include '@bolt-components-dialog/dialog-body.twig' with {
      content: layout,
    } only %}
    {% include '@bolt-components-dialog/dialog-footer.twig' with {
      content: footer_content,
    } only %}
  {% endset %}
  {% include '@bolt-components-dialog/dialog.twig' with {
    content: dialog_content,
    attributes: {
      id: 'dialog-layout'
    },
  } only %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% set layout %}
  {% include '@bolt-layouts-layout/layout.twig' with {
    content: 'Complex layout goes here',
    padding_top: 'medium',
    padding_bottom: 'none',
  } only %}
{% endset %}
{% set footer_content %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'View full profile',
    display: 'block',
    attributes: {
      href: 'https://pega.com',
    },
  } only %}
{% endset %}
{% set dialog_content %}
  {% include '@bolt-components-dialog/dialog-body.twig' with {
    content: layout,
  } only %}
  {% include '@bolt-components-dialog/dialog-footer.twig' with {
    content: footer_content,
  } only %}
{% endset %}

{% include '@bolt-components-dialog/dialog.twig' with {
  content: dialog_content,
  attributes: {
    id: 'dialog-layout'
  },
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Dialog with Complex Layouts',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
} only %}
