{% set description %}
    A description of the component and what it is used for.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>List out important information about this component and its usage.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
{% include '@bolt-elements-button/button.twig' with {
  content: 'Persistent Dialog',
  attributes: {
    type: 'button',
    'data-dialog-trigger': 'dialog-4',
  }
} only %}

{% set _return_element %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'No thanks! Return to Dialog Demo.',
    attributes: {
      href: link['viewall-components-dialog']
    }
  } only %}
{% endset %}

{% include '@bolt-components-dialog/dialog.twig' with {
  content: 'This is a dialog component.',
  persistent: true,
  persistent_return_element: _return_element,
  attributes: {
    id: 'dialog-4'
  },
} only %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% set _return_element %}
  {% include '@bolt-elements-link/link.twig' with {
    content: 'No thanks! Return to last page.',
    attributes: {
      href: 'google.com'
    }
  } only %}
{% endset %}

{% include '@bolt-components-dialog/dialog.twig' with {
  persistent: true,
  persistent_return_element: _return_element,
  ...
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Persistent Dialog',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup
} only %}
