<bolt-text headline>
  Progress bar in toolbar
</bolt-text>
{% set progress_1 %}
  {% embed '@bolt-components-toolbar/toolbar.twig' with {
    size: 'xsmall',
    theme: 'none',
    gradientName: 'navy',
  } %}
    {% block content_before %}
      {% include '@bolt-components-progress-bar/progress-bar.twig' with {
        value: 65,
      } only %}
    {% endblock %}
  {% endembed %}
{% endset %}

{% set progress_2 %}
  {% embed '@bolt-components-toolbar/toolbar.twig' with {
    size: 'xsmall',
    theme: 'none',
    gradientName: 'orange',
  } %}
    {% block content_before %}
      {% include '@bolt-components-progress-bar/progress-bar.twig' with {
        value: 65,
      } only %}
    {% endblock %}
  {% endembed %}
{% endset %}

{% set progress_3 %}
  {% embed '@bolt-components-toolbar/toolbar.twig' with {
    size: 'xsmall',
    theme: 'none',
    gradientName: 'pink',
  } %}
    {% block content_before %}
      {% include '@bolt-components-progress-bar/progress-bar.twig' with {
        value: 65,
      } only %}
    {% endblock %}
  {% endembed %}
{% endset %}

{% include '@bolt-components-grid/grid.twig' with {
  items: [
    {
      column_start: '1',
      column_span: '12 4@small',
      content: progress_1,
    },
    {
      column_start: '1 5@small',
      column_span: '12 4@small',
      content: progress_2,
    },
    {
      column_start: '1 9@small',
      column_span: '12 4@small',
      content: progress_3,
    },
  ]
} only %}
