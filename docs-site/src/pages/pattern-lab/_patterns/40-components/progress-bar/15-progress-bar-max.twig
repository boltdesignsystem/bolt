
{% set progress_1 %}
  <bolt-text headline>
    Set max to 100
  </bolt-text>
  <bolt-text>
    When using percent format for value.
  </bolt-text>
  {% include '@bolt-components-progress-bar/progress-bar.twig' with {
    value: 65,
    valueFormat: 'percent',
    max: 100,
  } only %}
{% endset %}
{% set progress_2 %}
  <bolt-text headline>
    Set max to any positive number
  </bolt-text>
  <bolt-text>
    When using step format for value.
  </bolt-text>
  {% include '@bolt-components-progress-bar/progress-bar.twig' with {
    value: 7,
    valueFormat: 'step',
    max: 12,
  } only %}
{% endset %}

{% include '@bolt-components-grid/grid.twig' with {
  items: [
    {
      column_start: '1',
      column_span: '12 6@small',
      content: progress_1,
    },
    {
      column_start: '1 7@small',
      column_span: '12 6@small',
      content: progress_2,
    },
  ]
} only %}
