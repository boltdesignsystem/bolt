{% set schema = bolt.data.components['@bolt-components-progress-bar'].schema %}

<bolt-grid gutter="medium" row-gutter="medium">
  {% for valueFormat in schema.properties.valueFormat.enum %}
    {% set progressbar %}
      <bolt-text headline>
        {{ valueFormat|capitalize }} format
      </bolt-text>
      {% include '@bolt-components-progress-bar/progress-bar.twig' with {
        value: 65,
        valueFormat: valueFormat,
      } only %}
    {% endset %}
    {% if valueFormat == 'percent' %}
      <bolt-grid-item column-start="1" column-span="12 6@small">
        {{ progressbar }}
      </bolt-grid-item>
    {% else %}
      <bolt-grid-item column-start="1 7@small" column-span="12 6@small">
        {{ progressbar }}
      </bolt-grid-item>
    {% endif %}
  {% endfor %}
</bolt-grid>
