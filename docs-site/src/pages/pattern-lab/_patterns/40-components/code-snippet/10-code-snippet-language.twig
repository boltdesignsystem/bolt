{% set notes %}
  <bolt-ol>
    <bolt-li>Only the languages listed in the <a href="{{ link['viewall-components-code-snippet'] }}?selected-tab=schema" class="e-bolt-text-link">schema</a> are supported. Contact the Design System team to request additional language support.</bolt-li>
    <bolt-li>Twig Code Snippets must be wrapped in <code>{{ '{% verbatim %}' }}</code> tag or they will be parsed by Twig itself.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
{% set css_code %}
.my-css {
  display: block;
}
{% endset %}

{% set js_code %}
import { props } from '@bolt/core-v3.x/utils';
{% endset %}

{% set twig_code %}{% verbatim %}
{% include '@bolt-components-banner/banner.twig' with {
  content: 'This is the banner content.'
} only %}
{% endverbatim %}{% endset %}

  {% include '@bolt-components-code-snippet/code-snippet.twig' with {
    content: css_code,
    lang: 'css',
  } only %}

  {% include '@bolt-components-code-snippet/code-snippet.twig' with {
    content: js_code,
    lang: 'js',
  } only %}

  {% include '@bolt-components-code-snippet/code-snippet.twig' with {
    content: twig_code,
    lang: 'twig',
  } only %}
{% endset %}

{# Note: we use `raw` tag here because we don't want Twig to parse `verbatim`. Normally, use `verbatim`, not `raw`. #}
{% set twig_markup %}
{% raw %}
{% set css_code %}
.my-css {
  display: block;
}
{% endset %}

{% set js_code %}
import { props } from '@bolt/core-v3.x/utils';
{% endset %}

{% set twig_code %}{% verbatim %}
{% include '@bolt-components-banner/banner.twig' with {
  content: 'This is the banner content.'
} only %}{% endverbatim %}{% endset %}

{% include '@bolt-components-code-snippet/code-snippet.twig' with {
  content: css_code,
  lang: 'css',
} only %}

{% include '@bolt-components-code-snippet/code-snippet.twig' with {
  content: js_code,
  lang: 'js',
} only %}

{% include '@bolt-components-code-snippet/code-snippet.twig' with {
  content: twig_code,
  lang: 'twig',
} only %}
{% endraw %}
{% endset %}

{% set html_markup %}
<div class="c-bolt-code-snippet c-bolt-code-snippet--light" data-bolt-lang="js">
<pre><code>import { props } from '@bolt/core-v3.x/utils';</code></pre>
</div>
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Code Snippet Language',
  description: 'The Code Snippet will be syntax highlighted based on the chosen language.',
  demo: demo,
  notes: notes,
  twig_markup: twig_markup,
  html_markup: html_markup,
} only %}
