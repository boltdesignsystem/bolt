{% extends "@pl/_text-doc-template.twig" %}
{% import "@pl/_text-doc-template.twig" as text_code %}

{% block content %}
  <bolt-text headline>
    Font-style Usage
  </bolt-text>
  <bolt-text>
    <code>&lt;bolt-text&gt;</code> has font-style options to indicate simple emphasis.
  </bolt-text>
  {% for font_style in schema.properties["font-style"].enum %}

{# Indents are removed to eliminate unnecessary white space when the code sample renders. #}
{% set text_demo %}
<bolt-text font-style="{{ font_style }}">
  This text has its font-style prop defined as: {{ font_style }}
</bolt-text>
{% endset %}

    {% include text_code.code_example(text_demo, true) %}
    {% include '@bolt-components-code-snippet/code-snippet.twig' with {
      content: text_demo,
      lang: 'html',
      mode: 'dark',
    } only %}
  {% endfor %}
{% endblock %}
