{% extends "@pl/_text-doc-template.twig" %}
{% import "@pl/_text-doc-template.twig" as text_code %}

{% block content %}
  <bolt-text headline>
    Align Usage
  </bolt-text>
  <bolt-text>
    <code>&lt;bolt-text&gt;</code> can be aligned horizontally. This only applies if display is set to block.
  </bolt-text>
  {% for align in schema.properties.align.enum %}

{# Indents are removed to eliminate unnecessary white space when the code sample renders. #}
{% set text_demo %}
<bolt-text display="block" align="{{ align }}">
  This text has its align prop defined as: {{ align }}
</bolt-text>
{% endset %}

    {% include text_code.code_example(text_demo, true) %}
    {% include '@bolt-components-code-snippet/code-snippet.twig' with {
      content: text_demo,
      lang: 'html',
      mode: 'dark',
    } only %}
  {% endfor %}
{% endblock %}
