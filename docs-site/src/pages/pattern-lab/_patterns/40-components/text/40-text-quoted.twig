{% extends "@pl/_text-doc-template.twig" %}
{% import "@pl/_text-doc-template.twig" as text_code %}

{% block content %}
  <bolt-text headline>
    Quote Usage
  </bolt-text>
  <bolt-text>
    <code>&lt;bolt-text&gt;</code> can be turned into a quote by using the <code>quoted</code> boolean prop.
  </bolt-text>

{# Indents are removed to eliminate unnecessary white space when the code sample renders. #}
{% set text_demo %}
<bolt-text quoted>
  This text is quoted.
</bolt-text>
<bolt-text headline quoted>
  This headline text is also quoted.
</bolt-text>
{% endset %}

  {% include text_code.code_example(text_demo, true) %}
  {% include '@bolt-components-code-snippet/code-snippet.twig' with {
    content: text_demo,
    lang: 'html',
    mode: 'dark',
  } only %}
{% endblock %}
