{% extends "@pl/_text-doc-template.twig" %}
{% import "@pl/_text-doc-template.twig" as text_code %}

{% set text_demo %}
<bolt-text>
  This is text.
</bolt-text>
{% endset %}

{% block content %}
  <bolt-text headline>
    Web Component Usage
  </bolt-text>
  <bolt-text>
    Bolt Text is a web component, you can simply use <code>&lt;bolt-text&gt;</code> in the markup to make it render.
  </bolt-text>
  {% include text_code.code_example(text_demo, true) %}
  {% include '@bolt-components-code-snippet/code-snippet.twig' with {
    content: text_demo,
    lang: 'html',
    mode: 'dark',
  } only %}
{% endblock %}
