{% extends "@pl/_text-doc-template.twig" %}
{% import "@pl/_text-doc-template.twig" as text_code %}

{% block content %}
  <bolt-text headline>
    Font-weight Usage
  </bolt-text>
  <bolt-text>
    <code>&lt;bolt-text&gt;</code> has font-weight options to indicate emphasis hierarchy.
  </bolt-text>
  {% for font_weight in schema.properties["font-weight"].enum %}

{# Indents are removed to eliminate unnecessary white space when the code sample renders. #}
{% set text_demo %}
<bolt-text font-weight="{{ font_weight }}">
  This text has its font-weight prop defined as: {{ font_weight }}
</bolt-text>
{% endset %}

    {% include text_code.code_example(text_demo, true) %}
    {% include '@bolt-components-code-snippet/code-snippet.twig' with {
      content: text_demo,
      lang: 'html',
      mode: 'dark',
    } only %}
  {% endfor %}
{% endblock %}
