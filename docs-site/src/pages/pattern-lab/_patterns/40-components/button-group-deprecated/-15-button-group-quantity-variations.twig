{% set exampleButtonQuantities = [1, 2, 3, 4, 5] %}

{% set example_button %}
  {% include "@bolt-components-button/button.twig" with {
    text: "Learn More",
    hierarchy: "primary"
  } only %}
{% endset %}

{% for quantity in exampleButtonQuantities %}
  {% set buttons = [] %}
  {% for i in 1..quantity %}
    {% set buttons = buttons|merge([example_button]) %}
  {% endfor %}

  <p>{{ quantity }} Button(s)</p>
  {% include "@bolt-components-button-group/button-group.twig" with {
    buttons: buttons
  } %}
{% endfor %}
