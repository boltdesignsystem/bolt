{% set description %}
    A description of the component and what it is used for.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>List out important information about this component and its usage.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
{% set _content %}
  <bolt-text headline tag="h1" font-size="xxxlarge">
    Billboard Title
  </bolt-text>
{% endset %}
{% set _image %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      alt: 'Image alt text',
      src: '/images/heros/hero-foreground--yellow.png',
      loading: 'eager',
      width: 415,
      style: 'display: block;'
    },
  } only %}
{% endset %}
{% include '@bolt-components-billboard/billboard.twig' with {
  content: _content,
  supplement: _image,
  supplement_valign: 'end-offset',
} only %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% include '@bolt-components-billboard/billboard.twig' with {
  content: _content
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Basic Billboard',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
} only %}
