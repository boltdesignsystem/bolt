{% set schema = bolt.data.components["@bolt-components-billboard"].schema %}

{% set description %}
    A description of the component and what it is used for.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>List out important information about this component and its usage.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
{% for size in schema.properties.size.enum %}
  {% set _content %}
    <bolt-text headline tag="h1" font-size="xxxlarge">
      Billboard Size {{ size|title }}
    </bolt-text>
    <bolt-text>
      Et in dolor qui dolore irure magna tempor ex esse non.
    </bolt-text>
  {% endset %}
  {% include '@bolt-components-billboard/billboard.twig' with {
    content: _content,
    theme: 'dark',
    size: size
  } only %}
  <br>
{% endfor %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% include '@bolt-components-billboard/billboard.twig' with {
  content: _content
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Size Billboard',
  description: description,
  demo: demo,
  twig_markup: twig_markup,
} only %}
