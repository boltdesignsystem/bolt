{% set description %}
    A description of the component and what it is used for.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>List out important information about this component and its usage.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
{% set _content %}
  {% include '@bolt-elements-image/image.twig' with {
      attributes: {
        src: "/images/heros/hero-foreground--orange--logo.svg",
        alt: "PegaWorld iNspire logo",
        loading: "eager",
        class: [
          "u-bolt-margin-bottom-medium",
        ]
      }
  } only %}
  <bolt-text font-size="xlarge" class="u-bolt-line-length-medium">
    Boston Convention & Exhibition Center May&nbsp;31&nbsp;-&nbsp;June&nbsp;2,&nbsp;2020
  </bolt-text>
  {% include '@bolt-elements-button/button.twig' with {
    content: "See full agenda",
    hierarchy: "secondary",
    attributes: {
      type: 'button'
    }
  } only %}
{% endset %}
{% set _image %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      alt: 'Image alt text',
      src: '/images/heros/hero-foreground--indigo.png',
      width: 375,
      style: 'display: block;',
      class: [
        'u-bolt-margin-left-auto',
        'u-bolt-margin-right-auto'
      ]
    },
  } only %}
{% endset %}
{% set _bg_image %}
  {% include '@bolt-elements-image/image.twig' with {
    background: true,
    attributes: {
      src: '/images/heros/hero-background--indigo.jpg',
      sizes: '100vw',
    },
  } only %}
{% endset %}
{% include '@bolt-components-billboard/billboard.twig' with {
  content: _content,
  image: _image,
  background_image: _bg_image,
  image_valign: 'start-offset',
  theme: 'dark'
} only %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% include '@bolt-components-billboard/billboard.twig' with {
  content: _content
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Image Vertical Align Billboard',
  description: description,
  demo: demo,
  twig_markup: twig_markup,
} only %}
