{% set description %}
  A representation of a single input type radio.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>Add <code>displayType: 'inline-radio'</code> in the label include statement.</bolt-li>
    <bolt-li>Make sure to set input <code>type</code> as <code>radio</code></bolt-li>
    <bolt-li>Make the input label cklickable by adding a <code>for</code> attribute to the label element and an <code>id</code> (with the same name as <code>for</code> attribute) to the input radio element.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
{# input radio #}
{% set label %}
  {% include '@bolt-components-form/form-label.twig' with {
    title: 'Single Radio',
    displayType: 'inline-radio',
    attributes: {
      for: 'radio-id',
      name: 'radio-name'
    },
  } only %}
{% endset %}
{% set input %}
  {% include '@bolt-components-form/form-input.twig' with {
    attributes: {
      type: 'radio',
      id: 'radio-id',
    },
  } only %}
{% endset %}
{% include '@bolt-components-form/form-element.twig' with {
  label: label,
  children: input,
  attributes: {
    class: 'u-bolt-margin-bottom-large'
  }
} only %}
{% endset %}

