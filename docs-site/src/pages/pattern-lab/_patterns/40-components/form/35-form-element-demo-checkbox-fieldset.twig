{% set description %}
  An example of checkbox fieldset
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>Add <code>displayType: 'inline-checkbox'</code> in the label include statement.</bolt-li>
    <bolt-li>Set input<code>type</code> as <code>checkbox</code>.</bolt-li>
    <bolt-li>Make the input label cklickable by adding a <code>for</code> attribute to the label element and an <code>id</code> (with the same name as <code>for</code> attribute) to the input checkbox element.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
  {# input checkobox fieldset #}
  {% set checkbox_children %}
    {% set label %}
      {% include '@bolt-components-form/form-label.twig' with {
        title: 'Pepperoni',
        displayType: 'inline-checkbox',
        attributes: {
          for: 'checkbox-pepperoni',
          name: 'checkbox-name'
        },
      } only %}
    {% endset %}
    {% set input %}
      {% include '@bolt-components-form/form-input.twig' with {
        attributes: {
          type: 'checkbox',
          id: 'checkbox-pepperoni',
        },
      } only %}
    {% endset %}
    {% include '@bolt-components-form/form-element.twig' with {
