    title: 'Email address',
    attributes: {
      for: 'email-address',
    },
    displayType: 'block'
  } only %}
{% endset %}
{% set input %}
  {% include '@bolt-components-form/form-input.twig' with {
    attributes: {
      placeholder: 'Enter email address',
      type: 'email',
      id: 'email-address',
    },
  } only %}
{% endset %}
{% include '@bolt-components-form/form-element.twig' with {
  label: label,
  children: input,
  labelDisplay: 'before',
} only %}
{% endverbatim %}
{% endset %}

