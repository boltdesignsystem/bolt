{# Setting variables for demo purposes #}
{% set schema = bolt.data.components['@bolt-components-list'].schema %}
{% set regular_display_options = [
  'block',
  'flex',
  'inline',
] %}

{# Start component specific code #}
{% for separator in schema.properties.separator.enum %}
  {% if separator != 'none' %}
  <div class="u-bolt-margin-bottom-large">
    <bolt-grid gutter="medium" row-gutter="medium">
      {% for display in regular_display_options %}
        {% set separator_variation %}
          <h3>{{ separator|capitalize }} separators in a {{ display }} list</h3>
          {% include '@bolt-components-list/list.twig' with {
            display: display,
            separator: separator,
            items: [
              'Item 1',
              'Item 2',
              'Item 3',
            ]
          } only %}
        {% endset %}
        {% if display == 'block' %}
          <bolt-grid-item column-start="1" column-span="12 4@small">
            {{ separator_variation }}
          </bolt-grid-item>
        {% elseif display == 'flex' %}
          <bolt-grid-item column-start="1 5@small" column-span="12 4@small">
            {{ separator_variation }}
          </bolt-grid-item>
        {% else %}
          <bolt-grid-item column-start="1 9@small" column-span="12 4@small">
            {{ separator_variation }}
          </bolt-grid-item>
        {% endif %}
      {% endfor %}
    </bolt-grid>
  </div>
  {% endif %}
{% endfor %}
{# End component specific code #}
