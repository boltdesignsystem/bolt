{% set schema = bolt.data.components['@bolt-components-icon'].schema %}

{% set description %}
  A set of icons designed and created by Pega branding.
{% endset %}

{% set notes %}
  <bolt-ul>
    <bolt-li>Auto/undefined: 1em (same size as inline text)</bolt-li>
    <bolt-li>Small: 16px</bolt-li>
    <bolt-li>Medium: 24px</bolt-li>
    <bolt-li>Large: 32px</bolt-li>
    <bolt-li>Xlarge: 38px</bolt-li>
  </bolt-ul>
{% endset %}

{% set demo %}
  <bolt-accordion spacing="small" icon-valign="top" single>
    {% for name in schema.properties.name.anyOf[0].enum %}
      {% if 'pega-' in name %}
        <bolt-accordion-item>
          <div slot="trigger">
            {% include '@bolt-components-headline/text.twig' with {
              text: name,
              icon: {
                name: name,
                position: 'before'
              }
            } only %}
          </div>
          <div>
            <bolt-grid gutter="small" row-gutter="small">
              <bolt-grid-item column-start="1" column-span="12 6@small">
                {% for size in schema.properties.size.enum %}
                  {% include '@bolt-components-icon/icon.twig' with {
                    name: name,
                    size: size,
                  } only %}
                {% endfor %}
              </bolt-grid-item>
              <bolt-grid-item column-start="1 7@small" column-span="12 6@small">
                {% for size in schema.properties.size.enum %}
                  {% include '@bolt-components-icon/icon.twig' with {
                    name: name,
                    size: size,
                    color: 'navy',
                    background: 'circle',
                  } only %}
                {% endfor %}
              </bolt-grid-item>
            </bolt-grid>
          </div>
        </bolt-accordion-item>
      {% endif %}
    {% endfor %}
  </bolt-accordion>
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-components-icon/icon.twig' with {
  name: 'pega-ai-brain',
} only %}
{% endverbatim %}
{% endset %}

{% set html_markup %}
{% verbatim %}
<bolt-icon name="pega-ai-brain"></bolt-icon>
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Pega Brand Icons',
  description: description,
  notes: notes,
  demo: demo,
  demo_vertical_scroll: true,
  twig_markup: twig_markup,
  html_markup: html_markup,
} only %}
