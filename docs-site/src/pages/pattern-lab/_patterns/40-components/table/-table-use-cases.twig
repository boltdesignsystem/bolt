{% set description %}
  Existing use cases on our sites.
{% endset %}

{% set demo %}
  {% set header %}
    {% set cells %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Data page',
        header: true,
        attributes: {
          style: 'width: 20%;',
        },
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Data type',
        header: true,
        attributes: {
          style: 'width: 20%;',
        },
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'SharePoint API',
        header: true,
        attributes: {
          style: 'width: 45%;',
        },
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'HTTP method',
        header: true,
        attributes: {
          style: 'width: 15%;',
        },
      } only %}
    {% endset %}
    {% include '@bolt-components-table/table-row.twig' with {
      content: cells,
    } only %}
  {% endset %}

  {% set row1 %}
    {% set cells %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'D_SpOnlineGetAllLists',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Int-SPO-Lists',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'https://{site url}/_api/web/lists',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'GET',
      } only %}
    {% endset %}
    {% include '@bolt-components-table/table-row.twig' with {
      content: cells,
    } only %}
  {% endset %}

  <bolt-text headline tag="h4" font-size="small">Data page details (auto width table)</bolt-text>
  <bolt-stack>
    {% include '@bolt-components-table/table.twig' with {
      header: {
        content: header,
      },
      body: {
        content: [
          row1,
        ],
      },
    } only %}
  </bolt-stack>

  <bolt-text headline tag="h4" font-size="small">Data page details (full width table)</bolt-text>
  <bolt-stack>
    {% include '@bolt-components-table/table.twig' with {
      header: {
        content: header,
      },
      body: {
        content: [
          row1,
        ],
      },
      attributes: {
        class: 'u-bolt-block',
      },
    } only %}
  </bolt-stack>

  {% set header %}
    {% set cells %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Name',
        header: true,
        attributes: {
          style: 'width: 20%;',
        },
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Description',
        header: true,
        attributes: {
          style: 'width: 70%;',
        },
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Required',
        header: true,
        attributes: {
          style: 'width: 10%;',
        },
      } only %}
    {% endset %}
    {% include '@bolt-components-table/table-row.twig' with {
      content: cells,
    } only %}
  {% endset %}

  {% set row1 %}
    {% set cells %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'SiteName',
        header: true,
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Overrides the default site in SPOnlineSetings.',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: '❌',
      } only %}
    {% endset %}
    {% include '@bolt-components-table/table-row.twig' with {
      content: cells,
    } only %}
  {% endset %}

  {% set row2 %}
    {% set cells %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Authentication profile',
        header: true,
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Overrides the default authentication profile in the SPOnlineSetings data transform.',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: '❌',
      } only %}
    {% endset %}
    {% include '@bolt-components-table/table-row.twig' with {
      content: cells,
    } only %}
  {% endset %}

  {% set row3 %}
    {% set cells %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'SelectFields',
        header: true,
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Specifies the fields to retrieve.',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: '✅',
      } only %}
    {% endset %}
    {% include '@bolt-components-table/table-row.twig' with {
      content: cells,
    } only %}
  {% endset %}

  <bolt-text headline tag="h4" font-size="small">Data page parameters (auto width table)</bolt-text>
  <bolt-stack>
    {% include '@bolt-components-table/table.twig' with {
      header: {
        content: header,
      },
      body: {
        content: [
          row1,
          row2,
          row3,
        ],
      },
      attributes: {
        class: [
          'c-bolt-responsive-table--sticky-side-headers',
        ]
      },
    } only %}
  </bolt-stack>

  <bolt-text headline tag="h4" font-size="small">Data page parameters (full width table)</bolt-text>
  <bolt-stack>
    {% include '@bolt-components-table/table.twig' with {
      header: {
        content: header,
      },
      body: {
        content: [
          row1,
          row2,
          row3,
        ],
      },
      attributes: {
        class: [
          'u-bolt-block',
          'c-bolt-responsive-table--sticky-side-headers',
        ]
      },
    } only %}
  </bolt-stack>
{% endset %}

{% set twig_markup %}{% verbatim %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Table use cases',
  description: description,
  demo: demo,
  demo_light_dark: true,
  twig_markup: twig_markup,
} only %}
