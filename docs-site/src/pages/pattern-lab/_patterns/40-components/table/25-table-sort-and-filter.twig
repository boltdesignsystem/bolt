{% set demo_js %}
<script>
  function toggleFilters() {
    document.querySelector('body').addEventListener('click', event => {
    
      if (event.target.matches('.js-bolt-filters-checkbox')) {
        const resetBtn = event.target.closest('.c-bolt-fieldset').nextElementSibling;
        if(resetBtn) {
          resetBtn.classList.remove('u-bolt-hidden')
        }
        const checkboxes = document.querySelectorAll('.js-bolt-filters-checkbox')
        const allUnchecked = [...checkboxes].every(e => !e.checked);
 
        if (allUnchecked) {
          resetBtn.classList.add('u-bolt-hidden')
        }

        resetBtn.addEventListener('click', event => {
          event.target.classList.add('u-bolt-hidden');
          checkboxes.forEach(el => {
            el.checked = false;
          })
        })
      }
    });
  }
  toggleFilters()

  function toggleButtonState() {
    const sortingButtonWrap = document.querySelectorAll('.js-bolt-sorting-text-button');

    sortingButtonWrap.forEach(el => {
      el.addEventListener('click', event => {
        if(event.target.matches('.js-bolt-sort-button')) {
          if(event.target.parentElement.classList.contains('js-bolt-sorted-unsorted')) {
            event.target.parentElement.classList.add('u-bolt-hidden')
            event.target.parentElement.parentElement.querySelector('.js-bolt-sorted-asc').classList.remove('u-bolt-hidden')
          }
          else if(event.target.parentElement.classList.contains('js-bolt-sorted-asc')) {
            event.target.parentElement.classList.add('u-bolt-hidden')
            event.target.parentElement.parentElement.querySelector('.js-bolt-sorted-desc').classList.remove('u-bolt-hidden')
          }
          else if(event.target.parentElement.classList.contains('js-bolt-sorted-desc')) {
            event.target.parentElement.classList.add('u-bolt-hidden')
            event.target.parentElement.parentElement.querySelector('.js-bolt-sorted-unsorted').classList.remove('u-bolt-hidden')
          }
        }
      });
    });
  }
  toggleButtonState()
</script>
