{% import "@bolt/macros.twig" as macros %}
{# ^ allows us to use inline includes that also work in Drupal #}

<bolt-text>This demo creatively uses the <code>imageMinWidth</code> prop to "pin" the image to the right side of the screen on larger devices.</bolt-text>

{% set icon %}
  {% include "@bolt-elements-icon/icon.twig" with {
    name: "pega-compass",
  } only %}
{% endset %}

{% include "@bolt-components-hero/hero.twig" with {
  theme: "none",
  content: [
    macros.include("@bolt-elements-shape/shape.twig", {
      content: icon,
      size: "large",
      attributes: {
        class: [
          "u-bolt-margin-bottom-medium",
          "t-bolt-teal"
        ]
      }
    }),
    macros.include("@bolt-components-headline/headline.twig", {
      size: "xxxlarge",
      text: "A Prominent Headline Certainly Helps",
    }),
    macros.include("@bolt-components-headline/subheadline.twig", {
      size: "xlarge",
      text: "This one even includes a tagline.",
    }),
    macros.include("@bolt-elements-button/button.twig", {
      content: "Learn More",
      hierarchy: "primary",
      attributes: {
        type: 'button'
      }
    }),
  ]|join(''),
  imageMinWidth: '60vw',
  image: "/images/heros/responsive-web-design.svg"
} %}
