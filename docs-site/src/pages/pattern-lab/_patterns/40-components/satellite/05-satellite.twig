{% set description %}
    This component is used to contain and place floating action buttons, or FABs.
{% endset %}

{% set _content %}
  {% set share_menu %}
    {% include '@bolt-components-share/share.twig' with {
      display: 'menu',
      text: 'Share this content',
      sources: [
        {
          name: 'facebook',
          attributes: {
            href: 'https://www.facebook.com/sharer/sharer.php?u=https://google.com&amp;src=sdkpreparse'
          }
        },
        {
          name: 'twitter',
          attributes: {
            href: 'https://twitter.com/intent/tweet?url=https://google.com&text=Sample%20Share%20Text&via=pega&hashtags=boltDesignSystemRocks!'
          }
        },
        {
          name: 'linkedin',
          attributes: {
            href: 'https://www.linkedin.com/shareArticle?url=https://google.com'
          }
        },
        {
          name: 'email',
          attributes: {
            href: 'mailto:?&body=Sample%20Text%20--%20https%3A//mail.com'
          }
        }
      ],
      copy_to_clipboard: {
        text_to_copy: 'https://google.com',
      },
    } only %}
  {% endset %}
  {% set share_popover_trigger %}
    {% set icon_share %}
      {% include '@bolt-elements-icon/icon.twig' with {
        name: 'share',
      } only %}
    {% endset %}
    {% include '@bolt-elements-button/button.twig' with {
      content: 'Share',
      icon_only: icon_share,
      attributes: {
        type: 'button'
      }
    } only %}
  {% endset %}
  {% include '@bolt-components-popover/popover.twig' with {
    trigger: share_popover_trigger,
    content: share_menu,
    spacing: 'none',
    boundary: '.js-bolt-target-teaser',
  } only %}

  {% set icon_sample %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'trash',
    } only %}
  {% endset %}


  {% include '@bolt-components-tooltip/tooltip.twig' with {
    content: 'Button 2',
    trigger: include('@bolt-elements-button/button.twig', {
      content: 'Button 2',
      icon_only: icon_sample,
      attributes: {
        type: 'button'
      },
    }),
  } only %}

  {% include '@bolt-components-tooltip/tooltip.twig' with {
    content: 'Button 3',
    trigger: include('@bolt-elements-button/button.twig', {
      content: 'Button 3',
      icon_only: icon_sample,
      attributes: {
        type: 'button'
      },
    }),
  } only %}

  {% include '@bolt-components-tooltip/tooltip.twig' with {
    content: 'Button 4',
    trigger: include('@bolt-elements-button/button.twig', {
      content: 'Button 4',
      icon_only: icon_sample,
      attributes: {
        type: 'button'
      },
    }),
  } only %}

  {% include '@bolt-components-tooltip/tooltip.twig' with {
    content: 'Button 5',
    trigger: include('@bolt-elements-button/button.twig', {
      content: 'Button 5',
      icon_only: icon_sample,
      attributes: {
        type: 'button'
      },
    }),
  } only %}

  {% include '@bolt-components-tooltip/tooltip.twig' with {
    content: 'Button 6',
    trigger: include('@bolt-elements-button/button.twig', {
      content: 'Button 6',
      icon_only: icon_sample,
      attributes: {
        type: 'button'
      },
    }),
  } only %}
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>This is the demo you see stickied in the <code>bottom-right</code>.</bolt-li>
    <bolt-li>It has the default <code>stash</code> value of <code>2</code>.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
{% include '@bolt-components-satellite/satellite.twig' with {
  content: _content,
} only %}
{% endset %}

{% set twig_markup %}{% verbatim %}
{% include '@bolt-components-satellite/satellite.twig' with {
  content: _content,
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Basic Satellite',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
} only %}
