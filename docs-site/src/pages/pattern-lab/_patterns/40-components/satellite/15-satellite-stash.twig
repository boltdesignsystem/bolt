{% set description %}
The <code>stash</code> property can be used to hide an overflow of elements passed into <code>content</code>.
{% endset %}

{% set _content %}
  {% set icon_sample %}
    {% include '@bolt-elements-icon/icon.twig' with {
      name: 'trash',
    } only %}
  {% endset %}


  {% include '@bolt-components-tooltip/tooltip.twig' with {
    content: 'Button 1',
    trigger: include('@bolt-elements-button/button.twig', {
      content: 'Button 1',
      icon_only: icon_sample,
      attributes: {
        type: 'button'
      },
    }),
    } only %}

  {% include '@bolt-components-tooltip/tooltip.twig' with {
    content: 'Button 2',
    trigger: include('@bolt-elements-button/button.twig', {
      content: 'Button 2',
      icon_only: icon_sample,
      attributes: {
        type: 'button'
      },
    }),
  } only %}

  {% include '@bolt-components-tooltip/tooltip.twig' with {
    content: 'Button 3',
    trigger: include('@bolt-elements-button/button.twig', {
      content: 'Button 3',
      icon_only: icon_sample,
      attributes: {
        type: 'button'
      },
    }),
  } only %}

  {% include '@bolt-components-tooltip/tooltip.twig' with {
    content: 'Button 4',
    trigger: include('@bolt-elements-button/button.twig', {
      content: 'Button 4',
      icon_only: icon_sample,
      attributes: {
        type: 'button'
      },
    }),
  } only %}

  {% include '@bolt-components-tooltip/tooltip.twig' with {
    content: 'Button 5',
    trigger: include('@bolt-elements-button/button.twig', {
      content: 'Button 5',
      icon_only: icon_sample,
      attributes: {
        type: 'button'
      },
    }),
  } only %}
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>The default value of <code>stash</code> is <code>2</code></bolt-li>
    <bolt-li>You may set <code>stash</code> to <code>0</code> to allow all elements to be shown.</bolt-li>
  </bolt-ol>
{% endset %}

{% set schema = bolt.data.components['@bolt-components-satellite'].schema %}

{% set demo %}
  <bolt-list display="inline" spacing="small">
    {% for stash in schema.properties.stash.enum %}
      <bolt-list-item>
        {% include '@bolt-components-satellite/satellite.twig' with {
          content: _content,
          stash: stash,
          position: 'static',
        } only %}
      </bolt-list-item>
    {% endfor %}
  </bolt-list>
{% endset %}

{% set twig_markup %}{% verbatim %}
{% include '@bolt-components-satellite/satellite.twig' with {
  content: _content,
  stash: 0,
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Satellite Stash',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
} only %}
