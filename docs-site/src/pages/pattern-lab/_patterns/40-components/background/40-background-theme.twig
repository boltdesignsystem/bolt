{% set image %}
  {% include '@bolt-elements-image/image.twig' with {
    background: true,
    attributes: {
      alt: 'Alt text.',
      loading: 'lazy',
      src: '/images/content/backgrounds/background-tall-4.jpg',
      width: 3840,
      height: 2160,
    },
  } only %}
{% endset %}

{% set themes = ['black', 'white', 'gray-xlight', 'navy-light', 'navy', 'navy-dark', 'violet', 'teal', 'yellow', 'orange', 'pink', 'berry', 'wine'] %}

{% for fill in ['solid', 'gradient', 'radial-gradient'] %}
  <h2>Fill: {{ fill }}</h2>
  {% for theme in themes %}
    {% set theme_class = 't-bolt-' ~ theme %}

    {# radial-gradient needs to be reversed for light colors to look good.#}
    {% set horizontal = 'center' %}
    {% if fill == 'radial-gradient' and theme in ['white', 'gray-xlight', 'yellow'] %}
      {% set horizontal = 'left' %}
    {% endif %}

    <p>Fill: {{ fill }} with <code>{{ theme_class }}</code> theming class.</p>
    <div class="{{ theme_class }} u-bolt-margin-bottom-large">
      {% include './_00-background-band-demo.twig' with {
        theme: 'none',
        background: {
          fill: fill,
          opacity: 'heavy',
          focal_point: {
            horizontal: horizontal,
          },
          items: [
            image ,
          ]
        }
      } only %}
    </div>
  {% endfor %}
{% endfor %}
