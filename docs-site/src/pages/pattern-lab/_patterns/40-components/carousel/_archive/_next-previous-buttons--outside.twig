{% set slide %}
 {% include "_carousel-slide-content.twig" only %}
{% endset %}
{% embed "@bolt-components-carousel/carousel.twig" with {
  slides: [
    slide,
    slide,
    slide,
  ],
  navButtonPosition: "outside",
} only %}
  {% block controls %}
    <bolt-button slot="previous-btn" color="secondary" icon-only>
      Previous
      <span slot="before">{% include '@bolt-elements-icon/icon.twig' with { name: 'chevron-left', size: 'large' } only %}</span>
    </bolt-button>

    <bolt-button slot="next-btn" color="secondary" icon-only>
      Next
      <span slot="after">{% include '@bolt-elements-icon/icon.twig' with { name: 'chevron-right', size: 'large' } only %}</span>
    </bolt-button>
  {% endblock %}
{% endembed %}
