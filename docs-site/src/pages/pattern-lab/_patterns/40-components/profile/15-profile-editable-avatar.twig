{% set notes %}
    <bolt-ol>
        <bolt-li></bolt-li>
    </bolt-ol>
{% endset %}

{% set demo %}
<bolt-list display="flex" spacing="small">
    <bolt-list-item>
        {% include '@bolt-components-profile/profile.twig' with {
            name: {
                content: '<strong>First Last</strong> (@username)',
                tag: 'h2',
            },
            job_title: 'Lead System Architect',
            location: 'United States',
        } only %}
    </bolt-list-item>
    <bolt-list-item>
        {% include '@bolt-components-profile/profile.twig' with {
            name: {
                content: '<strong>First Last</strong> (@username)',
                tag: 'h2',
            },
            job_title: 'Lead System Architect',
            location: 'United States',
            avatar_editable: true,
        } only %}
    </bolt-list-item>
</bolt-list>
{% endset %}

{% set twig_markup %}{% verbatim %}
{% include '@bolt-components-profile/profile.twig' with {
    name: {
        content: '<strong>First Last</strong> (@username)',
        tag: 'h2',
    },
    job_title: 'Lead System Architect',
    location: 'United States',
    avatar_editable: true,
} only %}
{% endverbatim %}{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
    title: 'Profile with Editable Avatar',
    description: '',
    notes: notes,
    demo: demo,
    twig_markup: twig_markup,
} only %}
