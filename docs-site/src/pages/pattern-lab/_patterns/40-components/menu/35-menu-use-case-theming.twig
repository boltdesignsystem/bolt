{% set themes = ['dark', 'light'] %}

{% set description %}
  Menu can be used in various themes.
{% endset %}

{% set demo %}
  {% for theme in themes %}
    {% embed "@utils/theme-demo.twig" %}
      {% block demo_content %}
        {% include '@bolt-components-menu/menu.twig' with {
          items: [
            {
              content: 'Menu item 1',
            },
            {
              content: 'Menu item 2',
            },
            {
              content: 'Menu item 3',
            },
          ]
        } only %}
      {% endblock %}
    {% endembed %}
  {% endfor %}
{% endset %}

{% set twig_markup %}
{% verbatim %}
<div class="t-bolt-dark">
  // Put the component inside a themed container
  {% include '@bolt-components-menu/menu.twig' with {
    items: [
      {
        content: 'Menu item 1',
      },
      {
        content: 'Menu item 2',
      },
      {
        content: 'Menu item 3',
      },
    ]
  } only %}
</div>
{% endverbatim %}
{% endset %}

{% set html_markup %}
{% verbatim %}
<div class="t-bolt-dark">
  // Put the component inside a themed container
  <bolt-menu>
    <bolt-menu-item>
      Menu Item 1
    </bolt-menu-item>
    <bolt-menu-item>
      Menu Item 2
    </bolt-menu-item>
    <bolt-menu-item>
      Menu Item 3
    </bolt-menu-item>
  </bolt-menu>
</div>
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Theme compatibility',
  description: description,
  demo: demo,
  twig_markup: twig_markup,
  html_markup: html_markup,
} only %}
