{% set content %}
  {% set headlines %}
    {% include '@bolt-components-headline/eyebrow.twig' with {
      text: 'This Is a Flag',
    } only %}
    {% include '@bolt-components-headline/headline.twig' with {
      size: 'large',
      text: 'With text on the left and CTAs on the right.',
    } only %}
  {% endset %}
  {% set button_group %}
    {% set button_1 %}
      {% include '@bolt-elements-button/button.twig' with {
        size: 'small',
        hierarchy: 'primary',
        content: 'Primary action',
        attributes: {
          type: 'button'
        }
      } only %}
    {% endset %}
    {% set button_2 %}
      {% include '@bolt-elements-button/button.twig' with {
        size: 'small',
        hierarchy: 'secondary',
        content: 'Secondary action',
        attributes: {
          type: 'button'
        }
      } only %}
    {% endset %}
    {% include '@bolt-components-list/list.twig' with {
      display: 'inline',
      items: [
        button_1,
        button_2,
      ],
    } only %}
  {% endset %}

  {% include '@bolt-components-list/list.twig' with {
    display: 'inline@small',
    align: 'justify',
    spacing: 'medium',
    items: [
      headlines,
      button_group,
    ],
  } only %}
{% endset %}

{% include '@bolt-components-band/band.twig' with {
  size: 'small',
  content: content,
} only %}
