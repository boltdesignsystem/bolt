{% set image %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      src: '/images/placeholders/landscape-16x9-mountains.jpg',
      loading: 'lazy',
    }
  } only %}
{% endset %}

{% set icon %}
  {% include '@bolt-elements-icon/icon.twig' with {
    name: 'add-circle',
    size: 'large',
  } only %}
{% endset %}

{% set video %}
  {% set video %}
    <video-js
      data-account="1900410236"
      data-player="O3FkeBiaDz"
      data-embed="default"
      data-video-id="4892122320001"
      data-media-title
      data-media-duration
      controls
      class="c-base-video"></video-js>
  {% endset %}

  {% include '@bolt-elements-ratio/ratio.twig' with {
    content: video,
    ratio: 'wide'
  } only %}
{% endset %}

{% set table %}
  {% set header %}
    {% set cells %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: '',
        header: true,
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Col 1',
        header: true,
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Col 2',
        header: true,
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Col 3',
        header: true,
      } only %}
    {% endset %}
    {% include '@bolt-components-table/table-row.twig' with {
      content: cells,
    } only %}
  {% endset %}

  {% set row1 %}
    {% set cells %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Row 1',
        header: true,
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'R1C1',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'R1C2',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'R1C3',
      } only %}
    {% endset %}
    {% include '@bolt-components-table/table-row.twig' with {
      content: cells,
    } only %}
  {% endset %}

  {% set row2 %}
    {% set cells %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Row 2',
        header: true,
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'R2C1',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'R2C2',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'R2C3',
      } only %}
    {% endset %}
    {% include '@bolt-components-table/table-row.twig' with {
      content: cells,
    } only %}
  {% endset %}

  {% set row3 %}
    {% set cells %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Row 3',
        header: true,
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'R3C1',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'R3C2',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'R3C3',
      } only %}
    {% endset %}
    {% include '@bolt-components-table/table-row.twig' with {
      content: cells,
    } only %}
  {% endset %}

  {% set footer %}
    {% set cells %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'Footer',
        header: true,
      } only %}
        {% include '@bolt-components-table/table-cell.twig' with {
        content: 'FC1',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'FC2',
      } only %}
      {% include '@bolt-components-table/table-cell.twig' with {
        content: 'FC3',
      } only %}
    {% endset %}
    {% include '@bolt-components-table/table-row.twig' with {
      content: cells,
    } only %}
  {% endset %}
  {% include '@bolt-components-table/table.twig' with {
    header: {
      content: header,
    },
    body: {
      content: [
        row1,
        row2,
        row3,
      ],
    },
    footer: {
      content: footer,
    },
  } only %}
{% endset %}

<h3>Image Figure</h3>
{% include '@bolt-components-figure/figure.twig' with {
  media: {
    content: image
  },
  caption: 'Fig. 1: This is an image.'
} only %}

<h3>Icon Figure</h3>
{% include '@bolt-components-figure/figure.twig' with {
  media: {
    content: icon
  },
  caption: 'Fig. 2: This is an icon.'
} only %}

<h3>Video Figure</h3>
{% include '@bolt-components-figure/figure.twig' with {
  media: {
    content: video
  },
  caption: 'Fig. 3: This is a video.'
} only %}

<h3>Table Figure</h3>
{% include '@bolt-components-figure/figure.twig' with {
  media: {
    content: table
  },
  caption: 'Fig. 4: This is a table.'
} only %}
