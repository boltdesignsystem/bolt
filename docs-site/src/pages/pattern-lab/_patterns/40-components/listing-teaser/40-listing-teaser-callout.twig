{% set demo %}
  {% set icon_questions %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'questions',
      size: 'xlarge',
      color: 'teal',
    } only %}
  {% endset %}
  {% set callout_content %}
    {% set headlines %}
      {% include '@bolt-components-headline/headline.twig' with {
        text: 'This is a callout headline',
        tag: 'h4',
        size: 'large',
      } only %}
      {% include '@bolt-components-headline/text.twig' with {
        text: 'This is callout text.',
        tag: 'p',
        size: 'small',
      } only %}
    {% endset %}
    {% set button %}
      {% include '@bolt-elements-button/button.twig' with {
        content: 'CTA',
        size: 'small',
        border_radius: 'full',
        display: 'block',
        attributes: {
          type: 'button',
        }
      } only %}
    {% endset %}
    {% include '@bolt-components-grid/grid.twig' with {
      valign: 'center',
      gutter: 'small',
      items: [
        {
          column_start: '1',
          column_span: '12 11@small',
          row_start: '1 1@small',
          content: headlines,
        },
        {
          column_start: '1 12@small',
          column_span: '12 1@small',
          row_start: '2 1@small',
          content: button,
        },
      ]
    } only %}
  {% endset %}
  {% include '@bolt-components-listing-teaser/listing-teaser.twig' with {
    signifier: icon_questions,
    headline: {
      text: 'This listing has a callout',
      tag: 'h3',
      size: 'xlarge',
      link_attributes: {
        href: 'https://pega.com'
      },
    },
    meta_items: [
      'Posted 8 hours 15 minutes ago',
      'Last activity: 2 minutes ago',
    ],
    variant: 'card',
    callout: {
      attributes: {
        class: 't-bolt-light',
      },
      content: callout_content,
    },
  } only %}
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-components-listing-teaser/listing-teaser.twig' with {
  headline: {
    text: 'This listing has a callout',
    tag: 'h3',
    size: 'xlarge',
    link_attributes: {
      href: 'https://pega.com'
    },
  },
  callout: {
    attributes: {
      class: 't-bolt-light',
    },
    content: callout_content,
  },
} only %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Listing Teaser Callout',
  description: 'A listing teaser can have a callout section. Any content can be rendered as the callout.',
  demo: demo,
  twig_markup: twig_markup,
} only %}
