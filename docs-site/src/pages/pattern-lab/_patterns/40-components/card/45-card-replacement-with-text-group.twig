    text: 'Eyebrow'
  } only %}
  {% include '@bolt-components-headline/headline.twig' with {
    text: 'This is text group 1',
    url: 'https://google.com',
  } only %}
{% endset %}

{% set text_group_2 %}
  {% include '@bolt-components-headline/eyebrow.twig' with {
    text: 'Eyebrow'
  } only %}
  {% include '@bolt-components-headline/headline.twig' with {
    text: 'This is text group 2',
    url: 'https://google.com',
  } only %}
{% endset %}

{% set text_group_3 %}
  {% include '@bolt-components-headline/eyebrow.twig' with {
    text: 'Eyebrow'
  } only %}
  {% include '@bolt-components-headline/headline.twig' with {
    text: 'This is text group 3',
    url: 'https://google.com',
  } only %}
{% endset %}

{% set text_group_4 %}
  {% include '@bolt-components-headline/eyebrow.twig' with {
    text: 'Eyebrow'
  } only %}
  {% include '@bolt-components-headline/headline.twig' with {
    text: 'This is text group 4',
    url: 'https://google.com',
  } only %}
{% endset %}

{% set text_group_5 %}
  {% include '@bolt-components-headline/eyebrow.twig' with {
    text: 'This is an eyebrow'
  } only %}
  {% include '@bolt-components-headline/headline.twig' with {
    text: 'This is a headline.',
  } only %}
  {% include '@bolt-components-headline/text.twig' with {
    text: 'This is body text.',
    tag: 'p'
  } only %}
{% endset %}

{% set block_list %}
  {% include '@bolt-components-list/list.twig' with {
    display: 'block',
    separator: 'solid',
    spacing: 'medium',
    inset: true,
    items: [
      text_group_1,
      text_group_2,
      text_group_3,
    ]
  } only %}
{% endset %}

{% set card_1 %}
  {% include '@bolt-components-card-replacement/card-replacement.twig' with {
    height: 'auto',
    content: block_list,
  } only %}
{% endset %}
{% set image %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      alt: 'Image alt text',
      src: '/images/placeholders/4x3.jpg',
    },
  } only %}
{% endset %}
{% set card_2 %}
  {% include '@bolt-components-card-replacement/card-replacement.twig' with {
    media: {
      image: image,
    },
    height: 'auto',
    body: {
      content: text_group_5,
    },
    actions: [
      {
        text: 'This is a button',
        url: 'https://google.com',
      },
    ],
  } only %}
{% endset %}

{% include '@bolt-components-grid/grid.twig' with {
  items: [
    {
      column_start: '1 3@small',
      column_span: '6 4@small',
      content: card_1,
    },
    {
      column_start: '7',
      column_span: '6 4@small',
      content: card_2,
    },
  ]
} only %}
