
{% set image %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      alt: 'Image alt text',
      src: '/images/placeholders/landscape-16x9-mountains.jpg',
    },
  } only %}
{% endset %}
{% set card_1 %}
  {% include '@bolt-components-card-replacement/card-replacement.twig' with {
    border_radius: 'large',
    media: {
      image: image,
    },
    body: {
      headline: 'This card has large border radius',
      paragraph: 'This is a paragraph.',
    },
    actions: [
      {
        text: 'This is a button',
        url: 'https://google.com',
      },
    ],
  } only %}
{% endset %}
{% set image %}
  {% include '@bolt-elements-image/image.twig' with {
    background: true,
    attributes: {
      alt: 'Image alt text',
      src: '/images/placeholders/landscape-16x9-mountains.jpg',
    },
  } only %}
{% endset %}
{% set card_2 %}
  {% include '@bolt-components-card-replacement/card-replacement.twig' with {
    border_radius: 'large',
    horizontal: true,
    media: {
      image: image,
    },
    body: {
      headline: 'This card has large border radius',
      paragraph: 'This is a paragraph.',
    },
    actions: [
      {
        text: 'This is a button',
        url: 'https://google.com',
      },
    ],
  } only %}
{% endset %}


{% include '@bolt-components-grid/grid.twig' with {
  items: [
    {
      column_start: '1 4@small',
      column_span: '12 6@small',
      content: card_1,
    },
    {
      column_start: '1 3@small',
      column_span: '12 8@small',
      content: card_2,
    },
  ]
} only %}
