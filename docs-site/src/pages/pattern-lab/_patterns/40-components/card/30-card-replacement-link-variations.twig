{% set link %}{% spaceless %}{% include '@bolt-elements-text-link/text-link.twig' with {
  content: 'like this',
  attributes: {
    href: 'https://yahoo.com'
  }
} only %}{% endspaceless %}{% endset %}
{% set image %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      alt: 'Image alt text',
      src: '/images/placeholders/4x3.jpg',
    },
  } only %}
{% endset %}
{% set card_1 %}
  {% include '@bolt-components-card-replacement/card-replacement.twig' with {
    media: {
      image: image,
    },
    body: {
      headline: 'No link',
      paragraph: 'This card doesn\'t have a link.',
    },
    actions: [
      {
        text: 'This is a button',
        url: 'https://google.com',
      }
    ],
  } only %}
{% endset %}

{% set card_2 %}
  {% include '@bolt-components-card-replacement/card-replacement.twig' with {
    link: {
      url: 'https://google.com',
      text: 'Go to google.com'
    },
    media: {
      image: image,
    },
    body: {
      headline: 'With link',
      paragraph: 'This card has a url, which makes the whole card clickable, but you can still have text links in the body (' ~ link ~ ') or the action button to link somewhere else if needed.',
    },
    actions: [
      {
        text: 'This button has a diffent link',
        url: 'https://google.com',
      }
    ],
  } only %}
{% endset %}

{% include '@bolt-components-grid/grid.twig' with {
  items: [
    {
      column_start: '1',
      column_span: '12 6@small',
      content: card_1,
    },
    {
      column_start: '1 7@small',
      column_span: '12 6@small',
      content: card_2,
    },
  ]
} only %}
