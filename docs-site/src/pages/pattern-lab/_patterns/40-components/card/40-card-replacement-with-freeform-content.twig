{% grid 'o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--center' %}
  {% cell 'u-bolt-width-6/12 u-bolt-width-4/12@small' %}
    <h3>Passing free-form content inside the card-replacement body only</h3>
    {% set card_replacement_body_content %}
      {% include '@bolt-elements-image/image.twig' with {
        attributes: {
          src: '/images/placeholders/tout-4x3-climber.jpg',
          alt: 'A Rock Climber',
          class: 'u-bolt-margin-bottom-medium',
          loading: 'lazy'
        }
      } only %}
      {% include '@bolt-components-headline/headline.twig' with {
        text: 'Anything can be passed inside the card body container. Woohoo!',
        size: 'xlarge',
      } only %}
      {% include '@bolt-elements-button/button.twig' with {
        content: 'This is a button',
        attributes: {
          type: 'button'
        }
      } only %}
    {% endset %}
    {% include '@bolt-components-card-replacement/card-replacement.twig' with {
      tag: 'article',
      height: 'auto',
      body: {
        content: card_replacement_body_content,
      },
    } only %}
  {% endcell %}
  {% cell 'u-bolt-width-6/12 u-bolt-width-4/12@small' %}
    <h3>Passing free-form content for the entire card</h3>
    {% set card_replacement_content %}
      {% include '@bolt-components-card-replacement/_card-replacement-actions.twig' with {
        actions: [
          {
            text: 'This is a button',
            url: 'https://google.com',
          },
          {
            text: 'Verylongunbrokenword',
            url: 'https://google.com',
          }
        ],
      } %}
      {% include '@bolt-components-card-replacement/_card-replacement-body.twig' with {
        body: {
          eyebrow: 'This is an eyebrow',
          headline: 'This is a headline',
          paragraph: 'This is a paragraph.',
        },
      } %}
      {% include '@bolt-components-card-replacement/_card-replacement-actions.twig' with {
        actions: [
          {
            text: 'This is a button',
            url: 'https://google.com',
          },
          {
            text: 'Verylongunbrokenword',
            url: 'https://google.com',
          }
        ],
      } %}
      {% include '@bolt-components-card-replacement/_card-replacement-body.twig' with {
        body: {
          eyebrow: 'This is an eyebrow',
          headline: 'This is a headline',
          paragraph: 'This is a paragraph.',
        },
      } %}
      <hr class="u-bolt-margin-none">
      {% include '@bolt-components-band/band.twig' with {
        theme: 'none',
        size: 'xsmall',
        full_bleed: false,
        content: 'Anything can be passed inside the card container. Woohoo!',
      } only %}
      {% set header %}
        {% set cells %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: '',
            header: true,
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'This card is',
            header: true,
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'completely customized',
            header: true,
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'using the content prop',
            header: true,
          } only %}
        {% endset %}
        {% include '@bolt-components-table/table-row.twig' with {
          content: cells,
        } only %}
      {% endset %}

      {% set row1 %}
        {% set cells %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'Row 1',
            header: true,
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'R1C1',
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'R1C2',
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'R1C3',
          } only %}
        {% endset %}
        {% include '@bolt-components-table/table-row.twig' with {
          content: cells,
        } only %}
      {% endset %}

      {% set row2 %}
        {% set cells %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'Row 2',
            header: true,
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'R2C1',
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'R2C2',
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'R2C3',
          } only %}
        {% endset %}
        {% include '@bolt-components-table/table-row.twig' with {
          content: cells,
        } only %}
      {% endset %}

      {% set row3 %}
        {% set cells %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'Row 3',
            header: true,
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'R3C1',
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'R3C2',
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'R3C3',
          } only %}
        {% endset %}
        {% include '@bolt-components-table/table-row.twig' with {
          content: cells,
        } only %}
      {% endset %}

      {% set footer %}
        {% set cells %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'Footer',
            header: true,
          } only %}
            {% include '@bolt-components-table/table-cell.twig' with {
            content: 'FC1',
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'FC2',
          } only %}
          {% include '@bolt-components-table/table-cell.twig' with {
            content: 'FC3',
          } only %}
        {% endset %}
        {% include '@bolt-components-table/table-row.twig' with {
          content: cells,
        } only %}
      {% endset %}
      {% include '@bolt-components-table/table.twig' with {
        header: {
          content: header,
        },
        body: {
          content: [
            row1,
            row2,
            row3,
          ],
        },
        footer: {
          content: footer,
        },
      } only %}
      {% include '@bolt-components-card-replacement/_card-replacement-media.twig' with {
        media: {
          image: {
            src: '/images/placeholders/landscape-16x9-mountains.jpg',
            alt: 'Image alt.',
          },
        }
      } %}
    {% endset %}
    {% include '@bolt-components-card-replacement/card-replacement.twig' with {
      tag: 'article',
      height: 'auto',
      content: card_replacement_content,
    } only %}
  {% endcell %}
{% endgrid %}
