{% set modal_content %}
  {% include '@bolt-elements-image/image.twig' with {
    attributes: {
      src: '/images/content/screenshots/device-screenshot--tablet-portrait.jpg',
      alt: 'Tall image',
      loading: 'lazy',
    }
  } only %}
{% endset %}

{% set description %}
The scrollable area can be adjusted by using the <code>scroll</code> prop. The default is set to <code>container</code>.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>The <code>overall</code> prop makes the overall viewport area scrollable.</bolt-li>
    <bolt-li>The <code>container</code> prop makes the modal container itself scrollable.</bolt-li>
    <bolt-li>The <code>scroll</code> prop only applies to viewports equal to or above the small breakpoint (~600px).</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
  {% set container_modal %}
    {% include '@bolt-elements-button/button.twig' with {
      content: 'Container',
      size: 'small',
      display: 'inline',
      attributes: {
        type: 'button',
        'data-bolt-modal-target': '.js-bolt-modal--scroll-container',
      }
    } only %}
    {% include '@bolt-components-modal/modal.twig' with {
      content: modal_content,
      scroll: 'container',
      attributes: {
        class: 'js-bolt-modal--scroll-container',
      },
    } only %}
  {% endset %}

  {% set overall_modal %}
    {% include '@bolt-elements-button/button.twig' with {
      content: 'Overall',
      size: 'small',
      display: 'inline',
      attributes: {
        type: 'button',
        'data-bolt-modal-target': '.js-bolt-modal--scroll-overall',
      }
    } only %}
    {% include '@bolt-components-modal/modal.twig' with {
      content: modal_content,
      scroll: 'overall',
      attributes: {
        class: 'js-bolt-modal--scroll-overall',
      },
    } only %}
  {% endset %}

  {% include '@bolt-components-list/list.twig' with {
    display: 'inline',
    spacing: 'xsmall',
    align: 'start',
    valign: 'center',
    items: [
      container_modal,
      overall_modal,
    ]
  } only %}
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-components-modal/modal.twig' with {
  content: 'This is a modal set to overall scrolling.',
  scroll: 'overall',
  attributes: {
    class: 'js-bolt-modal--scroll-overall',
  },
} only %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Modal Scroll Options',
  description: description,
  notes: notes,
  demo: demo,
  twig_markup: twig_markup
} only %}
