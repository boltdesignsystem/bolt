      attributes: {
        class: 'js-bolt-modal--width-regular',
      },
    } only %}
  {% endset %}

  {% set optimal_modal %}
    {% include '@bolt-elements-button/button.twig' with {
      content: 'Optimal',
      size: 'small',
      display: 'inline',
      attributes: {
        type: 'button',
        'data-bolt-modal-target': '.js-bolt-modal--width-optimal',
      }
    } only %}
    {% include '@bolt-components-modal/modal.twig' with {
      content: 'This is a modal set to optimal width.',
      width: 'optimal',
      attributes: {
        class: 'js-bolt-modal--width-optimal',
      },
    } only %}
