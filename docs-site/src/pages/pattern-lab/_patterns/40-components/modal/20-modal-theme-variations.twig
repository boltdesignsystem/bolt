        'data-bolt-modal-target': '.js-bolt-modal--theme-none',
      }
    } only %}
    {% include '@bolt-components-modal/modal.twig' with {
      content: 'This is a modal with a transparent background.',
      theme: 'none',
      attributes: {
        class: 'js-bolt-modal--theme-none',
