  } only %}
{% endverbatim %}
{% endset %}

{% set html_markup %}
{% verbatim %}
<table class="c-bolt-table-basic c-bolt-table-basic--side-headers">
  <thead>
    <tr>
      <td></td>
      <th scope="col">Column 1</th>
      <th scope="col">Column 2</th>
      <th scope="col">Column 3</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">Row 1</th>
      <td>R1C1</td>
      <td>R1C2</td>
      <td>R1C3</td>
    </tr>
    <tr>
      <th scope="row">Row 2</th>
      <td>R2C1</td>
      <td>R2C2</td>
      <td>R2C3</td>
    </tr>
    <tr>
      <th scope="row">Row 3</th>
      <td>R3C1</td>
      <td>R3C2</td>
      <td>R3C3</td>
    </tr>
  </tbody>
  <tfoot>
    <tr>
      <th>Footer</th>
      <td>FC1</td>
      <td>FC2</td>
      <td>FC3</td>
    </tr>
  </tfoot>
</table>
{% endverbatim %}
{% endset %}

