{% set twig_markup %}
{% verbatim %}
{% include '@bolt-components-table-basic/table-basic.twig' with {
    headers: {
      top: {
        cells: [
          'Column 1',
          'Column 2',
          'Column 3',
        ]
      },
      side: {
        cells: [
          'Row 1',
          'Row 2',
          'Row 3',
          'Footer',
        ]
      }
    },
    rows: [
      {
        cells: [
          'R1C1',
          'R1C2',
          'R1C3',
        ]
      },
      {
        cells: [
          'R2C1',
          'R2C2',
          'R2C3',
        ]
      },
      {
        cells: [
          'R3C1',
          'R3C2',
          'R3C3',
        ]
      }
    ],
