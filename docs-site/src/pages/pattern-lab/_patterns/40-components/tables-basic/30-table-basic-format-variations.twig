{% set html_markup %}
{% verbatim %}
<table class="c-bolt-table-basic c-bolt-table-basic--numeric c-bolt-table-basic--side-headers">
  <thead>
    <tr>
      <td></td>
      <th scope="col">Pts</th>
      <th scope="col">Reb</th>
      <th scope="col">Ast</th>
      <th scope="col">Stl</th>
      <th scope="col">Blk</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">Michael Jordan</th>
      <td>70</td>
      <td>10</td>
      <td>2</td>
      <td>5</td>
      <td>1</td>
    </tr>
    <tr>
      <th scope="row">Toni Kukoc</th>
      <td>21</td>
      <td>15</td>
      <td>10</td>
      <td>3</td>
      <td>4</td>
    </tr>
    <tr>
      <th scope="row">Steve Kerr</th>
      <td>5</td>
      <td>2</td>
      <td>20</td>
      <td>5</td>
      <td>0</td>
    </tr>
  </tbody>
  <tfoot>
    <tr>
      <th>Total</th>
      <td>91</td>
      <td>27</td>
      <td>32</td>
      <td>13</td>
      <td>5</td>
    </tr>
  </tfoot>
</table>
{% endverbatim %}
{% endset %}

