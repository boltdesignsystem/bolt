<script>
  function toggleFilters() {
    document.querySelector('body').addEventListener('click', event => {

      if (event.target.matches('.js-bolt-filters-checkbox')) {
        const resetBtn = event.target.closest('.c-bolt-fieldset').nextElementSibling;
        if(resetBtn) {
          resetBtn.classList.remove('u-bolt-hidden')
        }
        const checkboxes = document.querySelectorAll('.js-bolt-filters-checkbox')
        const allUnchecked = [...checkboxes].every(e => !e.checked);

        if (allUnchecked) {
          resetBtn.classList.add('u-bolt-hidden')
        }

        resetBtn.addEventListener('click', event => {
          event.target.classList.add('u-bolt-hidden');
          checkboxes.forEach(el => {
            el.checked = false;
          })
        })
      }
    });
  }
  toggleFilters()

  function toggleButtonState() {
    const sortingButtonWrap = document.querySelectorAll('.js-bolt-table-sorting');
    const sortingButtonUnsorted = document.querySelectorAll('.js-bolt-table-sorting-button-unsorted');
    const sortingButtonAsc = document.querySelectorAll('.js-bolt-table-sorting-button-ascending');
    const sortingButtonDesc = document.querySelectorAll('.js-bolt-table-sorting-button-descending');
    sortingButtonWrap.forEach(el => {
      el.addEventListener('click', event => {
        sortingButtonUnsorted.forEach(unsorted =>{
          unsorted.classList.remove('u-bolt-hidden')
        })
        sortingButtonAsc.forEach(asc => {
          asc.classList.add('u-bolt-hidden')
        })
        sortingButtonDesc.forEach(desc => {
          desc.classList.add('u-bolt-hidden')
        })
        if(event.target.matches('.js-bolt-table-sorting-button-unsorted')) {
          event.target.classList.add('u-bolt-hidden')
          event.target.parentElement.querySelector('.js-bolt-table-sorting-button-ascending').classList.remove('u-bolt-hidden')
        }
        else if(event.target.matches('.js-bolt-table-sorting-button-ascending')) {
          event.target.previousElementSibling.classList.add('u-bolt-hidden')
          event.target.classList.add('u-bolt-hidden')
          event.target.parentElement.querySelector('.js-bolt-table-sorting-button-descending').classList.remove('u-bolt-hidden')
        }
        else if(event.target.matches('.js-bolt-table-sorting-button-descending')) {
          event.target.classList.add('u-bolt-hidden')
          event.target.parentElement.querySelector('.js-bolt-table-sorting-button-unsorted').classList.remove('u-bolt-hidden')

        }
      });
    });
  }
  toggleButtonState()
</script>
