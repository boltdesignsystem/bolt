<script>
  document.addEventListener("DOMContentLoaded", function() {
    let connectedChars = 0;
    const expectedChars = 17;
    document.addEventListener('bolt-character:connected', function() {
      connectedChars++;
      if (connectedChars >= expectedChars) {
        setTimeout(function() {
          Array.from(document.querySelectorAll('bolt-animate')).forEach(function(e) {e.triggerAnimIn()});
          Array.from(document.querySelectorAll('bolt-two-character-layout')).forEach(function(e) {e.setAttribute('parent-animations-triggered', true)});
        }, 1000)
      }
    });
  });
</script>
