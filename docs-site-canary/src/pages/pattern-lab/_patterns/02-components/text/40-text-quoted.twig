{% extends "@pl/_text-doc-template.twig" %}

{% block content %}
  <bolt-text headline>
    Quote Usage
  </bolt-text>
  <bolt-text>
    <bolt-code-snippet display="inline" lang="html">&lt;bolt-text&gt;</bolt-code-snippet> can be turned into a quote by using the <bolt-code-snippet display="inline" lang="html">quoted</bolt-code-snippet> boolean prop.
  </bolt-text>

{# Indents are removed to eliminate unnecessary white space when the code sample renders. #}
{% set text_demo %}
<bolt-text quoted>
  This text is quoted.
</bolt-text>
<bolt-text headline quoted>
  This headline text is also quoted.
</bolt-text>
{% endset %}

  {% include text_code.code_example(text_demo, true) %}
{% endblock %}
