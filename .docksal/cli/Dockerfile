FROM docksal/cli:php7.4-3.2

# Install
# - Gifsicle Dependencies
# - Jest for testing
# - Python 2
RUN apt-get update --allow-releaseinfo-change && \
    apt-get install -y automake python jest

# Assign aslias python to Python2
RUN alias python=/usr/bin/python2

# Install Puppeteer Dependencies
RUN apt-get update && \
    apt-get -y install xvfb gconf-service libasound2 libatk1.0-0 libc6 libcairo2 libcups2 \
      libdbus-1-3 libexpat1 libfontconfig1 libgbm1 libgcc1 libgconf-2-4 libgdk-pixbuf2.0-0 libglib2.0-0 \
      libgtk-3-0 libnspr4 libpango-1.0-0 libpangocairo-1.0-0 libstdc++6 libx11-6 libx11-xcb1 libxcb1 \
      libxcomposite1 libxcursor1 libxdamage1 libxext6 libxfixes3 libxi6 libxrandr2 libxrender1 libxss1 \
      libxtst6 ca-certificates fonts-liberation libappindicator1 libnss3 lsb-release xdg-utils wget

# All further commands will be performed as the docker user.
USER docker

# Install additional global npm dependencies
RUN \
    # Initialize nvm environment
    . $HOME/.profile && \
    nvm install 14.18.1 && \
    nvm alias default 14.18.1 && \
    nvm use default

# IMPORTANT! Switching back to the root user as the last instruction.
USER root
