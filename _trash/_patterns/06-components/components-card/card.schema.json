{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Card",
    "category": "layout",
    "type": "object",
    "format": "grid",
    "properties": {
      "name": {
        "type": "string",
        "enum": ["card"],
        "options": {
          "hidden": true
        }
      },
      "background": {
        "title": "Card Background",
        "type": "string",
        "enum": ["white", "black", "gray"],
        "default": "white"
      },
      "body": {
        "title": "Card Contents",
        "type": "array",
        "minItems": 2,
        "maxItems": 4,
        "items": {
          "oneOf": [
            {"$ref": "image.schema.json"},
            {"$ref": "quote.schema.json"}
          ]
        }
      }
    },
    "required": ["body", "background"],
    "additionalProperties": false
}
